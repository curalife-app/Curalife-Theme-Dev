    .hero-banner {
      padding: 20px 0;
      position: relative;
      overflow: hidden;
      background-image: linear-gradient(to top, #d07d5b, #db8262, #e58869, #f08d70, #fb9378);
      z-index: -2;
    }
  
    .hero-banner-content {
      display: flex;
  
    }
  
    .hero-banner .main-img {
      position: relative;
      z-index: -1;
      right: 566px;
      top: 30px
    }
  
  
   
  
    .hero-banner-content .text-button {
      padding-top: {% if isSecondLP %}90px{% endif %};
      display: flex;
      flex-direction: column;
      min-width: 66%;
    }
  
    .hero-banner-content .text-button .main-title {
      color: {% if isSecondLP %}#ffffff{% else %} #FFF1E8{% endif %};
      font-family: 'PP Radio Grotesk';
      font-weight: 700;
      font-size: {% if isSecondLP %} clamp(43px, 5vw, 75px){% else %} clamp(40px, 5vw, 115px){% endif %};
      padding: {% unless isSecondLP %} 40px 0px 0px 90px {% endunless %};
  }

  .title-img{
    max-width: 70%;
  }

   .plus {
    color: #404733;
    font-family: 'PP Radio Grotesk';
    font-weight: 900;
    font-size: clamp(58px, 8vw, 108px);
    position: relative;
    top: 0.5rem;
  }
    .hero-banner-content .text-button .subtitle {
      padding-left: {% unless isSecondLP %}85px {% endunless %};
      color: {% if isSecondLP %}#ffffff{% else %} var(--dark-green){% endif %};
      font-family: 'PP Radio Grotesk';
      font-weight: 700;
      font-size:{% if isSecondLP %}clamp(26px, 4vw, 55px){% else %} clamp(26px, 7vw, 62px){% endif %};
      {% if isSecondLP %}letter-spacing: -0.02em{% endif %};
      max-width: {% if isSecondLP %}60%{% endif %};
    }
  
    .hero-banner-content .text-button .text-hero {
        padding-top: 81px;
        padding-left: 84px;
        font-family: 'DM Sans';
        font-weight: 700;
        font-size: clamp(24px, 5vw, 28px);
        color: #ffffff;
        max-width: 504px;
      
    }
  
    .hero-banner .main-img-mb {
      display: none;
    }

    .bottom-text{
