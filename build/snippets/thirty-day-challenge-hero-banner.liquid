
<section class="hero-banner">
    <img class="main-img-mb" src="{{ 'thirty-strong-woman-mobile.png' | asset_url }}" width="750" height="727" alt="bottle-hand-mask-mb" loading="lazy"> 
    <div class="container">
      <div class="hero-banner-content">
       
        <div class="text-button">
          {% if isSecondLP %} 
          <img class="title-img" src="{{ 'lp02-percent-off.png' | asset_url }}" width="456" height="235" alt="bottle-hand-mask" loading="lazy">
          {% endif %}
      <div class="main-title">{{ mainTitle }}{% if isSecondLP %} <span class="plus">+</span>{% endif %} </div>
          <div class="subtitle">{{ subTitle }}</div>
          {% unless isSecondLP %}
          <div class="text-hero">{{ textHero }} </div>
         {% endunless %}
        </div>
        <img class="main-img" src="{{ 'thirty-strong-woman.png' | asset_url }}" width="1271" height="879" alt="bottle-hand-mask" loading="lazy">
      </div>    
    </div>

    {% if isSecondLP %} 
      <div class="bottom-text">Exclusive for existing Curalife customers!</div>
    {% endif %}
     
  </section>
  
