<section id="curalin-section">
  <img class="decoration" src="{{ 'partnerships-curalin-decoration.svg' | asset_url }}" alt="curalife info" loading="lazy">
  <div class="container">
    <div class="content">
      <div class="titles" data-aos="fade-up">
        <img src="{{ 'logo-new-curalin.svg' | asset_url }}" alt="curalife info" loading="lazy">
        <h2>An effective supplement for healthy glucose levels</h2>
      </div>

      {% assign facts = "Clinically tested with results published in a peer-reiewed medical journal
                        |Formulated by doctors specifically for glucose support
                        |10 years of research supports CuraLinâ€™s formula
                        |Manufactured in GMP certified facilities"
                        | split: '|'%}

      <div class="facts">
        {% for fact in facts %}
          <div class="fact" data-aos="fade-right">
            <div class="icon-wrapper">
              <img class="icon-bg" src="{{ 'partnerships-curalin-icons-bg.svg' | asset_url }}" alt="curalife info" loading="lazy">
              <img class="icon" src="{{ 'partnerships-curalin-icons-' | append: forloop.index | append: ".svg" | asset_url }}" alt="curalife info" loading="lazy">
            </div>
            <p>{{ fact }}</p>
          </div>
        {% endfor %}
      </div>
      <img class="bottle" src="{{ 'partnerships-curalin-bottle.png' | asset_url }}" alt="curalife info" loading="lazy" data-aos="fade-left">
    </div>
    <a class="cta" href="#contact-section" data-aos="fade-right"><button>Learn More</button></a>
  </div>
</section>

<style>
  #curalin-section {
    background-color: var(--brown-lighter);
  }

  #curalin-section .decoration {
    position: absolute;
    top: 10px;
    right: 0;
  }

  #curalin-section .content {
    display: grid;
    position: relative;
    z-index: 1;
    margin-bottom: 50px;
  }

  #curalin-section .content .titles {
    grid-row: 1/2;
    grid-column: 1/2;
  }

  #curalin-section .content .titles img {
    filter: invert(25%) sepia(13%) saturate(879%) hue-rotate(39deg) brightness(89%) contrast(85%);
    margin-bottom: 10px;
  }

  #curalin-section .content .titles h2 {
    color: var(--green-dark);
    white-space: nowrap;
  }
  
  #curalin-section .content .facts {
    grid-row: 2/3;
    grid-column: 1/2;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  #curalin-section .content .facts .fact {
    display: flex;
    align-items: center;
    margin-bottom: 30px;
  }
  
  #curalin-section .content .facts .fact .icon-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20px;
  }

  #curalin-section .content .facts .fact .icon-wrapper .icon-bg {
    width: 100px;
  }
  
  #curalin-section .content .facts .fact .icon-wrapper img.icon {
    position: absolute;
    height: 60%;
  }

  #curalin-section .content .facts .fact p {
    max-width: 410px;
    font-size: 28px;
  }
  
  #curalin-section .content .bottle {
    grid-row: 1/3;
    grid-column: 2/3;
    height: calc(100% + 30px);
    object-fit: cover;
  }

  #curalin-section .content .cta {
    display: block;
    text-align: center;
  }

  @media screen and (max-width: 768px) {
    #curalin-section .decoration {
      top: 50vw;
    }

    #curalin-section .content .titles {
      text-align: center;
    }

    #curalin-section .content .titles h2 {
      text-align: center;
      white-space: unset;
      font-weight: unset;
      font-size: 6vw;
    }

    #curalin-section .content .facts {
      grid-row: 3/4;
      margin-top: 10vw;
    }

    #curalin-section .content .facts .fact .icon-wrapper {
      min-width: 25%;
    }

    #curalin-section .content .facts .fact p {
      font-size: 5vw;
    }

    #curalin-section .content .bottle {
      grid-row: 2/3;
      grid-column: 1;
      height: unset;
    }

    #curalin-section button {
      margin: auto;
      display: block;
    }
  }
</style>