<script>
  const urlParams = new URLSearchParams(window.location.search);

  if (urlParams.get('customer') && urlParams.get('field') && urlParams.get('value')) {
    // Split to flow by Email or ID
    let zapierURL = urlParams.get('customer').includes('@') ? 'https://hooks.zapier.com/hooks/catch/10900898/bxyk2z1/' : 'https://hooks.zapier.com/hooks/catch/10900898/bxnq9au/';

    const options = {
      method: 'POST',
      body: JSON.stringify({customer: urlParams.get("customer"), field: urlParams.get("field"), value: urlParams.get("value")})
    };

    fetch(zapierURL, options)
    .then(response => console.log(response.json()))
    .then(response => console.log(response))
    .catch(err => console.error(err));
  }
