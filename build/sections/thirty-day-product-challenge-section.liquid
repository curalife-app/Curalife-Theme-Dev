
<section id="product-feature-section">
  <div class="container">   
    <div class="features-wrapper">
      {% render 'features-list', product: product %}
    </div>
  </div>
</section>

<style>
  #product-feature-section .container {
    font-weight: bold;
    position: relative;
  }

  #product-feature-section {
    position: relative;
    color: var(--dark-green);
    padding: 50px 0;
    line-height: 1.2em;
  }

  .all-features-wrapper {
    display: flex;
    justify-content: space-between;
  }

  .features-wrapper {  
    columns: 2;
    width: 100%;
    gap: 10%;
   
  }


  .new-price {
    font-family: 'Poppins';
    font-weight: 700;
    font-size: clamp(45px, 2vw, 52px);
    text-align: center;
  }

  @media screen and (max-width: 768px) {
    #product-feature-section .container {
      padding: 0 15px;
    }


    .features-wrapper {  
      columns: 1;  
      gap: unset;

    }

    .all-features-wrapper {
      flex-direction: column;
    }
  }
</style>
        
