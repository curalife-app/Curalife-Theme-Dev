<!-- Pass URL Parameters to the next internal pages -->
<script>
  var queryString = new URL(window.location).search;
  document.querySelectorAll("[href]").forEach(link => {
    if (link.href.startsWith("/") || link.href.startsWith(".") || (link.href.startsWith("http") && link.href.includes(window.location.hostname))) {
      var current = link.href;
      link.href = current + queryString;
    }
  });
</script>