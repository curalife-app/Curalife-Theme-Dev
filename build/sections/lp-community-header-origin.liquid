<header>
  <div class="container">
    <div class="main-toolbar">
      <div class="main-links d-mobile">
        <ul>
          <li><a href="javascript:void(0)" class="open-menu"><i class="icon-menu"></i></a></li>
        </ul>
      </div>
      <div class="main-logo">
        Winning Type 2 Diabetes Together
      </div>
      <div class="main-menu">
        <div class="menu-scroll">
          <ul>
          <li><a class="scroller" href="#" goto="food">Food Posts</a></li>
          <li><a class="scroller" href="#" goto="topics">Top Topics</a></li>
          <!-- <li><a class="scroller" href="#" goto="mealplans">Meal Plans</a></li> -->
          <li><a class="scroller" href="#" goto="education">Type 2 Education</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  header {
    height: 80px;
    background: rgba(255, 255, 255, 0.8);
    /* opacity: 0.8; */
  }

  header:before {

    background: rgba(255, 255, 255, 0.8);
    opacity: 0.8;
    visibility: visible;
  }

  .main-logo {
    font-family: 'PP Radio Grotesk';
    font-style: normal;
    font-weight: 400;
    font-size: 38px;
    line-height: 26px;
    text-align: center;
    letter-spacing: -0.03em;
    color: #2C385C;
  }

  .main-toolbar {
    padding: 15px 0;
  }

  .main-logo  {
    margin-top: 5px;
  }

  .main-menu ul li a {
    margin-top: 15px;
    color: #2C385C;
    text-transform: unset;
  }

  .main-menu ul li a:hover {
    text-decoration: none;
    color: #2C385C;
  }

  .main-links ul li a.open-menu i.icon-menu  {
    color: #2C385C;
  }

  .main-links ul li a:hover {
      color: #2C385C;
  }

  @media screen and (max-width: 991px) {
    .main-menu .menu-scroll {
      background-color: rgba(255, 255, 255, 0.8);
    }

    .main-menu ul li a {
      margin-top: unset;

    }

    header {
      height: unset;
    }

    .main-logo  {
      max-height: 10vw;
      font-size: 16px;
      line-height: 26px;
      text-align: center;
      letter-spacing: -0.03em;
      color: #2C385C;
    }

    .main-toolbar {
      justify-content: center;
    }

    .main-links.d-mobile {
      position: absolute;
      left: 0;
    }
  }
</style>

<script>
  $(".scroller").click(function() {
    let goto = $(this).attr("goto")
    $('html, body').animate({
      scrollTop: $(".community-" + goto).offset().top
    }, 2000);

    if (window.matchMedia("only screen and (max-width: 768px)").matches) {
      $(".open-menu").trigger("click");
    }
  });
</script>