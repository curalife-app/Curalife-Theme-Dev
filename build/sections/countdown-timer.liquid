<div id="countdown">
  <ul>
    <li><span class="hours"></span>{% unless isHideTitles %}Hours{% endunless %}</li>
    <li><span class="minutes"></span>{% unless isHideTitles %}Minutes{% endunless %}</li>
    <li><span class="seconds"></span>{% unless isHideTitles %}Seconds{% endunless %}</li>
  </ul>
</div>

{% if timerAlreadyRun == false %}
{% assign timerAlreadyRun = true %}
<style>
  #countdown {
    {% if timerColor %}color: {{ timerColor }};{% endif %}
    margin-top: 10px;
  }

  #countdown li {
    display: inline-block;
    font-size: 15px;
    list-style-type: none;
    text-transform: uppercase;
    min-width: 80px;
    text-align: center;
    font-family: 'Poppins';
    position: relative;
  }

  #countdown li span {
    display: block;
    font-size: 60px;
    font-weight: 400;
    font-family: 'Ticking Timebomb';
    line-height: 0.7em;
  }

  #countdown li:not(:last-child):before {
    content: ":";
    display: block;
    font-size: 40px;
    position: absolute;
    top: -10px;
    left: 83px;
  }

  @media screen and (max-width: 768px) {
    #countdown {
      margin-top: 2vw;
    }

    #countdown li {
      font-size: 3vw;
      min-width: 14vw;
    }

    #countdown li span {
      font-size: 11vw;
    }

    #countdown li:not(:last-child):before {
      font-size: 5vw;
      top: -1vw;
      left: 14vw;
    }
  }
</style>

<script>
  // Timer
  Number.prototype.pad = function () {
    return this < 10 ? '0' + this : this;
  }

    const second = 1000,
      minute = second * 60,
      hour = minute * 60;

      let birthday = "December 01, 2022 10:00:00";
    let countDown = new Date(birthday).getTime();
    let x = setInterval(function () {
      var now = new Date().getTime();
      var distance = countDown - now;

    Array.from(document.getElementsByClassName("hours")).forEach(element => element.innerText = Math.floor(distance / (hour)).pad());
    Array.from(document.getElementsByClassName("minutes")).forEach(element => element.innerText = Math.floor((distance % (hour)) / (minute)).pad());
    Array.from(document.getElementsByClassName("seconds")).forEach(element => element.innerText = Math.floor((distance % (minute)) / second).pad());

    // do something later when date is reached
    if (distance < 0) {
      clearInterval(x);
    }
    //seconds
  }, 0)
    </script>
{% endif %}