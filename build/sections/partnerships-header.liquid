
<header>
  <div class="container">
    <div class="main-links d-mobile">
      <ul>
        <li><a href="javascript:void(0)" class="open-menu"><i class="icon-menu"></i></a></li>
      </ul>
    </div>
    <div class="logo">
      <a href="#hero-section"><img src="{{ 'logo-new.svg' | asset_url }}" alt="logo"></a><span>For Partners</span>
    </div>
    <div class="main-menu">
      <ul>
        <li><a class="scroller" href="#info-section">About Us</a></li>
        <li><a class="scroller" href="#scientific-section">Science</a></li>
        <li><a class="scroller" href="#curalin-section">Nutraceuticals</a></li>
        <li><a class="scroller" href="#technology-section">Technology</a></li>
        <li><a class="scroller" href="#program-cta-section">PSP</a></li>
        <li><a class="scroller" href="#contact-section">Contact us</a></li>
      </ul>
    </div>
  </div>
</header>

<style>
  header {
    background-color: var(--green-dark);
    height: 80px;
    color: white;
  }

  header:before {
    content: unset !important;
  }

  header .container {
    height: inherit;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: end;
    gap: 10px;
    font-size: 20px;
  }

  .logo img {
    width: 120px;
    filter: invert(100%) sepia(100%) saturate(0%) hue-rotate(239deg) brightness(105%) contrast(101%);
  }

  .logo span {
    position: relative;
    top: 4px;
  }

  .main-menu ul li a {
    text-transform: unset;
    color: #ffffff;
  }

  .main-menu ul li a:hover {
    text-decoration: none;
    color: #ffffff;
  }

  .main-links ul li a.open-menu i.icon-menu  {
    color: white;
  }

  .main-links ul li a:hover {
      color: #ffffff;
  }

  .scroller {
    font-family: 'DM Sans';
    font-weight: 400;
    font-size: 24px;
    line-height: 32px;
  }

  @media screen and (max-width: 768px) {
    header .container {
      justify-content: center;
    }

    .main-menu {
      padding: 70px;
      padding-left: 5vw;
      padding-top: 70px;
    }

    .main-menu {
      background-color: #404733;
    }

    header {
      height: 70px;
    }

    .main-links.d-mobile {
      position: absolute;
      left: 3vw;
    }
  }
</style>

<script>
  $(".scroller").click(function() {
    if (window.matchMedia("only screen and (max-width: 768px)").matches) {
      $(".open-menu").trigger("click");
    }
  });
</script>


