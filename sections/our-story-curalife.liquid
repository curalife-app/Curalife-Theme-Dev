<img class="curalife-swoosh" src="{{'our-story-curalife-swoosh.svg' | asset_url  }}" width="891" height="449"  alt="">

<div class="container">
  <div class="curalife-text">
    <div class="curalife-title">
      <h1>{{ section.settings.title }}</h1>
    </div>
    <div class="border-curalife"> </div>
    <div class="curalife-small-text">
      {{ section.settings.paragraph }}
    </div>
  </div>
</div>

<style>
.our-story-curalife {
  position: relative;
  padding-bottom: 40px;
}

.curalife-swoosh {
  position: absolute;
}

.curalife-text {
  position: relative;
  padding: 200px 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20px;
}

.curalife-title h1 {
  font-family: 'PP Radio Grotesk';
  font-weight: 700;
  font-size: clamp(50px, 5vw, 98px);
  line-height: 134px;
  letter-spacing: -0.02em;
  color: #404733;
  min-width: 200px;
}

.curalife-title h1 span {
  font-family: 'DM Sans';
}

.border-curalife {
  border: 2px solid black;
  transform: rotate(90deg);
  width: 174px;
}

.curalife-small-text {
  max-width: 441px;
  font-family: 'Roboto';
  font-weight: 400;
  font-size: 25px;
  line-height: 37px;
  letter-spacing: -0.02em;
  color: #404733;
}

.curalife-small-text b {
  background-color: #D9D9D9;
  padding: 2px;
  border: 1px solid #D9D9D9;
  border-radius: 5px;
}

.curaline-border {
  width: 740px ;
  margin: 0 auto;
  border-bottom: 10px solid #404733;
}

@media screen and (max-width: 1800px) {
  .curalife-swoosh {
    max-width: 70vw;
  }
}

@media screen and (max-width: 768px) {
  .curalife-text {
    flex-direction: column;
    padding: 17vw 2vw;
    align-items: unset;
  }
  .curalife-title h1 {
    font-size: 10vw;
    line-height: 1.5em;
    border-bottom: 2px solid black;
    max-width: 44vw;
  }

  .border-curalife {
    display: none;
  }

  .curalife-small-text {
    max-width: unset;
    font-size: 7.5vw;
    line-height: 1.3em;
  }
  .curaline-border {
    width: 300px;
  }
}
</style>

{% schema %}
  {
    "name": "Hero Banner 2",
    "tag": "section",
    "class": "definition-section",
    "disabled_on": {
      "groups": [
        "header",
        "footer"
      ]
    },
    "settings": [{
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "paragraph",
      "label": "Paragraph"
    }
  ],
  "presets": [{
    "name": "Hero Banner 2"
  }]
}
{% endschema %}