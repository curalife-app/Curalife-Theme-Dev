<section id="featured-section">
  <div class="container">
    <h4>{{ section.settings.title }}</h4>
    <div class="items-wrapper">
        <div class="items" id="items">
          {% for block in section.blocks %}
              <div class="item"><img src="{{ block.settings.featured_image | img_url }}" alt="" loading="lazy"></div>
          {% endfor %}
        </div>
    </div>
  </div>
</section>

<style>
  @keyframes ticker {
    0% { transform: translate3d(0, 0, 0); }
    100% { transform: translate3d(-100%, 0, 0); }
  }

  section .items-wrapper {
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    overflow: hidden;
  }

  section .items-wrapper .items {
    width: 200vw;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: space-around;
    flex-wrap: nowrap;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
    animation-name: ticker;
    animation-duration: 30s;
  }

  section .items-wrapper .items:hover {
    animation-play-state: paused;
  }
</style>

<script>
  window.onload = function() {
    var items = document.getElementById('items');
    var clone = items.cloneNode(true);
    items.appendChild(clone);
  }
</script>

<style>
  {% if section.settings.is_remove_padding_top %}
    #featured-section {
      padding-top: 0;
    }
  {% endif %}

  {% if section.settings.is_remove_padding_bottom %}
    #featured-section {
      padding-bottom: 0;
    }
  {% endif %}

  #featured-section {
    border-bottom: 1px solid {{ section.settings.bg_color_bottom }};
    background-color: {{ section.settings.bg_color }};
  }

  #featured-section h4 {
    font-size: 24px;
    opacity: .6;
    text-align: center;
    font-weight: 300;
    margin-bottom: 30px;
  }

  #featured-section .partners-wrapper {
    display: flex;
    overflow: hidden;
    align-items: center;
    width: 100%; /* Ensure full width */
  }

  #featured-section .partners-wrapper .partner-col {
    flex-shrink: 0;
    width: 150px;
    margin-right: 30px; /* Adjust spacing between items */
  }

  #featured-section .partners-wrapper .ticker-col {
    display: flex;
    animation: ticker infinite 20s linear; /* Adjust duration as needed */
    width: fit-content; /* Adjust to fit the content width */
  }

  #featured-section .partners-wrapper .partner-item {
    opacity: .6;
    min-height: 60px;
    display: flex;
    align-items: center;
  }

  @keyframes ticker {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  @media screen and (max-width: 768px) {
    #featured-section .partners-wrapper .partner-col {
      width: 20vw;
    }

    #featured-section h4 {
      margin: 5vw 0;
    }
  }
</style>
