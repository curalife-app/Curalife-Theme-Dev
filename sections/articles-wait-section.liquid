{% if section.settings.heading != blank or section.settings.wait-bg-img != blank %}
{% if section.settings.wait-bg-img != blank %}	
<style>
  .wait__block{
    background-image: url("{{section.settings.wait-bg-img | img_url: "master"}}");
  }
</style>
{% endif %}
{% if section.settings.wait-bg-img-mobile != blank %}
  <style>
    @media only screen and (max-width: 767px){
      .wait__block{
        background-image: url("{{section.settings.wait-bg-img-mobile | img_url: "master"}}");
      }
    }
  </style>
{% endif %}
  <div class="wait__block">
    {% if section.settings.heading != blank %}
      <div class="outer__wait">
        <h2>{{section.settings.heading}}</h2>
      </div>
    {% endif %}
  </div>
{% endif %}
{% schema %}
	{
		"name": "Wait Section",
        "settings": [	
		 {
			"type" : "image_picker",
			"id" : "wait-bg-img",
			"label" : "Background Image"
		 },
		 {
			"type" : "image_picker",
			"id" : "wait-bg-img-mobile",
			"label" : "Mobile Background Image"
		 },
		 {
            "type": "text",
            "id": "heading",
            "label": "Section Heading"
          }	
        ]
	}
{% endschema %}