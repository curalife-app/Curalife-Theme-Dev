<div class="health-page">
    <div class="swoosh-img"><img src="{{ section.settings.image_3 | image_url }}" width="639" height="894" alt=""></div>
    <div class="img-egg-mb">
        <img src="{{ section.settings.image_2 | image_url }}" width="375" height="460" alt="">
    </div>
    <div class="container">
        <div class="egg-wrapper">
           
           <div class="egg-titles">
            <div class="egg-subtitle">{{ section.settings.subtitle }}</div>
            <div class="egg-title"> <h1>{{ section.settings.title }}</h1></div>
             </div>
            <div class="img-egg">
                <img src="{{ section.settings.image_1 | image_url }}" width="1178" height="722" alt="">
            </div>
        </div>
        <div class="content-wrapper">
            {{ section.settings.main_content }}
        </div>
       
    </div>
   
</div>


<style>
   .container {
      position: relative;
      width: 100%;
      height: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 15px;
  }
</style>


<style>
    .health-page {
        position: relative;
        overflow: hidden;
    }

    .swoosh-img {
        position: absolute;
        left: 0;
        z-index: 1;
        max-width: 60%;
    }
    .egg-wrapper {
        display: flex;
        align-items: center;
    }

    .egg-titles {
        display: flex;
        flex-direction: column;
        padding-left: 80px;
        padding-top: 20px;
        position: relative;
        z-index: 2;
    }

    .egg-subtitle {
        font-family: 'PP Radio Grotesk';
        font-weight: 400;
        font-size: clamp(38px, 2vw, 50px);
        line-height: clamp(34px, 2vw, 48px);
        letter-spacing: -0.01em;
        color: #404733;
    }

    .egg-title h1 {
        font-family: 'PP Radio Grotesk';
        font-weight: 700;
        font-size: clamp(55px, 2vw, 86px);
        line-height: clamp(55px, 2vw, 60px);;
        letter-spacing: -0.01em;
        color: #404733;
    }

    .img-egg-mb {
        display: none;
    }

    .content-wrapper {
        max-width: 500px;
        margin: 30px auto;
        font-family: 'DM Sans';
        font-weight: 400;
        font-size: 23px;
        line-height: 34px;
        text-align: center;
        letter-spacing: -0.01em;
        position: relative;
        z-index: 2;
    }


    @media screen and (max-width: 768px) {
        .egg-wrapper {
            padding: 9vw;
        }

        .egg-titles {
            padding-top: 1em;
            padding-left: unset;
        }

        .egg-title h1 {
            font-size: 10vw;
            line-height: 10vw;
        }

        .egg-subtitle {
            font-size: 10vw;
            line-height: 10vw;
        }

        .img-egg {
            display: none;
        }

        .img-egg-mb {
            display: block;
            position: absolute;
            right: 0;
        }

        .content-wrapper {
            margin: 1em 0.5em 0.5em;
            max-width: unset;
            font-size: 6vw;
            line-height: 7vw;
            text-align: left;
        }
    }


    @media screen and (max-width: 608px) {
        .content-wrapper {
            margin: 5em 0.5em 0.5em;
            
        }
    }

    @media screen and (max-width: 508px) {
        .content-wrapper {
            margin: 7em 0.5em 0.5em;

        }
    }

    @media screen and (max-width: 400px) {
        .content-wrapper {
            margin: 8em 0.5em 0.5em;

        }
    }

 

    
</style>



{% schema %}
{
    "name": "Health",
    "tag": "section",
    "class": "health",
    "disabled_on": {
        "groups": [
            "header",
            "footer"
        ]
    },
    "settings": [{
        "type": "text",
        "id": "title",
        "label": "Heading"
    },

    {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
    },
    {
        "type": "image_picker",
        "id": "image_2",
        "label": "Image 2"
    },
    {
        "type": "image_picker",
        "id": "image_3",
        "label": "Image 3"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
        "type": "text",
        "id": "main_content",
        "label": "Content"
    }
],
    "presets": [{
        "name": "Health"
    }]
}
{% endschema %}