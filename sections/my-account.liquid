<script>
  function changeContent() {
    let selectedTab = document.querySelector('#mobile-dropdown').value;
    let tabLink = document.querySelector(`ul li a[href="${selectedTab}"]`);
    if (tabLink) {
      tabLink.click();
    }
  }
</script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Tab control functionality
    function setActiveTab(targetLink) {
      const tabs = document.querySelector('#tabs');
      const tabLinks = Array.from(tabs.querySelectorAll('ul li a'));
      const accountData = document.querySelector('.account-data');
      const allTabPanes = Array.from(tabs.querySelectorAll('.account-data .data-row'));

      const href = targetLink ? targetLink.getAttribute('href').substr(1) : null;
      const tabPane = href ? document.getElementById(href) : null;

      // Deactivate all tab panes and links
      allTabPanes.forEach(pane => {
        pane.classList.remove("active");
        pane.style.pointerEvents = "none";
      });
      tabLinks.forEach(link => link.parentElement.classList.remove("active"));

      if (tabPane) {
        // Activate the target tab pane and link
        tabPane.classList.add("active");
        tabPane.style.pointerEvents = "auto";
        const tabPaneWrap = tabPane.querySelector('.data-wrap');
        accountData.style.height = `${tabPaneWrap.offsetHeight}px`;
      }

      targetLink.parentElement.classList.add("active");
    }

    // Initialize
    const tabs = document.querySelector('#tabs');
    const tabLinks = Array.from(tabs.querySelectorAll('ul li a'));
    setActiveTab(tabLinks[0]);

    // Listen to tab clicks
    tabLinks.forEach(link => {
      link.addEventListener('click', function (e) {
        e.preventDefault();
        setActiveTab(e.target);
      });
    });

    // Update accountData height on pane transition
    const allTabPanes = Array.from(tabs.querySelectorAll('.account-data .data-row'));
    allTabPanes.forEach(pane => {
      pane.addEventListener('transitionend', function () {
        const activeTabPane = tabs.querySelector('.account-data .data-row.active');
        if (activeTabPane) {
          accountData.style.height = `${activeTabPane.clientHeight}px`;
        }
      });
    });

    // Handle the mobile dropdown
    const mobileDropdown = document.querySelector('#mobile-dropdown');
    mobileDropdown.addEventListener('change', function () {
      const selectedValue = this.value;
      if (selectedValue.startsWith("/")) {
        window.location.href = selectedValue;
      } else {
        const targetLink = document.querySelector(`ul li a[href="${selectedValue}"]`);
        if (targetLink) {
          targetLink.click();
        }
      }
    });

    // Handle subscriptions link
    $(document).ready(function () {
      const subscriptionsLink = $('.rc-login a').first().attr('href');
      $('#subscription-tab').attr('href', subscriptionsLink);
      $('.rc-login').closest('section').remove();
      $('#mobile-dropdown option[value="#subscription-tab"]').attr('value', subscriptionsLink);
    });
  });
</script>

