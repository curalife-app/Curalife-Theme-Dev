{% style %}
.contact-us-section .container h2 {
    text-align: center;
    font-weight: 600;
}

.contact-us-section .container .contact-options {
    display: flex;
    justify-content: center;
    gap: 100px;
    margin-top: 80px;
}

.contact-us-section .container .contact-options .contact-option {
    text-align: center;
    font-size: 18px;
}

.contact-us-section .container .contact-options .contact-option .img-wrapper {
    border-radius: 50%;
    background-color: #c1dad8;
    padding: 20px;
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    margin: auto;
}

.contact-us-section .container .contact-options .contact-option .img-wrapper img {
    object-fit: contain;
}

.contact-us-section .container .phone-numbers {
    display: flex;
    flex-direction: column;
    max-width: 340px;
    margin: 30px auto auto;
}

.contact-us-section .container .phone-numbers .phone-number {
    display: flex;
    align-items: center;
}

.contact-us-section .container .phone-numbers .phone-number img {
    width: 25px;
}

.contact-us-section .container .phone-numbers .phone-number p {
    font-size: 18px;
    margin: 10px;
    color: black;
}

@media screen and (max-width:760px) {
    .contact-us-section .container h2 {
        font-size: 6vw;
        text-align: center;
        max-width: unset;
        margin-bottom: 10px;
    }

    .contact-us-section .container .contact-options {
        gap: 10vw;
        margin-top: 40px;
    }

    .contact-us-section .container .contact-options .contact-option .img-wrapper {
        width: 20vw;
        height: 20vw;
        padding: 15px;
    }

    .contact-us-section .container .phone-numbers .phone-number a p {
        font-size: 4vw;
    }
}
{% endstyle %}