<div class="container">
  <h2>{{ section.settings.title }}</h2>

  <div class="swiper">
    <div class="swiper-wrapper reviews flex">
      {% for block in section.blocks %}
        <div class="swiper-slide review h-500 drop-shadow-xl flex items-center gap-8 p-8 bg-white">
          <img src="{{ block.settings.customer_image | img_url: 'master' }}" alt="">
          <div class="content">
            <h3 class="name">{{ block.settings.name }}</h3>
            <div class="rating text-lightGreen mb-5"><i class="fa-sharp fa-solid fa-star"></i><i class="fa-sharp fa-solid fa-star"></i><i class="fa-sharp fa-solid fa-star"></i><i class="fa-sharp fa-solid fa-star"></i><i class="fa-sharp fa-solid fa-star"></i></div>
            <p class="quote">{{ block.settings.quote }}</p>
            <p class="additional-text">{{ block.settings.additional_text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</div>

<style>
  .customer-reviews .reviews {
    padding: 0px 0 50px 50px;
  }

  .customer-reviews .review {
    width: 90%;
  }
</style>

<script>
  const swiper = new Swiper('.swiper', {
    loop: true,
    grabCursor: true,

    // If we need pagination
    pagination: {
      el: '.swiper-pagination',
    },

    // Navigation arrows
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    }
  });
</script>

{% schema %}
{
  "name": "Customer Reviews",
  "tag": "section",
  "class": "customer-reviews bg-lighterBrown",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Customer Reviews"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "customer_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer Name"
        },
        {
          "type": "richtext",
          "id": "quote",
          "label": "Review Quote"
        },
        {
          "type": "text",
          "id": "additional_text",
          "label": "Additional Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Reviews"
    }
  ]
}
{% endschema %}