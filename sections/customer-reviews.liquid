<div class="container">
  <h2>{{ section.settings.title }}</h2>

  <div class="reviews flex">
    {% for block in section.blocks %}
      <div class="review h-500 drop-shadow-xl flex items-center gap-8 p-8 bg-white">
        <img src="{{ block.settings.customer_image | img_url: 'master' }}" alt="">
        <div class="content">
          <h3 class="name">{{ block.settings.name }}</h3>
          <div class="rating text-lightGreen mb-5"><i class="fa-sharp fa-solid fa-star"></i><i class="fa-sharp fa-solid fa-star"></i><i class="fa-sharp fa-solid fa-star"></i><i class="fa-sharp fa-solid fa-star"></i><i class="fa-sharp fa-solid fa-star"></i></div>
          <p class="quote">{{ block.settings.quote }}</p>
          <p class="additional-text">{{ block.settings.additional_text }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Customer Reviews",
  "tag": "section",
  "class": "customer-reviews bg-lighterBrown",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Customer Reviews"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "customer_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer Name"
        },
        {
          "type": "richtext",
          "id": "quote",
          "label": "Review Quote"
        },
        {
          "type": "text",
          "id": "additional_text",
          "label": "Additional Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Reviews"
    }
  ]
}
{% endschema %}