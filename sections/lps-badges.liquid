<section class="badges-section">
    <div class="container">
        <div class="badges">
            <div class="badge-wrapper">
                <div class="badge">
                    <img src="{{ "icon-clinically-tested.svg" | asset_url }}" alt="" loading="lazy">
                </div>
                <p>Clinically Tested</p>
            </div>
            <div class="badge-wrapper">
                <div class="badge">
                    <img src="{{ "icon-doctor-approved.svg" | asset_url }}" alt="" loading="lazy">
                </div>
                <p>Doctors Recommended</p>
            </div>
            <div class="badge-wrapper">
                <div class="badge">
                    <img src="{{ "icon-vegan-friendly.png" | asset_url }}" alt="" loading="lazy">
                </div>
                <p>Vegan Friendly</p>
            </div>
            <div class="badge-wrapper">
                <div class="badge">
                    <img src="{{ "icon-patient-recommended.png" | asset_url }}" alt="" loading="lazy">
                </div>
                <p>Patient Recommended</p>
            </div>
            <div class="badge-wrapper">
                <div class="badge">
                    <img src="{{ "icon-iso-certified.png" | asset_url }}" alt="" loading="lazy">
                </div>
                <p>ISO9001 Certified</p>
            </div>
        </div>
    </div>
</section>

{% style %}
.badges-section .container .badges {
    display: flex;
    justify-content: center;
}

.badges-section .container .badges .badge-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 150px;
}

.badges-section .container .badges .badge-wrapper .badge {
    border-radius: 50%;
    border: 1px solid #000;
    padding: 10px;
}

.badges-section .container .badges .badge-wrapper .badge img {
    height: 50px;
    width: 50px;
    max-width: 20vw;
    max-height: 20vw;
    object-fit: contain;
}

@media screen and (max-width:760px) {
    .badges-section .container .badges {
        flex-wrap: wrap;
        gap: 5%;
    }

    .badges-section .container .badges .badge-wrapper {
        width: 30%;
        padding: 2vw;
        min-width: unset;
        text-align: center;
    }

    .badges-section .container .badges .badge-wrapper .badge img {
        height: 10vw;
        width: 10vw;
    }
}
{% endstyle %}