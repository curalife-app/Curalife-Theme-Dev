{% if section.settings.heading != blank or section.settings.subheading1 != blank or section.settings.harmful-desc != blank %}
{% if section.settings.harmful-bg-color != blank %}
	<style>
      .why__diabet{
      	background-color: {{section.settings.harmful-bg-color}};
      }
    </style>
{% endif %}
<div class="why__diabet">
  <div class="outer__why--diabet">
    <div class="head__why">
      {% if section.settings.heading != blank %}
     	 <h6>{{ section.settings.heading }}</h6>
      {% endif %}
      {% if section.settings.subheading1 != blank %}
     	 <h2>{{ section.settings.subheading1 }}</h2>
      {% endif %}
      <div class="info__head--why">
        {% if section.settings.subheading2 != blank %}
       		<p class="weight__txt">{{section.settings.subheading2}}</p>
        {% endif %}
        {% if section.settings.harmful-desc != blank %}
       		<p>{{section.settings.harmful-desc}}</p>
        {% endif %}
      </div>
    </div>
    <div class="inner__harmful">
      {% assign i = 1 %}
      {%- for block in section.blocks -%}
      	{% assign remainder = i | modulo:2 %}
      	{% if remainder == 1 %}
      		<div class="elem__harmful left__harmful">
              {% if block.settings.harmful-list-content != blank %}
                <div class="info__harmful">
                  <p>{{ block.settings.harmful-list-content }}</p>
                </div>
              {% endif %}
              {% if block.settings.harmful-list-image != blank %}
                <div class="image__harmful">
                  	<img src="{{ block.settings.harmful-list-image | img_url: "master" }}" alt="diabet1" loading="lazy">
                </div>
              {% endif %}
            </div>
      	{% else %}
      		<div class="elem__harmful right__harmful">
                {% if block.settings.harmful-list-content != blank %}
                  <div class="info__harmful">
                    <p>{{ block.settings.harmful-list-content }}</p>
                  </div>
                {% endif %}
                {% if block.settings.harmful-list-image != blank %}
                  <div class="image__harmful">
                      <img src="{{ block.settings.harmful-list-image | img_url: "master" }}" alt="diabet1" loading="lazy">
                  </div>
                {% endif %}
            </div>
      	{% endif %}
    	{% assign i = i | plus:1 %}	
      {%- endfor -%}
    </div>
  </div>
</div>
{% endif %}

{% schema %}
  {
    "name": "Diabetes Harmful Effects",
    "settings": [
	  {
        "type": "color",
        "id": "harmful-bg-color",
        "label": "Background Color"
      },	
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading"
      },
      {
        "type": "text",
        "id": "subheading1",
        "label": "Subheading 1"
      },
	  {
        "type": "text",
        "id": "subheading2",
        "label": "Subheading 2"
      },
	  {
        "type": "textarea",
        "id": "harmful-desc",
        "label": "Description"
      }
  	],
	"blocks": [
      {   
        "type": "harmful-list",
        "name": "Diabetes Harmful Effects",
        "settings": [
        	 {
              "type": "text",
              "id": "harmful-list-content",
              "label": "Content"
            },
 			{
              "type": "image_picker",
              "id": "harmful-list-image",
              "label": "Image"
            }
        ]
      }
	]
  }		
{% endschema %}
