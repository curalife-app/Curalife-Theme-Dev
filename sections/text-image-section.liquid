{% render 'text-image',
  bg_color: section.settings.bg_color,
  text_color: section.settings.text_color,
  main_image: section.settings.image,
  main_mobile_image: section.settings.image_mobile,
  title: section.settings.title,
  content: section.settings.content,
  link_url_1: section.settings.link_url_1,
  link_title_1: section.settings.link_title_1,
  link_url_2: section.settings.link_url_2,
  link_title_2: section.settings.link_title_2,
  button_title: section.settings.button_title,
  button_link: section.settings.button_link,
  button_color: section.settings.button_color,
  button_text_color: section.settings.button_text_color,
  mobile_alignment: section.settings.mobile_alignment,
  is_flip: section.settings.is_flip,
  is_mobile_reverse: section.settings.is_mobile_reverse,
  section_id: section.id %}

{% schema %}
{
  "name": "Text with Image",
  "tag": "section",
  "class": "text-image-section no-padding",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image on Mobile (optional)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "header",
      "content": "Links"
    },
    {
      "type": "text",
      "id": "link_title_1",
      "label": "Link Title 1"
    },
    {
      "type": "url",
      "id": "link_url_1",
      "label": "Link URL 1"
    },
    {
      "type": "text",
      "id": "link_title_2",
      "label": "Link Title 2"
    },
    {
      "type": "url",
      "id": "link_url_2",
      "label": "Link URL 2"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_title",
      "label": "Button Title"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color"
    },
    {
      "type": "header",
      "content": "More Options"
    },
    {
      "type": "select",
      "id": "mobile_alignment",
      "label": "Mobile Alignment",
      "options": [
        {
          "value": "start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "start"
    },
    {
      "type": "checkbox",
      "id": "is_flip",
      "label": "Flip Section"
    },
    {
      "type": "checkbox",
      "id": "is_mobile_reverse",
      "label": "Reverse On Mobile"
    }
  ],
  "presets": [
    {
      "name": "Text with Image"
    }
  ]
}
{% endschema %}