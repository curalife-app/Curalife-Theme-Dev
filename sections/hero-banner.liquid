<div class="container">
  <h1>
    {{ settings.small_header }}<br>
    <span>{{ settings.big_header }}</span>
  </h1>
</div>

<style>
  .hero-banner {
    background-image: url({{ settings.bg_image | img_url: 'master' }});
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "class": "hero-banner",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg-image"
    },
    {
      "type": "text",
      "id": "small_header"
    },
    {
      "type": "text",
      "id": "big-header"
    }
  ]
}
{% endschema %}