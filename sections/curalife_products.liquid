<div class="retail-product">
    <div class="container">
        <div class="mini-wrap">
            <div class="sub-title">
                <h1>{{section.settings.rtlprdct_title}}</h1>
                <p>{{section.settings.rtlprdct_desc}}</p>
            </div>
            <div class="product-list">
                {%- assign collection = collections[section.settings.rtlcollection] -%}
                {% for product in collection.products  -%}
                <div class="product-card">
                    <div class="wrap">
                        <div class="picture">
                            {% if section.settings.rtlprdct_bgimg != blank %}
                            <div class="bg">
                                <img src="{{section.settings.rtlprdct_bgimg | img_url: ''}}" alt="">
                            </div>
                             {% endif %}

                              {% if product.featured_image.src != blank %}
                            <div class="img">
                               <img src="{{ product.featured_image.src | img_url: '300x300' }}" alt="">
                            </div>
                            {% endif %}
                            <div class="more">
                                <a href="{{ product.url }}">SHOW MORE</a>
                            </div>
                        </div>
                        <div class="info">
                            <div class="main">
                                <div class="status">
                                    <p>STARTER PACK</p>
                                </div>
                                <div class="name">
                                    <h3><a href="{{ product.url }}">{{ product.title }}</a></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% render 'retail-bottom-text' %}
{% schema %}
    {
        "name": "Curalife Products",
        "class": "curalife-products",
        "settings": [
            {
                "type": "text",
                "id": "rtlprdct_title",
                "label": "Title",
                "default": "Enter Title"
            },
            {
                "type": "textarea",
                "id": "rtlprdct_desc",
                "label": "Description",
                "default": "Enter Description"
            },
            {
                "type": "collection",
                "id": "rtlcollection",
                "label": "Collection"
            },
            {
              "type": "image_picker",
              "id": "rtlprdct_bgimg",
              "label": "Select Product Background Image"
            },
            {
            "type": "header", 
            "content": "Retail Bottom Text Section Start" 
            },
            {
                "type": "textarea",
                "id": "rtlbtm_desc",
                "label": "Description",
                "default": "Enter Description"
            }
            
        ] 
         
    }
{% endschema %}

