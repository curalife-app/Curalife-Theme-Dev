                "type": "text",
                "id": "description",
                "label": "Description",
                "default": "People watching their blood sugar who want to:"
            }
          ],
          "blocks": [
            {
              "type": "badge",
              "name": "Badge",
              "settings": [
                {
                  "type": "image_picker",
                  "id": "badge_image",
                  "label": "Badge Image"
                },
                {
                  "type": "text",
                  "id": "badge_name",
                  "label": "Badge Name"
                }
              ]
            }
          ],
          "presets": [
          {
              "name": "Why Curalin"
          }
        ]
    }
{% endschema %}