<div class="product-formula">
        <div class="container">
            <div class="sub-title wow fadeInUp">
                <p>{{ section.settings.text }}</p>
            </div>
            <div class="more wow fadeInUp">
                <p>{{ section.settings.btn }} <span><img src="{{ 'more.svg' | asset_url }}" alt="" loading="lazy"></span></p>
            </div> 
        </div>
    </div>

{% schema %}
    {
    "name": "Product Formula",
    "settings": [
    
{
    "type": "textarea",
    "id": "text",
    "label": "Text"
    },
{
    "type": "text",
    "id": "btn",
    "label": "Button Text"
    }
    ]
    }
{% endschema %}