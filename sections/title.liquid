{% if section.settings.is_hide_on_global and shop.name == "CuraLife Global" %}
  {% assign is_hide = true %}
{% endif %}

{% unless is_hide %}
  <section id="title-section-{{ section.id }}" class="title-section">
    <div class="container text-center">
      <{{ section.settings.title_tag }} class="title">{{ section.settings.title }}</{{ section.settings.title_tag }}>
      <div class="subtitle">{{ section.settings.subtitle }}</div>
    </div>
  </section>

  <style>
    {% if section.settings.title_swoosh_color %}
      #title-section-{{ section.id }} .title strong {
        background-image: url('{{ 'title-swoosh-' | append: section.settings.title_swoosh_color | append: '.svg' | asset_url }}');
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        padding: 8px;
      }
    {% endif %}

    {% if section.settings.title_color %}
      #title-section-{{ section.id }} .title {
        color: {{ section.settings.title_color }};
      }
    {% endif %}

    {% if section.settings.subtitle_color %}
      #title-section-{{ section.id }} .subtitle {
        color: {{ section.settings.subtitle_color }};
      }
    {% endif %}

    {% if section.settings.subtitle_color %}
      #title-section-{{ section.id }} .subtitle span {
        color: {{ section.settings.span_color }};
      }
    {% endif %}

    #title-section-{{ section.id }} .container {
      max-width: {{ section.settings.max_width }}%;
    }

    {% if section.settings.bg_color %}
      #title-section-{{ section.id }} {
        background-color: {{ section.settings.bg_color }};
      }
    {% endif %}

    {% if section.settings.is_remove_padding_bottom %}
      #title-section-{{ section.id }} {
        padding-bottom: 0;
      }
    {% endif %}

    {% if section.settings.is_remove_padding_top %}
      #title-section-{{ section.id }} {
        padding-top: 0;
      }
    {% endif %}

    {% if section.settings.border_color != blank %}
      #title-section-{{ section.id }} .container {
        border-bottom: 1px solid {{ section.settings.border_color }};
        padding-bottom: 30px;
      }
    {% endif %}

    {% if section.settings.is_disable_br_desktop %}
      #title-section-{{ section.id }} .title br {
        display: none;
      }

      @media (max-width: 768px) {
        #title-section-{{ section.id }} .title br {
          display: block;
        }
      }
    {% endif %}
  </style>

  <style>
    #title-section-{{ section.id }} .subtitle {
      font-size: 24px;
    }

    #title-section-{{ section.id }} .title small {
      font-weight: lighter;
    }

    #title-section-{{ section.id }} .title {
      {% if section.settings.subtitle == blank %}margin: unset;{% endif %}
      margin-inline: auto;
    }

    #title-section-{{ section.id }} .title strong {
      background-image: url('{{ 'title-swoosh-grey.svg' | asset_url }}');
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
      padding: 8px;
    }

    @media (max-width: 768px) {
      .title-section .container {
        max-width: 100% !important;
      }

      {% if section.settings.subtitle == blank %}
        #title-section-{{ section.id }} .title {
          margin: 0.5em;
        }
      {% endif %}
    }
  </style>
{% endunless %}

{% schema %}
{
    "name": "Title",
    "disabled_on": {
      "groups": [
        "header",
        "footer"
      ]
    },
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color"
      },
      {
        "type": "color",
        "id": "subtitle_color",
        "label": "Subtitle Color"
      },
      {
        "type": "color",
        "id": "span_color",
        "label": "<span> Text Color"
      },
      {
        "type": "color",
        "id": "border_color",
        "label": "Border Color"
      },
      {
        "type": "range",
        "id": "max_width",
        "label": "Maximum Width",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "default": 70
      },
      {
        "type": "select",
        "id": "title_tag",
        "label": "Title Tag",
        "options": [
          {
            "value": "h1",
            "label": "H1"
          },
          {
            "value": "h2",
            "label": "H2"
          },
          {
            "value": "h3",
            "label": "H3"
          },
          {
            "value": "h4",
            "label": "H4"
          },
          {
            "value": "h5",
            "label": "H5"
          },
          {
            "value": "h6",
            "label": "H6"
          }
        ],
        "default": "h2"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
        "type": "select",
        "id": "title_swoosh_color",
        "label": "Title Decoration Color (<strong>)",
        "options": [
          {
            "value": "grey",
            "label": "Grey"
          },
          {
            "value": "white",
            "label": "White"
          },
          {
            "value": "brown",
            "label": "Brown"
          },
          {
            "value": "green",
            "label": "Green"
          }
        ]
      },
      {
        "type": "header",
        "content": "Padding"
      },
      {
        "type": "checkbox",
        "id": "is_remove_padding_top",
        "label": "Remove padding top"
      },
      {
        "type": "checkbox",
        "id": "is_remove_padding_bottom",
        "label": "Remove padding bottom"
      },
      {
        "type": "checkbox",
        "id": "is_disable_br_desktop",
        "label": "Disable <br> on desktop"
      },
      {
        "type": "checkbox",
        "id": "is_hide_on_global",
        "label": "Hide on Global"
      }
    ],
    "presets": [
    {
        "name": "Title"
    }
  ]
}
{% endschema %}