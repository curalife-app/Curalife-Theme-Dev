<section id="title-section-{{ section.id }}">
  <div class="container text-center">
    <{{ section.settings.title_tag }} class="title">{{ section.settings.title }}</{{ section.settings.title_tag }}>
    <p>{{ section.settings.subtitle }}</p>
  </div>
</section>

<style>
  {% if section.settings.title_swoosh_color %}
    #title-section-{{ section.id }} .title strong {
      background-image: url('{{ 'title-swoosh-' | append: section.settings.title_swoosh_color | append: '.svg' | asset_url }}');
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
      padding: 8px;
    }
  {% endif %}

  {% if section.settings.bg_color %}
    #title-section-{{ section.id }} {
      background-color: {{ section.settings.bg_color }};
    }

    {% unless section.settings.subtitle %}
      #title-section-{{ section.id }} .title {
        margin: unset;
      }
    {% endunless %}
  {% endif %}

  {% if section.settings.is_remove_padding_bottom %}
    #title-section-{{ section.id }} {
      padding-bottom: 0;
    }
  {% endif %}

  {% if section.settings.is_remove_padding_top %}
    #title-section-{{ section.id }} {
      padding-top: 0;
    }
  {% endif %}

  {% if section.settings.border_color %}
    #title-section-{{ section.id }} .container {
      border-bottom: 1px solid {{ section.settings.border_color }};
    }
  {% endif %}
</style>

<style>
  #title-section-{{ section.id }} .title small {
    font-weight: lighter;
  }

  #title-section-{{ section.id }} .container {
    max-width: 700px;;
  }
</style>

{% schema %}
{
    "name": "Title",
    "disabled_on": {
      "groups": [
        "header",
        "footer"
      ]
    },
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "select",
        "id": "title_tag",
        "label": "Title Tag",
        "options": [
          {
            "value": "h1",
            "label": "H1"
          },
          {
            "value": "h2",
            "label": "H2"
          },
          {
            "value": "h3",
            "label": "H3"
          },
          {
            "value": "h4",
            "label": "H4"
          },
          {
            "value": "h5",
            "label": "H5"
          },
          {
            "value": "h6",
            "label": "H6"
          }
        ],
        "default": "h2"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
        "type": "select",
        "id": "title_swoosh_color",
        "label": "Title Decoration Color (<strong>)",
        "options": [
          {
            "value": "grey",
            "label": "Grey"
          },
          {
            "value": "white",
            "label": "White"
          },
          {
            "value": "brown",
            "label": "Brown"
          },
          {
            "value": "green",
            "label": "Green"
          }
        ]
      },
      {
        "type": "header",
        "content": "Padding"
      },
      {
        "type": "checkbox",
        "id": "is_remove_padding_top",
        "label": "Remove padding top"
      },
      {
        "type": "checkbox",
        "id": "is_remove_padding_bottom",
        "label": "Remove padding bottom"
      }
    ],
    "presets": [
    {
        "name": "Title"
    }
  ]
}
{% endschema %}