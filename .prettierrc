{
	"plugins": [
		"@shopify/prettier-plugin-liquid",
		"prettier-plugin-tailwindcss"
	],
	"htmlWhitespaceSensitivity": "strict",
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"bracketSameLine": true,
	"quoteProps": "as-needed",
	"requirePragma": false,
	"printWidth": 200,
	"proseWrap": "preserve",
	"semi": true,
	"singleQuote": true,
	"liquidIndentScriptAndStyle": true,
	"liquidSingleQuote": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"useTabs": true,
	"indentSchema": true
}