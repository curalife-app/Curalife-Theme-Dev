<script>
  const caa_urlParams = new URLSearchParams(window.location.search);
  const caa_email = caa_urlParams.get('customer-email');
  if(caa_email) {
    const emailInput = document.querySelector('#CustomerEmail, [name="customer[email]"]');
    if(emailInput) {emailInput.value = caa_email;}
  }
</script>