{% for group in robots.default_groups %}
	{{- group.user_agent -}}

	{% for rule in group.rules %}
		{{- rule -}}
	{% endfor %}

	{%- if group.user_agent.value == 'adsbot-google' -%}
		{{- 'Disallow: /cdn/wpm/*.js' }}
	{%- endif -%}

	{%- if group.user_agent.value == '*' -%}
	{%- endif -%}

	{%- if group.sitemap != blank -%}
		{{ group.sitemap }}
		{{- 'Sitemap: https://curalife.com/pages-sitemap.xml' }}
		{{- 'Sitemap: https://curalife.com/articles-sitemap.xml' }}
		{{- 'Sitemap: https://curalife.com/images-sitemap.xml' }}
	{%- endif -%}
{% endfor %}