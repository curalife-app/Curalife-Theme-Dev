	"scripts": {
		"prettier": "prettier",
		"dev": "vite",
		"build": "vite build",
		"build:light": "cross-env VITE_VERBOSE_LOGGING=false VITE_SKIP_CLEAN=true vite build",
		"build:verbose": "cross-env VITE_VERBOSE_LOGGING=true vite build",
		"build:complete": "node build-complete.js",
		"build:complete:debug": "node build-complete.js --debug",
		"preview": "vite preview",
		"watch": "node watch.js",
		"watch:debug": "node watch.js --debug",
		"watch:shopify": "cross-env NODE_ENV=development WATCH_COMBINED=true VITE_WATCH_MODE=true node watch.js",
		"watch:shopify:debug": "cross-env NODE_ENV=development WATCH_COMBINED=true VITE_WATCH_MODE=true node watch.js --debug",
		"shopify": "node shopify-hot-reload-simple.js",
		"shopify:vite": "node shopify-hot-reload.js",
		"shopify:login": "shopify auth login",
		"shopify:theme:list": "shopify theme list",
		"shopify:theme:push": "shopify theme push --path Curalife-Theme-Build",
		"shopify:theme:pull": "shopify theme pull --path Curalife-Theme-Build",
		"shopify:theme:dev": "shopify theme dev --path Curalife-Theme-Build",
		"shopify:theme:open": "shopify theme open",
		"check-server": "node scripts/check-server.js",
		"lighthouse:ci": "node scripts/check-server.js && npx lhci autorun",
		"lighthouse:desktop": "node scripts/check-server.js && npx lighthouse http://localhost:9292 --view --preset=desktop",
		"lighthouse:mobile": "node scripts/check-server.js && npx lighthouse http://localhost:9292 --view --preset=mobile",
		"performance:baseline": "node scripts/check-server.js && npx lighthouse http://localhost:9292 --output=html --preset=desktop --output-path=./performance-reports/baseline-desktop.html && npx lighthouse http://localhost:9292 --output=html --preset=mobile --output-path=./performance-reports/baseline-mobile.html",
		"performance:compare": "node scripts/check-server.js && npx lighthouse http://localhost:9292 --output=html --preset=desktop --output-path=./performance-reports/current-desktop.html && npx lighthouse http://localhost:9292 --output=html --preset=mobile --output-path=./performance-reports/current-mobile.html",
		"performance:monitor": "node scripts/performance-monitor.js"
	},
	"packageManager": "pnpm@10.4.1",
	"shopify": {
		"notes": "Before using the Shopify integration, make sure to:",
		"step1": "Install either the new Shopify CLI (@shopify/cli @shopify/theme) or ThemeKit (@shopify/themekit)",
		"step2": "Authenticate using 'npm run shopify:login' or configure config.yml for ThemeKit",
		"step3": "For ThemeKit, set up your API credentials in the config.yml file",
		"docs": "See SHOPIFY-DEV.md for detailed setup instructions"
	}
}