<div class="product-selection">
  <h2>Select Your Curalin Pack</h2>
  <div class="curalin-options">
    <div id="curalin-select">
      <div class="select_wrap">
        {% assign first_variant = product.variants.first %}
        <ul class="default_option">
          <li>
            <div class="option">
              <div class="icon">
                <img src="//cdn.shopify.com/s/files/1/0452/2459/1511/files/Frame1597877272_b547e086-cfa2-44e2-bfb0-bf54b180826e.png?v=1684767010" />
              </div>
              <div>{{ first_variant.title | split: ' / ' | first }}</div>
            </div>
          </li>
        </ul>

        <!-- Build Dropdown options -->
        <ul class="select_ul">
          {% for option in curalin_options %}
            <!-- Obtain first matching variant -->
            {% for variant in product.variants %}
              {% assign option_title = variant.title | split: ' / ' | first %}
              {% if option_title == option %}
                {% assign variant_sample = variant %}
                {% break %}
              {% endif %}
            {% endfor %}
            <!-- Create list item for option -->
            <li>
              <div class="option">
                <div class="icon">
                  <img src="//cdn.shopify.com/s/files/1/0452/2459/1511/files/Frame1597877272_b547e086-cfa2-44e2-bfb0-bf54b180826e.png?v=1684767010" />
                </div>
                <div>{{ option }}</div>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  <!-- Styles and Scripts... -->
</div>

<style>
  .select_wrap{
    width: 100%;
    position: relative;
    user-select: none;
    overflow: hidden;
    border-radius: 5px;
  }

  .select_wrap .default_option {
    background: #fff;
    border-radius: 5px;
    position: relative;
    cursor: pointer;
    z-index: 2;
    border-color: var(--light-green);
    border-width: 2px;
  }

  .select_wrap .default_option li{
    padding: 15px 40px 15px 20px;
  }

  .select_wrap .default_option:before{
    content: "";
    position: absolute;
    top: 23px;
    right: 18px;
    width: 6px;
    height: 6px;
    border: 2px solid;
    border-color: transparent transparent #555555 #555555;
    transform: rotate(-45deg);
  }

  .select_wrap .select_ul {
    position: absolute;
    top: 55px;
    left: 0;
    width: 100%;
    background: #fff;
    border-radius: 5px;
    transform: translateY(-100%);
    margin-top: 10px;
    transition: all 0.3s ease;
    opacity: 0;
  }

  .select_wrap .select_ul li{ padding: 15px 20px;
    cursor: pointer;
  }

  .select_wrap .select_ul li:last-of-type{
    border:none
  }

  .select_wrap .select_ul li:first-child:hover{
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
  }

  .select_wrap .select_ul li:last-child:hover{
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
  }

  .select_wrap .select_ul li:hover{ background: #fff4dd; }

  .select_wrap .option{ display: flex; align-items: center; }

  .select_wrap .option .icon{ width: 58px; height: 32px;
    margin-right: 20px;
  }

  .select_wrap .option .icon img{ width: 100%; height: 100%; }

  .select_wrap.active {
    overflow: visible;
  }

  .select_wrap.active .select_ul {
    opacity: 1;
    transform: translateY(0%);
  }

  .select_wrap.active .default_option:before{
    top: 28px;
    transform: rotate(-225deg);
  }
    </style>

    <script>
  $(".default_option").click(function() {
    $(this).parent().toggleClass("active");
  })

  $(".select_ul li").click(function() {
    const currentel = $(this).html();
    $(".default_option li").html(currentel);
    $(this).parents(".select_wrap").removeClass("active");
  })
</script>

<style>
  .selected-supplement {
    border: 3px solid #00ff00; /* This is just an example, use the color, width, and style you prefer */
  }
</style>

<script>
  let selectedCuralinPack = null;
  let selectedSupplementPack = null;

  // Handle Curalin selection
  document.querySelector('#curalin-select').addEventListener('change', event => {
    selectedCuralinPack = event.target.value;
  });

  // Handle Supplement selection
document.querySelectorAll('.select-supplement').forEach(img => {
  img.addEventListener('click', event => {
    // Remove the selected class from any previously selected supplement
    document.querySelectorAll('.select-supplement.selected-supplement').forEach(selectedImg => {
      selectedImg.classList.remove('selected-supplement');
    });

    // Add the selected class to the clicked supplement
    event.target.classList.add('selected-supplement');

    selectedSupplementPack = event.target.dataset.supplementPack;
  });
});


  // Handle Buy Now click
  document.querySelector('.buy-now').addEventListener('click', () => {
    if (selectedCuralinPack && selectedSupplementPack) {
      // Find the variant ID for the selected combination
      {% for variant in product.variants %}
        {% assign curalin_pack = variant.title | split: ' / ' | first %}
        {% assign supplement_pack = variant.title | split: ' / ' | last %}
        {% if curalin_pack == selectedCuralinPack and supplement_pack == selectedSupplementPack %}
          const variantId = '{{ variant.id }}';
        {% endif %}
      {% endfor %}

      const checkoutURL = `/cart/add?id=${variantId}`;
      window.location.href = checkoutURL;
    } else {
      alert('Please select both a Curalin pack and a Supplement pack before proceeding to checkout.');
    }
  });
</script>