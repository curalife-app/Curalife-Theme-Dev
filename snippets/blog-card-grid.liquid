<div class="article-card relative">
  {%- if customer.email == 'yotam@curalife.com' -%}
      <a href="https://admin.shopify.com/store/curalife-commerce/articles/{{ article.id }}" class="admin-edit-link" target="_blank"><i class="fa-thin fa-edit"></i></a>
    {%- endif -%}

  <div class="picture">
    <a href="{{ article.url }}" class="main-link"></a>
    {% if article.image %}
      <img src="{{ article.image | image_url }}" alt="" loading="lazy">
    {% else %}
      <img src="{{ 'meta-thumbnail.png' | asset_url }}" alt="" loading="lazy">
    {% endif %}
  </div>

  <div class="info">
    <div class="main-info">
      <div class="title">
        <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
      </div>

      <div class="offer">
        <p>{{settings.offer_desc}}</p>
      </div>
        {% if description %}
      <div class="description">
        <p>
          {% if article.excerpt.size > 0 %}
            {{ article.excerpt }}
            {% else %}
            {{ article.content | strip_html | truncate: 150 }}
          {% endif %}
        </p>
      </div>
        {% endif %}
    </div>

    {% comment %} <div class="article-author">
      <div class="details">
          {% if article.author %}
        <h4>By {{ article.author}}</h4>
        {% endif %}
        {% if article.user.bio %}
        <p>{{ article.user.bio }}</p>
        {% endif %}
      </div>
    </div> {% endcomment %}
  </div>
</div>