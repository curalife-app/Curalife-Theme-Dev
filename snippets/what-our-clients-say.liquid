<div class="support-page bottom-line">
  <div class="container">
    <div class="white-bg">
      <div class="mini-wrap">
        <div class="changing-experiences">
          <div class="sub-title">
            <h2 class="d-desktop">What Our Clients Say <br>About Curalin</h2>
            <h2 class="d-mobile">Life Changing Experiences</h2>
          </div>
          <div class="quote-slider">
            <div class="swiper">
              <div class="swiper-wrapper">
                {% for client in clients %}
                    <div class="swiper-slide">
                    <div class="quote-card">
                        <blockquote>
                        <span class="quote-span"><i class="fa fa-quote-left"></i>  </span>
                        <p>{{ client | split: "*" | first }}</p>
                        </blockquote>
                        <div class="quote-info">
                        <div class="quote-author">
                            <p>{{ client | split: "*" | last }}</p>
                        </div>
                        <div class="quote-rating">
                            <p>
                            <span><i class="fa-solid fa-star"></i></span>
                            <span><i class="fa-solid fa-star"></i></span>
                            <span><i class="fa-solid fa-star"></i></span>
                            <span><i class="fa-solid fa-star"></i></span>
                            <span><i class="fa-solid fa-star"></i></span>
                            </p>
                        </div>
                        </div>
                    </div>
                    </div>

                {% endfor %}

              </div>
              <div class="slide-control">
                <div class="nav prev-slide"><span><</span></div>
                <div class="nav next-slide"><span>></span></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="customer-success">
    <div class="container">
        <div class="intro-text">
          <div class="sub-title">
            <h2>Customer Success With Curalin</h2>
          </div>
        </div>
        <div class="success-list">
          <ul>
            {% assign contr = 0 %}
            {% for percent in percents %}

            <li class="success-content-{{ contr }}">
              <div class="title">
                <h3 class="h4">{{ percent | split: "*" | first }}</h3>
              </div>
              <div class="line">
                <div class="percentage">
                  <p>{{ percent | split: "*" | last | split: "@" | first }}</p>
                </div>
                <div class="data">
                  <span style="{{ percent | split: "*" | last | split: "@" | last }}"></span>
                </div>
              </div>
            </li>

            {% assign contr = contr | plus : 1 %}

            {% endfor %}
          </ul>
        </div>
    </div>
  </section>

  <section>
      <div class="container">
            <div class="feature-info">

              <div class="img-wrap">
                <span><img src="{{ 'curalin-bottle.png' | asset_url }}" alt="" loading="lazy"></span>
              </div>

              <div class="intro-text">
                <div class="sub-title">
                  <h2>Maintain Healthy<br> Glucose levels</h2>
                  <p>Curalin is designed specifically for people looking for an effective and natural way to maintain healthy glucose levels so they can enjoy life’s events to the fullest</p>
                </div>
                <div class="btn">
                  <a href="/collections?cat=glucose-support"><button>Shop Now</button></a>
                </div>
              </div>
        </div>
      </div>
  </section>
</div>

