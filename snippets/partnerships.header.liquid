<style>
  header {
    height: 80px;
  }

  header:before {
    background-color: #404733;
    opacity: 1;
    visibility: visible;
  }

  .main-toolbar {
    padding: 15px 0;
  }

  .main-logo {
    display: flex;
    align-items: center;
    
  }
  .main-logo a {
      max-width: unset;
  }

  .main-logo img {
    margin-top: -5px;
  }

  .main-menu ul li a {
    text-transform: unset;
    color: #ffffff;
  }

  .main-menu ul li a:hover {
    text-decoration: none;
    color: #ffffff;
  }

  .main-links ul li a.open-menu i.icon-menu  {
    color: white;
  }

  .main-links ul li a:hover {
