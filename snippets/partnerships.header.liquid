<script>
  $(".scroller").click(function() {
    let goto = $(this).attr("goto")
    $('html, body').animate({
      scrollTop: $(".community-" + goto).offset().top
    }, 2000);

    if (window.matchMedia("only screen and (max-width: 760px)").matches) {
      $(".open-menu").trigger("click");
    }
  });
</script>


