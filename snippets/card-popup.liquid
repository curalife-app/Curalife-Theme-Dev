  <div class="modal-content notice-group big-wrap" id="add-modal">
        <div class="modal-bg">
            <div class="data-wrap">
                <div class="modal-scroll">
                    <div class="modal-title">
                        <h3>{{setting.crd_titl}}</h3>
                    </div>
                    <div class="modal-form">
                        <form>
                            <div class="form-fields">
                                <label class="full-size with-icon">
                                    <input type="number" placeholder="Card Number">
                                    <i class="icon-payment"></i>
                                </label>
                                <label class="full-size with-icon">
                                    <input type="text" placeholder="Name on Card">
                                    <i class="icon-user"></i>
                                </label>
                                <label class="half-size with-icon">
                                    <input type="text" placeholder="Expiration Date">
                                    <i class="icon-calendar"></i>
                                </label>
                                <label class="half-size with-icon">
                                    <input type="number" placeholder="Security Code">
                                    <i class="icon-cvv"></i>
                                </label>
                            </div>
                            <div class="submit-form">
                                <button type="button" class="main-btn">{{setting.crd_clstitl}}</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>