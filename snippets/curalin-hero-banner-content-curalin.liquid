
<section class="hero-banner">
  <div class="container">
    <div class="hero-banner-content">
      <div class="text-button">
        <h1 class="main-title">{{ mainTitle }}</h1>
        <div class="subtitle">{{ subTitle }}</div>
        <a href="{{ ctaButtonLink }}"><button>{{ ctaTitle }}</button></a>
      </div>

      <img class="main-img" src="{{ 'mask-and-bottle.png' | asset_url }}" width="1039" height="528" alt="bottle-hand-mask">
    </div>
  </div>

  <img class="main-img-mb" src="{{ 'mask-and-bottle-mb.png' | asset_url }}" width="750" height="1084" alt="bottle-hand-mask-mb">
</section>

<style>
  .hero-banner {
    position: relative;
    overflow: hidden;
    background: #E8E8B0;
    padding: 0;
  }

  .hero-banner .main-img {
    left: {% if isLP %}36px{% else %}50px{% endif %};
  }

  .hero-banner-content {
    display: flex;
    align-items: center;
    height: -webkit-fill-available;
  }

  .hero-banner-content .text-button {
    display: flex;
    flex-direction: column;
    font-family: 'PP Radio Grotesk';
    font-weight: 700;
    min-width: 40%;
  }

  .hero-banner-content .text-button .main-title {
    color: var(--dark-green);
    font-size: {% if isLP %}clamp(40px, 4vw, 60px){% else %}clamp(50px, 5vw, 100px) {% endif %};
    margin-bottom: unset;
  }

  .hero-banner-content .text-button .subtitle {
    color: var(--dark-green);
    font-style: normal;
    font-weight: 300;
    font-size: clamp(35px, 2vw, 45px);
    padding-bottom: 30px;
  }

  .hero-banner .main-img-mb {
    display: none;
  }

  .hero-banner .container .main-btn.mobile-btn {
    display: none;
  }

  @media screen and (max-width: 768px) {
    .hero-banner {
      text-align: center;
      height: calc(100vh - 60px);
      padding-top:  {% if isLP %}75px{% endif %} ;
    }

    .hero-banner .text-button button {
      bottom: 0;
      left: 0;
      position: absolute;
      bottom: 0;
      left: 0;
      width: -webkit-fill-available;
    }

    .hero-banner-content {
      display: block;
      margin: 20px 0;
      position: relative;
    }

    .hero-banner-content .text-button .main-title {
      text-align: center;
    }

    .hero-banner-content .text-button .subtitle {
      margin: 0 auto;
      max-width: 280px;
    }

    .hero-banner-content .main-img {
      display: none;
    }

    .hero-banner .main-img-mb {
      display: block;
      position: absolute;
      top: {% if isLP %} 310px {% else %} 186px {% endif %};
      width: 120%;
    }

    .hero-banner-content .text-button {
      margin-left: unset;
    }

    .hero-banner .container .main-btn.mobile-btn {
      display: block;
      margin-top: -30vw;
      text-transform: unset !important;
    }
  }

  @media screen and ( max-width: 390px ) {
    .hero-banner .main-img-mb {
      top: 230px;
    }
  }

  @media screen and ( max-width: 340px ) {
    .hero-banner .main-img-mb {
      top: {% if isLP %}368px{% endif %};
    }
  }
</style>