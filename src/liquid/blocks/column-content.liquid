{% comment %}
	Block representing a single column container.
	It accepts nested theme blocks and app blocks.
{% endcomment %}

<div class="column-content-block flex flex-col gap-4" {{ block.shopify_attributes }}>
	{% comment %} Render any blocks nested within this column {% endcomment %}
	{%- content_for 'blocks' -%}
</div>

{% schema %}
	{
		"name": "Column Content",
		"settings": [
			{
				"type": "paragraph",
				"content": "Add content blocks (text, image, button, etc.) inside this column."
			},
			{
				"type": "range",
				"id": "column_width",
				"label": "Column Width (Fraction of Total)",
				"min": 1,
				"max": 12,
				"step": 1,
				"default": 6,
				"info": "Defines width based on a 12-unit grid. Adjust section's column count setting accordingly."
			}
			// Add settings for column-specific background, padding etc. if needed
		],
		"blocks": [{ "type": "@theme" }, { "type": "@app" }],
		"presets": [
			{
				"name": "Column Content"
			}
		]
	}
{% endschema %}
