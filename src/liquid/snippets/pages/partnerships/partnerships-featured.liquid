<style>
  #featured-section {
      border-bottom: 1px solid #DCD9D9;
      background-color: var(--brown-lighter);
  }

  #featured-section  h4 {
    font-size: 24px;
    opacity: .6;
    text-align: center;
    font-weight: 300;
    margin-bottom: 30px;
  }

  .partners-wrapper {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
  }

  .partners-wrapper .partner-col {
    width: 150px;
  }

  .partners-wrapper .ticker-wrap {
    width: 100%;
  }

  .partners-wrapper .ticker-wrap:before,
  .partners-wrapper .ticker-wrap:after {
    content: "";
    width: .9375rem;
    position: absolute;
    top: 0;
    bottom: 0;
    z-index: 3;
    pointer-events: none;
  }

  .partners-wrapper .ticker-wrap:before {
    left: 0;
    background: linear-gradient(90deg, #F7F7F7 0%, rgba(255, 255, 255, .76) 49.3%, rgba(255, 255, 255, 0) 100%)
  }

  .partners-wrapper .ticker-wrap:after {
    right: 0;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, .76) 49.3%, #F7F7F7 100%)
  }

  .partners-wrapper .ticker-wrap .ticker-col {
    display: flex;
    transition-timing-function: linear;
  }

  .partners-wrapper .partner-item {
    opacity: .6;
  }

  @media screen and (max-width: 768px) {
    .partners-wrapper .partner-col {
      width: 100px;
    }
  }
</style>

<script>
  let brandsTicker = new Swiper('#featured-section .swiper', {
