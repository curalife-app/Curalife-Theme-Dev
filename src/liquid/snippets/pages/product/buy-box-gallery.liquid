<style>
	#cta-section-{{ SID }} {
		.buy-box-gallery {
			--swiper-navigation-sides-offset: -55px;
			grid-area: 1/1/3/2;

			{% if first_3d_model %}
				.model-icon {
					position: absolute;
					top: 25%;
					left: 25%;
					font-size: 10px;
					color: white;
					border-radius: 50%;
					border: 2px solid white;
					width: 30%;
					height: 30%;
					padding: 0.5rem;
					background: rgba(255,255,255,0.2);
				}
			{% endif %}

			.product-slider {
				.main-slider {
					.swiper {
						.swiper-wrapper {
							.swiper-slide {
								img {
									border-radius: 10px;
									border-width: 0;
									width: 525px;
									place-self: center;
								}

								.product-video iframe {
									height: 525px;
									width: 100%;
								}
							}
						}
					}

					.swiper-nav {
						display: none;

						&::after {
							color: var(--primary-color);
							background: {{ product.metafields.custom.bg_color | default: "var(--primary-color-lightest)" }};
							font-weight: bold;
						}

						&.disabled {
							opacity: 0;
						}
					}
				}

				.thumbs-slider {
					{% if thumbs == 'vertical' %}
						position: absolute;
						top: 30px;
					{% else %}
						width: 80%;
						margin: 0 auto;
					{% endif %}

					.swiper-nav {
						&::after {
							font-size: 12px;
						}

						&.disabled {
							opacity: 0;
						}

						&:active {
							box-shadow: unset !important;
						}
					}

					.swiper-wrapper {
						.swiper-slide {
							border-radius: 5px;
							border: 1px solid var(--primary-color);
							overflow: hidden;

							&:empty {
								border: unset;
							}

							img {
								width: 100%;
								height: 100%;
								scale: 1.01;
							}
						}
					}
				}
			}

			@media screen and (max-width: 768px) {
				grid-area: unset;
				grid-row: 2;

				.product-slider {
					margin-left: unset;

					.sliders-group {
						&::before {
							content: "";
							width: 100vw;
							position: absolute;
							top: 0;
							right: 50%;
							bottom: 0;
							z-index: -1;
							transform: translate(50%);
							pointer-events: none;
						}
					}

					.main-slider {
						.main-slider-vector-bg {
							margin-left: unset;
							left: 0;
							top: 10%;
						}

						.swiper {
							overflow: visible !important;

							.swiper-wrapper {
								align-items: center;

								.swiper-slide {
									scale: 0.95;

									.product-video iframe {
										height: 45vh;

										.vp-video-wrapper {
											border-radius: 10px;
										}
									}

									.product-img::before {
										padding-bottom: 100%;
									}
								}
							}
						}

						.swiper-nav {
							display: flex;
							width: 10vw !important;
							height: 10vw !important;

							&.swiper-button-prev {
								left: -10px;
							}

							&.swiper-button-next {
								right: -10px;
							}
						}

						.swiper-pagination {
							.swiper-pagination-bullet {
								background: var(--green);
								opacity: .4;
								width: 13px;
								height: 13px;
								border: 0;

								&.swiper-pagination-bullet-active {
									background: var(--green);
									opacity: 1;
								}
							}
						}
					}

					.thumbs-slider {
						display: none;
					}
				}
			}
		}
	}
</style>
