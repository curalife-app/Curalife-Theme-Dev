<a id="back-to-top-btn">{% if isThirtyDay %}{{ ctaTitle }}{% else %}Try CuraLin{% endif %}</a>

<style>
  #back-to-top-btn {
    background: {% if isThirtyDay %}#404733 {% elsif isFlash %}#FFB22D {% else %} linear-gradient(#5d8448, var(--dark-green)){% endif %};
    border: 1px solid {% if isThirtyDay %}#404733{% elsif isFlash %}#FFB22D {% else %}#468734{% endif %};
    color:{% if isThirtyDay %}#ffffff {% else %}#ffffff{% endif %};
  }

  #back-to-top-btn:hover {
    background: {% if isThirtyDay %}linear-gradient(#5d8448, var(--dark-green)){% elsif isFlash %}#FFB22D {% else %}#404733{% endif %};
    border: {% if isThirtyDay %}#468734{% elsif isFlash %}#FFB22D {% else %}#404733{% endif %};
  }

  #back-to-top-btn {
    font-size: clamp(20px 2vw 30px);
    padding: {% if isThirtyDay %}20px 100px {% else %} 0 20px {% endif %};
    font-weight: bold;
    height: {% unless isThirtyDay %}50px {% endunless %};
    text-align: center;
    border-radius: {% unless isThirtyDay %} 30px {% endunless %};
    position: fixed;
    bottom: 30px;
    left: 30px;
    transition: background-color .3s, opacity .5s, visibility .5s;
    box-shadow: 0 4.5px 4.5px rgba(0, 0, 0, .2);
    opacity: 0;
    visibility: hidden;
    z-index: 99;
    font-size: 25px;
    padding:{% if isThirtyDay %}7px 40px {% else %} 4px 40px {% endif %};
  }

  #back-to-top-btn:hover {
    cursor: pointer;
    background: {% if isThirtyDay %}#FFB22D{% elsif isFlash %}#FFB22D{% else %} #404733 {% endif %};
    border: {% if isThirtyDay %}#FFB22D{% elsif isFlash %}#FFB22D{% else %} #404733 {% endif %};
  }

  #back-to-top-btn:active {
    background-color: {% if isThirtyDay %}#FFB22D{% elsif isFlash %}#FFB22D{% else %}#404733{% endif %};
  }

  #back-to-top-btn.show {
    opacity: 1;
    visibility: visible;
  }

  @media screen and (max-width: 768px) {
    #back-to-top-btn {
      text-align: center;
      width: 100%;
      border-radius: 0;
      bottom: 0;
      left: 0;
      box-shadow: 0 -2px 15px rgba(0, 0, 0, .25)
    }
  }
</style>

<script>
  $(window).scroll(function() {
    $(window).scrollTop() > 1000 ? $('#back-to-top-btn').addClass('show') : $('#back-to-top-btn').removeClass('show');
  });

  $('#back-to-top-btn').on('click', function(e) {
    e.preventDefault();
    $('html, body').animate({scrollTop:0}, '300');
  });
</script>



