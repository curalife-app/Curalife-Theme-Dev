<div class="product-container container md:!max-w-[100vw]">
	<div class="product-image-wrapper">
		{% if ctaTemplate == '2024-new-3' %}
			{% render 'product-cta-section-gallery-2024',
				SID: SID,
				isHideThumbs: isHideThumbs,
				badgeImage: badgeImage,
				blocks: blocks,
				product: prod,
				isSaveTitle: isSaveTitle,
				thumbnailImage: thumbnailImage,
				thumbnailImageMobile: thumbnailImageMobile
			%}
		{% else %}
			{% render 'product-cta-section-gallery-new',
				SID: SID,
				isHideThumbs: isHideThumbs,
				badgeImage: badgeImage,
				blocks: blocks,
				product: prod,
				isSaveTitle: isSaveTitle,
				thumbnailImage: thumbnailImage,
				thumbnailImageMobile: thumbnailImageMobile,
				isProductThumbs: isProductThumbs
			%}
		{% endif %}
	</div>

	{% unless isHideInfo %}
		<div class="product-info">
			<div class="titles mb-4">
				{% if upperTitleNotice and prod.handle == 'curalin-curabox' -%}
					<div class="upper-title-notice bg-[--light-pink] w-fit text-[--bronze] text-[16px] rounded-full font-bold px-4 py-2 mbl:mx-auto mbl:my-2">
						{{- upperTitleNotice -}}
					</div>
				{%- endif %}
				<{{ titleTag | default: 'h1' }} class="product-title m-0 text-black">
					{%- if prod.metafields.my_fields.alternative_title.value -%}
						{{- prod.metafields.my_fields.alternative_title.value -}}
					{%- elsif mainTitle != blank -%}
						{{- mainTitle -}}
					{%- else -%}
						{{- prod.title -}}
					{%- endif -%}
				</{{ titleTag | default: 'h1' }}>
				{% if subtitle %}
					<p class="product-subtitle text-[22px] m-0">{{ subtitle }}</p>
				{% endif %}

				{%- for block in section.blocks -%}
					{%- case block.type -%}
						{%- when '@app' -%}
							{% render block %}
					{%- endcase -%}
				{%- endfor -%}
			</div>

			{% if ctaText %}
				<div class="cta-text text-start mbl:mb-4">{{ ctaText }}</div>
			{% endif %}
			{% if isFSA and shop.name != 'CuraLife Global' %}{% render 'fsa-badge', SID: SID %}{% endif %}
		</div>
	{% endunless %}

	{% if customer.b2b? %}
		{% render 'product-cta-section-actions-add-to-cart',
			SID: SID,
			ctaTextType: ctaTextType,
			isVariantNotice: isVariantNotice,
			product: prod,
			blocks: blocks,
			ctaColor: ctaColor,
			ctaTextColor: ctaTextColor,
			title: 'Select Your Product:',
			isHighlightSubtitle: isHighlightSubtitle,
			isReversed: isReversed,
			defaultSelectionIndex: defaultSelectionIndex,
			pricePer: pricePer,
			isBuyQuantity: true,
			isBuyWithPrime: isBuyWithPrime
		%}
	{% else %}
		{% if request.path contains 'lp-wl-curaslim-360-aff-bogo' %}
			{% render 'product-cta-section-actions-2024-new-2-bogo',
				SID: SID,
				blocks: blocks,
				buyType: buyType,
				ctaTextType: ctaTextType,
				isVariantNotice: isVariantNotice,
				product: prod,
				ctaColor: ctaColor,
				ctaTextColor: ctaTextColor,
				buyBoxColor: buyBoxColor,
				isHighlightSubtitle: isHighlightSubtitle,
				isReversed: isReversed,
				defaultSelectionIndex: defaultSelectionIndex,
				pricePer: pricePer,
				isSlideOnLoad: isSlideOnLoad,
				isBuyWithPrime: isBuyWithPrime
			%}
		{% elsif ctaTemplate == 'basic' %}
			{% render 'product-cta-section-actions',
				SID: SID,
				ctaTextType: ctaTextType,
				isVariantNotice: isVariantNotice,
				product: prod,
				ctaColor: ctaColor,
				ctaTextColor: ctaTextColor,
				title: title,
				isHighlightSubtitle: isHighlightSubtitle,
				isReversed: isReversed,
				defaultSelectionIndex: defaultSelectionIndex,
				pricePer: pricePer,
				isBuyQuantity: isBuyQuantity,
				isBuyWithPrime: isBuyWithPrime,
				isHideInfo: isHideInfo,
				buyType: buyType,
				buttonTitle: buttonTitle
			%}
		{% elsif ctaTemplate == '2024-new' %}
			{% render 'product-cta-section-actions-2024-new',
				SID: SID,
				blocks: blocks,
				buyType: buyType,
				ctaTextType: ctaTextType,
				isVariantNotice: isVariantNotice,
				product: prod,
				ctaColor: ctaColor,
				ctaTextColor: ctaTextColor,
				buyBoxColor: buyBoxColor,
				isHighlightSubtitle: isHighlightSubtitle,
				isReversed: isReversed,
				defaultSelectionIndex: defaultSelectionIndex,
				pricePer: pricePer,
				isSlideOnLoad: isSlideOnLoad,
				isBuyWithPrime: isBuyWithPrime
			%}
		{% elsif ctaTemplate == '2024-new-gift' %}
			{% render 'product-cta-section-actions-2024-new-gift',
				SID: SID,
				blocks: blocks,
				buyType: buyType,
				ctaTextType: ctaTextType,
				isVariantNotice: isVariantNotice,
				product: prod,
				ctaColor: ctaColor,
				ctaTextColor: ctaTextColor,
				buyBoxColor: buyBoxColor,
				isHighlightSubtitle: isHighlightSubtitle,
				isReversed: isReversed,
				defaultSelectionIndex: defaultSelectionIndex,
				pricePer: pricePer,
				isSlideOnLoad: isSlideOnLoad,
				isBuyWithPrime: isBuyWithPrime,
				isCartNotifications: false
			%}
		{% elsif ctaTemplate == '2024-new-gift-two' %}
			{% render 'product-cta-section-actions-2024-new-gift-two',
				SID: SID,
				blocks: blocks,
				buyType: buyType,
				ctaTextType: ctaTextType,
				isVariantNotice: isVariantNotice,
				product: prod,
				ctaColor: ctaColor,
				ctaTextColor: ctaTextColor,
				buyBoxColor: buyBoxColor,
				isHighlightSubtitle: isHighlightSubtitle,
				isReversed: isReversed,
				defaultSelectionIndex: defaultSelectionIndex,
				pricePer: pricePer,
				isSlideOnLoad: isSlideOnLoad,
				isBuyWithPrime: isBuyWithPrime,
				isCartNotifications: false
			%}
		{% elsif ctaTemplate == '2024-new-3' %}
			{% render 'product-cta-section-actions-2024-new-3',
				SID: SID,
				blocks: blocks,
				buyType: buyType,
				ctaTextType: ctaTextType,
				isVariantNotice: isVariantNotice,
				prod: prod,
				ctaColor: ctaColor,
				ctaTextColor: ctaTextColor,
				buyBoxColor: buyBoxColor,
				isHighlightSubtitle: isHighlightSubtitle,
				isReversed: isReversed,
				defaultSelectionIndex: defaultSelectionIndex,
				pricePer: pricePer,
				saveFormat: saveFormat,
				isSlideOnLoad: isSlideOnLoad,
				isBuyWithPrime: isBuyWithPrime,
				isVariantBoxToggle: isVariantBoxToggle,
				isSubscription: isSubscription
			%}
		{% elsif ctaTemplate == '2024-new-2' %}
			{% render 'product-cta-section-actions-2024-new-2',
				SID: SID,
				blocks: blocks,
				buyType: buyType,
				ctaTextType: ctaTextType,
				isVariantNotice: isVariantNotice,
				product: prod,
				ctaColor: ctaColor,
				ctaTextColor: ctaTextColor,
				buyBoxColor: buyBoxColor,
				isHighlightSubtitle: isHighlightSubtitle,
				isReversed: isReversed,
				defaultSelectionIndex: defaultSelectionIndex,
				pricePer: pricePer,
				isSubscription: isSubscription,
				isSlideOnLoad: isSlideOnLoad,
				isBuyWithPrime: isBuyWithPrime
			%}
		{% elsif ctaTemplate == '2024-new-4' %}
			{% render 'product-cta-section-actions-2024-new-4',
				SID: SID,
				blocks: blocks,
				buyType: buyType,
				ctaTextType: ctaTextType,
				isVariantNotice: isVariantNotice,
				prod: prod,
				ctaColor: ctaColor,
				ctaTextColor: ctaTextColor,
				buyBoxColor: buyBoxColor,
				isHighlightSubtitle: isHighlightSubtitle,
				isReversed: isReversed,
				defaultSelectionIndex: defaultSelectionIndex,
				pricePer: pricePer,
				isSlideOnLoad: isSlideOnLoad,
				isBuyWithPrime: isBuyWithPrime,
				isOneTimePurchaseLink: isOneTimePurchaseLink
			%}
		{% elsif ctaTemplate == '2024-new-4-gift' %}
			{% render 'product-cta-section-actions-2024-new-4-gift',
				SID: SID,
				blocks: blocks,
				buyType: buyType,
				ctaTextType: ctaTextType,
				isVariantNotice: isVariantNotice,
				prod: prod,
				ctaColor: ctaColor,
				ctaTextColor: ctaTextColor,
				buyBoxColor: buyBoxColor,
				isHighlightSubtitle: isHighlightSubtitle,
				isReversed: isReversed,
				defaultSelectionIndex: defaultSelectionIndex,
				pricePer: pricePer,
				isBuyWithPrime: isBuyWithPrime,
				isOneTimePurchaseLink: isOneTimePurchaseLink,
				isCartNotifications: true
			%}
		{% elsif ctaTemplate == 'subscription' %}
			{% render 'product-cta-section-actions-subscription',
				blocks: blocks,
				buyType: buyType,
				ctaTextType: ctaTextType,
				isVariantNotice: isVariantNotice,
				product: prod,
				ctaColor: ctaColor,
				ctaTextColor: ctaTextColor,
				isHighlightSubtitle: isHighlightSubtitle,
				isReversed: isReversed,
				defaultSelectionIndex: defaultSelectionIndex,
				pricePer: pricePer,
				isSlideOnLoad: isSlideOnLoad
			%}
		{% elsif ctaTemplate == 'info' %}
			{% render 'product-cta-section-actions-preorder',
				blocks: blocks,
				buyType: buyType,
				ctaTextType: ctaTextType,
				isVariantNotice: isVariantNotice,
				product: prod,
				ctaColor: ctaColor,
				ctaTextColor: ctaTextColor,
				isHighlightSubtitle: isHighlightSubtitle,
				isReversed: isReversed,
				defaultSelectionIndex: defaultSelectionIndex,
				pricePer: pricePer,
				isSlideOnLoad: isSlideOnLoad
			%}
		{% else %}
			{% render 'product-cta-section-actions-2024-new',
				SID: SID,
				blocks: blocks,
				buyType: buyType,
				ctaTextType: ctaTextType,
				isVariantNotice: isVariantNotice,
				product: prod,
				ctaColor: ctaColor,
				ctaTextColor: ctaTextColor,
				buyBoxColor: buyBoxColor,
				isHighlightSubtitle: isHighlightSubtitle,
				isReversed: isReversed,
				defaultSelectionIndex: defaultSelectionIndex,
				pricePer: pricePer,
				isSlideOnLoad: isSlideOnLoad,
				isBuyWithPrime: isBuyWithPrime
			%}
		{% endif %}
	{% endif %}
</div>

<style>
	#cta-section-{{ SID }} {
		background: {{ bgColor }};

		.product-container {
			display: grid;
			grid-template-columns: 58% 38%;
			grid-column-gap: 4%;
			grid-row-gap: 0;

			.product-info {
				padding: unset;
				width: unset;
				grid-area: 1/2/2/3;
			}
		}

		.product-image-wrapper {
			grid-row: 1/3;
			position: relative;
		}

		{% if isHideInfo %}
			.product-actions {
				grid-row: 1 / 2;
				margin-top: 60px;

				@media screen and (max-width: 768px) {
					grid-row: 2 / 3;
					margin-top: unset;
				}
			}
		{% endif %}

		.container.line {
			margin-top: -50px;
		}

		.cta-text {
			font-size: 14px;

			ul li {
				padding-left: 1.5rem;

				&::before {
					content: "âœ“";
					background: var(--color-primary);
					color: white;
					position: absolute;
					top: 0;
					left: 0;
					border-radius: 10px;
					width: 15px;
					height: 15px;
					font-size: 13px;
					display: flex;
					justify-content: center;
					align-items: center;
				}
			}
		}

		@media screen and (max-width: 1270px) {
			.container {
				max-width: unset;
				padding: 0 20px;
			}
		}

		@media screen and (max-width: 768px) {
			padding-top: 0;

			.container {
				padding: 0 20px !important;
			}

			.product-image-wrapper {
				grid-row: unset;
			}

			.product-container {
				grid-template-columns: repeat(1, 100%) !important;
				grid-template-rows: unset;

				.product-info {
					grid-area: unset;
					grid-row: 1;
					text-align: center;
					padding-top: 10vw;
				}
			}
		}
	}
</style>
