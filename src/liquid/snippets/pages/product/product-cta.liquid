{% assign sectionIDParts = section.id | split: '_' %}
{% assign shortSectionID = sectionIDParts[-1] %}
{% assign shortSectionIDParts = shortSectionID | split: '-' %}
{% assign SID = shortSectionIDParts[-1] %}

<div id="cta-section-anchor"></div>
<section class="cta-section overflow-visible pb-0 {{ additionalClasses }}" id="cta-section-{{ section.id }}">
  <div class="product-container container md:!max-w-[100vw]">
    <div class="product-image-wrapper">
      {% if ctaTemplate == '2024-new-3' %}
        {% render 'product-cta-section-gallery-2024', SID: SID, isHideThumbs: isHideThumbs, badgeImage: badgeImage, blocks: blocks, product: prod, isSaveTitle: isSaveTitle, thumbnailImage: thumbnailImage, thumbnailImageMobile: thumbnailImageMobile %}
      {% else %}
        {% render 'product-cta-section-gallery-new', SID: SID, isHideThumbs: isHideThumbs, badgeImage: badgeImage, blocks: blocks, product: prod, isSaveTitle: isSaveTitle, thumbnailImage: thumbnailImage, thumbnailImageMobile: thumbnailImageMobile %}
      {% endif %}
    </div>

    {% unless isHideInfo %}
      <div class="product-info mb-4">
        {% if upperTitleNotice and prod.handle == 'curalin-curabox' %}<div class="upper-title-notice bg-[--light-pink] w-fit text-[--bronze] text-[16px] rounded-full font-bold px-4 py-2 mbl:mx-auto mbl:my-2">{{ upperTitleNotice }}</div>{% endif %}
        <{{ titleTag | default: 'h1' }} class="mb-[5px] text-black">{% if prod.metafields.my_fields.alternative_title.value %}{{ prod.metafields.my_fields.alternative_title.value }}{% elsif mainTitle != blank %}{{ mainTitle }}{% else %}{{ prod.title }}{% endif %}</{{ titleTag | default: 'h1' }}>

        {% if isReviews %}{% render 'product-cta-section-reviews', isReviewsQuotes: isReviewsQuotes %}{% endif %}

        {% if ctaText %}<div class="cta-text text-start mt-4">{{ ctaText }}</div>{% endif %}

          {% if isFSA %}
            {% render 'fsa-badge' %}
          {% endif %}
      </div>
    {% endunless %}

    {% if request.path contains 'lp-wl-curaslim-360' %}
      {% render 'product-cta-section-actions-2024-new-2', SID: SID, blocks: blocks, buyType: buyType, ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, product: prod, ctaColor: ctaColor, ctaTextColor: ctaTextColor, buyBoxColor: buyBoxColor, isHighlightSubtitle: isHighlightSubtitle, isReversed: isReversed, defaultSelectionIndex: defaultSelectionIndex, pricePer: pricePer, isSlideOnLoad: isSlideOnLoad, isBuyWithPrime: isBuyWithPrime %}
    {% else %}

      {% if customer.b2b? %}
        {% render 'product-cta-section-actions-add-to-cart', ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, product: prod, blocks: blocks, ctaColor: ctaColor, ctaTextColor: ctaTextColor, title: 'Select Your Product:', isHighlightSubtitle: isHighlightSubtitle, isReversed: isReversed, defaultSelectionIndex: defaultSelectionIndex, pricePer: pricePer, isBuyQuantity: true, isBuyWithPrime: isBuyWithPrime %}
      {% elsif prod.handle contains 'curaslim-pack' or prod.handle == 'curaslim-cb' or ctaTemplate == 'basic' %}
        {% if buyType == 'add_to_cart' %}
          {% render 'product-cta-section-actions-add-to-cart', ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, product: prod, blocks: blocks, ctaColor: ctaColor, ctaTextColor: ctaTextColor, title: 'Select Your Product:', isHighlightSubtitle: isHighlightSubtitle, isReversed: isReversed, defaultSelectionIndex: defaultSelectionIndex, pricePer: pricePer, isBuyQuantity: true, isBuyWithPrime: isBuyWithPrime, isBuyQuantity: isBuyQuantity %}
        {% else %}
          {% render 'product-cta-section-actions', SID: SID, ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, product: prod, ctaColor: ctaColor, ctaTextColor: ctaTextColor, title: title, isHighlightSubtitle: isHighlightSubtitle, isReversed: isReversed, defaultSelectionIndex: defaultSelectionIndex, pricePer: pricePer, isBuyQuantity: isBuyQuantity, isBuyWithPrime: isBuyWithPrime, isHideInfo: isHideInfo, buyType: buyType, buttonTitle: buttonTitle %}
        {% endif %}
      {% else %}
        {% if ctaTemplate == '2024-new' %}
          {% render 'product-cta-section-actions-2024-new', SID: SID, blocks: blocks, buyType: buyType, ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, product: prod, ctaColor: ctaColor, ctaTextColor: ctaTextColor, buyBoxColor: buyBoxColor, isHighlightSubtitle: isHighlightSubtitle, isReversed: isReversed, defaultSelectionIndex: defaultSelectionIndex, pricePer: pricePer, isSlideOnLoad: isSlideOnLoad, isBuyWithPrime: isBuyWithPrime %}
        {% elsif ctaTemplate == '2024-new-3' %}
          {% render 'product-cta-section-actions-2024-new-3', SID: SID, blocks: blocks, buyType: buyType, ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, prod: prod, ctaColor: ctaColor, ctaTextColor: ctaTextColor, buyBoxColor: buyBoxColor, isHighlightSubtitle: isHighlightSubtitle, isReversed: isReversed, defaultSelectionIndex: defaultSelectionIndex, pricePer: pricePer, saveFormat: saveFormat, isSlideOnLoad: isSlideOnLoad, isBuyWithPrime: isBuyWithPrime, isVariantBoxToggle: isVariantBoxToggle %}
        {% elsif ctaTemplate == '2024-new-2' %}
          {% if customer.email contains 'yotam@curalife' %}
            {% render 'product-cta-section-actions-2024-new-3', SID: SID, blocks: blocks, buyType: buyType, ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, prod: prod, ctaColor: ctaColor, ctaTextColor: ctaTextColor, buyBoxColor: buyBoxColor, isHighlightSubtitle: isHighlightSubtitle, isReversed: isReversed, defaultSelectionIndex: defaultSelectionIndex, pricePer: pricePer, saveFormat: saveFormat, isSlideOnLoad: isSlideOnLoad, isBuyWithPrime: isBuyWithPrime, isVariantBoxToggle: isVariantBoxToggle %}
          {% else %}
            {% render 'product-cta-section-actions-2024-new-2', SID: SID, blocks: blocks, buyType: buyType, ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, product: prod, ctaColor: ctaColor, ctaTextColor: ctaTextColor, buyBoxColor: buyBoxColor, isHighlightSubtitle: isHighlightSubtitle, isReversed: isReversed, defaultSelectionIndex: defaultSelectionIndex, pricePer: pricePer, isSlideOnLoad: isSlideOnLoad, isBuyWithPrime: isBuyWithPrime %}
          {% endif %}
        {% elsif ctaTemplate == 'info' %}
          {% render 'product-cta-section-actions-preorder', blocks: blocks, buyType: buyType, ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, product: prod, ctaColor: ctaColor, ctaTextColor: ctaTextColor, isHighlightSubtitle: isHighlightSubtitle, isReversed: isReversed, defaultSelectionIndex: defaultSelectionIndex, pricePer: pricePer, isSlideOnLoad: isSlideOnLoad %}
        {% else %}
          {% render 'product-cta-section-actions-2024-new', blocks: blocks, buyType: buyType, ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, product: prod, ctaColor: ctaColor, ctaTextColor: ctaTextColor, buyBoxColor: buyBoxColor, isHighlightSubtitle: isHighlightSubtitle, isReversed: isReversed, defaultSelectionIndex: defaultSelectionIndex, pricePer: pricePer, isSlideOnLoad: isSlideOnLoad, isBuyWithPrime: isBuyWithPrime %}
        {% endif %}
      {% endif %}

    {% endif %}
  </div>
</section>

<style>
  #cta-section-{{ section.id }} {
    background: {{ bgColor }};
  }

  #cta-section-{{ section.id }} .product-container {
    display: grid;
    grid-template-columns: 60% 40%;
    grid-column-gap: 50px;
    grid-row-gap: 0;
  }

  #cta-section-{{ section.id }} .product-image-wrapper {
    grid-row: 1/3;
    position: relative;
  }

  #cta-section-{{ section.id }} .product-container .product-info {
    padding: unset;
    width: unset;
    max-width: 450px;
    grid-area: 1/2/2/3;
  }

  #cta-section-{{ section.id }} .container.line {
    margin-top: -50px;
  }

  #cta-section-{{ section.id }} .cta-text {
    font-size: 14px;
  }

  #cta-section-{{ section.id }} .cta-text ul li {
    padding-left: 1.5rem;
  }

  #cta-section-{{ section.id }} .cta-text ul li::before {
    content: "âœ“";
    background: var(--primary);
    color: white;
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 10px;
    width: 15px;
    height: 15px;
    font-size: 13px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @media screen and (max-width: 1270px) {
    #cta-section-{{ section.id }} .container {
      max-width: unset;
      padding: 0 20px;
    }
  }

  @media screen and (max-width: 768px) {
    #cta-section-{{ section.id }} {
      padding-top: 0;
    }

    #cta-section-{{ section.id }} .container {
      padding: 0 20px !important;
    }

    #cta-section-{{ section.id }} .product-image-wrapper {
      grid-row: unset;
    }

    #cta-section-{{ section.id }} .product-container {
      grid-template-columns: repeat(1, 100%) !important;
      grid-template-rows: unset;
    }

    #cta-section-{{ section.id }} .product-container .product-info {
      grid-area: unset;
      grid-row: 1;
      text-align: center;
      padding-top: 10vw;
    }
  }
</style>