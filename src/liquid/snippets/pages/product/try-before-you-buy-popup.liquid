<div id="try-before-buy-modal" class="try-before-buy-modal" aria-hidden="true">
	<div class="modal-overlay"></div>
	<div class="modal-container" role="dialog" aria-modal="true" aria-labelledby="modal-title">
		<div class="modal-content">
			<button class="close-button no-style" aria-label="Close">&times;</button>

			<h2 id="modal-title" class="modal-title">How It Works</h2>

			<div class="modal-section">
				<h3>Try Before You Buy</h3>
				<p>We'll send you one month supply of Curalin (i.e. 1 Bottle = 90 servings) - no sample sizes here!</p>
				<p>
					We give you 14 days to decide if the product is perfect for you (just pay for shipping). We may per-athorize your card for the full purchase price for the duration of the trial for fraud
					protection.
				</p>
			</div>

			<div class="modal-section">
				<h3>Love It or Return It</h3>
				<p>Not for you? Send it back in any condition before your 14 days are up.</p>
				<p>Perfect for you? Keep it and we will charge on the 15th day.</p>
			</div>

			<button class="close-button-bottom">Close</button>
		</div>
	</div>
</div>

<style>
	.try-before-buy-modal {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		display: flex;
		align-items: center;
		justify-content: center;
		z-index: 1000;
		opacity: 0;
		visibility: hidden;
		transition: opacity 0.3s, visibility 0s linear 0.3s;
	}

	.try-before-buy-modal.show {
		opacity: 1;
		visibility: visible;
		transition-delay: 0s;
	}

	.modal-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: rgba(0, 0, 0, 0.5);
	}

	.modal-container {
		position: relative;
		max-width: 500px;
		width: 90%;
		max-height: 90vh;
		background-color: white;
		border-radius: 8px;
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
		overflow-y: auto;
		transform: translateY(20px);
		transition: transform 0.3s;
	}

	.try-before-buy-modal.show .modal-container {
		transform: translateY(0);
	}

	.modal-content {
		padding: 2rem;
	}

	.modal-title {
		font-size: 2rem;
		font-weight: bold;
		margin-top: 0;
		margin-bottom: 1.5rem;
	}

	.modal-section {
		margin-bottom: 1.5rem;
	}

	.modal-section h3 {
		font-size: 1.3rem;
		font-weight: bold;
		margin-top: 0;
		margin-bottom: 0.5rem;
	}

	.modal-section p {
		margin-top: 0;
		margin-bottom: 0.5rem;
		font-size: 1rem;
		line-height: 1.5;
	}

	.close-button {
		position: absolute;
		top: 0.75rem;
		right: 1rem;
		font-size: 1.75rem;
		background: none;
		border: none;
		cursor: pointer;
		color: #333;
		transition: color 0.2s;
	}

	.close-button:hover {
		color: #000;
	}

	.close-button-bottom {
		display: block;
		width: 100%;
		max-width: 200px;
		margin: 1.5rem auto 0;
		padding: 0.75rem 1rem;
		background-color: var(--primary-color, #3a7684);
		color: white;
		border: none;
		border-radius: 50px;
		font-size: 1rem;
		cursor: pointer;
		transition: background-color 0.2s;
	}

	.close-button-bottom:hover {
		background-color: var(--primary-color-dark, #2a5e6a);
	}

	@media (max-width: 480px) {
		.modal-content {
			padding: 1.5rem;
		}

		.modal-title {
			font-size: 1.5rem;
		}

		.modal-section h3 {
			font-size: 1.2rem;
		}

		.modal-section p {
			font-size: 0.95rem;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', function () {
		const modal = document.getElementById('try-before-buy-modal');
		const openTriggers = document.querySelectorAll('.info-box .text-bronze.font-medium');
		const closeButtons = modal.querySelectorAll('.close-button, .close-button-bottom, .modal-overlay');

		// Open modal function
		function openModal() {
			modal.classList.add('show');
			document.body.style.overflow = 'hidden';
		}

		// Close modal function
		function closeModal() {
			modal.classList.remove('show');
			document.body.style.overflow = '';
		}

		// Add click event to open triggers
		openTriggers.forEach(trigger => {
			trigger.addEventListener('click', openModal);
			trigger.style.cursor = 'pointer';
		});

		// Add click event to close buttons
		closeButtons.forEach(button => {
			button.addEventListener('click', closeModal);
		});

		// Close on escape key
		document.addEventListener('keydown', function (event) {
			if (event.key === 'Escape' && modal.classList.contains('show')) {
				closeModal();
			}
		});

		// Prevent clicks inside modal from closing it
		modal.querySelector('.modal-container').addEventListener('click', function (event) {
			event.stopPropagation();
		});

		// Close when clicking the overlay
		modal.querySelector('.modal-overlay').addEventListener('click', closeModal);
	});
</script>
