{% assign curalin_options = '' %}
{% assign supplement_options = '' %}

{% for variant in product.variants %}
  {% assign curalin_pack = variant.title | split: ' / ' | first %}
  {% assign supplement_pack = variant.title | split: ' / ' | last %}

  {% unless curalin_options contains curalin_pack %}
    {% assign curalin_options = curalin_options | append: curalin_pack | append: ',' %}
  {% endunless %}

  {% unless supplement_options contains supplement_pack %}
    {% assign supplement_options = supplement_options | append: supplement_pack | append: ',' %}
  {% endunless %}
{% endfor %}

{% assign curalin_options = curalin_options | split: ',' %}
{% assign supplement_options = supplement_options | split: ',' %}

<div class="product-selection">
  <h2>Select Your Curalin Pack</h2>

  <div class="curalin-options">
    <select id="curalin-select">
      {% for option in curalin_options %}
        <option value="{{ option }}">{{ option }}</option>
      {% endfor %}
    </select>
  </div>

  <h2>Select Your Supplement Pack</h2>

  <div class="supplement-options">
    {% for option in supplement_options %}
      <div class="supplement-item">
        <img src="{{ option | append: '.png' }}" alt="{{ option }}" class="select-supplement" data-supplement-pack="{{ option }}">
      </div>
    {% endfor %}
  </div>

  <button class="buy-now">Buy Now</button>
</div>

<script>
  let selectedCuralinPack = null;
  let selectedSupplementPack = null;

  // Handle Curalin selection
  document.querySelector('#curalin-select').addEventListener('change', event => {
    selectedCuralinPack = event.target.value;
  });

  // Handle Supplement selection
  document.querySelectorAll('.select-supplement').forEach(img => {
    img.addEventListener('click', event => {
      selectedSupplementPack = event.target.dataset.supplementPack;
    });
  });


  // Handle Buy Now click
  document.querySelector('.buy-now').addEventListener('click', () => {
    if (selectedCuralinPack && selectedSupplementPack) {
      // Find the variant ID for the selected combination
      {% for variant in product.variants %}
        {% assign curalin_pack = variant.title | split: ' / ' | first %}
        {% assign supplement_pack = variant.title | split: ' / ' | last %}
        {% if curalin_pack == selectedCuralinPack and supplement_pack == selectedSupplementPack %}
          const variantId = '{{ variant.id }}';
        {% endif %}
      {% endfor %}

      const checkoutURL = `/cart/add?id=${variantId}`;
      window.location.href = checkoutURL;
    } else {
      alert('Please select both a Curalin pack and a Supplement pack before proceeding to checkout.');
    }
  });
</script>

{% comment %} <div class="product-actions">
  {% assign variantQuantity = product.variants | size %}
  {% if variantQuantity > 1 %}
    <div class="cta-title">{{ title }}</div>
  {% endif %}

  <div class="variants">
    {% for var in product.variants %}
      {% if forloop.last %}
        {% render 'product-cta-section-actions-variant-box', ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, var: var, index: forloop.index, isHighlightSubtitle: isHighlightSubtitle, isUpdateSaveTitle: true, pricePer: pricePer, challenge_value: challenge_value, curaeats_value: curaeats_value, isLastRender: true %}
      {% else %}
        {% render 'product-cta-section-actions-variant-box', ctaTextType: ctaTextType, isVariantNotice: isVariantNotice, var: var, index: forloop.index, isHighlightSubtitle: isHighlightSubtitle, isUpdateSaveTitle: true, pricePer: pricePer, challenge_value: challenge_value, curaeats_value: curaeats_value %}
      {% endif %}
    {% endfor %}
  </div>

  <div class="submit-wrap">
    {% if isBuyQuantity %}
      <div class="qty-data">
        <div class="qty-control">
          <a data-act="-" href="javascript:void(0)"><span class="icon-minus"></span></a>
          <label><input maxlength="4" name="quantity" type="number" value="1"></label>
          <a data-act="+" href="javascript:void(0)"><span class="icon-plus"></span></a>
        </div>
      </div>
    {% endif %}

    <button class="main-btn" id="buy-button"><span>{% if isRetention %}START CHECKOUT{% else %}SHOP NOW{% endif %}</span>{% if ctaTextType %}<span class="save" id="save"></span>{% endif %}</button>
  </div>

  {% if badgesContent %}
    {% render 'trust-badges-widget', badgesContent: badgesContent, colors: "#5c5c5c", isMiniVersion: true %}
  {% endif %}
</div>

{% render 'script.round-converted-currency' %}

<style>
  .product-actions {
    grid-area: 2/2/3/3;
    max-width: 450px;
  }

  .product-actions .cta-title {
    padding: 10px 0;
  }

  .product-actions .variants {
    display: flex;
    flex-direction: {% if isReversed %}column-reverse{% else %}column{% endif %};
  }

  .product-actions .submit-wrap {
    display: flex;
  }

  .product-actions .submit-wrap button {
    background-color: {{ ctaColor }};
    width: 100%;
    display: flex;
    align-items: center;
  }

  .product-actions .submit-wrap:hover {
    border-color: #ea9f1c;
  }

  .product-actions .submit-wrap:hover button {
    background-color: #ea9f1c;
  }

  {% unless isRetention %}
    .product-actions .submit-wrap button span {
      width: 50%;
    }
  {% endunless %}

  .product-actions .submit-wrap button span.save {
    font-weight: 100;
    border-left: 1px solid white;
    {% if isRetention %}padding-left: 10px;{% endif %}
  }

  .product-actions .submit-wrap .qty-data .qty-control {
    border: 0;
    background: white;
  }

  @media screen and (max-width: 768px) {
    .product-actions {
      grid-area: unset;
      grid-row: 3;
      max-width: unset
    }

    .product-actions .submit-wrap button span:first-child {
      font-size: 4vw;
    }

    .submit-wrap .qty-data .qty-control {
      border: 1px solid #ffb22d
    }
  }
</style>

<script>
  $(document).ready(function() {
    $(".variant-box").{% if product.variants.size == 1 %}first(){% elsif defaultSelectionIndex %}eq({{ defaultSelectionIndex | minus: 1 }}){% else %}first(){% endif %}.trigger( "click" );
  });

  // On Quantity Change
  $(document).on("click", ".submit-wrap .qty-control a", function (e) {
    e.preventDefault();
    let newVal, $button = $(this),
      inputObj = $button.closest(".qty-control").find("input"),
      oldValue = inputObj.val();
    if ($button.attr('data-act') === "+") {
      newVal = parseInt(oldValue) + 1;
    }
    else {
      newVal = parseInt(oldValue) - 1;
    }

    inputObj.val(newVal);
  });

  // On Buy Button Click
  $(document).on("click", "#buy-button", function () {
    let checkedPack = $('input[name=pack]:checked').val();
    let checkedQuantity = 1;
    let checkoutLink = "https://" + location.hostname + "/cart/" + checkedPack + ":" + checkedQuantity;
    window.location.href = checkoutLink;

    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({
      event: 'add_to_cart',
      ecommerce: {
      items: [{
        item_name: '{{ product.title }}',
        item_id: $('input[name=pack]:checked').attr('data_sku'),
        affiliation: '{{ shop.name }}',
        price: $('input[name=pack]:checked').attr('data_price'),
        currency: '{{ shop.currency }}',
        item_brand: 'CuraLife',
        item_category: 'CuraLin',
        quantity: $(".qty-control input").length ? parseInt($(".qty-control input").val()) : 1
      }]
      },
      email: '{{ customer.email }}',
      phone: '{{ customer.phone }}',
      name: '{{ customer.first_name }}',
      surname: '{{ customer.last_name }}',
      city: '{{ customer.customer_address.city }}',
      state: '{{ customer.customer_address.province }}',
      zip: '{{ customer.customer_address.zip }}',
      country: '{{customer.customer_address.country_code | t}}',
      user_agent: navigator.userAgent
    });

    woopra.track('add to cart', {
      product_sku: $('input[name=pack]:checked').attr('data_sku'),
      product_name: '{{ product.title }}',
      product_price: $('input[name=pack]:checked').attr('data_price'),
      currency: '{{ shop.currency }}',
      quantity: parseInt($(".qty-control input").val())
    });
  });
</script>

