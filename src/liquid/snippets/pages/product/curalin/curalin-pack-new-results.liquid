<div class="curalin-new-for-you">
  <div class="container">
    <div class="curalin-new-for-you-wrapper">
      <div class="sub-title">
        <h3><b>Real people. Real results</b></h3>
      </div>
    </div>

   <div class="curalin-new-wrapper">
      {% assign commitments = "curalin-new-satisfied-1.png*Are satisfied with Curalin
        |curalin-new-satisfied-2.png*Feel safe using Curalin" | split: "|" %}

      <div class="commitments">
        {% for commitment in commitments %}
          <div class="commitment">
            <img  src="{{ commitment | asset_url | split: "*" | first }}" width="228" height="228" alt="">
            <h4 class="curalin-new-text">{{ commitment | split: "*" | last }}</h4>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
  .curalin-new-for-you {
    background: rgba(232,	232,	176, .2);
  }

  .curalin-new-for-you-wrapper .sub-title {
    display:flex;
    justify-content: center;
    padding-top: 60px;
    margin-bottom: unset;
    padding-bottom: 30px;
  }

  .curalin-new-for-you-wrapper .sub-title h3 {
    font-family: 'PP Radio Grotesk';
    font-weight: 700;
    font-size: clamp(34px, 5vw, 60px);
    line-height: 35px;
    color: var(--dark-green);
  }

  .curalin-new-for-you-wrapper {
    display: flex;
    flex-direction: column;
    margin: 0 auto;
  }

   .curalin-new-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .commitments {
    display: flex;
    padding-bottom: 30px;
    gap: 20px;
  }

 .commitments .commitment {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

   .commitments .commitment h4 {
    padding: 20px;
  }

  @media screen and (max-width: 768px) {
    .curalin-new-for-you-wrapper {
      padding-bottom: unset;
      width: 100%;
    }



    .curalin-new-for-you-wrapper .sub-title {
      justify-content: space-between;
    }




    .curalin-new-for-you-wrapper .sub-title h3 {
      text-align: left;
      font-size: clamp(29px, 2vw, 32px);
      line-height: 35px;
    }



    .curalin-new-wrapper {
      justify-content: flex-start;
    }

    .commitments {
      max-width: unset;
      width: 100%;
    }
     .commitment {
      max-width: unset;
      width: 100%;
    }
  }
</style>