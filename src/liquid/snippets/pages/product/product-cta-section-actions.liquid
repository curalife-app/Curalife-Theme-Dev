<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initial variant selection based on URL params
    const urlParams = new URLSearchParams(window.location.search);
    const defaultVariant = urlParams.get('default-variant');
    const productActions = document.querySelector(`#product-actions-${SID}`);

    if (defaultVariant) {
      const variantBoxes = productActions.querySelectorAll('.variant-box');
      triggerClick(variantBoxes[defaultVariant - 1]);
    } else {
      const variantBoxes = productActions.querySelectorAll('.variant-box');
      const defaultIndex = defaultSelectionIndex ? defaultSelectionIndex - 1 : 0;
      triggerClick(variantBoxes[defaultIndex]);
    }

    // Buy button click handler
    document.querySelector(`#product-actions-${SID} #buy-button`).addEventListener('click', function() {
      try {
        const checkedVariantInput = productActions.querySelector('input[name="pack' + SID + '"]:checked');

        let packValue = checkedVariantInput?.value;
        packValue = checkedVariantInput.getAttribute("data-ref-variant") || packValue;
        if (!packValue) throw new Error('No pack selected');

        const checkoutLink = checkedVariantInput.getAttribute("data-checkout-link");
        if (checkoutLink) {
          window.location.href = checkoutLink;
          return;
        }

        const quantityValue = isBuyQuantity ?
          (productActions.querySelector('input[name="quantity"]')?.value || 1) : 1;
        window.location.href = `https://${location.hostname}/cart/${packValue}:${quantityValue}`;
      } catch (error) {
        console.error(error);
        alert("Something went wrong! Please contact our support team.");
      }
    });

    // Variant box click handlers
    const variantBoxes = productActions.querySelectorAll('.variant-box');
    variantBoxes.forEach(box => {
      box.addEventListener('click', function() {
        const input = this.querySelector('input[name="pack' + SID + '"]');
        input.checked = true;
        updateCTA();
        updateSelectedVariantInformation('data-save', '.save-badge');

        if (product?.metafields?.custom?.is_price_per_month) {
          const variantTotalPrice = input.dataset.price;
          const totalPriceAmount = document.querySelector('.total-price .total-price-amount');
          if (totalPriceAmount) {
            totalPriceAmount.textContent = variantTotalPrice;
          }
        }

        if (window[`didClickVariant${SID}`]) {
          if (!customer?.b2b) {
            // Slide to Variant Image
            const variantsAmount = (product?.variants?.length || 0) +
              (product?.metafields?.custom?.additional_variants?.value?.length || 0);

            if (variantsAmount > 1 && product?.variants?.[0]?.featured_image?.src) {
              const slideIndex = window[`productSliderAllInOne${SID}`].slides.length -
                (variantsAmount + 1 - input.getAttribute('data-index'));
              window[`productSliderAllInOne${SID}`].slideTo(slideIndex);
            }
          }
        } else {
          window[`didClickVariant${SID}`] = true;
        }
      });
    });
  });

  // Helper function to trigger click event
  function triggerClick(element) {
    if (element) {
      const event = new Event('click', { bubbles: true });
      element.dispatchEvent(event);
    }
  }

  // Update CTA function
  function updateCTA() {
    if (!ctaTextType) return;

    const checkedInput = document.querySelector(`#product-actions-${SID} input[name="pack${SID}"]:checked`);
    if (!checkedInput) return;

    const saveElement = document.querySelector(`#product-actions-${SID} #save`);
    if (!saveElement) return;

    let ctaText = '';
    if (ctaTextType === 'save') {
      const discount = checkedInput.getAttribute('data-discount');
      ctaText = discount != '0' ? `You Save ${cart.currency.symbol}${discount}` : '';
    } else if (ctaTextType === 'total') {
      ctaText = `Total ${cart.currency.symbol}${checkedInput.getAttribute('data-price')}`;
    }

    // Fade out, update text, fade in
    fadeOut(saveElement, function() {
      saveElement.textContent = ctaText;
      fadeIn(saveElement);
    });
  }

  // Update variant information function
  function updateSelectedVariantInformation(infoAttributeName, targetElementSelector) {
    const checkedInput = document.querySelector(`#product-actions-${SID} input[name="pack${SID}"]:checked`);
    const targetElement = document.querySelector(targetElementSelector);

    if (!checkedInput || !targetElement) return;

    const varIndex = checkedInput.getAttribute(infoAttributeName);

    fadeOut(targetElement, function() {
      targetElement.textContent = varIndex > 1 ? `X${varIndex}` : '';
      fadeIn(targetElement);
    });
  }

  // Quantity increment/decrement functions
  function incrementQty() {
    const input = document.querySelector('input[name="quantity"]');
    const cartQty = document.querySelector(".cart-qty");
    let value = parseInt(input.value) || 1;
    value++;
    input.value = value;
    if (cartQty) {
      cartQty.innerHTML = value;
      cartQty.classList.add("rotate-x");
    }
  }

  function decrementQty() {
    const input = document.querySelector('input[name="quantity"]');
    const cartQty = document.querySelector(".cart-qty");
    let value = parseInt(input.value) || 1;
    value = value > 1 ? value - 1 : value;
    input.value = value;
    if (cartQty) {
      cartQty.innerHTML = value;
      cartQty.classList.add("rotate-x");
    }
  }

  // Fade helpers
  function fadeOut(element, callback) {
    element.style.opacity = 1;
    (function fade() {
      if ((element.style.opacity -= 0.1) < 0) {
        element.style.display = "none";
        if (callback) callback();
      } else {
        requestAnimationFrame(fade);
      }
    })();
  }

  function fadeIn(element, display = "block") {
    element.style.opacity = 0;
    element.style.display = display;
    (function fade() {
      let val = parseFloat(element.style.opacity);
      if (!((val += 0.1) > 1)) {
        element.style.opacity = val;
        requestAnimationFrame(fade);
      }
    })();
  }
</script>

