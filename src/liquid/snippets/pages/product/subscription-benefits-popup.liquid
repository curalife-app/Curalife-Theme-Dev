<script>
  const modal{{ SID }} = document.getElementById('benefits-modal-{{ SID }}');

  const toggleModal{{ SID }} = show => {
    modal{{ SID }}.classList.toggle('show', show);
    modal{{ SID }}.setAttribute('aria-hidden', !show);
    document.body.style.overflow = show ? 'hidden' : '';

    if (show) {
      setTimeout(() => {
        document.querySelectorAll('.benefit').forEach((benefit, index) => {
          setTimeout(() => benefit.style.transition = 'opacity 0.5s, transform 0.5s', index * 100);
        });
      }, 300);
    }
  };

  const closeIcon{{ SID }} = modal{{ SID }}.querySelector('.close-icon');
  closeIcon{{ SID }}.addEventListener('click', () => toggleModal{{ SID }}(false));

  const closeButton{{ SID }} = modal{{ SID }}.querySelector('.close-button');
  closeButton{{ SID }}.addEventListener('click', () => toggleModal{{ SID }}(false));

  modal{{ SID }}.addEventListener('click', event => {
    if (event.target === modal{{ SID }} || event.target.classList.contains('modal-backdrop')) {
      toggleModal{{ SID }}(false);
    }
  });

  document.getElementById('see-all-benefits-{{ SID }}').addEventListener('click', (event) => {
    event.preventDefault();
    toggleModal{{ SID }}(true);
  });

  document.addEventListener('keydown', event => {
    if (event.key === 'Escape' && modal{{ SID }}.classList.contains('show')) toggleModal{{ SID }}(false);
  });
</script>