						const cartPopup = document.getElementById('upCart');
						if (cartPopup) cartPopup.remove();

						const itemsToAdd = [
							{
								id: firstVariantID,
								quantity: 1
							}
						];

						{% if isOneTimeGift %}
							if (giftId) {
