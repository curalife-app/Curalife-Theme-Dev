{% assign variantQuantity = product.variants | size %}

{%- assign first_3d_model = product.media | where: 'media_type', 'model' | first -%}

<div id="product-thumbnails-{{ section.id }}" class="product-thumbnails">
	<div class="product-slider">
		<div class="sliders-group">
			{% unless isHideThumbs %}
				<div class="thumbs-slider absolute">
					<div id="product-thumbs-slider-nav-prev-{{ section.id }}" class="swiper-nav swiper-button-prev"></div>

					<div id="thumbs-slider-{{ section.id }}" class="swiper">
						<div class="swiper-wrapper">
							{% comment %} Render Product Images on Thumbs Slider {% endcomment %}
							{% if isProductThumbs %}
								{% for img in product.images %}
									<div class="swiper-slide cursor-pointer !h-auto">
										{% render 'image', image: img, lazy: false, preload: true, alt: img.alt %}
									</div>
								{% endfor %}
							{% endif %}

							{% comment %} Render Section Images on Thumbs Slider {% endcomment %}
							{% for block in blocks %}
								{% if block.type == 'image' %}
									<div class="swiper-slide cursor-pointer !h-auto">
										{% render 'image', image: block.settings.product_img, lazy: false, preload: true, alt: block.settings.product_img.alt %}
									</div>
								{% elsif block.type == 'video' %}
									<div class="swiper-slide cursor-pointer !h-auto">
										<div class="thumbs-img video-thumbnail">
											<img src="{{ block.settings.video_thumbnail | image_url }}" width="720" height="680" alt="" loading="lazy">
										</div>
									</div>
								{% endif %}
							{% endfor %}

							{%- if first_3d_model -%}
								<div class="swiper-slide cursor-pointer !h-auto">
									<img class="p-1" src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/single_supp.png?v=1704621391" width="291" height="278" alt="Product Image" loading="lazy">
									<i class="fa-light fa-360-degrees model-icon"></i>
								</div>
							{%- endif -%}
						</div>
					</div>

					<div id="product-thumbs-slider-nav-next-{{ section.id }}" class="swiper-nav swiper-button-next"></div>
				</div>
			{% endunless %}

			<div class="main-slider {% unless isHideThumbs %} dsk:ml-[160px] {% endunless %}">
				<div id="product-main-slider-sc-{{ section.id }}" class="swiper">
					<div class="swiper-wrapper">
						{% if thumbnailImage %}
							<div class="swiper-slide product-image-slide">
								{% if request.path contains 'lp-wl-curaslim-360-aff-bogo' %}
									<img src="{{ "product_image.png" | file_url }}" alt="CuraSlim" loading="lazy">
								{% else %}
									{% render 'image', image: thumbnailImage, lazy: false, preload: true, alt: thumbnailImage.alt %}
								{% endif %}
							</div>
						{% else %}
							{% comment %} Render Product Images on Main Slider {% endcomment %}
							{% if isProductThumbs %}
								{% for img in product.images %}
									{% if forloop.index == 1 %}
										{% assign currentImg = img %}
										{% assign img = thumbnailImage | default: currentImg %}
									{% endif %}

									<div class="swiper-slide product-image-slide">
										{% render 'image', image: img, lazy: false, preload: true, alt: img.alt %}
									</div>
								{% endfor %}
							{% endif %}

							{% if badgeImage %}
								{% render 'image', image: img, lazy: false, preload: true, alt: img.alt, class: 'sale-badge' %}
							{% endif %}

							{% comment %} Render Section Images on Main Slider {% endcomment %}
							{% for block in blocks %}
								{% if block.type == 'image' %}
									<div class="swiper-slide image-block-slide">
										{% render 'image', image: block.settings.product_img, lazy: false, preload: true, alt: block.settings.product_img.alt %}
									</div>
								{% elsif block.type == 'video' %}
									<div class="swiper-slide video-block-slide">
										<div class="product-video">
											<iframe
												id="product-video-iframe"
												src="https://player.vimeo.com/video/{{ block.settings.vimeo_video_id }}?playsinline=0"
												frameborder="0"
												webkitallowfullscreen
												mozallowfullscreen
												allowfullscreen
												loading="lazy"></iframe>
										</div>
									</div>
								{% endif %}
							{% endfor %}

							{%- if first_3d_model -%}
								<div class="swiper-slide 3d-image-slide">
									<model-viewer
										class="w-full h-[500px] md:h-[80vw]"
										alt="Curalin"
										src="{{ first_3d_model.sources.first.url }}"
										poster="//curalife.com/cdn/shop/files/curalinsdsdv.png?v=1704651801"
										shadow-intensity="1"
										camera-controls
										camera-orbit="300deg 80deg"
										auto-rotate></model-viewer>
								</div>
							{%- endif -%}

							{% comment %} Render Vaiants on Main Slider {% endcomment %}
							{% if product.variants.size > 1 %}
								{% for var in product.variants %}
									<div class="swiper-slide variant-image-slide" data-variant-id="{{ var.id }}">
										{% if var.image %}
											{% render 'image', image: var.image, lazy: false, preload: true, alt: var.image.alt %}
										{% endif %}

										{% if isSaveTitle %}
											{% assign save_price = var.compare_at_price | minus: var.price %}

											<div class="save-title">
												<p>SAVE {{ save_price | money_without_trailing_zeros }}</p>
											</div>
										{% endif %}

										{% if badgeImage %}
											{% render 'image', image: badgeImage, lazy: false, preload: true, alt: badgeImage.alt, class: 'sale-badge' %}
										{% endif %}
									</div>
								{% endfor %}
							{% endif %}

							{% if customer.email == 'yotam@curalife.com' %}
								{% for additionalVariant in product.metafields.custom.additional_variants.value %}
									<div class="swiper-slide">
										{% render 'image', image: additionalVariant.image, lazy: false, preload: true, alt: additionalVariant.image.alt %}

										{% if isSaveTitle %}
											{% assign save_price = additionalVariant.compare_at_price | minus: additionalVariant.price %}

											<div class="save-title">
												<p>SAVE {{ save_price | money_without_trailing_zeros }}</p>
											</div>
										{% endif %}

										{% if badgeImage %}
											{% render 'image', image: badgeImage, lazy: false, preload: true, alt: badgeImage.alt, class: 'sale-badge' %}
										{% endif %}
									</div>
								{% endfor %}
							{% endif %}
						{% endif %}
					</div>

					<div class="swiper-pagination"></div>
				</div>

				<div id="product-main-slider-nav-prev-{{ section.id }}" class="swiper-button-prev product-main-slider-nav-prev swiper-nav"></div>
				<div id="product-main-slider-nav-next-{{ section.id }}" class="swiper-button-next product-main-slider-nav-next swiper-nav"></div>
			</div>
		</div>
	</div>
</div>

<script>
	document.addEventListener('DOMContentLoaded', function() {
	  {% unless isHideThumbs %}
	    loadSwiper(() => {
	      window.productThumbsSlider{{ SID }} = initializeSwiper('#thumbs-slider-{{ section.id }}', {
	        direction: 'vertical',
	        spaceBetween: 10,
	        watchSlidesVisibility: true,
	        grabCursor: true,
	        slideToClickedSlide: true,
	        slidesPerView: 3,
	        watchSlidesProgress: true,
	        navigation: {
	          nextEl: '#product-thumbs-slider-nav-next-{{ section.id }}',
	          prevEl: '#product-thumbs-slider-nav-prev-{{ section.id }}',
	          disabledClass: 'disabled'
	        },
	        on: {
	          slideChange: function() {
	            if (window.productSliderAllInOne{{ SID }}) {
	              window.productSliderAllInOne{{ SID }}.slideTo(this.activeIndex);
	            }
	          }
	        }
	      });
	    });
	  {% endunless %}

	  loadSwiper(() => {
	    window.productSliderAllInOne{{ SID }} = initializeSwiper('#product-main-slider-sc-{{ section.id }}', {
	      {% unless isHideThumbs %}
	      thumbs: {
	        swiper: window.productThumbsSlider{{ SID }},
	        multipleActiveThumbs: false
	      },
	      {% endunless %}
	      slidesPerView: 1,
	      spaceBetween: 15,
	      watchSlidesVisibility: true,
	      grabCursor: false,
	      slideToClickedSlide: true,
	      breakpoints: {
	        0: {
	          navigation: {
	            nextEl: '#product-main-slider-nav-next-{{ section.id }}',
	            prevEl: '#product-main-slider-nav-prev-{{ section.id }}',
	            disabledClass: 'disabled'
	          }
	        },
	        760: {
	          grabCursor: true,
	          navigation: {}
	        }
	      },
	      on: {
	        slideChange: function () {
	          {% unless isHideThumbs %}
	          try {
	            if (!this.thumbs || !this.thumbs.swiper) return;

	            const thumbsSwiper = this.thumbs.swiper;
	            if (!thumbsSwiper.slides || thumbsSwiper.slides.length === 0) return;

	            const activeIndex = this.activeIndex;
	            const visibleSlidesStart = thumbsSwiper.activeIndex;
	            const visibleSlidesEnd = visibleSlidesStart + thumbsSwiper.params.slidesPerView;

	            if (activeIndex + 1 >= visibleSlidesEnd) {
	              thumbsSwiper.slideNext();
	            } else if (activeIndex < visibleSlidesStart) {
	              thumbsSwiper.slidePrev();
	            }
	          } catch (error) {
	            console.warn('Thumb navigation error:', error);
	          }
	          {% endunless %}
	        }
	      }
	    });
	  });
	});
</script>

<style>
	{% if first_3d_model %}
	  #product-thumbnails-{{ section.id }} .model-icon {
	    position: absolute;
	    top: 25%;
	    left: 25%;
	    font-size: 10px;
	    color: white;
	    border-radius: 50%;
	    border: 2px solid white;
	    width: 30%;
	    height: 30%;
	    padding: 0.5rem;
	    background: rgba(255,255,255,0.2)
	  }
	{% endif %}

	{% if badgeImage %}
	  #product-thumbnails-{{ section.id }} .sale-badge {
	    position: absolute;
	    top: 10px;
	    right: 50px;
	    width: 100px;
	    z-index: 1;
	  }

	  @media screen and (max-width: 768px) {
	    #product-thumbnails-{{ section.id }} .sale-badge {
	      top: 0;
	      right: 0;
	      width: 25vw;
	    }
	  }
	{% endif %}

	#product-thumbnails-{{ section.id }} .product-slider .thumbs-slider {
	  top: 50px;
	}

	#product-thumbnails-{{ section.id }} .thumbs-slider .swiper {
	  max-height: 320px;
	}

	#product-thumbnails-{{ section.id }} .thumbs-slider .swiper-nav {
	  transform: rotate(90deg);
	  width: 30px;
	  height: 30px;
	  position: relative;
	  left: 30px;
	}

	#product-thumbnails-{{ section.id }} .thumbs-slider .swiper-nav.swiper-button-next {
	  bottom: -20px;
	}

	#product-thumbnails-{{ section.id }} .thumbs-slider .swiper-nav.swiper-button-prev {
	  top: -10px;
	}

	#product-thumbnails-{{ section.id }} .thumbs-slider .swiper-nav:after {
	  font-size: 12px;
	}

	#product-thumbnails-{{ section.id }} .save-title {
	  position: absolute;
	  z-index: 2;
	  text-align: center;
	  width: 100%;
	  top: 50%;
	  }

	  #product-thumbnails-{{ section.id }} .save-title p {
	  background-image: url("{{ 'title-bg.svg' | asset_url }}");
	  background-size: contain;
	  background-repeat: no-repeat;
	  background-position: center;
	  padding: 5px;
	  width: 235px;
	  font-size: 35px;
	  font-weight: bold;
	  color: white;
	  margin: auto;
	}

	#product-thumbnails-{{ section.id }} {
	  grid-area: 1/1/3/2;
	}

	#product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-slide img {
	  border-radius: 10px;
	}

	#product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-slide .product-video iframe {
	  height: 480px;
	  width: 100%
	}

	#product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-nav {
	  display: none;
	}

	#product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-nav::after {
	  font-size: 12px;
	  color: var(--blue);
	  font-weight: bold;
	}

	#product-thumbnails-{{ section.id }} .product-slider .thumbs-slider .swiper-wrapper img {
	  width: 100px;
	  height: 100px;
	  border-radius: 5px;
	  border: 1px solid #404733;
	  object-fit: cover;
	  display: flex;
	  justify-content: center;
	  align-items: center;
	}

	#product-thumbnails-{{ section.id }} .thumbs-slider .swiper-nav.disabled {
	  opacity: 0;
	}

	#product-thumbnails-{{ section.id }} .thumbs-slider .swiper-nav:active {
	  box-shadow: unset !important;
	}

	#product-thumbnails-{{ section.id }} .main-slider .swiper-button-prev.disabled,
	#product-thumbnails-{{ section.id }} .main-slider .swiper-button-next.disabled {
	  opacity: 0;
	}
	#product-thumbnails-{{ section.id }} .product-template-all-in-one .swiper-button-prev::after,
	#product-thumbnails-{{ section.id }} .product-template-all-in-one .swiper-button-next::after {
	  font-size: 28px;
	}

	@media screen and (max-width: 768px) {
	  #product-thumbnails-{{ section.id }} {
	    grid-area: unset;
	    grid-row: 2;
	  }

	  #product-thumbnails-{{ section.id }} .product-slider {
	    margin-left: unset;
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .sliders-group:before {
	    content: "";
	    width: 100vw;
	    position: absolute;
	    top: 0;
	    right: 50%;
	    bottom: 0;
	    z-index: -1;
	    transform: translate(50%);
	    pointer-events: none;
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .main-slider .main-slider-vector-bg {
	    margin-left: unset;
	    left: 0;
	    top: 10%;
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper {
	    max-width: 95%;
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-wrapper {
	    align-items: center
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-wrapper .swiper-slide .product-video iframe {
	    height: 45vh
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-wrapper .swiper-slide .product-video iframe .vp-video-wrapper {
	    border-radius: 10px;
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-wrapper .swiper-slide .product-img::before {
	    padding-bottom: 100%
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-nav {
	    display: flex;
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-nav.swiper-button-prev {
	    left: -10px;
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-nav.swiper-button-next {
	    right: -10px;
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-pagination .swiper-pagination-bullet {
	    background: var(--green);
	    opacity: .4;
	    width: 13px;
	    height: 13px;
	    border: 0;
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .main-slider .swiper-pagination .swiper-pagination-bullet.swiper-pagination-bullet-active {
	    background: var(--green);
	    opacity: 1;
	  }

	  #product-thumbnails-{{ section.id }} .product-slider .thumbs-slider {
	    display: none;
	  }
	}
</style>
