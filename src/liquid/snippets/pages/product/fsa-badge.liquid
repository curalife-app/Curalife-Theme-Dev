<script>
  const hsaModal = document.getElementById('hsa-modal');

  const toggleHSAModal = (show) => {
    hsaModal.classList.toggle('show', show);
    hsaModal.setAttribute('aria-hidden', !show);
    document.body.style.overflow = show ? 'hidden' : '';

    if (show) {
      const images = hsaModal.querySelectorAll('img[data-src]');
      images.forEach(img => {
        if (!img.getAttribute('src')) {
          img.setAttribute('src', img.getAttribute('data-src'));
        }
      });
    }
  };

  document.getElementById('hsa-badge-link').addEventListener('click', (event) => {
    event.preventDefault();
    toggleHSAModal(true);
  });

  hsaModal.querySelector('.close-icon').addEventListener('click', () => toggleHSAModal(false));
  hsaModal.querySelector('.close-button').addEventListener('click', () => toggleHSAModal(false));

  hsaModal.addEventListener('click', (event) => {
    if (event.target === hsaModal || event.target.classList.contains('modal-backdrop')) {
      toggleHSAModal(false);
    }
  });

  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape' && hsaModal.classList.contains('show')) {
      toggleHSAModal(false);
    }
  });
</script>