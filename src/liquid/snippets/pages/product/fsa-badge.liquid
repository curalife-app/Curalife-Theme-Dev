<style>
/* Pay with HSA Badge Styles */
.pay-with-hsa-badge {
  display: inline-block;
  cursor: pointer;
}

.pay-with-hsa-badge img {
  max-width: 100%;
  height: auto;
}

/* Modal Styles */
.modal {
  --text: #4a5568;
  --border: #e2e8f0;
  --bg: #fefefe;
  --primary-color: #3CB4D0;
  --primary-color-dark: #2A92AA;
  position: fixed;
  inset: 0;
  z-index: 1000;
  overflow: auto;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, visibility 0.3s;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.4);
  opacity: 0;
  transition: opacity 0.3s;
}

.modal.show .modal-backdrop {
  opacity: 1;
}

.modal-content {
  background: var(--bg);
  margin: 3% auto;
  padding: 2rem 3rem;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  max-width: 600px;
  width: 90%;
  transform: translateY(-20px);
  opacity: 0;
  transition: transform 0.3s, opacity 0.3s;
  position: relative;
}

.modal.show .modal-content {
  transform: translateY(0);
  opacity: 1;
}

.modal-content h2 {
  color: var(--primary-color);
  font-size: 1.5rem;
  margin-bottom: 1.25rem;
}

.modal-content p {
  color: var(--text);
  font-size: 1rem;
}

.modal-content ul {
  list-style-type: disc;
  margin-left: 1.5rem;
  color: var(--text);
}

.close-icon {
  position: absolute;
  top: 10px;
  right: 20px;
  font-size: 35px;
  background: none;
  border: none;
  cursor: pointer;
  color: var(--primary-color);
  transition: color 0.3s;
}

.close-icon:hover {
  color: var(--primary-color-dark);
}

.close-button {
  display: block;
  width: 30%;
  margin: auto;
  padding: 0.75rem;
  margin-top: 1.5rem;
  background-color: var(--primary-color);
  color: white;
  border: none;
  border-radius: 50px;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.3s;
}

.close-button:hover {
  background-color: var(--primary-color-dark);
}

@media (max-width: 480px) {
  .modal-content {
    padding: 1rem;
  }

  .modal-content h2 {
    font-size: 1.25rem;
  }

  .modal-content p,
  .modal-content ul {
    font-size: 0.9rem;
  }

  .close-button {
    font-size: 0.9rem;
    padding: 0.6rem;
  }
}
</style>

<script>
// Get the modal element
const hsaModal = document.getElementById('hsa-modal');

// Function to toggle the modal visibility
const toggleHSAModal = (show) => {
  hsaModal.classList.toggle('show', show);
  hsaModal.setAttribute('aria-hidden', !show);
  document.body.style.overflow = show ? 'hidden' : '';
};

// Open modal when badge is clicked
document.getElementById('hsa-badge-link').addEventListener('click', (event) => {
  event.preventDefault();
  toggleHSAModal(true);
});

// Close modal when close icon or button is clicked
hsaModal.querySelector('.close-icon').addEventListener('click', () => toggleHSAModal(false));
hsaModal.querySelector('.close-button').addEventListener('click', () => toggleHSAModal(false));

// Close modal when clicking outside the modal content
hsaModal.addEventListener('click', (event) => {
  if (event.target === hsaModal || event.target.classList.contains('modal-backdrop')) {
    toggleHSAModal(false);
  }
});

// Close modal when pressing the Escape key
document.addEventListener('keydown', (event) => {
  if (event.key === 'Escape' && hsaModal.classList.contains('show')) {
    toggleHSAModal(false);
  }
});
</script>