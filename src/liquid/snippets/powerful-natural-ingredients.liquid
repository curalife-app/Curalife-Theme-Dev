<div class="mini-wrap">
  <div class="ingredients-section" id="powerful-ingredients">
    <div class="sub-title">
      <h2>9 powerful natural ingredients<br>combined into one capsule</h2>
    </div>
    
    <div class="ingredients-slider">
      <div class="prev-slide nav-slide"><span class="icon-arrow"></span></div>

      <div class="thumbs-slider">
        <div class="swiper" data-swiper="{'observer': true}">
          <div class="swiper-wrapper">
            {% for ingredient in ingredients %}
            <div class="swiper-slide">
              <div class="ingredient-item">
                <div class="img-wrap">
                  <img src="{{ ingredient | file_url | split: "*" | first }}" width="432" height="378" alt="" loading="lazy">
                </div>
              </div>
            </div>
          {% endfor %}
          </div>
        </div>
      </div>

      <div class="main-slider">
        <div class="swiper">
          <div class="swiper-wrapper">
            {% for ingredient in ingredients %}
              <div class="swiper-slide">
                <div class="ingredient-item">
                  <div class="text-wrap">
                    <div class="name">
                      <h4>{{ ingredient | split: "*" | last | split: ":" | first }}</h4>
                    </div>
                    <div class="description">
                      <p>{{ ingredient | split: "*" | last | split: ":" | last }}</p>
                    </div>
                  </div>
                </div>
              </div> 
            {% endfor %}        
          </div>
        </div>
      </div>

      <div class="next-slide nav-slide"><span class="icon-arrow"></span></div>

      <div class="swiper-pagination"></div> 
    </div>
  </div>
</div>

<style>

.mini-wrap {
    width: 100%;
    max-width: 1230px;
    margin: 0 auto;
    padding: 0 35px;
}
  .sub-title {
      text-align: center;
      color: #222222;
      margin-bottom: 30px;
  }

  .sub-title h2 {
      margin: 0;
      font-weight: 800;
      font-size: clamp(28px, 2vw, 48px);
      line-height: 1.3;
  }

  .ingredients-slider {
      display: flex;
      justify-content: space-around;
      position: relative;
  }

  .ingredients-slider .nav-slide {
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      pointer-events: auto;
      transition: background var(--transition);
  }

  .ingredients-slider .nav-slide span {
      font-size: 70px;
  }

  .icon-arrow:before {
      content: "\ea99";
  }

  .ingredients-slider .thumbs-slider {
      width: 49.2%;
  }

  @media screen and (max-width: 1590px) {
    .mini-wrap {
        max-width: 1110px;
    }
  }

  @media screen and (max-width: 1430px) {
    .mini-wrap {
        max-width: 990px;
    }
  }

  @media screen and (max-width: 1270px) {
    .mini-wrap {
        max-width: 798px;
    }
  }

  

  @media screen and (max-width: 768px) {
    .sub-title h2 {
        font-size: 6vw;
        line-height: 1.28;
        text-align: left;
    }

    .ingredients-slider {
        flex-wrap: wrap;
    }

    .ingredients-slider .nav-slide {
        position: absolute;
        top: 150px;
        z-index: 10;
    }

    .ingredients-slider .nav-slide.prev-slide {
        left: 0;
    }
    .ingredients-slider .nav-slide span {
        font-size: 40px;
    }
    .ingredients-slider .thumbs-slider {
        width: 100%;
    }
  }
</style>

<style>
.nav-wrap {
  bottom: unset;
  position: unset;
  justify-content: start;
  margin-bottom: 20px;
}
</style>

<script>
  ingredientThumbs = new Swiper('.ingredients-slider .thumbs-slider .swiper', {
    slidesPerView: 1,
    spaceBetween: 15,
    effect: 'fade',
    fadeEffect: {
      crossFade: true
    },
    watchSlidesVisibility: true,
    grabCursor: false,
    loop: false,
    touchRatio: 0,
    pagination: {
      el: '.pagination',
      type: 'fraction',
      currentClass: 'pagination-current',
      totalClass: 'pagination-total',
      renderFraction: function (currentClass, totalClass) {
        return '<p><span class="' + currentClass + '"></span> of <span class="' + totalClass + '"></span></p>';
      }
    },

  });

  ingredientSlider = new Swiper('.ingredients-slider .main-slider .swiper', {
    slidesPerView: 1,
    spaceBetween: 15,
    watchSlidesVisibility: true,
    loop: false,
    slideToClickedSlide: false,
    thumbs: {swiper: ingredientThumbs},

    navigation: {
      nextEl: '.next-slide',
      prevEl: '.prev-slide',
      disabledClass: 'disabled'
    },
    pagination: 
    {
      el: '.swiper-pagination',
      clickable: 'true',
      type: 'bullets',
    },
  });
</script>

