<script>
  function redirectToRelative(relative_path, new_relativePath) {
    if (window.location.pathname == relative_path) {
      window.location.replace(new_relativePath);
    }
  }

  redirectToRelative("/collections/all", "/collections" )
  redirectToRelative("/products/sleep-aid", "/products/sleep-aid-glucose-support" )
  redirectToRelative("/products/multivitamins", "/products/multivitamins-glucose-support" )
  redirectToRelative("/products/immune-care", "/products/immune-care-glucose-support" )
  redirectToRelative("/products/joint-care", "/products/joint-care-glucose-support" )

  {% if customer.tags contains 'B2B' %}
    {% if customer.tags contains 'approved' %}
      {% assign redirectWholesaleTo = "/products/curalin-wholesale" %}
    {% else %}
      {% assign redirectWholesaleTo = "/pages/b2b-signup-thank-you" %}

      redirectToRelative("/products/curalin-wholesale", "{{ redirectWholesaleTo }}" )
    {% endif %}

    redirectToRelative("/collections", "{{ redirectWholesaleTo }}" )
    redirectToRelative("/products/curalin", "{{ redirectWholesaleTo }}" )
  {% else %}
    redirectToRelative("/products/curalin-wholesale", "/products/curalin" )
  {% endif %}
</script>
