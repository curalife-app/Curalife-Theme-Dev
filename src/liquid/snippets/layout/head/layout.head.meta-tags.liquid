{% comment %}
  @file meta-tags.liquid
  Core meta tags for SEO and social sharing
{% endcomment %}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="IE=edge">

{% assign page_title = page_title | default: shop.name %}
{% assign page_description = page_description | default: shop.description | default: shop.name %}
{% assign canonical_url = canonical_url | default: request.origin %}

{% if template == 'list-collections' %}
  {% assign page_title = "Curalife | Explore Our Herbal Solutions" %}
  {% assign page_description = "Browse Curalife's expertly curated collections to find the ideal glucose support solutions for your wellness journey. Our range of science-backed dietary supplements is designed to help you maintain balanced glucose levels naturally." %}
{% endif %}

<title>
  {{ page_title }}
  {%- if current_tags %} – tagged "{{ current_tags | join: ', ' }}"{% endif -%}
  {%- if current_page != 1 %} – Page {{ current_page }}{% endif -%}
  {%- unless page_title contains shop.name %} – {{ shop.name }}{% endunless -%}
</title>

{% comment %} Primary Meta Tags {% endcomment %}
<meta name="title" content="{{ page_title | escape }}">
<meta name="description" content="{{ page_description | escape }}">
{% if product.metafields.custom.no_index == true or page.metafields.custom.no_index == true or article.metafields.custom.no_index == true %}
  <meta name="robots" content="noindex">
{% endif %}

{% comment %} Open Graph / Facebook {% endcomment %}
<meta property="og:type" content="{% if request.page_type == 'product' %}product{% elsif request.page_type == 'article' %}article{% else %}website{% endif %}">
<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:title" content="{{ page_title | escape }}">
<meta property="og:description" content="{{ page_description | escape }}">
<meta property="og:image" content="{% if page_image %}https:{{ page_image | image_url }}{% else %}{{ 'meta-thumbnail.png' | asset_url }}{% endif %}">
{% if page_image %}
  <meta property="og:image:width" content="{{ page_image.width }}">
  <meta property="og:image:height" content="{{ page_image.height }}">
{% endif %}
{% if request.page_type == 'product' %}
  <meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html }}">
  <meta property="og:price:currency" content="{{ cart.currency.iso_code }}">
{% endif %}

{% comment %} Favicon {% endcomment %}
{% if settings.favicon != blank %}
  <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
{% else %}
  <link rel="icon" sizes="16x16" href="{{ 'favicon-16x16.png' | asset_url }}" type="image/png">
  <link rel="icon" sizes="32x32" href="{{ 'favicon-32x32.png' | asset_url }}" type="image/png">
  <link rel="icon" sizes="96x96" href="{{ 'favicon-96x96.png' | asset_url }}" type="image/png">
  <link rel="icon" sizes="192x192" href="{{ 'favicon-192x192.png' | asset_url }}" type="image/png">

  <link rel="apple-touch-icon" sizes="57x57" href="{{ 'favicon-apple-touch-57x57.png' | asset_url }}">
  <link rel="apple-touch-icon" sizes="60x60" href="{{ 'favicon-apple-touch-60x60.png' | asset_url }}">
  <link rel="apple-touch-icon" sizes="72x72" href="{{ 'favicon-apple-touch-72x72.png' | asset_url }}">
  <link rel="apple-touch-icon" sizes="76x76" href="{{ 'favicon-apple-touch-76x76.png' | asset_url }}">
  <link rel="apple-touch-icon" sizes="114x114" href="{{ 'favicon-apple-touch-114x114.png' | asset_url }}">
  <link rel="apple-touch-icon" sizes="120x120" href="{{ 'favicon-apple-touch-120x120.png' | asset_url }}">
  <link rel="apple-touch-icon" sizes="152x152" href="{{ 'favicon-apple-touch-152x152.png' | asset_url }}">

  <meta name="msapplication-TileColor" content="#FFFFFF">
  <meta name="msapplication-TileImage" content="{{ 'favicon-mstile-144x144.png' | asset_url }}">
  <meta name="msapplication-square70x70logo" content="{{ 'favicon-mstile-70x70.png' | asset_url }}">
  <meta name="msapplication-square150x150logo" content="{{ 'favicon-mstile-150x150.png' | asset_url }}">
  <meta name="msapplication-wide310x150logo" content="{{ 'favicon-mstile-310x150.png' | asset_url }}">
  <meta name="msapplication-square310x310logo" content="{{ 'favicon-mstile-310x310.png' | asset_url }}">
{% endif %}