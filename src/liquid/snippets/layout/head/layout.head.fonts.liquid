<!-- Fonts -->
<link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Open+Sans:ital,wght@0,700;0,800;1,600;1,700;1,800&display=swap" rel="stylesheet">

<style>
  {{ settings.type_body_font | font_face: font_display: 'swap' }}

  @font-face {
    font-family: 'PP Radio Grotesk';
    font-style: light;
    font-weight: 300;
    font-display: swap;
    src: url('{{ "PPRadioGrotesk-Light.otf" | asset_url }}');
    src: local(''),
    url('{{ "PPRadioGrotesk-Light.otf" | asset_url }}') format('otf'),
  }

  @font-face {
    font-family: 'PP Radio Grotesk';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url('{{ "PPRadioGrotesk-Regular.otf" | asset_url }}');
    src: local(''),
    url('{{ "PPRadioGrotesk-Regular.otf" | asset_url }}') format('otf'),
  }

  @font-face {
    font-family: 'PP Radio Grotesk';
    font-style: bold;
    font-weight: 700;
    font-display: swap;
    src: url('{{ "PPRadioGrotesk-Bold.otf" | asset_url }}');
    src: local(''),
    url('{{ "PPRadioGrotesk-Bold.otf" | asset_url }}') format('otf'),
  }

  @font-face {
    font-family: 'DM Sans';
    font-style: normal;
    font-weight: 400;
    src: url('{{ "DMSans-Regular.ttf" | asset_url }}');
    src: local(''),
    url('{{ "DMSans-Regular.ttf" | asset_url }}') format('ttf'),
  }

  @font-face {
    font-family: 'DM Sans';
    font-style: normal;
    font-weight: 500;
    src: url('{{ "DMSans-Medium.ttf" | asset_url }}');
    src: local(''),
    url('{{ "DMSans-Medium.ttf" | asset_url }}') format('ttf'),
  }

  @font-face {
    font-family: 'DM Sans';
    font-style: bold;
    font-weight: 700;
    src: url('{{ "DMSans-Bold.ttf" | asset_url }}');
    src: local(''),
    url('{{ "DMSans-Bold.ttf" | asset_url }}') format('ttf'),
  }
</style>