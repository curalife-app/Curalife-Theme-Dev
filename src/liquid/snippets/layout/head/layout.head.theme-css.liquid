{% assign pageProduct = page.metafields.custom.product.value %}
{% assign pagesWithStickyButton = '/,/products/curalin,/products/curaslim' | split: ',' %}

<style>
	@view-transition {
		navigation: auto;
	}

	:root {
		--primary: {{ pageProduct.metafields.custom.primary_color | default: page.metafields.custom.primary_color | default: product.metafields.custom.primary_color | default: "var(--curalin)" }};
		--bg-color: {{ pageProduct.metafields.custom.bg_color | default: page.metafields.custom.bg_color | default: product.metafields.custom.bg_color | default: "var(--primary-color-lightest)" }};
	}

	.{% if shop.name == 'CuraLife Global' %}us{% else %}global{% endif %} {display: none !important}
	{% unless customer.b2b? %}.b2b {display: none !important}{% endunless %}
	#admin-bar-iframe {
		display: none;
	}

	#ReCharge {
		padding-top: 50px;
	}

	#upCart #UpcartPopup p {font-size: 16px;}
	.upcart-item-property:not(.upcart-item-property-subscription) {
		display: none;
	}

	{% if pagesWithStickyButton contains request.path %}
		@media (width > 768px) {
			#chat-input {
				bottom: 20vw !important;
			}
		}
	{% endif %}

	{% if request.path contains 'telemedicine' %}
		#gorgias-chat-container {
			display: none !important;
		}
	{% endif %}
</style>
