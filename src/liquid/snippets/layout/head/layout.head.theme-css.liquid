{% assign pageProduct = page.metafields.custom.product.value %}

<style>
	@view-transition {
		navigation: auto;
	}

	:root {
		--primary: {{ pageProduct.metafields.custom.primary_color | default: page.metafields.custom.primary_color | default: product.metafields.custom.primary_color | default: "var(--curalin)" }};
		--primary-color: var(--primary);
		--primary-color-darkest: color-mix(in srgb, var(--primary-color), black 80%);
		--primary-color-darker: color-mix(in srgb, var(--primary-color), black 40%);
		--primary-color-dark: color-mix(in srgb, var(--primary-color), black 20%);
		--primary-color-light: color-mix(in srgb, var(--primary-color), white 60%);
		--primary-color-lighter: color-mix(in srgb, var(--primary-color), white 80%);
		--primary-color-lightest: color-mix(in srgb, var(--primary-color), white 90%);
		--bg-color: {{ pageProduct.metafields.custom.bg_color | default: page.metafields.custom.bg_color | default: product.metafields.custom.bg_color | default: "var(--primary-color-lightest)" }};
	}

	.{% if shop.name == 'CuraLife Global' %}us{% else %}global{% endif %} {display: none !important}
	{% unless customer.b2b? %}.b2b {display: none !important}{% endunless %}
	.admin-hidden {display: none !important}
	body.admin .admin-hidden {display: block !important}
	#admin-bar-iframe {
		display: none;
	}

	#ReCharge {
		padding-top: 50px;
	}

	#app0-webchat button {@media(width<768px){bottom: 90px}}
	#upCart #UpcartPopup p {font-size: 16px;}
	.upcart-item-property:not(.upcart-item-property-subscription) {
		display: none;
	}
</style>
