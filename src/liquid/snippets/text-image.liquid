
<section class="text-image">
  <div class="md:flex-col-reverse container flex gap-40 {% if isFlip %}flex-row-reverse{% endif %}">
    <img class="object-contain w-1/3" src="{{ main_image | image_url }}" alt="" loading="lazy">

    <div>
      <h2>{{ title }}</h2>
      <p>{{ content }}</p>

      {% unless button_title == blank %}
        <a href="{{ button_link }}" style="background-color: {{ button_color }};"><button>{{ section.settings.button_title }}</button></a>
      {% endunless %}
    </div>
  </div>
</section>

<style>
  section.text-image {
    background-color: {{ bg_color }};
  }

  section.text-image p {
    margin-bottom: 20px;
  }

  section.text-image p strong {
    font-weight: bold;
  }
</style>