{% if shop.name == "CuraLife" %}
  {% assign collectionsLink = '/collections' %}
{% else %}
  {% assign collectionsLink = '/collections/all' %}
{% endif %}

<div class="dropdown">
  <a href="{{ collectionsLink }}"><button class="dropbtn">Shop</button></a>
  <div class="dropdown-content">
    {% assign collectionsHandlesArray = collectionsHandles | split: ',' %}
    {% for collection_handle in collectionsHandlesArray %}
      {% assign collection = collections[collection_handle] %}
      {% assign collection_products_amount = collection.products | size %}
      {% assign product_title = collection.title %}
      <a href="{% if collection_products_amount == 1 %}{{ collection.products.first.url }}{% else %}/collections#{{ collection_handle }}-collection-section{% endif %}">
        <div class="img-card">
        <img src="{{ collection.metafields.custom.menu_image | image_url }}" width="181" height="183" alt="{{ collection_handle }}">
        </div>
        <span>{{ collection.title }}</span>
      </a>
    {% endfor %}
  </div>
</div>

<style>
  /* Styling for the dropdown menu */
  .dropdown .dropbtn {
    display: inline-block;
    position: relative;
    }

    .dropdown .dropbtn:after {
    content: '';
    position: absolute;
    width: 100%;
    transform: scaleX(0);
    height: 3px;
    bottom: -3px;
    left: 0;
    background-color: var(--light-green);
    transform-origin: bottom right;
    transition: transform 0.25s ease-out;
    }

    .dropdown .dropbtn:hover:after {
    transform: scaleX(1);
    transform-origin: bottom left;
    }

    .dropdown {
      display: inline-block;
    }

    /* Style the button that is used to open the dropdown menu */
    .dropbtn {
      margin-inline: 16px;
      padding: 0;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    /* Change background color on hover */
    .dropbtn:hover {
      z-index: 1;
    }

    /* Style the dropdown menu content (hidden by default) */
    .dropdown-content {
      position: absolute;
      z-index: 1;
      top: 0;
      background-color: #fff;
      transition: all 0.3s ease-in-out;
      max-height: 0;
      overflow: hidden;
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      box-shadow: 0px 10px 15px -7px rgba(0,0,0,0.2);
      border-radius: 8px;
    }

    /* Style the links inside the dropdown */
    .dropdown-content a {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 25px;
      text-decoration: none;
    }

    .dropdown-content a .img-card img {
    transition: 0.4s ease;
    }

    .dropdown-content a .img-card {
    overflow: hidden;
    border-radius: 5px;
    }

    /* Add a hover effect on links inside the dropdown */
    .dropdown-content a .img-card img:hover {
      transform: scale(1.08);
      z-index: 1;
    }

    .dropdown-content a span {
      padding-top: 10px;
      font-size: 16px;
    }

    .dropdown-content a span:hover {
    color: rgba(var(--color-foreground),.75);
    }

    /* Show the dropdown menu when the button is clicked or hovered */
    .dropdown:hover .dropdown-content {
    max-height: 400px;
    }
    /* Animate the dropdown menu when shown or hidden */
    .dropdown .dropdown-content {
      top: 95px;
      left: 0;
    }
    /* Add the active class to the dropdown element */
    .dropdown.active .dropdown-content {
      pointer-events: auto;
    }
    }
</style>