<script>
  const quoteSliderNew = new Swiper(".quote-slider.featured .swiper", {
    slidesPerView: 4,
    spaceBetween: 0,
    grabCursor: true,
    loop: true,
    loopedSlides: 4,
    navigation: {
      nextEl: ".next-slide2",
      prevEl: ".prev-slide2",
      disabledClass: 'disabled'
    },
    breakpoints: {
      0: {
        slidesPerView: 1
      },
      768: {
        slidesPerView: 3,
        centeredSlides: true
      },
      992: {
        slidesPerView: 4,
        centeredSlides: true
      }
    }
  });
</script> 