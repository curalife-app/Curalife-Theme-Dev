    top: 0;
    width: unset;
    background: unset;
    box-shadow: unset;
    margin: unset;
  }

  #new-featured-prods .quote-card {
    background: unset;
  }

  #new-featured-prods .quote-card .quote-info {
    padding-top: unset;
  } 
  #new-featured-prods .quote-slider .slider-control {
    justify-content: space-between;
  }

  #new-featured-prods .quote-slider .prev-slide2 {
    background: unset;
  }

  #new-featured-prods .quote-slider .prev-slide2:hover {
    background: unset;
  }

  #new-featured-prods .quote-slider .next-slide2 {
    background: unset;
  }

  #new-featured-prods .quote-slider .next-slide2:hover {
    background: unset;
  }

  #new-featured-prods .quote-slider .prev-slide2 span {
    font-size: 40px;
    background: unset;
  }

  #new-featured-prods .quote-slider .next-slide2 span {
    font-size: 40px;
    background: unset;
  }

  #new-featured-prods .quote-author {
    padding-top: 10px;        
  }

  #new-featured-prods .quote-author h3 {
      font-size: 25px;   
  }


  #new-featured-prods .quoted-text {
    font-family: 'DM Sans';
    font-weight: 400;
    font-size: 18px;
    line-height: 1.2em;
    color: #424733;
    margin: unset;
  }

  @media screen and (max-width: 768px) {
    #new-featured-prods .featured-products-new {
      width: 100%;
    }

    #new-featured-prods  .quote-slider .slider-control {
      position: relative;
      top: -300px;
    }
  } 

  @media screen and (max-width: 629px) {
    #new-featured-prods .quoted-text {
      font-size: 4vw;
      line-height: unset;        
    }
  }
</style>
  
  
<script>
  const quoteSliderNew = new Swiper(".quote-slider.featured .swiper", {
    slidesPerView: 4,
    spaceBetween: 0,
    grabCursor: true,
    loop: true,
    loopedSlides: 4,
    navigation: {
      nextEl: ".next-slide2",
      prevEl: ".prev-slide2",
      disabledClass: 'disabled'
    },
    breakpoints: {
      0: {
        slidesPerView: 1
      },
      768: {
        slidesPerView: 3,
        centeredSlides: true
      },
      992: {
        slidesPerView: 4,
        centeredSlides: true
      }
    }
  });
</script> 