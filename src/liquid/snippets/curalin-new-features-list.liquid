<div id="new-featured-prods">
  <div class="container">
    <div class="featured-products-new">
      <div class="quote-slider featured">
        <div class="swiper">
          <div class="swiper-wrapper">
            {% for prod in collections['curalin-related-products'].products %}
              {% if prod.title != "Curalin" %}
            
              <div class="swiper-slide">
                <a href="{{ prod.url }}">
                  <div class="quote-card">
                  <div class="quote-info">
                  <img style="background-color: {{ prod.metafields.custom.bg_color }}; border-radius: 25px;" src="{{ prod.featured_image | image_url }}" width="303" height="302" alt="">
                    
                    <div class="quote-author">
                      <h3>{{ prod.title }}</h3>
                    </div>
                  </div>

                  <p class="quoted-text">{{ prod.metafields.custom.short_definition }}</p>
                </div></a>
              </div>
            {% endif %}
          {% endfor %}
          </div>

          <div class="slider-control">
            <div class="prev-slide2"><span><</span></div>
            <div class="next-slide2"><span>></span></div>
          </div>
        </div>
      </div>
    </div>
  </div> 
</div>
<style>
  .container {
      position: relative;
      width: 100%;
      height: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 15px;
  }
  .featured-products {
      display: flex;
      justify-content: space-around;
      align-items: center;
      padding: 20px;
  }
  .featured-title {
      font-family: 'PP Radio Grotesk';
      font-weight: 700;
      font-size: 48px;
      line-height: 53px;
      color: #222222;
  }
  .link-to-collection {
      font-family: 'PP Radio Grotesk';
      font-weight: 400;
      font-size: 32px;
      line-height: 35px;
      text-align: right;
      text-decoration-line: underline;
      color: #222222;
  }
  .quote-slider .swiper {
      padding: 10px 0;
      position: unset;
  }
  .quote-slider .slider-control {
      display: flex;
      align-items: center;
      
  }
  #new-featured-prods .quote-slider .slider-control {
      justify-content: space-between;
  }
  #new-featured-prods .quote-slider .prev-slide2 {
      background: unset;
  }
  .quote-slider .prev-slide2 {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      cursor: pointer;
      background: var(--light-green);
      position: absolute;
      top: calc(50% - 20px);
      z-index: 5;
      transition: background var(--transition);
      left: 0;
  }

  #new-featured-prods .quote-slider .prev-slide2 span {
      font-size: 40px;
      background: unset;
  }
  .quote-slider .prev-slide2 span {
      width: 20px;
      height: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
      color: var(--green);
      border-radius: 50%;
      background: #fff;
      transition: color var(--transition);
  }
  #new-featured-prods .quote-slider .next-slide2 {
      background: unset;
  }
  .quote-slider .next-slide2 {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      cursor: pointer;
      background: var(--light-green);
      position: absolute;
      top: calc(50% - 20px);
      z-index: 5;
      transition: background var(--transition);
      right: 0;
  }
  #new-featured-prods .quote-slider .next-slide2 span {
      font-size: 40px;
      background: unset;
  }
  .quote-slider .next-slide2 span {
      width: 20px;
      height: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
      color: var(--green);
      border-radius: 50%;
      background: #fff;
      transition: color var(--transition);
      
  }
  .icon-arrow:before {
      content: "\ea99";
  }

  @media screen and (max-width: 1590px){
    .quote-slider .prev-slide2, .quote-slider .next-slide2 {
        width: 36px;
        height: 36px;
        top: calc(50% - 18px);
    }
    .quote-slider .prev-slide2, .quote-slider .next-slide2 {
        width: 36px;
        height: 36px;
        top: calc(50% - 18px);
    }
  }

  @media screen and (max-width: 1270px) {
    .quote-slider .prev-slide2, .quote-slider .next-slide2 {
        width: 32px;
        height: 32px;
        top: calc(50% - 16px);
    }
    .quote-slider .prev-slide2, .quote-slider .next-slide2 {
        width: 32px;
        height: 32px;
        top: calc(50% - 16px);
    }
  }
 
 
  

  @media screen and (max-width: 768px) {
    .featured-title {
        font-size: 6vw;
        line-height: 35px;
    }
    .link-to-collection {
        font-size: 5vw;
        line-height: 26px;
    }
    #new-featured-prods .featured-products-new {
        width: 100%;
    }
    .quote-slider {
        position: relative;
    }
    #new-featured-prods .quote-slider {
        padding: unset;
        margin: unset;
    }
    .quote-slider .slider-control {
        padding-top: 20px;
    }
    #new-featured-prods .quote-slider .slider-control {
        position: relative;
        top: -300px;
    }
    .quote-slider .prev-slide2 {
        width: 50px;
        height: 50px;
        margin: 10px;
        position: static;
    }
    .quote-slider .prev-slide2 span {
        width: 25px;
        height: 25px;
    } 
    .quote-slider .next-slide2 {
        width: 50px;
        height: 50px;
        margin: 10px;
        position: static;
    }
    .quote-slider .next-slide2 span {
        width: 25px;
        height: 25px;
    }
  }
</style>

