<header class="page-header" id="page-header">
    <div class="container">
        <div class="main-logo">
            <a href="javascript:void(0)"><img src="{{ 'logo-black.png' | asset_url }}" alt="logo"></a>
        </div>
        <div class="buy-btn">
            <a class="main-btn" id='main-cta-btn' href="#">SAVE UP TO 20%</a>
        </div>
    </div>
</header>

{% style %}
header.page-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background-color: rgba(255, 255, 255, 0.75);
    box-shadow: 0 4px 4px rgb(0 0 0 / 25%);
    transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
    border: 0;
}

header.page-header .main-logo {
    padding: 15px 0 10px 0;
}

header.page-header .main-logo a {
    display: inline-block;
    padding: 4px 0;
    max-width: 181px;
}

header.page-header .main-logo a img {
    width: 150px;
}

header.page-header .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

header.page-header .buy-btn .main-btn {
    display: inline-block;
    font-weight: bold;
    font-size: 20px;
    text-align: center;
    color: #FAFFFF;
    border: none;
    height: 40px;
    width: 260px;
    background-color: #58AA9E;
    box-shadow: 0 4px 4px rgb(34 34 34 / 45%);
    border-radius: 10px;
    transition: color 0.3s ease-in-out, background 0.3s ease-in-out;
    padding: 10px;
    min-height: unset;
}

header.page-header .buy-btn .main-btn:hover {
    background-color: #4b8c82;
}

@media screen and (max-width: 760px) {
    header.page-header {
        position: absolute;
        background-color: unset;
        box-shadow: unset;
    }

    header.page-header .buy-btn {
        display: none;
    }

    header.page-header .main-logo a img {
        width: 120px;
        margin-top: -5px;
    }
}
{% endstyle %}

<script>
    $(window).scroll(function(){ 
        if ($(this).scrollTop() < ($("#product-section").offset().top)) { 
            $('#page-header').fadeIn(); 
        } else { 
            $('#page-header').fadeOut(); 
        } 
    });

    $("#main-cta-btn").click(function() {
    $([document.documentElement, document.body]).animate({
        scrollTop: $("#product-section").offset().top + 130
    }, 2000);
});
</script>