<div id="newsletter" class="grey-bg offset-top bottom-line">
  <div class="container">
    <div class="white-bg">
      <div class="mini-wrap">
        <div class="subscribe-section">
          <div class="text-wrap">
            <div class="intro-text">
              <div class="sub-title">
                <h2>The CuraLife Newsletter</h2>
                <p>Our newsletter is packed with valuable insights, including expert guidance on managing chronic health conditions, tips for maintaining a healthy lifestyle, and updates on the latest breakthroughs in medical research.</p>
                <p>Join the CuraLife Newsletter today and get a special discount of 5% on your next purchase.</p>
              </div>
            </div>
            <div class="subscribe-form">
              <div class="_form_3"></div>
              <script src="https://marketing.curalife.com/f/embed.php?id=3" type="text/javascript" charset="utf-8"></script>
            </div>
          </div>
          <div class="img-wrap">
            <img src="{{ 'newsletter-form-img.png' | file_url }}" alt="" width="265" height="auto" loading="lazy">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .offset-top, .bottom-line {
      position: relative;
      z-index: 3;
  }

  .grey-bg:before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: -2;
      background: linear-gradient(0deg,rgb(233,233,233) 0%,rgb(255,255,255) 100%);
      pointer-events: none;
  }
  .container {
      position: relative;
      width: 100%;
      height: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 15px;
  }
  .bottom-line:after {
      content: "";
      padding-top: 90px;
      position: absolute;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: -1;
      background: #404733;
      pointer-events: none;
  }
  .white-bg {
      background: #fff;
      box-shadow: 0 76px 70px -57px #0000001a;
  }
  .mini-wrap {
      width: 100%;
      max-width: 1230px;
      margin: 0 auto;
      padding: 0 35px;
  }
  .subscribe-section {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      padding: 3% 0;
  }

  .subscribe-section .text-wrap {
      width: 50%;
  }


  .intro-text .sub-title {
      max-width: 695px;
      color: var(--dark);
      margin-bottom: 30px;
      text-align: unset;
  }
  .sub-title h1, .sub-title h2 {
      margin: 0;
      font-weight: 800;
      font-size: 48px;
      line-height: 1.3;
  }

  .sub-title p {
      margin: 0;
      padding-top: 23px;
      font-weight: 400;
      font-size: 20px;
      line-height: 1.6;
  }
  .subscribe-form {
      padding-top: 33px;
  }
  .subscribe-section .img-wrap {
      width: 40%;
      padding-left: 20px;
      text-align: right;
  }

  @media screen and (max-width: 1590px){
    .bottom-line:after {
        padding-top: 82px;
    }
    .mini-wrap {
        max-width: 1110px;
    }
    .subscribe-section {
        padding: 4.5% 0;
    }


    .subscribe-section .intro-text .sub-title {
        max-width: 565px;
    }

    .sub-title h1, .sub-title h2 {
        font-size: 36px;
    }
    .sub-title p {
        padding-top: 19px;
        font-size: 18px;
    }
    .subscribe-form {
        padding-top: 26px;
    }
  }

  @media screen and (max-width: 1430px) {
    .mini-wrap {
        max-width: 990px;
    }
  }

  @media screen and (max-width: 1270px){
    .mini-wrap {
        max-width: 798px;
    }
    .sub-title h1, .sub-title h2 {
        font-size: 28px;
    }
    .sub-title p {
        padding-top: 8px;
        font-size: 14px;
    }
  }


  @media screen and (max-width: 1200px){
    .bottom-line:after {
        padding-top: 72px;
    }
    .subscribe-section .intro-text .sub-title {
        max-width: 490px;
    }
    .sub-title h1, .sub-title h2 {
        font-size: 32px;
    }
    .sub-title p {
        padding-top: 17px;
        font-size: 16px;
    }
  }

  @media screen and (max-width: 768px){
    .bottom-line:after {
        padding-top: 59px;
    }
    .subscribe-section {
        padding: 23px 5px 43px;
    }
    .subscribe-section .text-wrap {
        width: 100%;
    }
    .subscribe-section .text-wrap .sub-title h1, .subscribe-section .text-wrap .sub-title h2 {
        font-size: 26px;
        line-height: 1.38;
    }
    .sub-title p {
        padding-top: 25px;
        font-size: 16px;
        line-height: 1.44;
    }
    .subscribe-form {
        padding-top: 21px;
    }
    .subscribe-section .img-wrap {
        width: 100%;
        padding-top: 50px;
        padding-left: 0;
        text-align: center;
    }
  }



</style>

<style>
  ._form {
    margin: unset;
    padding: unset;
    margin: 0 !important;
    background-color: var(--dark-green) !important;
  }
  ._submit {
    background-color: var(--dark-green) !important;
    min-height: 44px !important;
    font-weight: 700 !important;
    letter-spacing: 1px !important;
    text-transform: uppercase !important;
  }

  ._field-wrapper input#email {
    width: 300px !important;
    font-size: 16px;
    border: 1px solid var(--grey);
    margin-right: 10px;
    padding: 12px !important;
  }

  .form-content {
    align-items: center;
    display: flex;
  }

  ._form_element {
    margin-bottom: unset !important;
    margin-left: unset !important;
  }

  ._inline-style {
    display: unset !important;
  }

  ._button-wrapper {
    margin: 0 !important;
  }


  ._form-label {
    display: none !important;
  }

  @media screen and (max-width: 768px) {
    ._field-wrapper input#email,
    ._submit
    {
      width: 100% !important;
      margin-bottom: 10px;
    }
  }
</style>

<script>
  function getGeo() {
    $.get("https://geo.curalife.com/", function(data) {
      let country = JSON
        .parse(data)
        .country;
      $('[data-name="lead_geo"]').val(country);
    });
  }

  function getOperatingSys() {
    var os = 'unknown';
    if (navigator.userAgent.indexOf("Win") != -1) os = "Windows";
    if (navigator.userAgent.indexOf("Mac") != -1) os = "MacOS";
    if (navigator.userAgent.indexOf("X11") != -1) os = "UNIX";
    if (navigator.userAgent.indexOf("Linux") != -1) os = "Linux";
    return os;
  }

  const getDeviceType = () => {
    let ua = navigator.userAgent;
    if (/(tablet|ipad|playbook|silk)|(android(?!.*mobi))/i.test(ua)) {
      return "tablet";
    }
    if (/Mobile|iP(hone|od)|Android|BlackBerry|IEMobile|Kindle|Silk-Accelerated|(hpw|web)OS|Opera M(obi|ini)/.test(ua)) {
      return "mobile";
    }
    return "desktop";
  };

  window.onload = function() {
    let queryString = window.location.search;
    let urlParams = new URLSearchParams(queryString);
    $('[data-name="lead_source"]').val("NewsLetter");
    $('[data-name="lead_utm_source"]').val(urlParams.get('utm_source'));
    $('[data-name="lead_utm_medium"]').val(urlParams.get('utm_medium'));
    $('[data-name="lead_utm_campaign"]').val(urlParams.get('utm_campaign'));
    $('[data-name="lead_utm_term"]').val(urlParams.get('utm_term'));
    $('[data-name="lead_utm_content"]').val(urlParams.get('utm_content'));
    $('[data-name="lead_source_date"]').val(new Date().toUTCString());
    $('[data-name="lead_os"]').val(getOperatingSys());
    $('[data-name="lead_device"]').val(getDeviceType());
    $('[data-name="lead_url"]').val(window.location.href);
    getGeo();
  }

  // Woopra Subscribe Event Tracking
  document.addEventListener('submit', function(e) {
    const form = e.target;
    const formData = new FormData(form);
    const entries = formData.entries();
    const data = Object.fromEntries(entries);
    for (var key in data) {
      var fieldEl = form.querySelector(`[name="${key}"]`);
      if (fieldEl.type === 'password') {
        delete data[key];
      }
    }

    if (form.className.indexOf('_form_3') !== -1) {
      woopra.identify({
      'email': data["email"]
      });
      woopra.track('newsletter subscribe', {}, {
        queue: true
      });
    }
  });
</script>