{% assign badgeItems = "icon-clinically-tested.svg:Clinically Tested
|icon-doctor-approved.svg:Doctors Recommended
|icon-iso-certified.png:ISO9001 Certified
|icon-vegan-friendly.png:Vegan Friendly
|icon-gmp-certified.png:GMP Certified"
| split: '|' %}

<section class="badges-section">
  <div class="container">
    <div class="badges">
    {% for badgeItem in badgeItems %}
      <div class="badge-wrapper">
        <div class="badge">
          <img src="{{ badgeItem | asset_url | split: ":" | first }}" alt="" loading="lazy">
        </div>
        <p>{{ badgeItem | split: ":" | last }}</p>
      </div>
    {% endfor %}
    </div>
  </div>
</section>

<style>
   .badges-section .container .badges {
      display: flex;
      justify-content: center
  }

   .badges-section .container .badges .badge-wrapper {
      display: flex;
      flex-direction: column;
      align-items: center;
      min-width: 150px
  }

  
  
  .badges-section .container .badges .badge-wrapper .badge {
    border-radius: 50%;
    border: 1px solid #000;
    padding: 10px
}

.badges-section .container .badges .badge-wrapper p {
  margin: unset;
}

   .badges-section .container .badges .badge-wrapper .badge img {
      height: 50px;
      width: 50px;
      max-width: 20vw;
      max-height: 20vw;
      -o-object-fit: contain;
      object-fit: contain
  }

  @media screen and (max-width: 768px) {

   .badges-section .container .badges {
      flex-wrap: wrap;
      gap: 5%
  }

   .badges-section .container .badges .badge-wrapper {
      width: 30%;
      padding: 2vw;
      min-width: unset;
      text-align: center
  }

   .badges-section .container .badges .badge-wrapper .badge img {
      height: 10vw;
      width: 10vw
  }

  }
</style>
