{% if localization.country.iso_code == 'CA' %}
  {% assign original_item_cap = var.metafields.custom.original_item.value.metafields.my_fields.ca_cap | times: 100 %}
{% elsif localization.country.iso_code == 'AU' %}
  {% assign original_item_cap = var.metafields.custom.original_item.value.metafields.my_fields.au_cap | times: 100 %}
{% else %}
  {% assign original_item_cap = var.metafields.custom.original_item.value.compare_at_price %}
{% endif %}

{% if isVariantNotice %}
  {% if var.title contains "CuraEats" and product.title != "CuraEats App" %}
    {% assign bundle_value = challenge_value | plus: curaeats_value %}
    <div class="variant-notice"><p><b>Bonus</b> - 30 Day Life Changing Program <b>(<span class="rounded no-letters">{{ bundle_value | times: 100 | money_with_currency | replace: ".00", "" | replace: "GBP", "" | replace: "AUD", "" | replace: "CAD", "" }}</span> value)</b></p></div>
  {% else %}
    {% assign bundle_value = 0 %}
  {% endif %}
{% endif %}

{% assign bottle_quantity = var.metafields.my_fields.pack_bottles_quantity %}
{% assign original_item_cap_total = original_item_cap | times: bottle_quantity %}
{% assign original_item_cap_total_with_bundle = bundle_value | times: 100 | plus: original_item_cap_total %}
{% assign original_item_price = var.metafields.custom.original_item.value.price %}
{% assign item_price = var.price | divided_by: bottle_quantity %}
{% assign save_price = original_item_price | minus: item_price | times: quantity %}

<div class="variant-box">
  <div class="left-side-wrapper">
    <div class="radio-box">
      {% if original_item_cap_total_with_bundle > var.price %}
        {% assign discount = original_item_cap_total_with_bundle | minus: var.price | divided_by: 100 %}
      {% else %}
        {% assign discount = 0 %}
      {% endif %}
      <input type="radio" name="pack" value="{{ var.id }}" quantity="{{ var.metafields.my_fields.pack_bottles_quantity }}" price="{{ var.price | money_without_currency | replace: ".00", "" }}" discount="{{ discount | replace: ".00", "" }}" title="{{ var.title }}" sku="{{ var.sku }}" save="{{ save_price }}" index="{{ product.variants.size | minus: index | plus: 1 }}"></input>
    </div>

    <div class="variant-info">
      <p class="variant-title">{{ var.title }}</p>
      {% if var.metafields.my_fields.subtitle %}
        <div class="variant-infos">
          <p class="subtitle">{{ var.metafields.my_fields.subtitle }}</p>
        </div>
      {% endif %}
    </div>
  </div>

  {% if isPricePerUnit %}
  <div class="price">
    <div class="calculations">
      {% if original_item_cap_total > var.price %}
        <p class="compared-at-price"><strike class="rounded no-letters">{{ original_item_cap_total | money_without_trailing_zeros }}</strike></p>
      {% endif %}
      <p class="real-price rounded no-letters">{{ item_price | money_without_trailing_zeros }}</p>
    </div>
      <p class="per-month">Per Month</p>
    </div>
  {% else %}
    <div class="price">
      {% if original_item_cap_total_with_bundle > var.price %}
        <p class="compared-at-price"><strike class="rounded no-letters">{{ original_item_cap_total_with_bundle | money_without_trailing_zeros }}</strike></p>
      {% endif %}
      <p class="real-price rounded no-letters">{{ var.price | money_without_trailing_zeros }}</p>
    </div>
  {% endif %}
</div>
<style>
  body {
    accent-color:  var(--dark-green);
  }
</style>

{% if isLastRender %}
  <style>
    .variant-notice p {
      background: #9EB069;;
      color: white;
      padding: 2px 10px;
      margin: unset;
      font-size: 14px;
    }

    .variant-box {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 80px;
      background: #fff;
      border: 1px solid #cbcbcb;
      box-sizing: border-box;
      border-radius: 2px;
      margin-bottom: 10px;
      cursor: pointer;
      filter: drop-shadow(0px 4px 4px rgba(47, 47, 47, 0.1));
      transition: all .5s;
      position: relative;
    }

    .variant-box:hover {
      border-color: var(--dark-green);
      filter: drop-shadow(0px 4px 4px rgba(47, 47, 47, 0.3));
    }

    .variant-box:hover>.radio-box input[type=radio]:after {
      background-color: #a9a9a9;
    }

    .variant-box .left-side-wrapper {
      display: flex;
    }

    .variant-box .radio-box {
      {% comment %} width: 5%; {% endcomment %}
      align-items: center;
      display: flex;
      padding: 20px;
    }

    .variant-box .variant-info {
      padding: 10px 0;

    }

    .variant-box .variant-info .variant-title {
      margin: 0;
      font-size: 17px;
    }

    .variant-box .variant-info .variant-infos p {
      font-weight: 200;
      display: inline-block;
      margin: 0;
      font-size: 14px;
      {% if isHighlightSubtitle %}
        color: white;
        font-weight: bold;
        border-radius: 15px;
        padding: 2px 10px;
        background: var(--light-green);
      {% endif %}
    }

    .variant-box .variant-info .variant-infos p b {
      font-weight: 700;
    }

    .variant-box .price {
      display: flex;
      justify-content: right;
      min-width: 70px;
      margin-right: 10px;
      padding-bottom: unset;
      flex-direction: row;
      flex-wrap: wrap;
      align-items: center;
      gap: 5px;
    }

    .variant-box .price p {
      margin: unset;
    }

    .variant-box .price .calculations {
      display: flex;
      align-items: center;
      justify-content: right;
    }

    .variant-box .price .calculations p::after {
      content: "00";
      font-size: 0.6rem;
      vertical-align: super;
      margin-right: 5px;
    }

    .variant-box .price .calculations p.compared-at-price::after {
      font-size: 0.3rem;
    }

    .variant-box .price .per-month {
      font-family: "PP Radio Grotesk";
      color: var(--grey);
      font-size: 16px;
    }

    .variant-box .price .compared-at-price {
      font-size: unset;
    }

    .variant-box .price .compared-at-price strike {
      font-size: 10px !important;
    }

    .variant-box .price .real-price {
      font-size: 20px;
    }

    @media screen and (max-width: 1270px) {
      .variant-box {
        width: 100%
      }

      .variant-box .variant-info {
        padding: 10px;
        width: 95%;
      }

      .variant-box .price {
        position: absolute;
        right: 10px;
        bottom: 10px;
        margin-right: unset;
      }
    }

    @media screen and (max-width: 768px) {
      .variant-box {
        justify-content: unset;
      }

      .variant-box .variant-info .variant-title {
        font-size: 4vw;
      }

      .variant-box .variant-info .variant-infos p {
        font-size: 3vw;
        padding: 0 3vw;
      }

      .variant-box .radio-box {
        padding: 3vw;
      }
    }

    @media screen and (max-width: 330px) {
      .variant-box .variant-infos {
        font-size: 10px !important;
      }
    }
  </style>

  <script>
    function updateCTA() {
      {% if ctaTextType %}
        {% if ctaTextType == "save" %}
          let ctaText = "You Save " + "{{ cart.currency.symbol }}" + $('input[name=pack]:checked').attr('discount');
        {% elsif ctaTextType == "total" %}
          let ctaText = "Total " + "{{ cart.currency.symbol }}" + $('input[name=pack]:checked').attr('price');
        {% endif %}

        $("#save").fadeOut(300, function () {
          $(this).text(ctaText);
        }).fadeIn(300);
      {% endif %}
    }

    function updateSelectedVariantInformation(infoAttributeName, targetElementToUpdate) {
      let varIndex = $('input[name=pack]:checked').attr(infoAttributeName);

      $(targetElementToUpdate).fadeOut(300, function () {
        varIndex > 1 ? $(targetElementToUpdate).text("X" + varIndex) : $(targetElementToUpdate).text("");
      }).fadeIn(300);
    }

    $(".variant-box").click(function() {
      $(this).find('input[name=pack]').prop('checked', true);
      updateCTA();
      updateSelectedVariantInformation('quantity', '.multiplier');
      updateSelectedVariantInformation('save', '.save-badge');

      // Slide to Variant Image
      {% if product.variants.size > 1 and product.images.size > 1 %}
        let slideIndex = productSliderAllInOne.slides.length - jQuery('input[name=pack]:checked').attr('index');
        productSliderAllInOne.slideTo(slideIndex);
      {% endif %}

      // Track in GA
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        'event': 'variant-click',
        'label': $('input[name=pack]:checked').attr('sku'),
        'userId': '{{ customer.id }}',
        'email': '{{ customer.email }}',
        'country': '{{customer.customer_address.country_code }}',
        'city': '{{customer.customer_address.city }}',
        'name': '{{ customer.first_name }}',
        'surname': '{{ customer.last_name }}',
        'phone_number': '{{customer.phone }}',
        'state': '{{customer.customer_address.province }}',       //state or province
        'zip': '{{customer.customer_address.zip }}'         //ZIP or Postal code
      });

      // Track in Woopra
      woopra.track('Product_Variant_Select', {
        sku: $(this).find("input").attr("sku"),
        variant_id: $(this).find("input").attr("value"),
        variant_title: $(this).find("input").attr("title"),
        price: $(this).find("input").attr("price")
      })
    });
  </script>
{% endif %}