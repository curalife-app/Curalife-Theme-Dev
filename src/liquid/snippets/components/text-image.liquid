{% if block_index %}
  {% assign section_id = block_index %}
{% else %}
  {% assign section_id = section.id %}
{% endif %}

<section class="text-image text-image-{{ section_id }} flex align-center md:flex-col {% unless is_dynamic_height %}min-h-400px{% endunless %} {% if is_remove_padding_top %}pt-0{% endif %} {% if is_remove_padding_bottom %}pb-0{% endif %}">
  {% if is_mobile_hero_style %}
    <div class="mobile-hero-style hidden md:block">
      <div class="container flex align-center md:min-h-[60vw]">
        <div class="mobile-title max-w-1/2 justify-{{ alignment }} md:justify-{{ mobile_alignment }}"><{{ title_tag }}>{{ title }}</{{ title_tag }}></div>
      </div>
    </div>
  {% endif %}

  <div class="md:gap-4 container flex items-center gap-x-16 gap-y-4 {% if is_image_overlap and image_position == 'left' %}justify-end{% else %}justify-between{% endif %}">
    {% unless is_mobile_hero_style %}
      {% if is_image_middle_mobile and title != blank %}
        <div class="mobile-title md:block md:text-center hidden justify-{{ alignment }} md:justify-{{ mobile_alignment }}"><{{ title_tag }}>{{ title }}</{{ title_tag }}></div>
      {% endif %}
    {% endunless %}

    {% if main_image or main_mobile_image %}
      <div class="image-wrapper z-[1] h-auto {% if image_position == 'right' or image_position == 'left' %}max-w-1/2{% else %}w-full{% endif %} {% if is_image_bottom %}self-end md:self-auto{% endif %}">
        {% if main_image %}
          <img class="{% if is_limit_image_size %}max-h-500px{% endif %} relative z-auto object-contain {% if is_hide_image_on_mobile %}md:hidden{% endif %} {% if main_mobile_image %}desktop{% endif %} {% if is_image_overlap %}md:!min-h-350px{% endif %}" src="{{ main_image | image_url }}" alt="{{ title }}" loading="lazy">
        {% endif %}

        {% if main_mobile_image and is_mobile_hero_style == false %}
          <img class="mobile relative z-auto {% if is_image_cover %}object-cover{% else %}object-contain{% endif %}" src="{{ main_mobile_image | image_url }}" alt="{{ title }}" loading="lazy">
        {% endif %}
      </div>
    {% endif %}

    <div class="content-wrapper z-[1] flex align-center md:py-0 md:!w-full gap-12 md:gap-4 {% unless main_image %}m-auto{% endunless %} text-{{ alignment }} md:text-{{ mobile_alignment }} {% if image_position == 'right' or image_position == 'left' %}w-45%{% else %}w-70%{% endif %}">
      {% if number != blank %}
        <div class="number">
          <div class="add-number">{{ number }}</div>
        </div>
      {% endif %}

      <div class="content">
        {% if title != blank %}
          <{{ title_tag }} class="title {% if is_image_middle_mobile or is_mobile_hero_style %}md:hidden{% endif %} {% comment %}{% if is_remove_padding_top %}md:mt-5{% endif %}{% endcomment %}">{{ title }}</{{ title_tag }}>
        {% endif %}

        {% if subtitle != blank %}
          <p class="subtitle md:text-sm text-lg">{{ subtitle }}</>
        {% endif %}

        <p>{{ content }}</p>

        {% if link_url_1 != blank %}
          <div class="links empty:hidden md:justify-{{ alignment }} md:justify-{{ mobile_alignment }}">
            {% if link_url_1 %}
              <a href="{{ link_url_1 }}">{{ link_title_1 }} <i class="fa-thin fa-arrow-right"></i></a>
            {% endif %}
            {% if link_url_2 %}
              <a href="{{ link_url_2 }}">{{ link_title_2 }} <i class="fa-thin fa-arrow-right"></i></a>
            {% endif %}
          </div>
        {% endif %}

        {% unless button_link == blank %}
          <a href="{{ button_link }}" {% if is_button_link_new_window %}target="_blank"{% endif %}>
            <button class="md:w-full flex justify-center gap-4">
              {{ button_title }}
              {% if button_icon %}<i class="{{ button_icon }}"></i>{% endif %}
            </button>
          </a>
        {% endunless %}
      </div>
    </div>

    {% if decor_img %}
      <img class="decor-img {% if is_decor_remove_on_mobile %}md:hidden{% endif %}" src="{{ decor_img | image_url }}" alt="" loading="lazy">
    {% endif %}
  </div>
</section>

<style>
  section.text-image .content-wrapper em {
    font-size: 12px;
  }

  {% if is_image_full_width_mobile %}
    @media screen and (max-width: 768px) {
      section.text-image-{{ section_id }} .image-wrapper {
        width: 100vw;
      }
    }
  {% endif %}

  {% if is_mobile_hero_style %}
    section.text-image-{{ section_id }} .mobile-hero-style {
      background-image: url('{{ main_mobile_image | image_url }}');
      background-size: cover;
    }
  {% endif %}

  {% if is_remove_padding_top and is_remove_padding_bottom %}
    section.text-image-{{ section_id }} .content-wrapper {
      padding: 50px 0;
    }

    @media screen and (max-width: 768px) {
      section.text-image-{{ section_id }} .content-wrapper {
        padding: 5vw 0;
      }
    }
  {% endif %}

  section.text-image-{{ section_id }} .image-wrapper img {
    width: inherit;
  }

  {% if decor_img %}
    section.text-image-{{ section_id }} .decor-img {
      position: absolute;
      z-index: {% if is_decor_above %}2{% else %}0{% endif %};
      top:{{ decor_position_top }}%;
      left:{{ decor_position_left }}%;
      opacity:{{ decor_opacity }}%;
      max-width:{{ decor_max_width }}%;
    }
  {% endif %}

  @media screen and (max-width: 768px) {
    section.text-image-{{ section_id }} .decor-img {
      top:{{ decor_position_top_mobile }}%;
      left:{{ decor_position_left_mobile }}%;
    }
  }

  {% if section.settings.is_full_width %}
    section.text-image-{{ section_id }} .container {
      max-width: 100%;
      padding: 0;
    }
  {% endif %}

{% unless limit_height > 0 %}
  section.text-image-section,
  section.text-image-{{ section_id }} {
    overflow: visible;
  }

  html {
    --elheight_{{ section.id }}: {{ limit_height }}px;
  }

  section.text-image-{{ section_id }} .container {
    {% comment %} {% unless border_color contains 'rgba(0,0,0,0)' %}border: 1px solid {{ border_color }};{% endunless %} {% endcomment %}
    {% unless bg_color contains 'rgba(0,0,0,0)' %}background-color: {{ bg_color }};{% endunless %}
    {% if bg_width == 'container' %}padding: 30px;{% endif %}
    max-height: var(--elheight_{{ section.id }});
    max-width: {{ max_width }}px;
    border-radius: 5px;
  }

  section.text-image-{{ section_id }} .image-wrapper {
    margin-bottom: calc(var(--elheight_{{ section.id }}) * 0.1);
  }

  @media screen and (max-width: 768px) {
    section.text-image-section,
    section.text-image-{{ section_id }} {
      overflow: hidden;
    }

    section.text-image-{{ section_id }} .container {
      {% if bg_width == 'container' %}
        margin: 0 10px;
        width: unset;
      {% endif %}
      max-height: unset !important;
    }

    section.text-image-{{ section_id }} .image-wrapper {
      margin-bottom: unset !important;
    }
  }
{% endunless %}

  section.text-image-{{ section_id }} .image-content-wrapper {
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  section.text-image-{{ section_id }} .add-number {
    font-size: 150px;
    font-family: 'PP Radio Grotesk';
    text-align: start;
    color: #ABAB74;
    margin-top: -40px;
    opacity: 0.5;
  }

  {% if text_color %}
    section.text-image-{{ section_id }} {
      color: {{ text_color }};
    }

    section.text-image-{{ section_id }} h2 {
      color: {{ text_color }};
    }
  {% endif %}

  {% if bg_color and bg_width == 'full' %}
    section.text-image-{{ section_id }} {
      background-color: {{ bg_color }};
    }
  {% endif %}

  {% if button_color %}
    section.text-image-{{ section_id }} button {
      background-color: {{ button_color }};
    }
  {% endif %}

  {% if button_text_color %}
    section.text-image-{{ section_id }} button {
      color: {{ button_text_color }};
    }
  {% endif %}

  section.text-image-{{ section_id }} .container {
    flex-direction: {% case image_position %}{% when 'right' %}row-reverse{% when 'left' %}row{% when 'bottom' %}column-reverse{% when 'top' %}column{% endcase %};
  }

  {% if image_position == 'right' or image_position == 'left' %}
    @media (max-width: 768px) {
      section.text-image-{{ section_id }} .container {
        flex-direction: {% if is_image_middle_mobile %}column{% else %}column-reverse{% endif %};
      }
    }
  {% endif %}

  section.text-image-{{ section_id }} p strong {
    font-weight: bold;
  }

  {% if is_no_p_margin %}
    section.text-image-{{ section_id }} p {
      margin: 0;
    }
  {% endif %}

  {% if is_image_overlap %}
  section.text-image-{{ section_id }} .image-wrapper img {
    {% if image_position == 'right' %}
      min-width: 50vw;
      min-height: 200px;
      max-height: 100%;
      object-fit: cover;
      object-position: top left;
    {% elsif image_position == 'left' %}
      position: absolute;
      right: 50%;
      top: 0;
      bottom: 0;
      margin: auto 0;
      height: 100%;
    {% endif %}
    }

    @media (max-width: 768px) {
      section.text-image-{{ section_id }} .image-wrapper img {
        min-width: 100vw;
        min-height: 450px;
        object-fit: cover;
        object-position: top;

        position: unset;
        right: unset;
        top: unset;
        bottom: unset;
        margin: unset;
        height: unset;
      }
    }
  {% endif %}

  {% if title_swoosh_color %}
    section.text-image-{{ section_id }} .content-wrapper .title strong,
    section.text-image-{{ section_id }} .mobile-title strong {
      background-image: url('{{ 'title-swoosh-' | append: title_swoosh_color | append: '.svg' | asset_url }}');
      background-size: contain;
      background-repeat: no-repeat;
      padding: 8px;
    }
  {% endif %}

  section.text-image-{{ section_id }} .content-wrapper {
    width: {{ content_width }}%;
  }

  section.text-image-{{ section_id }} .content-wrapper {
    font-size: {{ text_size }}px;
  }

  section.text-image .links {
    display: flex;
    align-items: center;
    margin: 20px 0;
    gap: 20px;
  }

  section.text-image h2 {
    text-align: inherit;
  }

  section.text-image .links a {
    font-weight: bold;
    text-decoration: underline;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  @media (max-width: 768px) {
    section.text-image {
      max-height: unset !important;
    }

    section.text-image .image-wrapper {
      max-width: unset;
    }

    section.text-image .content-wrapper {
      width: 100%;
    }

    section.text-image .add-number{
      font-size: 30vw;
      margin-top: -8vw;
    }
  }
</style>