
{% if block_index %}
  {% assign section_id = block_index %}
{% else %}
  {% assign section_id = section.id %}
{% endif %}

{% if image_position == 'right' or image_position == 'left' %}
  {% if main_image and title %}
    {% assign itemsDirection = 'horizontal' %}
  {% else %}
    {% assign itemsDirection = 'vertical' %}
  {% endif %}
{% else %}
  {% assign itemsDirection = 'vertical' %}
{% endif %}

<div class="text-image-wrapper">
  {% comment %} {% if is_mobile_hero_style %}
    <div class="mobile-hero-style md:block hidden">
      <div class="container flex align-center md:min-h-[60vw] items-center">
        <div class="mobile-title z-[1] max-w-1/2 justify-{{ alignment }} md:justify-{{ mobile_alignment }} {% if is_line_seperator %}m-0{% endif %}"><{{ title_tag }}>{{ title }}</{{ title_tag }}></div>
      </div>
    </div>
  {% endif %} {% endcomment %}

  <div class="container static p-0 h-auto flex md:gap-4 md:items-center gap-x-16 gap-y-4 {% case image_position %}{% when 'right' %}flex-row-reverse{% when 'left' %}flex-row{% when 'bottom' %}flex-col-reverse{% when 'top' %}flex-col{% endcase %} {% unless is_no_wrap %}{% if is_image_middle_mobile or is_reverse_on_mobile %}md:flex-col{% else %}md:flex-col-reverse{% endif %}{% endunless %} {% if is_image_overlap and image_position == 'left' %}justify-end{% else %}justify-between{% endif %} {% if is_remove_container_padding_mobile %}md:p-0{% endif %}">
    {% unless is_mobile_hero_style %}
      {% if is_image_middle_mobile and title != blank %}
        <div class="mobile-title z-[1] md:block md:text-center hidden justify-{{ alignment }} md:justify-{{ mobile_alignment }} {% if is_line_seperator %}m-0{% endif %}"><{{ title_tag }}>{{ title }}</{{ title_tag }}></div>
      {% endif %}
    {% endunless %}

    {% if main_image or main_mobile_image %}
      <div class="image-wrapper z-[1] h-auto {% if main_mobile_image and main_image == blank %}mobile{% endif %} {% if itemsDirection == 'vertical' %}w-full{% endif %} {% if is_image_bottom %}self-end md:self-auto{% endif %}">
        <picture>
          {% if main_mobile_image %}
            <source media="(max-width: 768px)" srcset="{{ main_mobile_image | image_url }}">
          {% endif %}
          <img class="{% if is_limit_image_size %}max-h-500px{% endif %} relative z-auto object-contain {% if is_hide_image_on_mobile %}md:hidden{% endif %} {% if is_image_overlap %}md:!min-h-350px{% endif %}" src="{{ main_image | default: main_mobile_image | image_url }}" alt="{{ main_image.alt }}" loading="lazy" {% if image_animation != 'none'%}data-aos="{{ image_animation }}" data-aos-duration="{{ animation_duration }}"{% endif %}>
        </picture>
      </div>
    {% endif %}

    {% assign blocks_amount = section_blocks | size %}
    {% if title != blank or content != blank or blocks_amount > 0 %}
      <div class="content-wrapper break-word z-[1] flex md:py-0 md:!w-full gap-12 md:gap-4 md:m-auto {% if alignment == 'center' %}justify-center m-auto{% endif %} {% if itemsDirection == 'horizontal' %}w-45%{% else %}w-70%{% endif %}" {% if content_animation != 'none'%}data-aos="{{ content_animation }}" data-aos-duration="{{ animation_duration }}"{% endif %}>
        {% if number != blank %}<div class="number self-center"><div class="add-number">{{ number }}</div></div>{% endif %}

        <div class="content flex flex-col justify-center gap-4 md:w-full text-{{ alignment }} md:text-{{ mobile_alignment }} items-{{ alignment }} md:items-{{ mobile_alignment }} {% unless main_image %}w-full{% endunless %}">
          {% if title != blank %}
            <h2 class="title {{ title_tag }} w-full {% if is_image_middle_mobile or is_mobile_hero_style %}md:hidden{% endif %} {% if is_line_seperator %}m-0{% endif %}">{{ title }}</h2>
          {% endif %}

          {% if subtitle != blank %}
            <p class="subtitle {% if title_tag == 'h1' %}text-[30px]{% else %}text-xl{% endif %} {% if is_no_p_margin %}m-0{% endif %}">{{ subtitle }}</p>
          {% endif %}

          {% if is_line_seperator %}
            <div class="line-seperator my-2 border-b border-black w-[100px] md:w-[30vw]"></div>
          {% endif %}

          {% if content != blank %}
            <div class="description {% if is_hide_description_on_mobile %}md:hidden{% endif %} text-{{ alignment }} md:text-{{ mobile_alignment }}">{{ content }}</div>
          {% endif %}

          {% for block in section_blocks %}
            {% case block.type %}
            {% when 'button' %}
              {% render 'button',
                button_text: block.settings.button_text,
                button_url: block.settings.button_url,
                button_icon: block.settings.button_icon,
                button_style: block.settings.button_style,
                button_text_color: block.settings.button_text_color,
                button_bg_color: block.settings.button_bg_color,
                button_is_new_tab: block.settings.button_is_new_tab,
                button_id: block.id
              %}
            {% when 'image' %}
              <picture>
                {% if block.settings.image_mobile %}
                  <source media="(max-width: 768px)" srcset="{{ block.settings.image_mobile | image_url }}">
                {% endif %}
                <img class="block-image object-contain" src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" loading="lazy">
              </picture>
            {% when 'sale_tag' %}
              <div class="sale-tag" data-animate="true">
                <img src="{{ block.settings.image | image_url }}" alt="sale">
              </div>

              <style>
                .sale-tag {
                  position: absolute;
                  left: 40%;
                  top: -20px;
                  transform-origin: 5% 70%;
                }

                @media screen and (max-width: 768px) {
                  .sale-tag {
                    left: 64%;
                    top: 2vw;
                  }
                }

                /* Build the price tag animation */
                /*
                * TODO: Model the animation after a dampened harmonic oscillator.
                * Right now it isn't too realistic.
                */
                @-webkit-keyframes price-tag-swing {
                  0% {
                    transform: rotate(0);
                  }
                  20% {
                    transform: rotate(20deg);
                  }
                  50% {
                    transform: rotate(-10deg);
                  }
                  70% {
                    transform: rotate(10deg);
                  }
                  85% {
                    transform: rotate(-5deg);
                  }
                  100% {
                    transform: rotate(0deg);
                  }
                }

                .sale-tag[data-animate="true"] {
                  -webkit-animation: price-tag-swing 4s;
                }
              </style>
            {% when 'countdown' %}
              <div id="countdown">
                <ul>
                  <li><span id="hours"></span>Hours</li>
                  <li><span id="minutes"></span>Minutes</li>
                  <li><span id="seconds"></span>Seconds</li>
                </ul>
              </div>

              <style>
                @font-face {
                  font-family: 'Digital-7';
                  src: url({{ 'digital-7.ttf' | asset_url }}) format('truetype');
                }

                #countdown {
                  margin: auto;
                  max-width: fit-content;
                  margin-top: -30px;
                  max-height: 6rem;
                  margin-bottom: 0;
                }

                #countdown ul {
                  margin-bottom: unset;
                }

                #countdown li {
                  display: inline-block;
                  font-size: 12px;
                  list-style-type: none;
                  text-transform: uppercase;
                  min-width: 80px;
                  text-align: center;
                }

                #countdown li span {
                  display: block;
                  font-size: 40px;
                  font-weight: 400;
                  font-family: 'Digital-7', sans-serif;
                }

                #countdown li:not(:last-child):before {
                  content: ":";
                  color: black;
                  display: block;
                  font-size: 25px;
                  position: relative;
                  top: 40px;
                  left: 40px;
                }

                @media screen and (max-width: 760px) {
                    #countdown li {
                      min-width: 22vw;
                    }

                    #countdown li span {
                      position: relative;
                      left: 3vw;
                    }

                    #countdown li:not(:last-child):before {
                      left: 14vw;
                    }

                }
              </style>

              <script>
                // Timer
                Number.prototype.pad = function() {
                    return this < 10 ? '0' + this : this;
                }

                const second = 1000,
                minute = second * 60,
                hour = minute * 60;

                let birthday = "{{ block.settings.month }} {{ block.settings.day }}, {{ block.settings.year }} 09:59:00";
                let countDown = new Date(birthday).getTime();
                let x = setInterval(function() {
                    var now = new Date().getTime();
                    var distance = countDown - now;

                    document.getElementById("hours").innerText = Math.floor(distance / (hour)).pad(),
                    document.getElementById("minutes").innerText = Math.floor((distance % (hour)) / (minute)).pad(),
                    document.getElementById("seconds").innerText = Math.floor((distance % (minute)) / second).pad();

                    // do something later when date is reached
                    if (distance < 0) {
                        clearInterval(x);
                        //remove section element
                        document.getElementById("section-{{ section_id }}").parentElement.remove();
                        // remove margin of first .shopify-element element
                        document.querySelector('.shopify-section').firstChild.style.marginTop = '0';
                    }
                //seconds
                }, 0)
              </script>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>


<style>
  section.text-image .content-wrapper em {
    font-size: 12px;
  }

  {% if is_image_full_width_mobile %}
    @media screen and (max-width: 768px) {
      #section-{{ section_id }} .image-wrapper,
      #section-{{ section_id }} .image-wrapper img {
        width: 100vw;
      }
    }
  {% endif %}

  {% if is_mobile_hero_style %}
    #section-{{ section_id }} .mobile-hero-style {
      background-image: url('{{ main_mobile_image | image_url }}');
      background-size: cover;
    }
  {% endif %}

  {% unless limit_height > 0 %}
    section.text-image-section,
    #section-{{ section_id }} {
      overflow: visible;
    }

    {% comment %} html {
      --elheight_{{ section_id }}: {{ limit_height }}px;
    }

    #section-{{ section_id }} .container {
      max-height: var(--elheight_{{ section_id }});
    }

    #section-{{ section_id }} .image-wrapper {
      margin-bottom: calc(var(--elheight_{{ section_id }}) * 0.1);
    } {% endcomment %}

    @media screen and (max-width: 768px) {
      section.text-image-section,
      #section-{{ section_id }} {
        overflow: hidden;
      }

      #section-{{ section_id }} .container {
        max-height: unset !important;
      }

      #section-{{ section_id }} .image-wrapper {
        margin-bottom: unset !important;
      }
    }
  {% endunless %}

  #section-{{ section_id }} .image-content-wrapper {
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  #section-{{ section_id }} .add-number {
    font-size: 150px;
    font-family: 'PP Radio Grotesk';
    text-align: start;
    color: #5D8D97;
    margin-top: -40px;
    opacity: 0.5;
  }

  {% if text_color %}
    #section-{{ section_id }} {
      color: {{ text_color }};
    }

    #section-{{ section_id }} .title {
      color: {% if title_color %}{{ title_color }}{% else %}{{ text_color }}{% endif %};
    }
  {% endif %}

  #section-{{ section_id }} p strong {
    font-weight: bold;
  }

  {% if is_image_overlap %}
    #section-{{ section_id }} .image-wrapper img {
    {% if image_position == 'right' %}
      min-width: 55vw;
      min-height: 500px;
      object-fit: cover;
      object-position: top left;
    {% elsif image_position == 'left'%}
      object-position: center;
      object-fit: cover;
      position: absolute;
      right: 50%;
      top: 0;
      min-width: 50vw;
      height: 500px;
    {% endif %}
    }

    @media (max-width: 768px) {
      #section-{{ section_id }} .image-wrapper img {
        min-width: 100vw;
        object-fit: cover;
        object-position: top;
        position: unset;
        right: unset;
        top: unset;
        bottom: unset;
        margin: unset;
        height: unset;
      }
    }
  {% endif %}

  #section-{{ section_id }} .content {
    {% if padding_top == 0 and padding_bottom == 0 %}margin: 50px 0;{% endif %}
  }

  #section-{{ section_id }} .content .title {
    {% if subtitle != blank %}margin-bottom: 0;{% endif %}
  }

  {% if title_swoosh_color %}
    #section-{{ section_id }} .content-wrapper .title strong,
    #section-{{ section_id }} .mobile-title strong {
      {% if title_highlight_color %}color: {{ title_highlight_color }};{% endif %}
      {% unless title_swoosh_color == 'none' %}padding: {% if title_swoosh_color == 'dark-green' %}8px{% else %}30px 10px{% endif %};{% endunless %}
      {% unless title_swoosh_color == 'none' %}background-image: url('{{ 'title-swoosh-' | append: title_swoosh_color | append: '.svg' | asset_url }}');{% endunless %}
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
    }
  {% endif %}

  #section-{{ section_id }} .content-wrapper {
    width: {{ content_width }}%;
  }

  {% if itemsDirection == 'horizontal' %}
    #section-{{ section_id }} .image-wrapper {
      max-width: calc(100% - {{ content_width }}%);
    }
  {% endif %}

  #section-{{ section_id }} .content-wrapper {
    font-size: {{ text_size }}px;
  }

  section.text-image h2 {
    text-align: inherit;
  }

  section.text-image .content ul {
    margin-bottom: 1em;
  }

  section.text-image .content ul li {
    margin-bottom: 1em;
  }

  section.text-image .content .description ul li::before {
    content: "\2022";
    color: #5E8F8F;
    margin-right: 0.5em;
    position: relative;
    top: 0.1em;
    font-size: 1.5em;
  }

  section.text-image .content ul li strong {
    color: #5E8F8F;
    font-size: 1.2em;
  }

  @media (max-width: 768px) {
    {% if is_no_br_mobile %}
      #section-{{ section_id }} .content-wrapper .title br {
        display: none;
      }
    {% endif %}

    section.text-image {
      max-height: unset !important;
    }

    section.text-image .image-wrapper {
      max-width: unset !important;
    }

    section.text-image .add-number {
      font-size: 30vw;
      margin-top: -8vw;
    }

    section.text-image .content ul {
      padding-left: 3vw;
      text-indent: -6vw;
    }
  }
</style>