{% if is_hide_on_global and shop.name == "CuraLife Global" %}
  {% assign is_hide = true %}
{% endif %}

{% unless is_hide %}
  <div class="title-wrapper">
    <{{ title_tag }} class="title">{{ title }}</{{ title_tag }}>
    <div class="subtitle text-[24px] md:text-[5vw]">{{ subtitle }}</div>
  </div>

  <style>
    {% if title_swoosh_color %}
      #section-{{ section_id }} .title strong {
        {% unless title_swoosh_color == 'none' %}background-image: url('{{ 'title-swoosh-' | append: title_swoosh_color | append: '.svg' | asset_url }}');{% endunless %}
        {% unless title_swoosh_color == 'none' %}padding: {% unless title_swoosh_color == 'dark-green' or title_swoosh_color == 'pink' %}8px{% else %}30px 10px{% endunless %};{% endunless %}
        {% if span_color %}color: {{ span_color }};{% endif %}
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
      }
    {% endif %}

    {% if title_color %}
      #section-{{ section_id }} .title {
        color: {{ title_color }};
      }
    {% endif %}

    {% if subtitle_color %}
      #section-{{ section_id }} .subtitle {
        color: {{ subtitle_color }};
      }
    {% endif %}

    {% if subtitle_color %}
      #section-{{ section_id }} .subtitle span {
        color: {{ span_color }};
      }
    {% endif %}

    #section-{{ section_id }} .container {
      max-width: {{ max_width }}%;
    }

    {% if bg_color %}
      #section-{{ section_id }} {
        background-color: {{ bg_color }};
      }
    {% endif %}

    {% if border_color != blank %}
      #section-{{ section_id }} .container {
        border-bottom: 1px solid {{ border_color }};
        padding-bottom: 30px;
      }
    {% endif %}

    {% if is_disable_br_desktop %}
      #section-{{ section_id }} .title br {
        display: none;
      }

      @media (max-width: 768px) {
        #section-{{ section_id }} .title br {
          display: block;
        }
      }
    {% endif %}
  </style>

  <style>
    #section-{{ section_id }} .title small {
      font-weight: lighter;
    }

    #section-{{ section_id }} .title {
      {% if subtitle == blank %}margin: unset;{% endif %}
      margin-inline: auto;
      margin-bottom: 0.2em;
    }

    @media (max-width: 768px) {
      .title-wrapper .container {
        max-width: 100% !important;
      }

      {% if subtitle == blank %}
        #section-{{ section_id }} .title {
          margin-bottom: 0.5em;
        }
      {% endif %}
    }
  </style>
{% endunless %}