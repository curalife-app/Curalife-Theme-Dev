
{% if title_tag == 'h1' %}
  {% assign actual_title_tag = 'h1' %}
{% else %}
  {% assign actual_title_tag = 'h2' %}
{% endif %}

<div class="title-wrapper relative z-10 text-center flex {% if is_reverse %}flex-col-rev{% else %}flex-col{% endif %}">
  <div class="main-title-wrapper flex items-center justify-center">
    <div class="line"></div>
    <{{ actual_title_tag }} class="title {{ title_tag }}">{{ title }}</{{ actual_title_tag }}>
    <div class="line"></div>
  </div>

  <div class="subtitle text-[22px] md:text-[5vw]">{{ subtitle }}</div>
</div>


<style>
  {% if padding_bottom %}
    #section-{{ section_id }} .title-wrapper {
      padding-bottom: {{ padding_bottom }}px;
    }
  {% endif %}

  {% if is_horizontal_lines %}
    #section-{{ section_id }} .title-wrapper .line {
      flex-grow: 1;
      height: 1px;
      background-color: black;
    }

    #section-{{ section_id }} .title {
      flex-shrink: 0;
      margin: 0 10px !important;
    }
  {% endif %}

  {% if title_swoosh_color %}
    #section-{{ section_id }} .title strong {
      {% unless title_swoosh_color == 'none' %}background-image: url('{{ 'title-swoosh-' | append: title_swoosh_color | append: '.svg' | asset_url }}');{% endunless %}
      {% unless title_swoosh_color == 'none' %}padding: {% unless title_swoosh_color == 'dark-green' or title_swoosh_color == 'pink' %}8px{% else %}30px 10px{% endunless %};{% endunless %}
      {% if span_color %}color: {{ span_color }};{% endif %}
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
    }
  {% endif %}

  {% if title_color %}
    #section-{{ section_id }} .title {
      color: {{ title_color }};
    }
  {% endif %}

  {% if subtitle_color %}
    #section-{{ section_id }} .subtitle {
      color: {{ subtitle_color }};
    }
  {% endif %}

  {% if subtitle_color %}
    #section-{{ section_id }} .subtitle span {
      color: {{ span_color }};
    }
  {% endif %}

  {% if is_disable_br_desktop %}
    #section-{{ section_id }} .title br {
      display: none;
    }

    @media (max-width: 768px) {
      #section-{{ section_id }} .title br {
        display: block;
      }
    }
  {% endif %}
</style>

<style>
  #section-{{ section_id }} .title small {
    font-weight: lighter;
  }

  #section-{{ section_id }} .title {
    {% if subtitle == blank %}margin: unset;{% endif %}
    margin-inline: auto;
    margin-bottom: 0.2em;
  }
</style>