<div class="person-card max-w-[550px] p-[30px]">
  <div class="top-wrapper flex md:flex-col items-center gap-8 pb-[30px]">
    <img class="rounded-full w-[200px] m-0 mt-[-80px]" src="{{ person_img_src | image_url }}" alt="{{ person_name }}" loading="lazy">
    <div class="person-info">
      <h5>{{ person_name }}</h5>
      {% if person_link != blank %}
        <p>{{ person_link }}</p>
      {% endif %}
    </div>
  </div>

  <p>{{ person_description }}</p>
</div>