{% comment %} {% assign collections_handles = "glucose-support,sleep,joint-care,immune-care,multivitamins,bundles" | split: "," %} {% endcomment %}

<div class="dropdown">
    <button class="dropbtn">{{ linkTitle }}</button>
    <div class="dropdown-content">
        {% for collection_handle in collectionsHandles %}
            {% assign collection = collections[collection_handle] %}
            {% if collection %}
                {% assign image_url = collection.metafields.custom.menu_image | img_url: 'medium' %}
                {% assign product_title = collection.title %}
                {% assign products = collection.products %}
                {% if products.size > 0 %}
                    {% assign product = products.first %}                   
                    {% assign product_url = product.url %}
                {% endif %}
                <a href="{{ product_url }}">
                    <div class="img-card">
                    <img src="{{ image_url }}" width="181" height="183" alt="{{ collection_handle }}">
                    </div>
                    <span>{{ product_title }}</span>
                </a>
            {% endif %}
        {% endfor %}
       
    </div>
</div>



