<picture>
  {% if img_mobile %}
    <source media="(max-width: 768px)" srcset="{{ img_mobile | image_url }}" width="{{ img_mobile.width }}" height="{{ img_mobile.height }}">
  {% endif %}
  <img class="{{ classes }}" src="{{ img | default: img_mobile | image_url }}" alt="{{ img.alt }}" width="{{ img.width }}" height="{{ img.height }}" {% unless is_dont_lazyload %}loading="lazy"{% endunless %}>
</picture>