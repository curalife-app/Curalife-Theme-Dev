{% if shop.name contains 'Global' and button_url_global != blank %}
	{% assign buttonURL = button_url_global %}
{% else %}
	{% assign buttonURL = button_url %}
{% endif %}

{% if button_is_chatbot %}
	{% assign buttonName = 'Toggle Chatbot' %}
{% else %}
	{% assign buttonName = button_element_name | default: 'Some Button' %}
{% endif %}

<div id="button-{{ button_id }}" class="button-wrapper {{ button_additional_classes }}">
	{% unless button_is_chatbot %}
		<a
			class="md:w-full block {% if button_is_prerender_link %}prerender{% endif %}"
			name="track:{{ buttonName }}"
			href="{{ buttonURL }}"
			{% if button_is_new_tab %}
				target="_blank"
			{% endif %}>
	{% endunless %}

	<button
		name="track:{{ buttonName }}"
		href="{{ buttonURL }}"
		class="flex justify-center gap-4"
		{% if button_is_chatbot %}
			onclick="window.Webchat.startSession('expert', 'Section')"
		{% endif %}>
		<span>
			{{- button_text }}
			{% if button_icon != blank %}<i class="{{ button_icon }}"></i>{% endif -%}
		</span>
	</button>

	{% unless button_is_chatbot %}
		</a>
	{% endunless %}

	{% if button_under_title != blank %}
		<div class="under-title text-center {{ button_under_title_classes }}">{{ button_under_title }}</div>
	{% endif %}
</div>

{% if button_is_link_to_top %}
	<script>
		document.addEventListener('DOMContentLoaded', function () {
			var scrollToTopButton = document.querySelector('#button-{{ button_id }} button');
			if (scrollToTopButton) {
				scrollToTopButton.addEventListener('click', function (e) {
					e.preventDefault();
					window.scrollTo({ top: 0, behavior: 'smooth' });
				});
			}
		});
	</script>
{% endif %}

<style>
	#button-{{ button_id }} {
	  width: max-content;
	  align-self: {% if button_align == 'center' %}center{% else %}start{% endif %};

	  @media (max-width: 768px) {
	    min-width: 80%;
	    align-self: center;
	  }
	}

	#button-{{ button_id }} button {
	  width: 100%;
	}

	#button-{{ button_id }} .under-title {
	  text-align: center;
	  margin-top: 0.5rem;
	  font-weight: 100;
	  font-style: italic;
	}

	#button-{{ button_id }} .under-title {
	  color: {{ button_under_title_color }};
	}

	{% if button_style == 'outline' %}
	  #button-{{ button_id }} button {
	    background: transparent;
	    border: 1px solid {{ button_text_color }};
	    border-color: {{ button_text_color }};
	    color: {{ button_text_color }};
	    position: relative;
	    overflow: hidden;
	    align-items: center;
	    z-index: 1;
	    transition: color 200ms ease-in-out;
	  }

	  #button-{{ button_id }} button::after {
	    content: '';
	    position: absolute;
	    display: block;
	    top: 0;
	    left: 0;
	    width: 100%;
	    height: 100%;
	    background: {{ button_text_color }};
	    z-index: -1;
	    transition: opacity 200ms ease-in-out;
	    opacity: 0;
	  }

	  #button-{{ button_id }} button:hover::after {
	    opacity: 0.1;
	  }
	{% else %}
	  #button-{{ button_id }} button {
	    background-color: {{ button_bg_color | default: 'var(--orange)' }} !important;
	    color: {{ button_text_color }};
	    position: relative;
	    overflow: hidden;
	    align-items: center;
	    transition: background-color 200ms ease-in-out;
	  }
	{% endif %}
</style>
