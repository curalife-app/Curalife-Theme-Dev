<div id="faq-{{ section_id }}" class="faq flex flex-col gap-4">
  {% for faqItem in faqItems %}
    <div class="faq-item last:border-b-0 p-4 border-b border-white rounded-lg">
      {% assign question = faqItem.question | default: faqItem | split: ":" | first %}
      {% assign answer = faqItem.answer | default: faqItem | split: ":" | last %}

      <h3 class="question h5 relative flex items-center py-6 m-0 cursor-pointer">
        {{ question | trim }}
      </h3>
      <div class="answer mb-4">
        {{ answer | trim }}
      </div>
    </div>
  {% endfor %}
</div>

<style>
  #faq-section-{{ section.id }} .faq-item {
  /* {% if seperator_color %}border-bottom: 2px solid {{ seperator_color }};{% endif %} */
  {% if closed_bg_color %}background-color: {{ closed_bg_color }};{% endif %}
  transition: background-color .2s ease-out;
}

#faq-section-{{ section.id }} .faq-item.active {
  {% if opened_bg_color %}background-color: {{ opened_bg_color }};{% endif %}
}

#faq-{{ section_id }} .faq-item .question {
  padding: 1.5rem 3rem 1.5rem 0;
  {% if titles_color %}color: {{ titles_color }};{% endif %}
}

#faq-{{ section_id }} .faq-item .question p {
  margin-bottom: unset;
}

#faq-{{ section_id }} .faq-item .question + .answer {
  transition: margin-bottom .2s ease-out;
}

#faq-{{ section_id }} .faq-item:not(.active) .question + .answer {
  margin: 0;
}

#faq-{{ section_id }} .faq-item .question:after {
  content: "+";
  font-size: 2rem;
  position: absolute;
  right: 1rem;
  transition: transform 0.3s;
}

#faq-{{ section_id }} .faq-item.active .question:after {
  transform: rotate(45deg);
}

#faq-{{ section_id }} .faq-item .answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height .2s ease-out;
}

@media screen and (max-width:768px) {
  #faq-{{ section_id }} .faq-item .question {
    font-size: 5vw;
  }

  #faq-{{ section_id }} .faq-item .answer {
    font-size: 4vw;
    line-height: 1.5;
  }
}

</style>

<script>
  var accordionItems = document.querySelectorAll("#faq-{{ section_id }} .faq-item");

  accordionItems.forEach(accordionItem => {
    accordionItem.querySelector(".question").addEventListener("click", event => {
      {% if is_allow_one_open %}
        var currentlyActiveAccordionItem = document.querySelector("#faq-{{ section_id }} .faq-item.active");
        if (currentlyActiveAccordionItem && currentlyActiveAccordionItem !== accordionItem) {
          currentlyActiveAccordionItem.classList.toggle("active");
          currentlyActiveAccordionItem.querySelector(".answer").style.maxHeight = 0;
        }
      {% endif %}

      accordionItem.classList.toggle("active");
      var accordionItemBody = accordionItem.querySelector(".answer");
      if (accordionItem.classList.contains("active")) {
        accordionItemBody.style.maxHeight = accordionItemBody.scrollHeight + "px";
      }
      else {
        accordionItemBody.style.maxHeight = 0;
      }
    });
  });

  $('#faq-{{ section_id }} .faq-item .question').click(function() {
    woopra.track('Open FAQ', {
      question_display_text: $(this).text(),
      question_order:  $(this).parents('.faq-item').index() + 1
    })
  });
</script>

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {% for textFAQItem in faqItems %}
        {% assign parsedTextFAQItem = textFAQItem | json %}
        {% if data_type == "json" %}
          {
            "@type": "Question",
            "name": "{{ textFAQItem.question | escape }}",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "{{ textFAQItem.answer | escape }}"
            }
          }
        {% elsif data_type == "string" %}
          {
            "@type": "Question",
            "name": "{{ textFAQItem | split: ":" | first }}",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "{{ textFAQItem | split: ":" | last }}"
            }
          }
        {% endif %}
        {% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  }
</script>