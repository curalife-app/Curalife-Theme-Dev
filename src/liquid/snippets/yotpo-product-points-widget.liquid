<div class="reward-points-widget flex justify-center gap-1 text-[14px] py-2">
  <i class="fa-duotone fa-coins"></i>
  <span>This purchase would earn you </span>
  <span class="current-price font-bold">xx</span>
  <span class="font-bold"> curapoints!</span>
</div>

<script>
  $(".product-actions .variant-box").click(function() {
    let currentPrice = $(this).find(".real-price").text();
    currentPrice = currentPrice.substring(1, currentPrice.length);
    if (currentPrice.includes('.')) {currentPrice = currentPrice.split('.')[0];}
    $(".current-price").fadeOut(function() {$(this).html(currentPrice).fadeIn();});
  });
</script>