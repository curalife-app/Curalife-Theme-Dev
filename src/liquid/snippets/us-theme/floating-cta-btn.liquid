<div id="floating-cta">ORDER NOW</div>



<style>

    #floating-cta {
      position: fixed;
      right: 0;
      bottom: 0;
      cursor: pointer;
      width: 100%;
      height: 60px;
      background-color: {% if isHolidays %}var(--dark-green){% else %} #FFE746 {% endif %} ;
      z-index: 10;
      display: none;
      color: {% if isHolidays %}#ffffff{% else %}#000000{% endif %} ;
      padding: 5px;
      font-weight: 600;
      font-size: 40px;
      text-align: center;
      display: none;
    }
  </style>
  <script>
    $("#floating-cta").click(function () {
      $([document.documentElement, document.body]).animate({
        scrollTop: $("#product-catalog-section").offset().top + 130
      }, 2000);
    });

    if ($(window).width() < 761) {
      $(window).scroll(function () {
        if ($(this).scrollTop() > 800 && $(this).scrollTop() < ($("#product-catalog-section").offset().top - 1000)) {
          $('#floating-cta').fadeIn();
        } else {
          $('#floating-cta').fadeOut();
        }
      });
    }
  </script>