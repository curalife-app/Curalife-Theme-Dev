      <div class="swiper-button-next swiper-nav"></div>
    </div>
    <a href="https://www.facebook.com/hashtag/food/?__gid__=261568611056436" target=”_blank”><button>Browse Food Posts</button></a>
    </div>
  </section>

  <script>
    peoplePostsSlider = new Swiper('.community-food .swiper', {
    slidesPerView: 1,
    spaceBetween: 20,
    watchSlidesVisibility: true,
    loop: false,
    grabCursor: true,
    slideToClickedSlide: true,
    navigation: {
      nextEl: '.community-food .swiper-button-next',
      prevEl: '.community-food .swiper-button-prev',
      disabledClass: 'disabled'
    },
    breakpoints: {
      640: {
        slidesPerView: 2,
      },
      991: {
        slidesPerView: 3,
      }
    }
    });
  </script>