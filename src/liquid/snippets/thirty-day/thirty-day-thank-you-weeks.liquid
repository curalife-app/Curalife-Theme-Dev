    text-align: center;
    color: var(--dark-green);
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
  }

      .weeks-item-description {
        font-family: 'DM Sans';
        font-weight: 400;
        font-size: 20px;
        line-height: 24px;

      }









