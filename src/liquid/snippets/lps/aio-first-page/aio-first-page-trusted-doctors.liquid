      overflow: hidden;
  }

  .doctor-thumbnail span img {
      width: 100%;
      height: 100%;
      object-fit: cover;
  }

  .doctor-informative {
      margin-top: 1.5625rem;
      padding-top: 1.375rem;
      position: relative;
  }

  .doctor-informative:after {
      content: "";
      position: absolute;
      background: var(--green);
      width: 100%;
      height: 1px;
      max-width: 6.5625rem;
      top: 0;
      left: 50%;
      transform: translate(-50%);
  }

