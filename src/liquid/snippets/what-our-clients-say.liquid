<style>
  .bottom-line {
      position: unset !important;
  }



  .container {
      position: relative;
      width: 100%;
      height: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 15px;
  }

  .mini-wrap {
      width: 100%;
      max-width: 1230px;
      margin: 0 auto;
      padding: 0 35px;
  }

  .changing-experiences {
      padding: 4.4% 0 35px;
  }

  .sub-title {
      text-align: center;
      color: var(--dark);
      margin-bottom: 30px;
  }

  .sub-title h1, .sub-title h2 {
      margin: 0;
      font-weight: 800;
      font-size: 48px;
      line-height: 1.3;
  }

  h1, h2, h3 {
      font-family: PP Radio Grotesk,sans-serif;
      margin: unset;
      margin-bottom: 0.5em;
  }

  .sub-title .d-mobile {
      display: none;
  }

  .sub-title h3 {
      margin: 0;
      font-weight: 800;
      font-size: 36px;
      line-height: 1.28;
  }

  .quote-slider {
      padding: 0 5px;
      margin: 0 -15px;
      position: relative;
  }

  .quote-slider .swiper {
      padding: 10px 0;
      position: unset;
  }
  .slide-control {
      display: flex;
      justify-content: center;
      padding-top: 20px;
  }
  .quote-slider .prev-slide2 {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      cursor: pointer;
      background: var(--light-green);
      position: absolute;
      top: calc(50% - 20px);
      z-index: 5;
      transition: background var(--transition);
      left: 0;
  }

  .quote-slider .prev-slide2 span {
      width: 20px;
      height: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
      color: var(--green);
      border-radius: 50%;
      background: #fff;
      transition: color var(--transition);
     
  }
  .icon-arrow:before {
      content: "\ea99";
  }
  .quote-slider .next-slide2 {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      cursor: pointer;
      background: var(--light-green);
      position: absolute;
      top: calc(50% - 20px);
      z-index: 5;
      transition: background var(--transition);
      right: 0;
  }
  .quote-slider .next-slide2 span {
      width: 20px;
      height: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
      color: var(--green);
      border-radius: 50%;
      background: #fff;
      transition: color var(--transition);
  }
  .icon-arrow:before {
      content: "\ea99";
  }

  .customer-success {
      display: flex;
      flex-wrap: wrap;
      padding: 7% 6.8%;
      background-image: url("{{ 'circles-bg.webp' | asset_url }}");
      background-position: center top;
      background-repeat: no-repeat;
      background-size: 100% auto;
      border-radius: 2px;
      overflow: hidden;
  }

  @media screen and (max-width: 1590px){
    .mini-wrap {
        max-width: 1110px;
    }

    .sub-title h1, .sub-title h2 {
        font-size: 36px;
    }
    .sub-title h3 {
        font-size: 33px;
    }
    .quote-slider .prev-slide2, .quote-slider .next-slide2 {
        width: 36px;
        height: 36px;
        top: calc(50% - 18px);
    }
    .quote-slider .prev-slide2, .quote-slider .next-slide2 {
        width: 36px;
        height: 36px;
        top: calc(50% - 18px);
    }
  }

  @media screen and (max-width: 1430px){
    .mini-wrap {
        max-width: 990px;
    }
  }

  @media screen and (max-width: 1270px){
    .mini-wrap {
        max-width: 798px;
    }
    .sub-title h1, .sub-title h2 {
        font-size: 28px;
    }
    .sub-title h3 {
        font-size: 25px;
    }
    .quote-slider .prev-slide2, .quote-slider .next-slide2 {
        width: 32px;
        height: 32px;
        top: calc(50% - 16px);
    }
    .quote-slider .prev-slide2, .quote-slider .next-slide2 {
        width: 32px;
        height: 32px;
        top: calc(50% - 16px);
    }
  }

  @media screen and (max-width: 1200px){
    .sub-title h1, .sub-title h2 {
        font-size: 32px;
    }
    .sub-title h3 {
        font-size: 29px;
    }
  }
  
  @media screen and (max-width: 768px){
    .changing-experiences {
        padding: 31px 0 20px;
    }
    .changing-experiences .sub-title {
        padding-bottom: 43px;
    }
    .sub-title .d-desktop {
        display: none;
    }
    .sub-title h2 {
        font-size: 36px;
        line-height: 1.28;
    }

    .sub-title .d-mobile {
        display: block;
    }
    .sub-title h3 {
        font-size: 26px;
        line-height: 1.38;
    }
    .quote-slider {
        margin: 0 -25px;
        padding: 0;
    }
    .quote-slider .prev-slide2 {
        width: 50px;
        height: 50px;
        margin: 10px;
        position: static;
    }
    .quote-slider .prev-slide2 span {
        width: 25px;
        height: 25px;
    }
    .quote-slider .next-slide2 {
        width: 50px;
        height: 50px;
        margin: 10px;
        position: static;
    }
    .quote-slider .next-slide2 span {
        width: 25px;
        height: 25px;
    }
    .customer-success {
        padding: 20px;
        background-image: url("{{ 'circles_mobile_bg.webp' | asset_url }}");
    }
  }
  
  
  
</style>

<style>
  .slide-control {
    display: flex;
    justify-content: center;
    padding-top: 20px;
  }
</style>

<script>
  quoteSlider = new Swiper(".quote-slider .swiper", {
    slidesPerView: 2,
    spaceBetween: 0,
    grabCursor: true,
    autoHeight: true,
    loop: true,
    navigation: {
      nextEl: ".next-slide2",
      prevEl: ".prev-slide2",
      disabledClass: 'disabled'
    },
    breakpoints: {
      0: {
        slidesPerView: 1
      },
      630: {
        slidesPerView: 2,
        centeredSlides: false
      },
      992: {
        slidesPerView: 3,
        centeredSlides: true
      }
    }
  });
</script>

