<!-- /templates/customers/reset_password.liquid -->
<div class="container rst_pws">
  <div class="mini-wrap">
    <div class="data-content">
      <div class="form-wrap">

        {% form 'reset_customer_password' %}
        {{ form.errors | default_errors }}
        <div class="form-fields">

          <label class="full-size">
            <input type="password" placeholder="New password" name="customer[password]">
          </label>
          <label class="full-size">
            <input type="password" placeholder="Re-enter new password " name="customer[password_confirmation]">
          </label>
        </div>
        <div class="submit-wrap">
          <div class="submit-form">
            <button type="submit" class="main-btn">{{'customer.reset_password.submit' | t }}</button>
          </div>
        </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>
<style>
  .rst_pws {
    padding: 50px 0;
  }
</style>
