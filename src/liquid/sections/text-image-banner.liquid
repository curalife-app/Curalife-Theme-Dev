<div class="container">
  <div class="content">
    <h2>{{ section.settings.content | markdownify | strip_html | truncate: 50, '...' }}</h2>
    <p>{{ section.settings.content | markdownify | strip_html | truncate: 150, '...' }}</p>
    <a href="{{ section.settings.button_link }}" class="btn" style="background-color: {{ section.settings.button_color }};">{{ section.settings.button_title }}</a>
  </div>
</div>

<style>
  .text-with-image {
    background-color: {{ section.settings.bg_color }};
  }
  .text-with-image .container {
    padding: 50px 0;
  }
  .text-with-image .container h2 {
    color: #fff;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 20px;
  }
  .text-with-image .container p {
    color: #fff;
    font-size: 1.5rem;
    font-weight: 400;
    line-height: 1.5;
  }
  .text-with-image .container img {
    width: 100%;
  }
</style>

{% schema %}
{
  "name": "Text with Image",
  "tag": "section",
  "class": "text-with-image",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "button_title",
      "label": "Button Title"
    },
    {
      "type": "text",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color"
    }
  ],
  "presets": [
    {
      "name": "Text with Image"
    }
  ]
}
{% endschema %}