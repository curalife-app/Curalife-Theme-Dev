<section id="numbers-section">
  <img class="bg" src="{{ 'partnerships-numbers-bg.png' | asset_url }}" alt="curalife info" loading="lazy">
  <div class="container">

    {% assign numbers = "9:Natural powerful high quality ingredients in one capsule
                        |34:Patients in a randomized, double-blind placebo controlled study
                        |759:Curalinâ€™s users involved in a real-world data study conducted by top doctors"
                        | split: '|'%}

    <div class="numbers">
      {% for number in numbers %}
      <div class="number">
          <p class="num">{{ number | split: ":" | first }}</p>
          <p class="description">{{ number | split: ":" | last }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  #numbers-section {
    background-color: var(--green);
    overflow: hidden;
  }

  #numbers-section .bg {
    position: absolute;
    top: 0;
    width: 100%;
  }

  #numbers-section .numbers {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  #numbers-section .number {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 50px;
    color: white;
    text-align: center;
    padding: 20px;
  }

  #numbers-section .number:not(:last-child) {
    border-right: 1px solid white;
  }

  #numbers-section .number .num {
    font-size: 100px;
    font-weight: bold;
  }

  @media screen and (max-width: 768px) {
    #numbers-section .bg {
      height: 100%;
      object-fit: cover;
    }

    #numbers-section .numbers {
      flex-direction: column;
      gap: 50px;
    }

    #numbers-section .number {
      gap: unset;
    }

    #numbers-section .number:not(:last-child) {
      border-right: unset;
    }

    #numbers-section .number:not(:last-child)::after {
      content: "";
      position: absolute;
      left: 25%;
      bottom: -10vw;
      height: 1px;
      width: 50%;
      border-bottom: 1px solid white;
    }
  }
</style>

<script>
  var isAlreadyRun = false;

  $(window).scroll( function(){
    $('.numbers').each( function(i){
      var bottom_of_object = $(this).position().top + $(this).outerHeight() / 2;
      var bottom_of_window = $(window).scrollTop() + $(window).height();

        if( bottom_of_window > ( bottom_of_object + 20 )  ){
          if (!isAlreadyRun) {
            $('.num').each(function () {

            $(this).prop('Counter', 0).animate({
              Counter: $(this).text()
            }, {
                duration: 5000,
                easing: 'swing',
                step: function (now) {
                  $(this).text(Math.ceil(now));
                }
              });
            });
          }
          isAlreadyRun = true;
        }
    });
  });
</script>