<section id="info-section">
  <div class="container">
    <h2 data-aos="fade-up">We are a Consumer Healthcare Company</h2>
    <p class="subtitle" data-aos="fade-up">We created a unique patient-centered approach that is revolutionizing how people take care of their health and quality of life</p>

    {% assign infos = "Founded in<br>2013
                      |3 international hubs:<br>Tel Aviv, Dallas and Barcelona
                      |Present in<br>20 Markets"
                      | split: '|'%}

    <div class="infos">
      {% for info in infos %}
      <div class="info" data-aos="zoom-up">
          <div class="icon-wrapper">
            <img class="icon-bg" src="{{ 'partnerships-info-icons-bg.svg' | asset_url }}" alt="curalife info" loading="lazy">
            <img class="icon" src="{{ 'partnerships-info-icons-' | append: forloop.index | append: ".svg" | asset_url }}" alt="curalife info" loading="lazy">
          </div>
          <p>{{ info }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  #info-section {
    text-align: center;
  }

  #info-section .container {
    max-width: 1000px;
  }

  #info-section .infos {
    display: flex;
    justify-content: space-between;
    margin-top: 70px;
  }

  #info-section .info .icon-wrapper {
    display: flex;
    justify-content: center;
  }

  #info-section .info .icon-wrapper img.icon {
    position: absolute;
  }

  #info-section .info p {
    font-size: 28px;
    margin-top: 20px;
  }

  @media screen and (max-width: 768px) {
    #info-section .infos {
      flex-direction: column;
      gap: 50px;
    }

    #info-section .info p {
      font-size: 6vw;
    }
  }
</style>