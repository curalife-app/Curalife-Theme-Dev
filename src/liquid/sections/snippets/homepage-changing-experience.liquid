
<div class="container">
  <div class="mini-wrap">
    <div class="changing-experiences">    
      <div class="sub-title">
        <h3>Life Changing Experiences</h3>
      </div>
      <div class="quote-slider">
        <div class="swiper">
          <div class="swiper-wrapper">
            {% for experience in experienses %}
            
            <div class="swiper-slide">
              <div class="quote-card">
                <blockquote>
                  <p>{{ experience | split: "*" | first }}</p>
                </blockquote>
                <div class="quote-info">
                  <div class="quote-author">
                    <p>{{ experience | split: "*" | last }}</p>
                  </div>
                  <div class="quote-rating">
                    <p>
                      <span class="icon-star"></span>
                      <span class="icon-star"></span>
                      <span class="icon-star"></span>
                      <span class="icon-star"></span>
                      <span class="icon-star"></span>
                    </p>
                  </div>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
          <div class="slider-control">
            <div class="prev-slide2"><span class="icon-arrow"></span></div>
            <div class="next-slide2"><span class="icon-arrow"></span></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 




 <script>
  quoteSlider = new Swiper(".quote-slider .swiper", {
    slidesPerView: 3,
    spaceBetween: 0,
    grabCursor: true,
    autoHeight: true,
    loop: true,
    navigation: {
      nextEl: ".next-slide2",
      prevEl: ".prev-slide2",
      disabledClass: 'disabled'
    },
    breakpoints: {
      0: {
        slidesPerView: 1
      },
      630: {
        slidesPerView: 2,
        centeredSlides: false
      },
      992: {
        slidesPerView: 3,
        centeredSlides: true
      }
    }
  });
</script> 
