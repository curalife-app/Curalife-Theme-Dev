

{% if localization.country.iso_code == 'CA' %}
  {% assign original_item_cap = var.metafields.custom.original_item.value.metafields.my_fields.ca_cap | times: 100 %}
{% elsif localization.country.iso_code == 'AU' %}
  {% assign original_item_cap = var.metafields.custom.original_item.value.metafields.my_fields.au_cap | times: 100 %}
{% else %}
  {% assign original_item_cap = var.metafields.custom.original_item.value.compare_at_price %}
{% endif %}

{% assign bottle_quantity = var.metafields.my_fields.pack_bottles_quantity %}
{% assign original_item_cap_total = original_item_cap | times: bottle_quantity %}
{% assign original_item_cap_total_with_bundle = bundle_value | times: 100 | plus: original_item_cap_total %}
{% assign original_item_price = var.price | divided_by: bottle_quantity %}


<div class="variant-notice special"><p><b>Special offer- Value of {{ product.compare_at_price | money_without_trailing_zeros }}!</b></p></div>
<div class="variant-box">
  {% if isCuralinContent %}
  <div class="radio-box">
    {% if original_item_cap_total_with_bundle > var.price %}
      {% assign discount = original_item_cap_total_with_bundle | minus: var.price | divided_by: 100 %}
    {% else %}
      {% assign discount = 0 %}
    {% endif %}
    <input type="radio" name="pack" value="{{ var.id }}" quantity="{{ var.metafields.my_fields.pack_bottles_quantity }}" price="{{ var.price | money_without_currency | replace: ".00", "" }}" discount="{{ discount | replace: ".00", "" }}" title="{{ var.title }}" sku="{{ var.sku }}" save="{{ var.metafields.my_fields.discount_percents }}" index="{{ product.variants.size | minus: index | plus: 1 }}"></input>
  </div>
  <div class="variant-info">
    <p class="variant-title">{{ var.title }}</p>
    <div class="variant-infos">
      <p class="subtitle">{{ var.metafields.my_fields.subtitle }}</p>
    </div>

  </div>

  {% if isPricePerUnit %}
  <div class="price">
    <div class="calculations">
      {% if original_item_cap_total > var.price %}
        <p class="compared-at-price"><strike class="rounded no-letters">{{ original_item_cap_total | money_without_trailing_zeros }}</strike></p>
      {% endif %}
      <p class="real-price rounded no-letters">{{ original_item_price | money_without_trailing_zeros }}</p>
    </div>
      <p class="per-month">Per Month</p>
    </div>
  {% else %}
    <div class="price">
      {% if original_item_cap_total_with_bundle > var.price %}
        <p class="compared-at-price"><strike class="rounded no-letters">{{ original_item_cap_total_with_bundle | money_without_trailing_zeros }}</strike></p>
      {% endif %}
      <p class="real-price rounded no-letters">{{ var.price | money_without_trailing_zeros }}</p>
    </div>
  {% endif %}

  {% else %}
  <div class="variant-contain" value="{{ var.id }}">
    <div class="variant-info">
      <p class="variant-title">{{ var.title }}</p>


    </div>
    <div class="price-challenge">
      <div class="price-with-null"><div class="real-price rounded no-letters">{{ var.price | money_without_trailing_zeros }}</div><sup class="thin-real-price">00</sup></div>
      <strike class="initial-price"><div class="real-price">{{ product.compare_at_price | money_without_trailing_zeros }}</div><span class="thin-real-span">.00</span></strike>
    </div>
  </div>
  {% endif %}

  {% unless isCuralinContent %}
    <div class="submit-wrap">
      {% if isBuyQuantity %}
        <div class="qty-data" style="display:none">
          <div class="qty-control">
            <a data-act="-" href="javascript:void(0)">
              <span class="icon-minus"></span>
            </a>
            <label>
              <input maxlength="4" name="quantity" type="number" value="1">
            </label>
            <a data-act="+" href="javascript:void(0)">
              <span class="icon-plus"></span>
            </a>
          </div>
        </div>
      {% endif %}
      <button class="main-btn" id="buy-button"><span>Join the Challenge</span></button>
    </div>
  {% endunless %}
</div>
<style>
  body {
    accent-color: var(--dark-green);
  }
</style>

{% if isLastRender %}
  <style>
    .variant-notice p {
      background: #9EB069;
      color: white;
      padding: 2px 10px;
      margin: unset;
      font-size: 14px;
    }

    .variant-notice.special p {
      background: #E8E8B0;
      font-family: 'PP Radio Grotesk';
      font-style: normal;
      font-weight: 700;
      font-size: clamp(19px, 2vw, 22px);
      line-height: 17px;
      text-align: center;
      letter-spacing: -0.01em;
      color: #404733;
      padding: 8px;
    }

    .variant-box {
      display: {% if isCuralinContent %}flex{% endif %};
      justify-content: {% if isCuralinContent %}space-evenly{% endif %};
      align-items: center;
      height: {% if isCuralinContent %}80px{% endif %};
      background: #fff;
      border: 1px solid #cbcbcb;
      box-sizing: border-box;
      border-radius: 2px;
      margin-bottom: {% if isCuralinContent %} 10px {% endif %};
      cursor: pointer;
      filter: drop-shadow(0px 4px 4px rgba(47, 47, 47, 0.1));
      transition: all .5s;
      position: relative;
    }

    .variant-box:hover {
      border-color: var(--dark-green);
      filter: drop-shadow(0px 4px 4px rgba(47, 47, 47, 0.3));
    }

    .variant-box:hover>.radio-box input[type=radio]:after {
      background-color: #a9a9a9;
    }

    .variant-box .radio-box {
      {% comment %} width: 5%; {% endcomment %}
      align-items: center;
      display: flex;
      padding: 10px;
    }

    .variant-box .radio-box input[type=radio] {
      position: relative;
      left: -3px;
      pointer-events: none;
    }

    .variant-contain {
      display: flex;
      justify-content: center;
    }

    .price-challenge {
      padding: 10px;
      font-family: 'Poppins';
      font-weight: 700;
      font-size: 38px;
      line-height: 100%;
      text-align: right;
      letter-spacing: -0.03em;
      color: #404733;
    }

    .price-with-null {
      display: flex;
    }

    .initial-price {
      display: flex;
      font-weight: 400;
      font-size: 20px;
    }

    .price-challenge .initial-price .thin-real-span {
      position: relative;
    }


    .price-challenge .price-with-null .thin-real-price {
      position: relative;
      top: -7px;
      font-size: large;

    }


    .submit-wrap {
       display: {% unless isCuralinContent %}flex{% endunless %};
       justify-content: {% unless isCuralinContent %}center{% endunless %};
       padding-bottom: {% unless isCuralinContent %}20px{% endunless %};
    }

    .variant-box .variant-info {
      padding: 10px;
      width: {% if isCuralinContent %}70%{% else %}50%{% endif %};
    }

    .variant-box .variant-info .variant-title {
      font-family: 'PP Radio Grotesk';
      font-weight: 400;
      font-size: 20px;
      line-height: 22px;
      letter-spacing: -0.01em;
      color: #404733;
    }

    .variant-box .variant-info .variant-infos p {
      font-weight: 200;
      display: inline-block;
      margin: 0;
      font-size: 14px;
      {% if isHighlightSubtitle %}
        color: white;
        font-weight: bold;
        border-radius: 15px;
        padding: 0px 10px;
        background: var(--light-green);
      {% endif %}
    }

    .variant-box .variant-info .variant-infos p b {
      font-weight: 700;
    }

    .variant-box .price {
      display: flex;
      justify-content: right;
      min-width: 70px;
      margin-right: 10px;
      padding-bottom: unset;
      flex-direction: row;
      align-items: center;
      gap: 5px;
    }

    .variant-box .price .calculations {
      display: flex;
      align-items: center;
      justify-content: right;
    }

    .variant-box .price .calculations p::after {
      content: "00";
      font-size: 0.6rem;
      vertical-align: super;
      margin-right: 5px;
    }

    .variant-box .price .calculations p.compared-at-price::after {
      font-size: 0.3rem;
    }

    .variant-box .price .per-month {
      font-family: "PP Radio Grotesk";
      color: var(--grey);
      font-size: 16px;
    }

    .variant-box .price .compared-at-price {
      font-size: unset;
    }

    .variant-box .price .compared-at-price strike {
      font-size: 10px !important;
    }

    .variant-box .price .real-price {
      font-size: 20px;
    }

    @media screen and (max-width: 1270px) {
      .variant-box {
        width: 100%
      }

      .variant-box .variant-info {
        padding: 10px;
        width: {% if isCuralinContent %}95%{% endif %};
      }

      .variant-box .price {
        position: absolute;
        right: 10px;
        bottom: 10px;
        margin-right: unset;
      }
    }

    @media screen and (max-width: 768px) {
      .variant-box {
        height: unset;
        justify-content: unset;
      }

      .variant-box .variant-info .variant-title {
        font-size: 15px;
      }

      .variant-box .variant-info .variant-infos p {
        font-size: 12px !important;
      }
    }

    @media screen and (max-width: 330px) {
      .variant-box .variant-infos {
        font-size: 10px !important;
      }
    }
  </style>

  <script>
    $(".variant-box").click(function() {
      $(this).find('input[type=radio]').prop('checked', true);

      // Slide to Variant Image
      let slideIndex = productSliderAllInOne.slides.length - jQuery('input[name=pack]:checked').attr('index');
      productSliderAllInOne.slideTo(slideIndex);

      // Track in GA
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        'event': 'variant-click',
        'label': $('input[name=pack]:checked').attr('sku'),
        'userId': '{{ customer.id }}',
        'email': '{{ customer.email }}',
        'country': '{{customer.customer_address.country_code }}',
        'city': '{{customer.customer_address.city }}',
        'name': '{{ customer.first_name }}',
        'surname': '{{ customer.last_name }}',
        'phone_number': '{{customer.phone }}',
        'state': '{{customer.customer_address.province }}',       //state or province
        'zip': '{{customer.customer_address.zip }}'         //ZIP or Postal code
      });

      // Track in Woopra
      woopra.track('Product_Variant_Select', {
        sku: $(this).find("input").attr("sku"),
        variant_id: $(this).find("input").attr("value"),
        variant_title: $(this).find("input").attr("title"),
        price: $(this).find("input").attr("price")
      })
    });
  </script>
{% endif %}