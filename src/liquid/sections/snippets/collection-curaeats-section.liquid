<section id="curaeats-section">
  <div class="container">
    <div class="section-titles">
      <h2>Your CuraEats Meal Plan</h2>
      <p>You will LOVE CuraEats, a customized meal plan app that keeps you on track with healthy food, without compromising on flavor!</p>
    </div>

    {% assign features = "Recipes:A library of 84 nutritious and delicious recipes youâ€™ll love
    |Grocery List:A complete grocery list with all ingredients for the 28 days
    |Education:Education on healthy blood sugar levels and what to eat"
    | split: '|'%}

    <div class="features">
      {% for feature in features %}
        <div class="feature">
          <img src="{{ "collection-curaeats-feature-" | append: forloop.index | append: ".png" | asset_url }}" alt="" loading="lazy">
          <div class="feature-titles">
            <h3>{{ feature | split: ":" | first }}</h3>
            <p>{{ feature | split: ":" | last }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="background"></div>
</section>


<style>
  #curaeats-section {
    padding: 50px 0;
    position: relative;
  }

  #curaeats-section .container {
    position: relative;
    z-index: 1;
  }

  #curaeats-section .background {
    background: #9EB069;
    width: 100%;
    height: 50%;
    position: absolute;
    z-index: 0;
    bottom: {% if invertSectionBack == false %}0{% else%}unset{% endif %};;
    top: {% if invertSectionBack == true %}0{% else%}unset{% endif %};
  }

  #curaeats-section .section-titles {
    text-align: center;
  }

  #curaeats-section .section-titles h2 {
    text-align: center;
    color: {% if invertSectionBack == true %}white !important{% else %}var(--dark-green){% endif %};
    font-size: 40px;
    font-weight: 700;
    margin-bottom: 20px;
  }

  #curaeats-section .section-titles p {
    font-size: 20px;
    line-height: 1.4em;
    font-weight: 400;
    max-width: 825px;
    margin: auto;
    margin-bottom: 30px;
    color: {% if invertSectionBack == true %}#FFFFFF{% else %}#000000{% endif %};
  }

  #curaeats-section .features {
    display: flex;
    justify-content: center;
    gap: 50px;
    align-items: center;
    margin-bottom: 30px;
  }

  #curaeats-section .feature {
    max-width: 360px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
    color: {% if invertSectionBack == false %}#FFFFFF{% else%}unset{% endif %};
  }

  #curaeats-section .feature img {
    width: 230px;
  }

  #curaeats-section .feature h3 {
    text-align: center;
    font-size: 28px;
    font-weight: 500;
    margin: 10px 0;
  }

  #curaeats-section .feature p {
    font-size: 24px;
    font-weight: 300;
  }

  #curaeats-section p.price {
    color: white;
    font-size: 24px;
  }

  #curaeats-section .btn .main-btn {
    font-size: 36px;
    font-weight: bold;
  }

  @media screen and (max-width: 768px) {
    #curaeats-section {
      text-align: start;
      color: white;
      padding: 10px 0;
    }

    #curaeats-section .section-titles {
      text-align: start;
    }

    #curaeats-section .section-titles h2 {
      margin-top: 20px;
      color: white;
      font-size: 7vw;
      text-align: start;
    }

    #curaeats-section .section-titles p {
      color: white;
    }

    #curaeats-section .background {
      height: 100%;
    }

    #curaeats-section .features {
      flex-direction: column;
      gap: 0;
    }

    #curaeats-section .feature {
      flex-direction: row;
      text-align: unset;
      gap: 10vw;
      max-width: unset;
    }

    #curaeats-section .feature:nth-child(even) {
      flex-direction: row-reverse;
    }

    #curaeats-section .feature img {
      width: 35vw;
    }

    #curaeats-section .feature h3 {
      font-size: 6vw;
      text-align: left;
    }

    #curaeats-section .feature p {
      font-size: 5vw;
    }
  }
</style>