{% if section.settings.heading != blank or section.settings.content != blank or section.blocks != blank %}
  <div class="movement__block">
    <div class="outer__movement">
      <div class="top__movement">
        {% if section.settings.move-image != blank %}
            <div class="movement__image">
                  <img class="lazyload" data-src="{{section.settings.move-image | img_url : "master"}}" alt="movement">
            </div>
        {% endif %}
        {% if section.settings.heading != blank %}
          <div class="movement__text">
           	 <h2>{{ section.settings.heading }}</h2>
          </div>
        {% endif %}
      </div>
      <div class="bottom__movement">
        {% if section.settings.content != blank %}
          <div class="movement__text">
            {{section.settings.content}}
          </div>
        {% endif %}
        {% if section.blocks != blank %}
        {% if section.settings.tips-bg-img != blank %}	
        <style>
          .movement__block .movement__tips{
            background-image: url("{{section.settings.tips-bg-img | img_url: "master"}}");
          }
        </style>
        {% endif %}
          <div class="movement__tips">
            {% if section.settings.pin-image != blank%}
            	<img class="lazyload" data-src="{{ section.settings.pin-image | img_url : "master"}}" alt="pin">
            {% endif %}
            {% if section.settings.tips-heading != blank %}
           		<h2>{{section.settings.tips-heading}}</h2>
            {% endif %}
            {%- for block in section.blocks -%}
              <div class="elem__tip">
                {% if block.settings.tips-list-heading != blank %}
               		<p class="title">{{ block.settings.tips-list-heading }}</p>
                {% endif %}
                {% if block.settings.tips-list-content != blank %}
               		<p>{{ block.settings.tips-list-content }}</p>
                {% endif %}
              </div>
            {%- endfor-%}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}


{% schema %}
  {
    "name": "Movement And Exercise",
    "settings": [	
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading"
      },
	  {
     	 "type": "image_picker",
    	  "id": "move-image",
    	  "label": "Main Image"
      },	
	  {
		"type" : "html",
		"id" : "content",
		"label" : "Content"
	  },
	  {
     	 "type": "image_picker",
    	  "id": "pin-image",
    	  "label": "Pin Image"
      },
	  {
     	 "type": "image_picker",
    	  "id": "tips-bg-img",
    	  "label": "Tips Background Image"
      },
	  {
     	 "type": "text",
    	  "id": "tips-heading",
    	  "label": "Tips Heading"
      }
  	],
	"blocks": [
      {   
        "type": "tips-list",
        "name": "Tips List",
        "settings": [
        	 {
              "type": "text",
              "id": "tips-list-heading",
              "label": "Heading"
            },
			{
              "type": "text",
              "id": "tips-list-content",
              "label": "Content"
            }
        ]
      }
	]
  }		
{% endschema %}