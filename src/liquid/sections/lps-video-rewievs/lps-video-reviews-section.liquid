</style>


{% schema %}
{
  "name": "Video Rewievs Section",
  "tag": "section",
  "class": "video-reviews-section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
  
    {
      "type": "text",
      "id": "title",
      "label": "Title",
