    },
    {
      "type": "image_picker",
      "id": "quote_image",
      "label": "Quote Image"
    }   
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Video Slide",
      "settings": [
        {
          "type": "text",
          "id": "vidURL",
          "label": "Video URL"
        },

        {
          "type": "text",
          "id": "video_title",
          "label": "Video Title"
        },
        {
          "type": "text",
          "id": "quote_content",
          "label": "Quote Content"
        },
        {
          "type": "text",
          "id": "quote_author",
          "label": "Quote Author"
        }  
      ]
    }
  ],
  "presets": [
    {
      "name": "Video Rewievs Section"
    }
  ]
}
{% endschema %}

