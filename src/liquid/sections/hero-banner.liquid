<div class="container flex flex-col justify-center">
  <h1 class="max-w-1/2 md:max-w-full md:text-xl md:text-center text-2xl font-thin">
    {{ section.settings.small_title }}<br>
    <span class="md:text-3xl text-4xl font-bold" >{{ section.settings.big_title }}</span>
  </h1>
</div>

<style>
  section.hero-banner {
    background-image: url('{{ section.settings.bg_image | image_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  section.hero-banner h1 {
    {% if section.settings.title_color %}color: {{ section.settings.title_color }};{% endif %}
    {% if section.settings.is_title_right %}margin-inline-start: 50%;{% endif %}
    {% if section.settings.is_title_shadow %}text-shadow: 0px 0px 8px rgba(0, 0, 0, 0.55);{% endif %}
  }

  @media (max-width: 768px) {
    {% if section.settings.bg_image_mobile %}
      section.hero-banner {
        background-image: url('{{ section.settings.bg_image_mobile | img_url: 'master' }}');
      }
    {% endif %}

    section.hero-banner h1 {
      max-width: 100%;
      margin-inline-start: unset;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-banner",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "bg_image_mobile",
      "label": "Background Image on Mobile"
    },
    {
      "type": "text",
      "id": "small_title",
      "label": "Small Title"
    },
    {
      "type": "text",
      "id": "big_title",
      "label": "Big Title"
    },
    {
      "type": "header",
      "content": "Options"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color"
    },
    {
      "type": "checkbox",
      "id": "is_title_right",
      "label": "Place Title Right"
    },
    {
      "type": "checkbox",
      "id": "is_title_shadow",
      "label": "Title Shadow"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}