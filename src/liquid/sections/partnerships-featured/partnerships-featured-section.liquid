<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-element-bundle.min.js"></script>
<section id="featured-section-sections">
  <div class="container" data-aos="fade-up">
    <h4>{{ section.settings.title }}</h4>
    <div class="partners-wrapper">
      <div class="ticker-wrap swiper" id="ticker-wrap">
        <div class="ticker-col swiper-wrapper">
          
         
         
        
          
        {% for block in section.blocks %}
          <div class="partner-col swiper-slide">
            <div class="partner-item">
              <picture>
                <img src="{{ block.settings.featured_image | img_url }}" alt="">
              </picture>
            </div>
          </div>
        {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
    #shopify-section-template--16040372633751__8169754a-6e60-450f-9a51-b9c98eb9ad92 {
        padding:0;
    }
</style>

<style>
  #featured-section-sections {
      border-bottom: 1px solid #DCD9D9;
      background-color: {{ section.settings.bg_color }};
  }

  #featured-section-sections  h4 {
    font-size: 24px;
    opacity: .6;
    text-align: center;
    font-weight: 300;
    margin-top: 30px;
    margin-bottom: 30px;
  }

  .partners-wrapper {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
  }

  .partners-wrapper .partner-col {
    width: 150px;
  }

  .partners-wrapper .ticker-wrap {
    width: 100%;
  }

  .partners-wrapper .ticker-wrap:before,
  .partners-wrapper .ticker-wrap:after {
    content: "";
    width: .9375rem;
    position: absolute;
    top: 0;
    bottom: 0;
    z-index: 3;
    pointer-events: none;
  }

  .partners-wrapper .ticker-wrap:before {
    left: 0;
    background: linear-gradient(90deg, #F7F7F7 0%, rgba(255, 255, 255, .76) 49.3%, rgba(255, 255, 255, 0) 100%)
  }

  .partners-wrapper .ticker-wrap:after {
    right: 0;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, .76) 49.3%, #F7F7F7 100%)
  }

  .partners-wrapper .ticker-wrap .ticker-col {
    display: flex;
    transition-timing-function: linear;
  }

  .partners-wrapper .partner-item {
    opacity: .6;
  }

  @media screen and (max-width: 768px) {
    .partners-wrapper .partner-col {
      width: 100px;
    }

    #featured-section-sections h4 {
      margin: 5vw 0;
    }
  }
</style>

<script>
  let brandsTicker = new Swiper('#featured-section-sections .swiper', {
    spaceBetween: 30,
    speed: 6000,
    autoplay: {
      delay: 0
    },
    loop: true,
    slidesPerView:'auto',
    allowTouchMove: false,
    disableOnInteraction: true
    });
</script>

{% schema %}
{
  "name": "Partnerships Featured",
  "tag": "section",
  "class": "partnerships-features",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "As Featured On"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "featured_image",
          "label": "Featured Image"
        }   
      ]
    }
  ],
  "presets": [
    {
      "name": "Partnerships Featured"
    }
  ]
}
{% endschema %}