{% if section.settings.heading != blank or section.settings .subheading != blank or section.settings.description != blank or section.blocks != blank %}
  <div class="what__eat--block">
    <div class="outer__eat--block">
      <div class="top__eat">
        {% if section.settings.heading != blank or section.settings.description != blank %}
          <div class="text__eat">
           	 {% if section.settings.heading != blank %}<h2>{{ section.settings.heading }}</h2>{% endif %}
           	 {% if section.settings.description != blank %}<p>{{ section.settings.description }}</p>{% endif %}
          </div>
        {% endif %}
        {% if section.settings.eat-image != blank %}
          <div class="image__eat">
               <img class="lazyload" data-src="{{section.settings.eat-image | img_url: "master"}}" alt="eatimage">
          </div>
        {% endif %}
      </div>
      <div class="bottom__eat">
        {% if section.settings.subheading != blank %}
          <div class="head__bottom">
            <p>{{ section.settings.subheading }}</p>
          </div>
        {% endif %}
        <div class="inner__advice">
          {%- for block in section.blocks -%}
            <div class="elem__advice">
              {% if block.settings.diet-image != blank %}
                <div class="advice__image">
                  <img class="lazyload" data-src="{{ block.settings.diet-image | img_url: "master" }}" alt="advice1">
                </div>
              {% endif %}
              {% if block.settings.diet-heading != blank or block.settings.diet-content != blank %}
                <div class="advice__text">
                 	 {% if block.settings.diet-heading != blank %}<p class="title">{{block.settings.diet-heading}}</p>{% endif %}
                 	  {% if block.settings.diet-content != blank %}<p>{{block.settings.diet-content}}</p>{% endif %}
                </div>
              {% endif %}
            </div>
          {%- endfor -%}
        </div>
        {% if section.settings.heading-bottom != blank or section.settings.content-bottom != blank %}
          <div class="after__advice">
            {% if section.settings.heading-bottom != blank %}
           		<p>{{section.settings.heading-bottom}}</p>
            {% endif %}
            {% if section.settings.content-bottom != blank %}
           		<p class="weight__text">{{section.settings.content-bottom}}</p>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
  {
    "name": "What To Eat",
    "settings": [	
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
	  {
        "type": "html",
        "id": "description",
        "label": "Description"
      },
	  {
     	 "type": "image_picker",
    	  "id": "eat-image",
    	  "label": "Main Image"
      },	
	  {
        "type": "textarea",
        "id": "heading-bottom",
        "label": "Heading Bottom"
      },
	  {
		"type" : "html",
		"id" : "content-bottom",
		"label" : "Content Bottom"
	  }
  	],
	"blocks": [
      {   
        "type": "eat-list",
        "name": "Diet List",
        "settings": [
        	 {
              "type": "text",
              "id": "diet-heading",
              "label": "Heading"
            },
			{
              "type": "text",
              "id": "diet-content",
              "label": "Content"
            },
 			{
              "type": "image_picker",
              "id": "diet-image",
              "label": "Image"
            }
        ]
      }
	]
  }		
{% endschema %}
