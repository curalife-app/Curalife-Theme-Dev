	{% comment %}
		Responsive Pack Info Section with Accordion:
		- Consistent accordion behavior across all screen sizes
		- Plus/minus icons indicate expandable sections
		- Smooth transitions for opening/closing
	{% endcomment %}

	<div class="pack-info-section" style="background: {{ section.settings.bg_color | default: 'var(--primary-color-lightest)' }};">
		<div class="container">
			{% assign product_block = section.blocks | where: "type", "product" | first %}
			{% if product_block.settings.product %}
				{% assign product = all_products[product_block.settings.product] %}
			{% endif %}

			{% if product %}
				<!-- Product Header -->
				<div class="content flex items-center justify-between">
					<div class="titles max-w-1/2 mbl:max-w-full">
						<h2 class="title">{{ product_block.settings.title | default: product.title }}</h2>
						<div class="subtitle">{{ product_block.settings.description | default: product.description }}</div>

						<!-- Mobile-only product image -->
						<img class="product-image mobile my-8"
								 src="{{ product_block.settings.pill_image | image_url: 'original' | default: product.featured_image | img_url: 'original' }}"
								 alt="{{ product.title }}"
								 loading="lazy">

						<ul class="highlights check-list">
							{% assign highlight_blocks = section.blocks | where: "type", "highlight" %}
							{% for block in highlight_blocks %}
								<li class="highlight">
									<strong>{{ block.settings.title }}</strong><br>
									{{ block.settings.subtitle }}
								</li>
							{% endfor %}
						</ul>
					</div>

					<!-- Desktop-only product image -->
					<img class="product-image desktop m-0"
							 src="{{ product_block.settings.pill_image | image_url: 'original' | default: product.featured_image | img_url: 'original' }}"
							 alt="{{ product.title }}"
							 loading="lazy">
				</div>

				<!-- Accordion Content Area -->
				<div class="accordion-content max-w-1/2 mbl:max-w-full">
					<!-- Usage Instructions -->
					<div class="accordion-item">
						<div class="accordion-header">
							<span>Usage Instructions</span>
							<svg class="icon-plus" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<line x1="12" y1="5" x2="12" y2="19"></line>
								<line x1="5" y1="12" x2="19" y2="12"></line>
							</svg>
							<svg class="icon-minus hidden" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<line x1="5" y1="12" x2="19" y2="12"></line>
							</svg>
						</div>
						<div class="accordion-panel">
							<div class="instructions">
								{% assign instruction_blocks = section.blocks | where: "type", "instruction" %}
								{% for block in instruction_blocks %}
									<div class="step">
										<div class="step-text">{{ block.settings.instruction_text }}</div>
										<div class="capsules mt-2">
											{% for i in (1..block.settings.capsules) %}
												<img src="{{ 'icon-capsule.svg' | asset_url }}" alt="Capsule Pill" class="inline-block">
											{% endfor %}
										</div>
									</div>
								{% endfor %}
							</div>
						</div>
					</div>

					<!-- Supplement Facts -->
					{% assign supplement_facts_block = section.blocks | where: "type", "supplement_facts" | first %}
					{% if supplement_facts_block %}
						<div class="accordion-item">
							<div class="accordion-header">
								<span>Supplement Facts</span>
								<svg class="icon-plus" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<line x1="12" y1="5" x2="12" y2="19"></line>
									<line x1="5" y1="12" x2="19" y2="12"></line>
								</svg>
								<svg class="icon-minus hidden" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<line x1="5" y1="12" x2="19" y2="12"></line>
								</svg>
							</div>
							<div class="accordion-panel">
								<div class="facts">
									<img class="m-0" src="{{ supplement_facts_block.settings.supplement_fact_image | image_url }}" alt="Supplement Facts">
								</div>
							</div>
						</div>
					{% endif %}
				</div>
			{% else %}
				<div class="section-placeholder">
					<p>Please select a product in the theme editor</p>
				</div>
			{% endif %}
		</div>
	</div>

	<style>
		.pack-info-section {
			padding: 60px 0;

			/* Titles and Lists */
			.titles {
				.check-list {
					list-style: none;
					padding: 0;
					margin: 10px 0 0;
				}

				.highlight {
					margin-bottom: 10px;
					position: relative;
					padding-left: 25px;

					&:before {
						content: 'âœ“';
						position: absolute;
						left: 0;
						color: var(--primary-color, #333);
						font-weight: bold;
					}
				}
			}

			/* Product Image Display */
			.product-image {
				max-width: 100%;
				height: auto;

				&.desktop {
					@media (max-width: 768px) {
						display: none;
					}
				}

				&.mobile {
					@media (min-width: 800px) {
						display: none;
					}
				}
			}

			/* Accordion Styles */
			.accordion-item {
				border-bottom: 1px solid var(--primary-color, #333);
				margin-bottom: -1px;

				&:first-child {
					border-top: 1px solid var(--primary-color, #333);
				}

				.accordion-header {
					width: 100%;
					padding: 15px;
					background: none;
					border: none;
					text-align: left;
					cursor: pointer;
					display: flex;
					justify-content: space-between;
					align-items: center;
					color: var(--primary-color, #333);
					font-weight: bold;
					font-size: 1.1em;

					.icon-plus, .icon-minus {
						transition: opacity 0.2s ease-in-out;
					}

					.hidden {
						display: none;
					}
				}

				.accordion-panel {
					max-height: 0;
					overflow: hidden;
					transition: max-height 0.3s ease-out;
					padding: 0 15px;

					&.active {
						max-height: 500px; /* Adjust based on content */
						padding: 15px;
						padding-bottom: 30px;
					}
				}
			}

			/* Section placeholder */
			.section-placeholder {
				padding: 40px;
				text-align: center;
				background: #f2f2f2;
				border-radius: 4px;
			}
		}
	</style>

	<script>
		document.addEventListener("DOMContentLoaded", function() {
			var container = document.querySelector(".pack-info-section");
			if (!container) return;

			var accordionHeaders = container.querySelectorAll(".accordion-header");

			function toggleAccordion(header) {
				var panel = header.nextElementSibling;
				var iconPlus = header.querySelector(".icon-plus");
				var iconMinus = header.querySelector(".icon-minus");

				// Toggle current panel
				panel.classList.toggle("active");
				iconPlus.classList.toggle("hidden");
				iconMinus.classList.toggle("hidden");
			}

			// Bind click events
			accordionHeaders.forEach(function(header) {
				header.addEventListener("click", function() {
					toggleAccordion(this);
				});
			});
		});
	</script>

{% schema %}
	{
		"name": "Supplement Info",
		"tag": "section",
		"class": "pack-info-section",
		"settings": [
			{
				"type": "header",
				"content": "General Settings"
			},
			{
				"type": "color",
				"id": "bg_color",
				"label": "Background Color",
				"default": "#F7F7F7"
			}
		],
		"blocks": [
			{
				"type": "product",
				"name": "Product Information",
				"limit": 1,
				"settings": [
					{
						"type": "product",
						"id": "product",
						"label": "Product"
					},
					{
						"type": "text",
						"id": "title",
						"label": "Title",
						"info": "Overrides product title if provided"
					},
					{
						"type": "textarea",
						"id": "description",
						"label": "Description",
						"info": "Overrides product description if provided"
					},
					{
						"type": "image_picker",
						"id": "pill_image",
						"label": "Product Image"
					}
				]
			},
			{
				"type": "highlight",
				"name": "Product Highlight",
				"settings": [
					{
						"type": "text",
						"id": "title",
						"label": "Highlight Title",
						"default": "Feature"
					},
					{
						"type": "textarea",
						"id": "subtitle",
						"label": "Highlight Description",
						"default": "Description of this feature"
					}
				]
			},
			{
				"type": "instruction",
				"name": "Usage Instruction",
				"settings": [
					{
						"type": "textarea",
						"id": "instruction_text",
						"label": "Instruction Text"
					},
					{
						"type": "range",
						"id": "capsules",
						"min": 0,
						"max": 10,
						"step": 1,
						"default": 1,
						"label": "Number of Capsules"
					}
				]
			},
			{
				"type": "supplement_facts",
				"name": "Supplement Facts",
				"limit": 1,
				"settings": [
					{
						"type": "image_picker",
						"id": "supplement_fact_image",
						"label": "Supplement Facts Image"
					}
				]
			}
		],
		"presets": [
			{
				"name": "Supplement Info"
			}
		]
	}
	{% endschema %}
