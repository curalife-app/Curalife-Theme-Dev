<div class="health-two-page">
   
    <div class="container">
        <div class="meet-wrapper">

        <div class="img-meet">
            <img src="{{ section.settings.image_1 | image_url }}" width="1178" height="722" alt="">
        </div>
           
           <div class="meet-titles">
            <div class="meet-subtitle">{{ section.settings.subtitle }}</div>
            <div class="content-meet">
                {{ section.settings.main_content }}
            </div>
             </div>
           
          
        </div>
       
       
    </div>
   
</div>


<style>
   .container {
      position: relative;
      width: 100%;
      height: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 15px;
  }
</style>


<style>
    .health-two-page {
        position: relative;
        overflow: hidden;
    }

   
    .meet-wrapper {
        max-width: unset;
        display: flex;
        flex-direction: row-reverse;
        align-items: center;
        padding: 20px 0;
    }

    .meet-titles {
        max-width: 527px;
        display: flex;
        flex-direction: column;
    }

    .meet-subtitle {
        font-family: 'PP Radio Grotesk';
        font-weight: 400;
        font-size: 30px;
        line-height: 28px;
        letter-spacing: -0.01em;
        color: #404733;
    }

    .img-meet {
        
    }

    .content-meet {
        font-family: 'DM Sans';
        font-weight: 400;
        font-size: 18px;
        line-height: 28px;
        text-align: left;
        letter-spacing: -0.01em;
        padding: 20px 0;
    }


    @media screen and (max-width: 768px) {
        .meet-wrapper {
            padding: unset;
            flex-direction: column-reverse;
        }

        .img-meet {
            
        }

        .meet-titles {
            padding-top: 1em;
            padding-left: unset;
        }

      

        .meet-subtitle {
            font-size: 10vw;
            line-height: 10vw;
        }

        .content-meet {
            max-width: unset;
            font-size: 6vw;
            line-height: 7vw;
            padding: 2vw 0 0;
        }
    }


 

    
</style>



