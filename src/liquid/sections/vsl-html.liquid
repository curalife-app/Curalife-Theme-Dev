<script>
  // Function to get URL parameters
  function getUrlParameter(name) {
    const params = new URLSearchParams(window.location.search);
    return params.get(name);
  }

  // Function to show/hide elements with class "full"
  function toggleFullElements() {
    const fullElements = document.querySelectorAll('.full');
    const showFull = getUrlParameter('full') === 'true';

    fullElements.forEach(element => {
      element.style.display = showFull ? '' : 'none';
    });
  }

  // Main logic
  if (document.cookie.includes('visited=true')) {
    // If already visited and no "full" parameter, redirect to add it
    const hasFullParam = getUrlParameter('full') !== null;

    if (!hasFullParam) {
      // Preserve existing URL parameters
      const currentParams = new URLSearchParams(window.location.search);
      currentParams.set('full', 'true');

      // Create new URL with all parameters
      const newUrl = `${window.location.pathname}?${currentParams.toString()}`;
      window.location.href = newUrl;
    }
  } else {
    // Set cookie for first-time visitors
    const date = new Date();
    date.setTime(date.getTime() + (90 * 24 * 60 * 60 * 1000)); // 90 days
    const expires = "expires=" + date.toUTCString();
    document.cookie = "visited=true; path=/; " + expires;
    console.log("Cookie set: " + document.cookie);
  }

  // Add event listener for DOM content loaded to handle element visibility
  document.addEventListener('DOMContentLoaded', toggleFullElements);

  // Also handle visibility when script loads after DOM content
  toggleFullElements();
</script>

