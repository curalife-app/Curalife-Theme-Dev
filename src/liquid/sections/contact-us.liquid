<div class="contact-page bottom-line">
  <div class="container">
    <div class="white-bg">
      <div class="mini-wrap">
        <div class="contact-data">
          <div class="info-wrap">
            <div class="contacts-bar">
              <div class="sub-title">
                <h1>24/7 Customer Support</h1>
              </div>
              <div class="support-contacts">
                <ul>
                  {% for block in section.blocks %}
                  {% if block.type == 'contact' %}
                  <li>
                  <div class="phone-title">
                    {% if block.settings.cntphn_img != blank %}
                    <span>
                       <img src="{{block.settings.cntphn_img | img_url: width: 32 }}" width="20px" height="20px" alt="">
                    </span>
                    {% endif %}
                    {{block.settings.cntphn_title}}
                  </div>
                  <div class="show-phone">
                    <div class="show-phone-btn"><i class="icofont-phone"></i> Show Phone</div>
                    <div class="show-phone-content">
                      <a href="tel:{{block.settings.cntphn_numbr}}">{{block.settings.cntphn_numbr}}</a>
                    </div>
                  </div>
                  </li>
                  {% endif %}
                  {% endfor %}
                  {% if section.settings.cstmr_emil !=blank %}
                  <li class="mail-me">
                      E-mail: &nbsp; <a href="mailto:{{section.settings.cstmr_emil}}">
                        <i class="fa-thin fa-envelope"></i> {{section.settings.cstmr_emil}}</a>
                  </li>
                  {% endif %}
                </ul>
              </div>
            </div>
            <div class="social-bar">
              <h3>{{ section.settings.flow_titl }}</h3>
              <ul>
                {% for block in section.blocks %}
                {% if block.type == 'social' %}
                <li><a href="{{block.settings.cntsocil_link}}" target="_blank"><i class="{{block.settings.cntsocil_icn}}"></i></a></li>
                 {% endif %}
                {% endfor %}
              </ul>
            </div>
          </div>
          <div class="contact-form">
            <div class="sub-title">
              <h2>{{section.settings.cntnt_titl}}</h2>
            </div>

            {% form 'contact' %}
              {{ form.errors | default_errors }}
              <input type="hidden" name="return_to" value="/pages/thank-you?type=contact-us">
              <div class="form-fields">
                  <label for="first-name" class="full-size">
                    <input  id="first-name" maxlength="80" name="contact[first_name]" size="20" type="text" placeholder="First Name" />
                  </label>

                <label for="last-name" class="full-size">
                  <input  id="last-name" maxlength="80" name="contact[last_name]" size="20" type="text" placeholder="Last Name" />
                </label>

                <label for="subject" class="full-size">
                  <input  id="subject" maxlength="80" name="contact[information_id]" size="20" type="text" placeholder="Subject" />
                </label>

                <label for="phone" class="full-size">
                  <input  id="phone" maxlength="40" name="contact[phone]" size="20" type="tel" placeholder="Phone" />
                </label>

                <label for="email" class="full-size">
                  <input  id="email" maxlength="80" name="contact[email]" size="20" type="text" placeholder="Email" />
                </label>

                <label for="body" class="full-size">
                    <textarea name="contact[body]" placeholder="Message"></textarea>
                </label>
              </div>


              <div class="submit-form">
                <button type="submit"  value="{{ 'contact.form.send' | t }}" class="main-btn">Submit</button>
              </div>
            {% endform %}

            <div class="social-bar">
              <h3>{{section.settings.flow_titl}}</h3>
              <ul>
                 {% for block in section.blocks %}
                {% if block.type == 'social' %}
                <li><a href="{{block.settings.cntsocil_link}}" target="_blank"><i class="{{block.settings.cntsocil_icn}}"></i></a></li>
                {% endif %}
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.support-contacts .phone-title {
  line-height: 2.5;
  }

  .support-contacts .show-phone-btn {
  background: white;
  border-radius: 10px;
  cursor: pointer;
  color: var(--green);
  padding: 3px 10px;
  margin-left: 5px;
  }

  .support-contacts .show-phone-content {
  display: none;
  }
 
  </style>


<style>
  #contact_form {
      width: 100%;
      padding: 0;
  }

  select, input:not([size]):not([type=button i]):not([type=submit i]):not([type=reset i]):not([type=checkbox i]):not([type=radio i]) {
      width: 100%;
  }

  input {
      font-family: inherit;
      margin: 0;
      border-radius: 0;
  }

  button, input, select, textarea {
      margin: 0;
      padding: 0.5rem 0.75rem;
      max-width: 100%;
      background: var(--b-bg-2);
      border: 0;
      border-radius: 0.25rem;
      font: inherit;
      line-height: 1.125;
      color: var(--b-txt);
  }
</style>

<style>
    .offset-top, .bottom-line {
        position: relative;
        z-index: 3;
    }
    .container {
      position: relative;
      width: 100%;
      height: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 15px;
  }

  .white-bg {
      background: #fff;
      box-shadow: 0 76px 70px -57px #0000001a;
  }

  .mini-wrap {
      width: 100%;
      max-width: 1230px;
      margin: 0 auto;
      padding: 0 35px;
  }

  .contact-data {
      display: flex;
      flex-wrap: wrap;
  }

  .contact-data .info-wrap {
      width: 50%;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
  }

  .contact-data .contacts-bar {
      padding: 34px 0;
      position: relative;
      z-index: 1;
  }

  .contact-data .contacts-bar:before {
      content: "";
      width: 60vw;
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      z-index: -1;
      background: #f8f8f8;
      pointer-events: none;
  }

  .contact-data .contacts-bar .sub-title {
      padding-bottom: 9.3%;
      text-align: left;
      color: #4b643d;
  }

  .sub-title h1, .sub-title h2 {
      margin: 0;
      font-weight: 800;
      font-size: 48px;
      line-height: 1.3;
  }

  .contact-data .social-bar {
      padding-top: 20px;
  }

  .support-contacts ul li {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      font-weight: 600;
      font-size: 20px;
      line-height: 1;
  }

  .support-contacts .phone-title {
      line-height: 2.5;
  }

  .support-contacts ul li span img {
      margin-right: 12px;
      width: 20px;
      height: 20px;
  }

  .support-contacts .show-phone-btn {
      background: white;
      border-radius: 10px;
      cursor: pointer;
      color: var(--green);
      padding: 3px 10px;
      margin-left: 5px;
  }

  [class*=" icofont-"], [class^=icofont-] {
      font-family: IcoFont!important;
      speak: none;
      font-style: normal;
      font-weight: 400;
      font-variant: normal;
      text-transform: none;
      white-space: nowrap;
      word-wrap: normal;
      direction: ltr;
      line-height: 1;
      -webkit-font-feature-settings: "liga";
      -webkit-font-smoothing: antialiased;
  }

  .support-contacts .show-phone-content {
      display: none;
  }

  .support-contacts ul li a {
      display: inline-block;
      padding: 3px 0 3px 13px;
      white-space: nowrap;
      font-weight: 400;
      color: inherit;
      transition: color var(--transition),opacity var(--transition);
  }

  .contact-data .contacts-bar .support-contacts ul li.mail-me {
      padding-top: 37px;
  }

  .support-contacts ul li a {
      display: inline-block;
      padding: 3px 0 3px 13px;
      white-space: nowrap;
      font-weight: 400;
      color: inherit;
      transition: color var(--transition),opacity var(--transition);
  }

  .icon-envelope:before {
      content: "\ef14";
  }

  .support-contacts .phone-title {
    display: flex;
    align-items: center;
  }

  .social-bar ul {
    display: flex;
    justify-content: space-between;
  }

  .contact-form .social-bar {
      display: none;
  }
  .contact-data .social-bar {
      padding-top: 20px;
  }

  .contact-form {
      width: 50%;
      padding: 3.5% 0 24px 8.6%;
  }

  .form-fields {
      display: flex;
      flex-wrap: wrap;
  }

  .form-fields label {
      display: block;
      margin: 10px;
      position: relative;
      cursor: pointer;
  }

  .form-fields label.full-size {
      width: 100%;
  }

  .form-fields label input {
      width: 100%;
      padding: 17px 21px;
      font-weight: 400;
      font-size: 16px;
      line-height: 1.5;
      color: #737373;
      background: #fff;
      border: 1px solid #ebebeb;
      box-sizing: border-box;
      border-radius: 2px;
  }

  .form-fields label textarea {
      width: 100%;
      padding: 17px 21px;
      font-weight: 400;
      font-size: 16px;
      line-height: 1.5;
      color: #737373;
      background: #fff;
      border: 1px solid #ebebeb;
      box-sizing: border-box;
      border-radius: 2px;
      height: 146px;
      resize: none;
  }

  .submit-form {
      padding-top: 7px;
      text-align: center;
      margin: auto;
  }
  .submit-form .main-btn {
      width: 95%;
      min-height: 56px;
      font-size: 18px;
  }

  .main-btn {
      display: inline-flex;
      justify-content: center;
      align-items: center;
      height: 55px;
      width: -moz-fit-content;
      width: fit-content;
      padding: 15px 20px;
      font-weight: 700;
      font-size: 16px;
      line-height: 1;
      letter-spacing: 2px;
      text-transform: uppercase;
      color: #fff;
      background: var(--dark-green);
      border-radius: 2px;
      border: 1px; 
      solid var(--dark-green);
      transition: all .6s;
  }


  @media screen and (max-width: 1590px){
    .mini-wrap {
        max-width: 1110px;
    }

    .sub-title h1, .sub-title h2 {
        font-size: 36px;
    }

    .support-contacts ul li {
        font-size: 18px;
    }
    .contact-data .contacts-bar .support-contacts ul li.mail-me {
        padding-top: 28px;
    }
    .form-fields label textarea {
        padding: 15px 20px;
        font-size: 14px;
        height: 131px;
    }
    .submit-form .main-btn {
        min-height: 49px;
        font-size: 16px;
    }
  }

  @media screen and (max-width: 1430px) {
    .mini-wrap {
        max-width: 990px;
    }

    .support-contacts ul li {
        font-size: 16px;
    }
  }

  @media screen and (max-width: 1270px){
    .mini-wrap {
        max-width: 798px;
    }
    .sub-title h1, .sub-title h2 {
        font-size: 28px;
    }

    .support-contacts ul li, .social-bar ul li a {
        font-size: 13px;
    }
  }

  @media screen and (max-width: 1200px) {
    .sub-title h1, .sub-title h2 {
        font-size: 32px;
    }
    .contact-data .contacts-bar .support-contacts ul li.mail-me {
        padding-top: 23px;
    }
    .form-fields label textarea {
        padding: 12px 14px;
        height: 115px;
    }
    .submit-form .main-btn {
        min-height: 45px;
        font-size: 15px;
    }
  }
  


  @media screen and (max-width: 768px) {
    .contact-data {
        padding: 0;
    }

    .contact-data .info-wrap {
        width: 100%;
    }

    .contact-data .contacts-bar {
        padding: 34px 0;
        position: relative;
        z-index: 1;
    }

    .contact-data .contacts-bar:before {
        width: 150vw;
        right: 50%;
        transform: translate(50%);
    }

    .contact-data .contacts-bar .sub-title {
        padding-bottom: 30px;
    }

    .sub-title h1 {
        font-size: 10vw;
        text-align: center;
    }

    .contact-data .info-wrap .social-bar {
        display: none;
    }

    .contact-data .social-bar {
        padding: 40px 10px;
    }

    .sub-title h1 {
        font-size: 10vw;
        text-align: center;
    }

    .support-contacts ul li {
        font-size: 20px;
        justify-content: start;
    }
    .contact-data .contacts-bar .support-contacts ul li.mail-me {
        padding-top: 14px;
    }
    .contact-data .contacts-bar .support-contacts ul li.mail-me a {
        width: auto;
        margin-top: 0;
        padding: 3px 0 3px 11px;
    }
    .contact-data .contact-form .social-bar {
        display: block;
    }

    .contact-data .social-bar {
        padding: 40px 10px;
    }

    .contact-form {
        width: 100%;
        padding: 42px 0 0;
    }

    .form-fields label textarea {
        padding: 15px 20px;
        font-size: 16px;
        height: 200px;
    }

    .submit-form {
        padding-top: 3px;
    }

    .submit-form .main-btn {
        min-height: 42px;
        max-width: 95%;
        padding: 13px 20px;
        font-size: 14px;
    }
  }

  </style>


