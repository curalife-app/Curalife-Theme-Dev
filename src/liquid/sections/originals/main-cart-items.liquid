					<span>Subtotal</span>
					<span data-cart-subtotal>{{ totalOriginalPrice | plus: totalSavings | money }}</span>
				</div>

				{% if totalSavings > 0 %}
					<div class="summary-row" data-discount-row>
						<span>Discounts</span>
						<span data-discount-amount>-{{ totalSavings | money }}</span>
					</div>
