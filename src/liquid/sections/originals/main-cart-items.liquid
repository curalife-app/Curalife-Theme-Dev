						{% assign totalOriginalPrice = totalOriginalPrice | plus: lineItemPrice %}
						{% if item.variant.compare_at_price and item.variant.compare_at_price > item.price %}
							{% assign totalSavings = totalSavings | plus: lineItemSaving %}
						{% endif %}
