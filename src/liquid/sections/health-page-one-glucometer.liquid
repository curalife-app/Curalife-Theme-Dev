<div class="health-one-page">
   
    <div class="container">
        <div class="glucometer-wrapper">
           
           <div class="glucometer-titles">
            <div class="glucometer-subtitle">{{ section.settings.subtitle }}</div>
             </div>
            <div class="img-glucometer">
                <img src="{{ section.settings.image_1 | image_url }}" width="1178" height="722" alt="">
            </div>
        </div>
        <div class="content-wrapper">
            {{ section.settings.main_content }}
        </div>
       
    </div>
   
</div>


<style>
   .container {
      position: relative;
      width: 100%;
      height: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 15px;
  }
</style>


<style>
    .health-one-page {
        position: relative;
        overflow: hidden;
    }

   
    .glucometer-wrapper {
        display: flex;
        align-items: center;
    }

    .glucometer-titles {
        display: flex;
        flex-direction: column;
        padding-left: 80px;
        padding-top: 20px;
        position: relative;
        z-index: 2;
    }

    .glucometer-subtitle {
        font-family: 'PP Radio Grotesk';
        font-weight: 400;
        font-size: clamp(38px, 2vw, 50px);
        line-height: clamp(34px, 2vw, 48px);
        letter-spacing: -0.01em;
        color: #404733;
    }

    .egg-title h1 {
        font-family: 'PP Radio Grotesk';
        font-weight: 700;
        font-size: clamp(55px, 2vw, 86px);
        line-height: clamp(55px, 2vw, 60px);;
        letter-spacing: -0.01em;
        color: #404733;
    }

 

    .content-wrapper {
        max-width: 500px;
        margin: 30px auto;
        font-family: 'DM Sans';
        font-weight: 400;
        font-size: 23px;
        line-height: 34px;
        text-align: center;
        letter-spacing: -0.01em;
        position: relative;
        z-index: 2;
    }


    @media screen and (max-width: 768px) {
        .glucometer-wrapper {
            padding: 9vw;
        }

        .glucometer-titles {
            padding-top: 1em;
            padding-left: unset;
        }

      

        .glucometer-subtitle {
            font-size: 10vw;
            line-height: 10vw;
        }

        .img-glucometer {
            display: none;
        }

      

        .content-wrapper {
            margin: 1em 0.5em 0.5em;
            max-width: unset;
            font-size: 6vw;
            line-height: 7vw;
            text-align: left;
        }
    }


    @media screen and (max-width: 608px) {
        .content-wrapper {
            margin: 5em 0.5em 0.5em;
            
        }
    }

    @media screen and (max-width: 508px) {
        .content-wrapper {
            margin: 7em 0.5em 0.5em;

        }
    }

    @media screen and (max-width: 400px) {
        .content-wrapper {
            margin: 8em 0.5em 0.5em;

        }
    }

 

    
</style>



