    "disabled_on": {
        "groups": [
            "header",
            "footer"
        ]
    },
    "settings": [{
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
    },

    {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
    },
  
   
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
        "type": "text",
        "id": "main_content",
        "label": "Content"
    }
],
    "presets": [{
        "name": "Health01"
    }]
}
