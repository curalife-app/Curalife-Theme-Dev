<div class="cookbook-page" style="background-image:url('{{ section.settings.background-image | img_url: 'master' }}')">
  <div class="container">

    <div class="header">
      <img src="{{ section.settings.spoon-image | img_url: 'master' }}" width="400px" height="200px" alt="wooden spoon" class="spoon corner-image" loading="lazy">
      <div class="title-container">

        <h1 class="main-title">
          <span class="top"><img src="{{ 'logo-black.png' | asset_url }}" alt="chef icon" loading="lazy"></span><br>
          <span class="bottom">CookBook</span>
        </h1>
      </div>
      <img src="{{ section.settings.pot-image | img_url: 'master' }}" width="400px" height="200px" alt="pink pot" class="pot corner-image" loading="lazy">
    </div>

    <div class="cookbook-content">
      <div class="content">
        <div class="description">Download our e-book for a healthy & delicious blood sugar friendly diet!</div>
        {% if customer or page.content == 'open' %}
        <div class="download-cta"><a class="download-cookbook" href="{{ 'curalifes-cookbook.pdf' | file_url }}" download><p class="download-cookbook">Click Here to Download</p></a></div>
        <iframe allowfullscreen="allowfullscreen" scrolling="no" class="fp-iframe" style="border: 1px solid lightgrey; width: 100%; height: 400px;" src="https://heyzine.com/flip-book/d16c9bace2.html"></iframe>
        {% else %}
        <div class="download-cta disabled"><a href="javascript:void(0)" class="open-modal" data-fancybox data-src="#login-modal"><p class="download-cookbook">Please Login To Download</p></a></div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>


