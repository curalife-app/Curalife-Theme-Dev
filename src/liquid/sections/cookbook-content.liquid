  body .cookbook-page .container .cookbook-content .content .gallery {
    display: flex;
    justify-content: space-between
  }

  @media(max-width: 768px) {
    body .cookbook-page .container .cookbook-content .content .gallery {
      margin-top: -120px
    }
  }

  body .cookbook-page .container .cookbook-content .content .gallery img {
    max-width: 32%;
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25))
  }

  @media (max-width: 500px){
    body .cookbook-page .container .header .title-container .main-title .bottom {
        font-size: 45px;
        margin-left: -40px;
    }
    body .cookbook-page .container .header .title-container .main-title .top {

        top: 15px;

    }
  }

