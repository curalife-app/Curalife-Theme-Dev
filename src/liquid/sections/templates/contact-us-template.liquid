{% schema %}
  {
    "name": "Contact Us",
    "class":"contact-us",
    "settings": [
      {
        "type": "header", 
        "content": "24/7 Customer Success Section Start" 
      },
      {
        "type": "header", 
        "content": "Contact Us Form Section Start" 
      },
      {
        "type": "text",
        "id": "cntnt_titl",
        "label": "Title",
        "default": "Enter Title"
      },
      {
        "type": "header", 
        "content": "Follow Us Section Start" 
      }
  ],
  "blocks": [
    {
      "type": "contact",
      "name": "Contact Numbers"
    },
    {
      "type": "social",
      "name": "Social Media",
      "settings": [
    {
      "type": "text",
      "id": "cntsocil_icn",
      "label": "Phone Icon",
      "default": "icon-tel"
    },
    {
    "type": "text",
    "id": "cntsocil_title",
    "label": "Title",
    "default": "Enter Title"
    },
    {
    "id": "cntsocil_link",
    "type": "url",
    "label": "Add Link"
    }
  
    ]    
    }
  ],
  "presets":[
  {
  "name": "Contact Us",
  "category": "Contact"
  }
  ]
  }
{% endschema %}

{% style %}
.support-contacts .phone-title {
