<div class="curalin-page-header container">
    <img class="header-img" src="{{'Group_4793.png' | asset_url  }}" width="533px" height="365px" alt="CuraLin Header Image">
    <div class="header-content">
        <h1>
            CuraLin<br><br>
            <span class="header-subtitle">Natural Blood Sugar<br>Support Supplement</span>
        </h1>
        <div class="btn">
            <a href="/collections/all" class="main-btn">shop now</a>
        </div>
    </div>
</div>


{% style %}

.curalin-page-header {
    display: inline-flex;
    align-items: center;
    padding-top: 30px;
    justify-content: center;
}

.header-img {
    max-height: 400px;
    position: relative;
}

.header-content {
    margin-left: 100px;
    margin-top: -100px;
}

.header-content .btn .main-btn {
    background-color: #d07c5b;
    border-color: #d07c5b;
    box-shadow: 0px 1px 2px rgb(0 0 0 / 20%);
    font-size: 20px;
}

h1 {
    font-size: 60px;
    line-height: 0.5em;
    margin: 20px 0;
}

.header-subtitle {
    font-weight: normal;
    font-size: 30px;
}

@media screen and (max-width: 760px) {
    .curalin-page-header {
        flex-wrap: wrap;
    }

    .header-img {
        width: 100%;
        margin-right: 25%;
    }

    h1 {
        font-size: 50px;
    }

    .header-content {
        text-align: center;
        margin: 0 10px;
        width: 100%;
    }

    .header-subtitle {
        font-size: 25px;
    }
  }

{% endstyle %}