
<div  class="sale-banner-easter">
  <div class="container">
    <div class="logo-wrapper">
     <img class="logo" src="{{ section.settings.bg_image | image_url }}" width="164" height="45" alt="logo">
    </div>

    <div class="cta-wrapper">

      <div class="twenty-percent-off">
            <div class="up-to">
                {{ section.settings.text_1 }}
            </div>
            <div class="off">{{ section.settings.text_2 }}</div>
            <div class="twenty">{{ section.settings.text_1_mb }}</div>
            <div class="percent-off">
                <div class="percent">{{ section.settings.text_2_mb }}</div>
                <div class="off-mobile">{{ section.settings.text_3_mb }}</div>
            </div>
        </div>



      <a class="main-btn" id='main-cta-btn' href="{{ section.settings.button_link }}">{{ ctaButtonTitle }}</a>
    </div>
  </div>
</div>

{% unless request.path contains 'v2' %}
<div class="pad desktop" style="padding-top:60px"></div>
{% endunless %}

<style>
  .header-easter {
    padding: unset;
  }
   .sale-banner-easter {
    background-color: {{ section.settings.bg_color }};
    background-image: url("{{ section.settings.bg_image2 | image_url }}");
    background-size: cover;
    background-position: center;
  }
   .twenty-percent-off {
    display: flex;
  }

   .up-to {
    width: 25px;
    height: 40px;
    font-family: 'PP Radio Grotesk';
    font-weight: 400;
    font-size: 16px;
    line-height: 20px;
  }

  .off {
    margin-left: 10px;
    height: 40px;
    font-family: 'PP Radio Grotesk';
    font-weight: 700;
    font-size: 50px;
    line-height: 20px;
    display: flex;
    align-items: center;
  }

   .twenty {
    display: none;
  }

  .percent-off {
    display: none;
  }

  @media screen and (max-width: 768px) {

   .up-to {
      margin-top: 10px;
      width: 20px;
      height: 15px;
      font-weight: 400;
      font-size: 12px;
      line-height: 12px;
    }

     .off {
      display: none;
    }

     .twenty {
      display: flex;
      width: 55px;
      height: 47px;
      font-family: 'PP Radio Grotesk';
      font-weight: 700;
      font-size: 40px;
      line-height: 40px;
    }

     .percent-off {
      display: flex;
      margin-left: -10px;
    }

    .percent {
      height: 47px;
      margin-top: -5px;
      font-family: 'PP Radio Grotesk';
      font-weight: 700;
      font-size: 40px;

      }
       .off-mobile {
          font-family: 'PP Radio Grotesk';
          font-weight: 700;
          font-size: 40px;
          margin-top: -4px;
      }
    }

</style>



<style>

 .sale-banner-easter {
    position: fixed;
    top: 0;
  }

   .sale-banner-easter img.logo {
    display: block;
  }



  .sale-banner-easter .off-container {
    display: flex;
  }





  @media screen and (max-width: 768px) {
    .sale-banner-easter .container {
        gap: 3vw;
      }


       .sale-banner-easter img.logo {
      display: block;
      width: 100%;
      max-width: 100px ;
    }



     .sale-banner-easter .cta-wrapper {
      width: 100%;
    }

     .sale-banner-easter. .off-container {
        display: flex;
    }


  }
</style>

<style>
   .sale-banner-easter {
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
    overflow: hidden;
    width: 100%;
    z-index: 20;
    min-height: 80px;
  }



   .sale-banner-easter .container {
    position: relative;
    min-height: 80px;
    display: flex;
    justify-content: {% if isOnlyLogo %} center {% else %} space-between {% endif %};
    align-items: center;
  }

  .sale-banner-easter img.logo {
    object-fit: contain;
  }



  .sale-banner-easter .cta-wrapper {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 10px;
    color: #404733;
  }

  .sale-banner-easter .off-container {
    justify-content: center;
    align-items: center;
    font-family:'PP Radio Grotesk';
    gap: 10px;

  }

   .sale-banner-easter .percents-off {
    margin-right: 10px;
    font-size: clamp(20px, 2vw, 35px);
    font-weight: bold;
    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  }

   .sale-banner-easter a.main-btn {
    font-size: 26px;
    padding: 10px 40px;
    color: white;
    background: var(--dark-green);
    border-radius: 6px;
    box-shadow: 0px 5px 12px rgba(0, 0, 0, 0.15);
  }

  @media screen and (max-width: 768px) {

  .sale-banner-easter {
      min-height: 60px;
    }

    .sale-banner-easter .container {
      min-height: 60px;
    }



    .sale-banner-easter .cta-wrapper {
      gap: 1vw;
    }

     .sale-banner-easter .off-container {
      gap: unset;
    }



     .sale-banner-easter .percents-off {
      display:flex;
      justify-content: center;
      margin-right: unset;
      font-size:  4vw ;
      line-height: 4vw;
    }

     .sale-banner-easter a.main-btn {
      text-align:center;
      font-size: 4vw;
      padding: 3vw;
      height: 10vw;
    }
  }

  @media screen and (max-width: 425px) {
     .up-to {
      margin-top: 2vw;
      width:  5vw;
      font-size: 3vw;
      line-height:3vw;
    }
  }
</style>

{% if isHidden %}
  <script>
    let queryParam = window.location.search;

    if (queryParam.includes('sale=')) {
      $('.sale-banner-easter').toggleClass('hidden');
    }
  </script>
{% endif %}

