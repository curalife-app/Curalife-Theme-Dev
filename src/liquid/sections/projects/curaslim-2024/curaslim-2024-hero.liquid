<script>
document.addEventListener('DOMContentLoaded', () => {
  const section = document.querySelector('.section-page-intro');
  const wrapper = document.querySelector('.page-intro-wrapper');
  const splitTop = document.querySelector('.page-intro-splitscreen-top');
  const splitBottom = document.querySelector('.page-intro-splitscreen-bottom');
  const splitFullBottom = document.querySelector('.page-intro-splitscreen-full-bottom');
  const topBar = document.querySelector('.top-bar.top-top');
  const heroSection = document.querySelector('.hero-section');

  // Check if all elements are found
  const elements = {
    section, wrapper, splitTop, splitBottom, splitFullBottom, topBar, heroSection
  };

  for (const [name, element] of Object.entries(elements)) {
    if (!element) {
      console.error(`Element not found: ${name}`);
    }
  }

  // If any critical element is missing, we'll log an error but continue execution
  if (!topBar || !heroSection) {
    console.error('Critical elements are missing. Script may not function correctly.');
  }

  const isMobile = window.innerWidth <= 768;
  const speedFactor = isMobile ? 1.5 : 0.75;

  let lastScrollPosition = 0;
  let ticking = false;

  function easeInOutCubic(t) {
    return t < 0.5 ? 4 * t * t * t : (t - 1) * (2 * t - 2) * (2 * t - 2) + 1;
  }

  function updateSplitScreen(scrollPosition) {
    if (!heroSection) return;  // Exit if heroSection is not found

    const viewportHeight = window.innerHeight;
    const heroHeight = heroSection.offsetHeight;
    const scrollPercentage = (scrollPosition / viewportHeight) * 100;
    const adjustedScrollPercentage = scrollPercentage * speedFactor;

    console.log('Scroll position:', scrollPosition);
    console.log('Hero height:', heroHeight);

    // Update split screen elements if they exist
    if (splitTop && splitBottom && splitFullBottom) {
      if (adjustedScrollPercentage <= 100) {
        const easedPercentage = easeInOutCubic(adjustedScrollPercentage / 100) * 100;
        const centerHeight = Math.min(easedPercentage / 2, 50);
        const bottomHeight = Math.min(easedPercentage, 100);

        splitTop.style.height = `${centerHeight}%`;
        splitBottom.style.height = `${centerHeight}%`;
        splitFullBottom.style.height = `${bottomHeight}%`;

        splitTop.style.opacity = splitBottom.style.opacity = splitFullBottom.style.opacity = 1;
      } else {
        const fadeOutPercentage = Math.min((adjustedScrollPercentage - 100) * 2, 100);
        const opacity = 1 - easeInOutCubic(fadeOutPercentage / 100);

        splitTop.style.opacity = splitBottom.style.opacity = splitFullBottom.style.opacity = opacity;
      }
    }

    // Update top bar visibility after scrolling past the hero section
    if (topBar) {
      if (scrollPosition > heroHeight) {
        console.log('Should add floating class');
        topBar.classList.add('floating');
        topBar.style.opacity = '1';
        topBar.style.background = 'linear-gradient(0deg, rgba(15, 114, 176, 1) 0%, rgba(15, 124, 191, 1) 100%)';
        topBar.style.boxShadow = '0 2px 5px rgba(0,0,0,0.1)';
      } else {
        console.log('Should remove floating class');
        topBar.classList.remove('floating');
        topBar.style.opacity = '0';
        topBar.style.background = 'transparent';
        topBar.style.boxShadow = 'none';
      }
      console.log('Top bar classes:', topBar.className);
    }

    if (wrapper) {
      wrapper.style.opacity = adjustedScrollPercentage > 50 ? Math.max(1 - easeInOutCubic(((adjustedScrollPercentage - 50) * 4 / 100)), 0) : 1;

      if (adjustedScrollPercentage >= 100) {
        wrapper.style.position = 'absolute';
        wrapper.style.top = '100vh';
      } else {
        wrapper.style.position = 'fixed';
        wrapper.style.top = '0';
      }
    }
  }

  function onScroll() {
    lastScrollPosition = window.scrollY;
    if (!ticking) {
      window.requestAnimationFrame(() => {
        updateSplitScreen(lastScrollPosition);
        ticking = false;
      });
      ticking = true;
    }
  }

  window.addEventListener('scroll', onScroll, { passive: true });
  updateSplitScreen(window.scrollY);
});
</script>

