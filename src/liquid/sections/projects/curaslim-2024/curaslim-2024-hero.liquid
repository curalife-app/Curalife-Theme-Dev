        @media (width <= 768px) {
          min-width: 200px;
          width: unset;
        }
      }
    }
  }

  .hero-section {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;

    .main-container {
      @media (width <= 768px) {
        min-height: 210vw;
      }

      .top-bar {
        transition: all 0.3s ease;
        z-index: 1000;

        &.floating {
          position: fixed;
          top: 0;
          left: 0;
          right: 0;
          background: rgb(34,98,138);
          background: linear-gradient(0deg, rgb(15 114 176) 0%, rgba(15, 124, 191, 1) 100%);
