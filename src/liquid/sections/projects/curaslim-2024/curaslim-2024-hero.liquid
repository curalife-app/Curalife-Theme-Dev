<section class="hero-section mbl:px-0 p-4">
  <div class="rellax bg" data-rellax-speed="-5"></div>

  <div class="main-container container flex flex-col justify-between h-full text-center">
    <div class="circle" data-rellax-speed="2" data-aos="zoom-in" data-aos-duration="3000"></div>

    <div id="top-bar" class="top-bar items mbl:m-0 mb-12">
      <div class="container flex justify-between p-0">
        <div class="left mbl:gap-2 flex items-center gap-4">
          <img class="max-w-[40%] mx-0" src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/curalife-logo-white.svg?v=1723980306" alt="Curaslim 2024 Logo">

          <div class="reviews mbl:flex-col mbl:gap-0 flex items-center gap-2">
            <div class="stars">{% for star in (1..5) %}<i class="fa-sharp fa-solid fa-star text-[--orange] mr-1"></i>{% endfor %}</div>
            <div class="text-start text-xs mbl:text-[3vw] text-white">45,852 verified <br class="desktop">reviews</div>
          </div>
        </div>

        <div class="right min-w-[30%]">
          <a href="#cta"><Button class="font-bold text-black bg-white">Buy Now</Button></a>
        </div>
      </div>
    </div>

    <div class="content mt-8 mb-auto">
      <h1 data-aos="zoom-in">
        <strong>Lose Weight Fast</strong>
        <img class="inline" src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/hero-icons.png?v=1723968818" alt="Curaslim 2024 Hero Image 1">
        <em class="italic"><span class="text-[--orange] !font-thin">With Curaslim's</span><br>powerful Triple - Action Formula!</em>
      </h1>

      <a href="#cta" data-aos="flip-left" data-aos-delay="700" class="relative inline-flex items-center justify-start inline-block px-12 py-4 overflow-hidden font-medium transition-all bg-[--orange] rounded-full hover:bg-white group">
        <span class="absolute inset-0 border-0 group-hover:border-[25px] ease-linear duration-100 transition-all border-white rounded-full"></span>
        <span class="group-hover:black relative w-full font-bold text-left transition-colors duration-200 ease-in-out">Buy Now</span>
      </a>
    </div>

    <div class="images">
      <img class="review" data-aos="fade-up" data-aos-delay="200" src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/Group_1597877448.png?v=1723474133" alt="Curaslim 2024 Hero Image 1">

      <div class="badge">
        <div class="inner-circle">
          <div class="badge-text">Lose<br><strong>10%-15%</strong></div>
        </div>

        <div id="circle">
          <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="300px" height="300px" viewBox="0 0 300 300" enable-background="new 0 0 300 300" xml:space="preserve">
              <defs>
                  <path id="circlePath" d="M 150, 150 m -60, 0 a 60,60 0 0,1 120,0 a 60,60 0 0,1 -120,0 "/>
              </defs>
            <circle cx="150" cy="100" r="75" fill="none"/>
              <g>
                  <use xlink:href="#circlePath" fill="none"/>
                  <text fill="#ffffff">
                      <textPath xlink:href="#circlePath">of your body weight · of your body weight · of your body weight · </textPath>
                  </text>
              </g>
          </svg>
        </div>
      </div>
      <img class="bottles" data-aos="zoom-in" data-aos-delay="50" src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/Group_1597877740.png?v=1723474133" alt="Curaslim 2024 Hero Image 1">
      <img class="badges" data-aos="zoom-out-up" data-aos-delay="300" src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/Group_1597877453.png?v=1723474133" alt="Curaslim 2024 Hero Image 2">
    </div>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/gh/dixonandmoe/rellax@master/rellax.min.js"></script>
<script>
  var rellax = new Rellax('.rellax', {easing: 'ease', duration: 600});

  window.addEventListener('scroll', function() {
    var topBar = document.getElementById('top-bar');
    var heroSection = document.querySelector('.hero-section');
    var heroBottom = heroSection.offsetTop + heroSection.offsetHeight;

    if (window.scrollY > heroBottom) {
      topBar.classList.add('floating');
    } else {
      topBar.classList.remove('floating');
    }
  });
</script>

<style>
  .badge {
    background: #9749ad45;
    color: white;
    width: 150px;
    height: 150px;
    border-radius: 50%;
    margin-top: 90px;
    margin-left: 844px;
    position: relative;

    @media (width <= 768px) {
      left: 62vw;
      top: -14vw;
      width: 34vw;
      height: 34vw;
      position: absolute;
      margin-top: unset;
      margin-left: unset;
    }

    .inner-circle {
      width: 100px;
      height: 100px;
      top: 25px;
      position: relative;
      margin: auto;
      background: #A665AB;
      border-radius: 50%;

      @media (width <= 768px) {
        top: 5vw;
        width: 24vw;
        height: 24vw;
      }

      .badge-text {
        font-size: 20px;
        padding-top: 20px;
      }
    }
  }

#circle text {
  font-size: 12px;
  color: white;
  font-weight: bold;
}

#circle svg {
  position: absolute;
  left: -75px;
  top: -75px;

  -webkit-animation-name: rotate;
  -moz-animation-name: rotate;
  -ms-animation-name: rotate;
  -o-animation-name: rotate;
  animation-name: rotate;
  -webkit-animation-duration: 10s;
  -moz-animation-duration: 10s;
  ms-animation-duration: 10s;
  -o-animation-duration: 10s;
  animation-duration: 10s;
  -webkit-animation-iteration-count: infinite;
  -moz-animation-iteration-count: infinite;
  -ms-animation-iteration-count: infinite;
  -o-animation-iteration-count: infinite;
  animation-iteration-count: infinite;
  -webkit-animation-timing-function: linear;
  -moz-animation-timing-function: linear;
  -ms-animation-timing-function: linear;
  -o-animation-timing-function: linear;
  animation-timing-function: linear;

  @media (width <= 768px) {
    left: -18vw;
    top: -18vw;
    width: 70vw;
    height: 70vw;
  }
}

@-webkit-keyframes rotate {
    from { -webkit-transform: rotate(360deg); }
    to { -webkit-transform: rotate(0); }
}
@-moz-keyframes rotate {
    from { -moz-transform: rotate(360deg); }
    to { -moz-transform: rotate(0); }
}
@-ms-keyframes rotate {
    from { -ms-transform: rotate(360deg); }
    to { -ms-transform: rotate(0); }
}
@-o-keyframes rotate {
    from { -o-transform: rotate(360deg); }
    to { -o-transform: rotate(0); }
}
@keyframes rotate {
    from { transform: rotate(360deg); }
    to { transform: rotate(0); }
}

</style>

<style>
  body {
    color: black !important;

    p {
      line-height: 1.3 !important;
    }

    section {
      padding: 80px 0;

      &.button-section {
        padding: 50px 0;
      }

