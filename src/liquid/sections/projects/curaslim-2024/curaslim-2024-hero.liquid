<style>
	.top-top {
		position: fixed;
		width: 100%;
		padding: 0.75rem;
		z-index: 9999;
		opacity: 0;
	}

	.badge {
		background: #6649ad40;
		color: white;
		width: 140px;
		height: 140px;
		border-radius: 50%;
		top: 90px;
		left: 850px;
		position: absolute;

		@media (width <= 768px) {
			left: 64vw;
			top: 0;
			width: 30vw;
			height: 30vw;
			margin-top: unset;
			margin-left: unset;
