{% if shop.name contains 'Global' %}
	{% assign reviewContent = "Curaslim helped me lose 6 kg already! I feel less hungry, it's so easy to use, and I’ve developed healthier habits when it comes to my food and cravings. Highly recommend!" %}
{% else %}
	{% assign reviewContent = "Curaslim helped me lose 13 lbs already! I feel less hungry, it's so easy to use, and I’ve developed healthier habits when it comes to my food and cravings. Highly recommend!" %}
{% endif %}

{% if request.path == '/pages/lp-wl-curaslim-360-aff' %}
	{% assign isAffiliatePage = true %}
{% endif %}

<div class="section-page-intro static {% if isAffiliatePage %}affiliate !pt-0{% endif %}">
	<div class="page-intro-content">
		<section class="hero-section mbl:px-0 p-4">
			<div class="rellax bg" data-rellax-speed="-5"></div>
			<div class="main-container container flex flex-col justify-between h-full text-center">
				<div class="circle"></div>

				<div id="top-bar" class="top-bar items mbl:m-0 mb-12 opacity-100">
					<div class="container flex justify-between p-0">
						<div class="left mbl:gap-2 flex items-center gap-4">
							<img
								class="max-w-[40%] mx-0"
								src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/curalife-logo-white.svg"
								alt="Curaslim 2024 Logo">

							<div class="reviews mbl:flex-col mbl:gap-0 flex items-center gap-2">
								<div class="stars flex gap-1 mbl:w-full mbl:text-[3vw]">
									{% for star in (1..5) -%}
										<img
											class="m-0 mbl:w-[3vw]"
											src="{{ "star.svg" | asset_url }}"
											alt="review star">
									{%- endfor %}
								</div>
								<div class="text-start text-xs mbl:text-[3vw] text-white">
									3,000 verified
									<br class="desktop">
									reviews
								</div>
							</div>
						</div>

						<div class="right min-w-[30%] text-end desktop">
							<a href="#cta-title" class="cta-element" name="track:Top Menu CTA Button">
								<Button
									class="text-black bg-white"
									name="track:button-click|name:Top Menu CTA Button"
									style="padding:unset;width:120px;height:40px;font-size:15px">
									{{- section.settings.button_text -}}
								</Button>
							</a>
						</div>
					</div>
				</div>

				<div class="content mt-12 mb-auto">
					<h1 class="text-pretty mb-8">
						<strong class="!not-italic">Lose Weight Fast</strong>
						<img
							class="inline"
							src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/hero-icons.png"
							srcset="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/hero-icons-2x.png 2x"
							alt="Curaslim 2024 Hero Image 1">
						<em class="!italic">
							<span class="text-orange !font-thin !italic">With Curaslim's</span>
							<br>
							Powerful Triple - Action Formula!
						</em>
					</h1>

					<a href="#cta-title" name="track:Hero CTA Button" class="cta-element">
						<button
							class="main-button bg-orange text-black cursor-pointer"
							name="track:button-click|name:Hero CTA Button"
							href="#cta-title">
							{{ section.settings.button_text }}
						</button>
					</a>
				</div>

				<div class="images">
					<div class="review review-box text-white">
						<img
							class="quote-sign"
							src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/quote-sign.svg"
							alt="Curaslim Quote Sign">
						<p class="mbl:text-center">{{ reviewContent }}</p>
						<div class="reviewer mbl:m-auto">Jessica T.</div>
					</div>

					<div class="badge">
						<div class="inner-circle">
							<div class="badge-text text-[14px]">
								Lose
								<br>
								<strong class="text-[16px]">10%-15%</strong>
							</div>
						</div>

						<div id="circle">
							<svg
								version="1.1"
								xmlns="http://www.w3.org/2000/svg"
								xmlns:xlink="http://www.w3.org/1999/xlink"
								x="0px"
								y="0px"
								width="280px"
								height="280px"
								viewBox="0 0 300 300"
								enable-background="new 0 0 300 300"
								xml:space="preserve">
								<defs><path id="circlePath" d="M 150, 150 m -60, 0 a 60,60 0 0,1 120,0 a 60,60 0 0,1 -120,0 "/></defs>
								<circle cx="150" cy="100" r="75" fill="none"/>
								<g><use xlink:href="#circlePath" fill="none"/><text fill="#ffffff"><textPath xlink:href="#circlePath">of your body weight · of your body weight · of your body weight · </textPath></text></g>
							</svg>
						</div>
					</div>

					{% render 'image-test', image: section.settings.main_image, alt: 'Curaslim - Weight loss', lazy: false, class: 'bottles place-self-center' %}
				</div>

				<div class="badges opacity-80 mbl:pt-6 py-3">
					<img
						src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/3.svg"
						alt="Curaslim 2024 Trust Badges">
					<img
						src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/1.svg"
						alt="Curaslim 2024 Trust Badges">
					<img
						src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/4.svg"
						alt="Curaslim 2024 Trust Badges">
					<img
						src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/5.svg"
						alt="Curaslim 2024 Trust Badges">
					<img
						src="https://cdn.shopify.com/s/files/1/0452/2459/1511/files/2.svg"
						alt="Curaslim 2024 Trust Badges">
				</div>
			</div>
		</section>
	</div>
</div>

<style>
	body {
		accent-color: var(--curaslim);

		h1,
		h2 {
			color: black !important;
			font-weight: 100 !important;
