    {
    "name":"Real Changes",
    "tag":"section",
    "class":"real-changes-section",
    "disabled_on":{
       "groups":[
          "header",
          "footer"
       ]
    },
    "settings":[
    ],
    "blocks": [
      {
        "type": "badge",
        "name": "Badge",
        "settings": [
          {
            "type": "image_picker",
            "id": "badge_image",
            "label": "Badge Image"
