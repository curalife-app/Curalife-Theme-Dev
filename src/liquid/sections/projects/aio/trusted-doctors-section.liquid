<div class="trusted-doctors">
    <div class="container">
        <div class="data-wrap">
            <div class="sub-title">
                <h3><b>{{ section.settings.title_1 }}</b></h3>
                
                <div class="description-overlay">
                      <h4>
                         {{ section.settings.description }}
                      </h4>
                  </div>
            </div>
            
            <div class="doctors-boxes-wrapper">
           {% for block in section.blocks %}
                <div class="doctor-box-col">
                    <div class="doctor-item-box">
                        <div class="doctor-thumbnail">
                            <span>
                                <img src="{{ block.settings.doctor_image | img_url: 'master' }}" alt="doctor" width="234" height="234" loading="lazy">
                            </span>
                        </div>
                        <div class="doctor-informative">
                            <h4>{{ block.settings.doctor_name }}</h4>
                            <p>{{ block.settings.doctor_description }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
</div>


  <style>
    .trusted-doctors .container .data-wrap {
      padding-bottom: 30px;
    }
    .sub-title h3 {
      text-align: center;
      font-weight: 500;
      font-size: 2.5rem;
      line-height: 1.5;
    }

   .sub-title h4 {
      text-align: center;
      font-weight: 300;
      font-size: 1.375rem;
      line-height: 1.45;
   }

   .sub-title h3 b, .sub-title h4 b {
      font-weight: 600;
   }

   .doctors-boxes-wrapper {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      padding: 0 2.75rem 0 0.75rem;
      width: 100%;
      max-width: 100%;
   }

   .doctor-box-col {
      margin-top: 4.25rem;
      padding-left: 0.9375rem;
      padding-right: 0.9375rem;
      flex: 0 0 25%;
      max-width: 25%;
   }

   .doctor-item-box {
      width: 100%;
      max-width: 100%;
      position: relative;
      text-align: center;
   }

   .doctor-thumbnail {
      max-width: 15.375rem;
      margin: 0 auto;
      position: relative;
      overflow: hidden;
    }

  .doctor-thumbnail:before {
      content: "";
      display: block;
      padding-bottom: 100%;
      pointer-events: none;
      border: 1px solid var(--green);
      border-radius: 50%;
      background: #FFF;
  }

  .doctor-thumbnail span {
      display: block;
      position: absolute;
      top: 0.375rem;
      left: 0.375rem;
      right: 0.375rem;
      bottom: 0.375rem;
      background: {{ section.settings.thumbnail_background }};
      border-radius: 50%;
      overflow: hidden;
  }

  .doctor-thumbnail span img {
      width: 100%;
      height: 100%;
      object-fit: cover;
  }

  .doctor-informative {
      margin-top: 1.5625rem;
      padding-top: 1.375rem;
      position: relative;
  }

  .doctor-informative:after {
      content: "";
      position: absolute;
      background: var(--green);
      width: 100%;
      height: 1px;
      max-width: 6.5625rem;
      top: 0;
      left: 50%;
      transform: translate(-50%);
  }

  .doctor-informative h4 {
      font-weight: 700;
      font-size: 1.3125rem;
      line-height: 1.57;
      letter-spacing: -.3px;
      margin: 0;
  }

  .doctor-informative p {
      font-weight: 400;
      font-size: .8125rem;
      line-height: 1.35;
      margin: 0;
  }

  @media screen and (max-width:768px) {
      .sub-title h3 {
      font-size: 1.5rem;
  }

  .trusted-doctors .description-overlay {
      margin-top: 0.1875rem;
      padding-right: 0.875rem;
  }

  .sub-title h4 {
      font-size: 1.0625rem;
  }

  .doctors-boxes-wrapper {
      justify-content: center;
      padding: 0;
  }

  .doctor-box-col {
      margin-top: 1.875rem;
      flex: 0 0 50%;
      max-width: 15.625rem;
  }

  .doctor-thumbnail {
      max-width: 7.0625rem;
  }

  .doctor-thumbnail span {
      top: 0.1875rem;
      left: 0.1875rem;
      right: 0.1875rem;
      bottom: 0.1875rem;
  }

  .doctor-informative {
      margin-top: 0.5625rem;
      padding-top: 0.5rem;
  }

  .doctor-informative:after {
      height: 2px;
      max-width: 3rem;
  }

  .doctor-informative h4 {
      font-size: .875rem;
  }

  .doctor-informative p {
      font-size: .75rem;
      line-height: 1.17;
     }
  }
  </style>


  {% schema %}
  {
    "name": "Trusted Doctors",
    "tag": "section",
    "class": "trusted-doctors no-padding",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },

      {
        "type": "text",
        "id": "title_1",
        "label": "Title 1",
        "default": "Trusted by 700+ Doctors"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description"
        
      },

      {
        "type": "color_background",
        "id": "thumbnail_background",
        "label": "Doctor Thambnail Background",
        "default": "linear-gradient(.43deg,rgba(196,196,196,.52) .31%,#C4C4C4 99.57%)"
      }
    ],
    "blocks": [
      {
        "type": "doctor",
        "name": "Doctor",
        "settings": [
          {
            "type": "image_picker",
            "id": "doctor_image",
            "label": "Doctor Image"
          },
          {
            "type": "text",
            "id": "doctor_name",
            "label": "Doctor Name"
          },
          {
            "type": "text",
            "id": "doctor_description",
            "label": "Doctor Description"
          }            
        ]
      }
    ],
    "presets": [
      {
        "name": "Trusted Doctors"
      }
    ]
  }
  {% endschema %}

 