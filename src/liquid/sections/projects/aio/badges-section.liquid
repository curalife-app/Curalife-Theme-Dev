{% assign badgeItems = "icon-clinically-tested.svg:Clinically Tested
|icon-doctor-approved.svg:Doctors Recommended
|icon-iso-certified.png:ISO9001 Certified
|icon-vegan-friendly.png:Vegan Friendly
|icon-gmp-certified.png:GMP Certified"
| split: '|' %}


  <div class="container">
    <div class="badges">
    {% for block in section.blocks %}
      <div class="badge-wrapper">
        <div class="badge">
          <img src="{{ block.settings.badge_image | img_url: 'medium' }}" alt="" loading="lazy">
        </div>
        <p>{{ block.settings.badge_name }}</p>
      </div>
    {% endfor %}
    </div>
  </div>


<style>
  .badges-section .container .badges {
    display: flex;
    justify-content: center;
    gap: 15px;
  }

  .badges-section .container .badges .badge-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 150px;
    gap: 10px;
  }

  .badges-section .container .badges .badge-wrapper .badge {
    border-radius: 50%;
    border: 1px solid #000;
    padding: 10px
  }

  .badges-section .container .badges .badge-wrapper p {
    margin: unset;
  }

  .badges-section .container .badges .badge-wrapper .badge img {
    height: 50px;
    width: 50px;
    max-width: 20vw;
    max-height: 20vw;
    object-fit: contain;
  }

  @media screen and (max-width: 768px) {
    .badges-section .container .badges {
      flex-wrap: wrap;
      gap: 5%;
    }

    .badges-section .container .badges .badge-wrapper {
      width: 30%;
      padding: 2vw;
      min-width: unset;
      text-align: center
    }

    .badges-section .container .badges .badge-wrapper .badge img {
      height: 10vw;
      width: 10vw
    }
  }
</style>


{% schema %}
    {
    "name":"Badges Section",
    "tag":"section",
    "class":"badges-section",
    "disabled_on":{
       "groups":[
          "header",
          "footer"
       ]
    },
    "settings":[
     
    ],
    "blocks": [
      {
        "type": "badge",
        "name": "Badge",
        "settings": [
          {
            "type": "image_picker",
            "id": "badge_image",
            "label": "Badge Image"
          },
          {
            "type": "text",
            "id": "badge_name",
            "label": "Badge Name"
          }     
        ]
      }
    ],
    "presets":[
       {
          "name":"Badges Section"
       }
    ]
        
    }
{% endschema %}