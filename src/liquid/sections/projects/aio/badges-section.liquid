
  <div class="container">
    <div class="badges">
    {% for block in section.blocks %}
      <div class="badge-wrapper">
        <div class="badge">
          <img src="{{ block.settings.badge_image | img_url: 'medium' }}" width="77" height="77" alt="" loading="lazy">
        </div>
        <{{ section.settings.title_tag }}>{{ block.settings.badge_name }}</{{ section.settings.title_tag }}>
        <p>{{ block.settings.badge_description }}</p>
      </div>
    {% endfor %}
    </div>
  </div>


<style>
  .badges-section .container .badges {
    display: flex;
    justify-content: center;
    gap: 15px;
  }

  .badges-section .container .badges .badge-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 150px;
    gap: 10px;
  }

  .badges-section .container .badges .badge-wrapper .badge {
    border-radius: 50%;
    border: 1px solid #000;
    padding: 10px
  }

  .badges-section .container .badges .badge-wrapper p {
    margin: unset;
  }

  .badges-section .container .badges .badge-wrapper .badge img {
    height: 50px;
    width: 50px;
    max-width: 20vw;
    max-height: 20vw;
    object-fit: contain;
  }

  @media screen and (max-width: 768px) {
    .badges-section .container .badges {
      flex-wrap: wrap;
      gap: 5%;
    }

    .badges-section .container .badges .badge-wrapper {
      width: 30%;
      padding: 2vw;
      min-width: unset;
      text-align: center
    }

    .badges-section .container .badges .badge-wrapper .badge img {
      height: 10vw;
      width: 10vw
    }
  }
</style>


{% schema %}
    {
    "name":"Badges Section",
    "tag":"section",
    "class":"badges-section",
    "disabled_on":{
       "groups":[
          "header",
          "footer"
       ]
    },
    "settings":[
     {
       "type": "select",
       "id": "title_tag",
       "label": "Title Tag",
       "options": [
         {
           "value": "h1",
           "label": "H1"
         },
         {
           "value": "h2",
           "label": "H2"
         },
         {
           "value": "h3",
           "label": "H3"
         },
         {
           "value": "h4",
           "label": "H4"
         },
         {
           "value": "h5",
           "label": "H5"
         },
         {
           "value": "p",
           "label": "P"
         }
       ],
       "default": "p"
     }
    ],
    "blocks": [
      {
        "type": "badge",
        "name": "Badge",
        "settings": [
          {
            "type": "image_picker",
            "id": "badge_image",
            "label": "Badge Image"
          },
          {
            "type": "text",
            "id": "badge_name",
            "label": "Badge Name"
          },
          {
            "type": "text",
            "id": "badge_description",
            "label": "Badge Description"
          }     
        ]
      }
    ],
    "presets":[
       {
          "name":"Badges Section"
       }
    ]
        
    }
{% endschema %}