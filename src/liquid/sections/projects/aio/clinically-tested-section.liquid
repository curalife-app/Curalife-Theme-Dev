<section class="clinically-tested">
  <div class="clinically-proven">
    <img src="{{ section.settings.foreground_image | img_url: 'master' }}" width="531" height="398" alt="" loading="lazy">
  </div>

  <div class="safe-work">
    <div class="container">
      <div class="wrap">
        <div class="data">
          <div class="sub-title">{{ section.settings.subtitle }}</div>
          <div class="warning-text">
            <p>{{ section.settings.description }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .clinically-tested {
    padding-bottom: 0;
  }

  .clinically-tested .clinically-proven {
    position: relative;
  }

  .clinically-tested .clinically-proven:after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -2;
    background: {{ section.settings.proven_color }};
  }

  .clinically-tested .safe-work {
    background-color: {{ section.settings.tested_color }};
  }

  .clinically-tested .safe-work .wrap {
    padding: 0 0 58px 0;
    max-width: 950px;
    margin: auto;
  }

  .clinically-tested .clinically-proven + .safe-work .sub-title {
    text-align: center;
  }

  .safe-work .sub-title {
    color: #ffffff;
  }

  .clinically-tested .safe-work .warning-text {
    padding-top: 50px;
  }

  .clinically-tested .safe-work .warning-text p {
    margin: 0;
    font-size: 12px;
    color: #ffffff;
    text-align: center;
    opacity: 0.6;
  }

  @media screen and (max-width: 768px) {
    .clinically-proven img {
      max-width: 308px;
    }

    .clinically-proven + .safe-work .sub-title h4 {
      padding: 18px 17px;
      text-align: left !important;
      font-size: 16px;
      line-height: 1.5;
    }

    .clinically-tested .safe-work .warning-text {
      padding: 0;
    }

    .clinically-tested .safe-work .warning-text p {
      margin-top: 2rem;
    }

    .safe-work .data {
      width: 100% !important;
      order: 1;
    }

    .clinically-tested .clinically-proven + .safe-work .wrap {
      padding: 0 0 20px 0;
    }
  }
</style>

{% schema %}
{
  "name": "Clinically Tested",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "color_background",
      "id": "proven_color",
      "label": "Clinically Proven Color",
      "default": "linear-gradient(to bottom, transparent 69%, #7DC9BE 31%)"
    },
    {
      "type": "color_background",
      "id": "tested_color",
      "label": "Clinically Tested Color",
      "default": "#7DC9BE"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Clinically studied ingredients Doctor approved formula"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sub Title"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "foreground_image",
      "label": "Foreground Image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "BackGround Image"
    }
  ],
  "presets": [
    {
      "name": "Clinically Tested"
    }
  ]
}
{% endschema %}