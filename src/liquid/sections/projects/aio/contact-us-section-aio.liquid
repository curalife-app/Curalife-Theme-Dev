    }
  ],
  "blocks":[
     {
        "name":"Contact Options",
        "type":"contact_options",
        "settings":[
           {
              "type":"text",
              "id":"icon_option",
              "label":"Icon Option"
           },
           {
            "type":"text",
            "id":"text_option",
            "label":"Text Option"
           },
           {
            "type":"url",
            "id":"link_us",
            "label":"Link US"
           },
           {
            "type":"url",
            "id":"link_global",
            "label":"Link Global"
           }
        ]
     },
     {
        "name":"Phone Numbers",
        "type":"phone_numbers",
        "settings":[
           {
              "type":"image_picker",
              "id":"flag_img",
              "label":"Flag Image"
           },
           {
              "type":"text",
              "id":"phone_link",
              "label":"Phone Link"
           },
           {
              "type":"text",
              "id":"phone_number",
              "label":"Phone Number"
           }
        ]
     }
  ],

  "presets": [
    {
      "name": "Contact Us Section"
    }
  ]
}
{% endschema %}