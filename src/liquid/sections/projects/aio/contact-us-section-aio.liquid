  "name": "Contact Us Section",
  "tag": "section",
  "class": "contact-us no-padding",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
    },
    {
        "type": "color",
        "id": "icon_background",
        "label": "Icon Background Color",
        "default": "#9eb069"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
