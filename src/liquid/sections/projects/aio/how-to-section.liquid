<section class="how-to-sections">
  <div class="container">
    <h2><b>{{ section.settings.title }}</b></h2>

    <img src="{{ section.settings.desktop_image | img_url: 'master' }}" width="1884" height="999" alt="" class="desktop" loading="lazy">
    <img src="{{ section.settings.mobile_image | img_url: 'master' }}"  width="658" height="376" alt="" class="mobile" loading="lazy">
  </div>
</section>

<style>
  .how-to-sections .container {
    text-align: center;
  }

  .how-to-sections .container h2 {
    text-align: left;
    max-width: 450px;
  }

  .how-to-sections .container img {
    max-width: 1000px;
    margin: -100px auto auto;
    width: 100%
  }
</style>

{% schema %}
{
  "name": "How to Image Text",
  "tag": "section",
  "class": "how-to-image-text no-padding",
  "enabled_on": {
    "templates": ["page"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "How to get the best results with Curalin"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    }      
  ],
  "presets": [
    {
      "name": "How to Image Text"
    }
  ]
}
{% endschema %}