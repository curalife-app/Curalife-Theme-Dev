<div class="science">
  <div class="container">
    <h1>{{ section.settings.title }}</h1>
  </div>
</div>

<style>
  .science {
    position: relative;
    background-image: url("{{ section.settings.image | image_url }}");
    background-size: cover;
    height: 700px;
  }

  .science .container {
    display: flex;
    align-items: center;
  }

  .science h1 {
    max-width: 550px;
  }

  @media screen and ( max-width: 800px){
    h1 {
      max-width: 56vw;
      bottom: 60vw;
      left: 4vw;
    }
  }

  @media screen and ( max-width: 768px) {
    .science {
      height: 76vw;
    }

    h1 {
      bottom: 6vw;
      left: 19vw;
      max-width: 36vw;
      font-size: 8vw;
      line-height: 9vw;
    }
  }
</style>

{% schema %}
{
  "name": "Science I&T",
  "tag": "section",
  "class": "science-i-t",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "presets": [{
    "name": "Science I&T"
  }]
}
{% endschema %}