{% style %}

#chartdiv {
    width: 100%;
    height: 500px;
    overflow: hidden;
}

#brand-hide {
    position: absolute;
    bottom: 20px;
    left: 20px;
    width: 70px;
    height: 20px;
    background-color: white;
    z-index: 10;
}

.partnerships-map {
    background-color: white;
    padding: 20px;
    position: relative;
}

@media screen and(max-width: 768px) {
    .bottom-line {
        display: none;
    }

    .bottom-line {
        z-index: 0;
    }
}

{% endstyle %}

