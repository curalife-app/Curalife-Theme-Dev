{% if section.settings.is_hide_on_global and shop.name == "CuraLife Global" %}
  {% assign is_hide = true %}
{% endif %}

{% unless is_hide %}
  <section id="title-section-{{ section.id }}" class="title-section">
    <div class="container text-center">
      <{{ section.settings.title_tag }} class="title">{{ section.settings.title }}</{{ section.settings.title_tag }}>
      <div class="subtitle">{{ section.settings.subtitle }}</div>

      {% if section.settings.decor_img %}
        <img class="decor-img {% if section.settings.is_decor_remove_on_mobile %}md:hidden{% endif %}" src="{{ section.settings.decor_img | image_url }}" alt="" loading="lazy">
      {% endif %}
    </div>
  </section>

  <style>
    {% if section.settings.title_swoosh_color %}
      #title-section-{{ section.id }} .title strong {
        {% if section.settings.title_swoosh_color == 'dark-green' %}color: white;{% endif %}
        padding: {% if section.settings.title_swoosh_color == 'dark-green' %}8px{% else %}30px 10px{% endif %};
        background-image: url('{{ 'title-swoosh-' | append: section.settings.title_swoosh_color | append: '.svg' | asset_url }}');
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
      }
    {% endif %}

    {% if section.settings.title_color %}
      #title-section-{{ section.id }} .title {
        color: {{ section.settings.title_color }};
      }
    {% endif %}

    {% if section.settings.subtitle_color %}
      #title-section-{{ section.id }} .subtitle {
        color: {{ section.settings.subtitle_color }};
      }
    {% endif %}

    {% if section.settings.subtitle_color %}
      #title-section-{{ section.id }} .subtitle span {
        color: {{ section.settings.span_color }};
      }
    {% endif %}

    #title-section-{{ section.id }} .container {
      max-width: {{ section.settings.max_width }}%;
    }

    {% if section.settings.bg_color %}
      #title-section-{{ section.id }} {
        background-color: {{ section.settings.bg_color }};
      }
    {% endif %}

    {% if section.settings.is_remove_padding_bottom %}
      #title-section-{{ section.id }} {
        padding-bottom: 0;
      }
    {% endif %}

    {% if section.settings.is_remove_padding_top %}
      #title-section-{{ section.id }} {
        padding-top: 0;
      }
    {% endif %}

    {% if section.settings.border_color != blank %}
      #title-section-{{ section.id }} .container {
        border-bottom: 1px solid {{ section.settings.border_color }};
        padding-bottom: 30px;
      }
    {% endif %}

    {% if section.settings.is_disable_br_desktop %}
      #title-section-{{ section.id }} .title br {
        display: none;
      }

      @media (max-width: 768px) {
        #title-section-{{ section.id }} .title br {
          display: block;
        }
      }
    {% endif %}
  </style>

  <style>
    #title-section-{{ section.id }} .subtitle {
      font-size: 24px;
    }

    #title-section-{{ section.id }} .title small {
      font-weight: lighter;
    }

    #title-section-{{ section.id }} .title {
      {% if section.settings.subtitle == blank %}margin: unset;{% endif %}
      margin-inline: auto;
      margin-bottom: 0.2em;
    }

    @media (max-width: 768px) {
      .title-section .container {
        max-width: 100% !important;
      }

      {% if section.settings.subtitle == blank %}
        #title-section-{{ section.id }} .title {
          margin: 0.5em;
        }
      {% endif %}
    }
  </style>
{% endunless %}

{% if section.settings.decor_img %}
  <style>
    #title-section-{{ section.id }} .decor-img {
      position: absolute;
      z-index: {% if section.settings.is_decor_above %}2{% else %}1{% endif %};
      top: {{ section.settings.decor_position_top }}%;
      left: {{ section.settings.decor_position_left }}%;
      opacity: {{ section.settings.decor_opacity }}%;
      max-width: {{ section.settings.decor_max_width }}%;
    }

    @media screen and (max-width: 768px) {
      #title-section-{{ section.id }} .decor-img {
        top: {{ section.settings.decor_position_top_mobile }}%;
        left: {{ section.settings.decor_position_left_mobile }}%;
      }
    }
  </style>
{% endif %}

{% render 'title',
  bg_color: section.settings.bg_color,
  title_color: section.settings.title_color,
  subtitle_color: section.settings.subtitle_color,
  span_color: section.settings.span_color,
  border_color: section.settings.border_color,
  title: section.settings.title,
  subtitle: section.settings.subtitle,
  title_swoosh_color: section.settings.title_swoosh_color,
  is_remove_padding_bottom: section.settings.is_remove_padding_bottom,
  is_remove_padding_top: section.settings.is_remove_padding_top,
  is_disable_br_desktop: section.settings.is_disable_br_desktop,
  is_hide_on_mobile: section.settings.is_hide_on_mobile,
  decor_img: section.settings.decor_img,
  decor_position_top: section.settings.decor_position_top,
  decor_position_left: section.settings.decor_position_left,
  decor_position_top_mobile: section.settings.decor_position_top_mobile,
  decor_position_left_mobile: section.settings.decor_position_left_mobile,
  decor_max_width: section.settings.decor_max_width,
  decor_opacity: section.settings.decor_opacity,
  is_decor_above: section.settings.is_decor_above,
  is_decor_remove_on_mobile: section.settings.is_decor_remove_on_mobile,
  section_id: section.id
%}

