				"min": 0,
				"max": 5,
				"step": 0.1,
				"unit": "rem",
				"default": 1
			},
			{
				"type": "checkbox",
				"id": "is_wrap_columns",
				"label": "Wrap blocks (Desktop)",
				"default": false
			},
			{
				"type": "checkbox",
				"id": "is_wrap_columns_mobile",
				"label": "Wrap blocks (Mobile)",
				"default": false
			},
			{
				"type": "select",
				"id": "vertical_alignment",
				"label": "Vertical Alignment",
				"options": [
					{
						"value": "flex-start",
						"label": "Top"
					},
					{
						"value": "center",
						"label": "Middle"
					},
					{
						"value": "flex-end",
						"label": "Bottom"
					}
