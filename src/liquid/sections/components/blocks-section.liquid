			{
				"type": "range",
				"id": "slider_autoplay_speed",
				"label": "Autoplay Speed",
				"min": 0,
				"max": 5000,
				"step": 100,
				"unit": "ms",
				"default": 0
			},
			{
				"type": "checkbox",
				"id": "is_ticker",
				"label": "Slider Ticker Animation"
			},
			{
				"type": "checkbox",
				"id": "is_arrows",
				"label": "Show Arrows",
				"default": true
			},
			{
				"type": "checkbox",
				"id": "is_dots",
				"label": "Show Dots",
				"default": true
