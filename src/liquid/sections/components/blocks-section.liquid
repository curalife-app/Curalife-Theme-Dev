				"max": 6,
				"step": 1,
				"default": 2
			},
			{
				"type": "select",
				"id": "columns_mobile",
				"label": "Columns (Mobile)",
				"options": [
					{ "value": "1", "label": "1 column" },
					{ "value": "2", "label": "2 columns" }
				],
				"default": "1"
			},
			{
				"type": "range",
				"id": "column_gap",
				"label": "Block Gap",
				"min": 0,
				"max": 8,
				"step": 0.5,
				"unit": "rem",
				"default": 2
