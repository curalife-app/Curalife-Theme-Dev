					{ "value": "2", "label": "2 slides" },
					{ "value": "3", "label": "3 slides" },
					{ "value": "4", "label": "4 slides" },
					{ "value": "all", "label": "All slides" }
				],
				"default": "3"
			},
			{
				"type": "select",
				"id": "slides_per_view_mobile",
				"label": "Slides Per View (Mobile)",
				"options": [
