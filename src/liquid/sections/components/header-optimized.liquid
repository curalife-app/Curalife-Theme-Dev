              <ul class="mobile-menu__submenu">
                {%- for childlink in link.links -%}
                  <li>
                    <a href="{{ childlink.url }}" class="mobile-menu__submenu-link{% if childlink.current %} mobile-menu__submenu-link--active{% endif %}"{% if childlink.current %} aria-current="page"{% endif %}>
                      {{ childlink.title | escape }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            </details>
          {%- else -%}
            <a href="{{ link.url }}" class="mobile-menu__link{% if link.current %} mobile-menu__link--active{% endif %}"{% if link.current %} aria-current="page"{% endif %}>
              {{ link.title | escape }}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    {%- endif -%}

    <div class="mobile-menu__utility-links">
      {% if customer %}
