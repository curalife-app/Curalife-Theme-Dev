{% assign data = section.settings.faq_data | split: "|" %}

{% render 'product-faq-section',
  bgColor: section.settings.bg_color,
  subtitle: section.settings.subtitle,
  title: section.settings.title,
  is_ingredients_feature: section.settings.is_ingredients_feature,
  faqItems: data,
  faq_image: section.settings.faq_image,
  image_enable: section.settings.image_enable
%}

{% schema %}
{
    "name": "FAQ",
    "disabled_on": {
      "groups": [
        "header",
        "footer"
      ]
    },
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
        "type": "richtext",
        "id": "faq_data",
        "label": "FAQ Data"
      },
      {
        "type": "checkbox",
        "id": "image_enable",
        "label": "Enable Image"
      },
      {
        "type": "image_picker",
        "id": "faq_image",
        "label": "Image"
      },
      {
        "type": "checkbox",
        "id": "is_ingredients_feature",
        "label": "Enable Ingredients Feature"
      }
    ],
    "presets": [
    {
      "name": "FAQ"
    }
  ]
}
{% endschema %}