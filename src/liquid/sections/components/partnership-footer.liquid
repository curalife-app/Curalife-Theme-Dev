    }

    footer .menus {
        display: flex; 
        justify-content: space-between;
        padding-bottom: 100px;
    }

    footer .menu h4 {
        color: white;
        font-size: 30px;
        margin-bottom: 10px;
    }

    footer .menu p span {
        color: var(--orange);
        font-weight: 800;
    }

    footer .menu a,
    footer .menu p {
        font-family: 'DMSans';
        font-size: 17px;
        color: #FFFFFF;
        margin-bottom: 10px;
    }

    footer .social-links {
        display: flex;
        gap: 20px;
    }

    footer .social-links a {
        font-size: 30px;
    }

    footer .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 5px;
        padding: 15px 0;
        border-top: 1px solid rgba(255, 255, 255, 0.25);
    }

    footer .policies {
        display: flex;
        gap: 15px;
    }

    footer .policy,
    footer .copyrights {
        color: white;
        font-size: 18px;
        font-family: 'DM Sans';
        font-weight: 400;
        color: #FFFFFF;
    }

    @media screen and (max-width: 768px){
        footer {
            padding: 5vw 5vw 0;
        }

        footer .menus {
            flex-direction: column;
        }

        footer .policy {
            font-size: 2vw;
        }
    }
</style>



