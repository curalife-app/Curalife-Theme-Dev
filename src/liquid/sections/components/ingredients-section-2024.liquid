<section class='ingredients-section bg-light-blue pb-[50px]'>
	<div class='container relative'>
		<div class='ingredients swiper swiper-loading' data-swiper-section="{{ section.id }}-ingredients">
			<div class='swiper-wrapper'>
				{% for ingredient in section.blocks %}
					<div class='ingredient swiper-slide {% unless ingredient.settings.image %}no-image{% endunless %}'>
						<div class='ingredient-wrapper overflow-hidden relative flex flex-col bg-white !h-[600px] mbl:!h-[140vw] rounded-xl md:m-auto md:w-[90%]'>
							{% if ingredient.settings.image %}
								<img class='absolute bottom-0 w-full' src='{{ ingredient.settings.image | img_url: 'master' }}' alt='{{ ingredient.settings.name }}'>
							{% endif %}

							<div class='content p-6'>
								<h4 class='title font-italic text-primary w-fit mt-2 mb-4 pb-4 pr-4 font-bold border-b-4 border-[--orange]'>{{ ingredient.settings.title }}</h4>
								<div class='description p-0 text-black border-0'>{{ ingredient.settings.description }}</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>

		<div class='swiper-nav swiper-button-prev desktop'></div>
		<div class='swiper-nav swiper-button-next desktop'></div>
		<div class='swiper-pagination mobile'></div>

		<div class="swiper-loader">
			<div class="swiper-loader-spinner">
				<div class="swiper-loader-bounce1"></div>
				<div class="swiper-loader-bounce2"></div>
				<div class="swiper-loader-bounce3"></div>
			</div>
		</div>
	</div>
</section>

{% render 'layout.head.swiper-dynamic', selector: '.ingredients-section .swiper' %}

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const swiperEl = document.querySelector('.ingredients-section .swiper');
		if (!swiperEl) return;

		// Add data attributes for the Swiper options
		swiperEl.dataset.swiperOptions = JSON.stringify({
			slidesPerView: 3,
			spaceBetween: 20,
			pagination: {
				el: '.ingredients-section .swiper-pagination',
				clickable: true
			},
			navigation: {
				nextEl: '.ingredients-section .swiper-button-next',
				prevEl: '.ingredients-section .swiper-button-prev'
			},
			breakpoints: {
				320: { slidesPerView: 1 },
				768: { slidesPerView: 2 },
				1024: { slidesPerView: 3 }
			}
		});

		// Let the observer handle initialization if element is not in viewport
		if (window.swiperObserver && !swiperEl.dataset.swiperObserved) {
			window.swiperObserver.observe(swiperEl);
			swiperEl.dataset.swiperObserved = 'pending';
		} else {
			// Fallback to manual initialization
			loadSwiper(() => {
				window.initializeSwiper('.ingredients-section .swiper',
					JSON.parse(swiperEl.dataset.swiperOptions));
			});
		}
	});
</script>

<style>
	:root {
		--swiper-navigation-sides-offset: -40px;
		--swiper-navigation-sides-offset-mobile: 5vw;
		--swiper-pagination-bullet-height: 12px;
		--swiper-pagination-bullet-size: 12px;
		--swiper-nav-size: 50px;
		--swiper-nav-size-mobile: 10vw;
	}

	.ingredients-section .ingredient .description p {
		font-size: 18px;
		line-height: 2rem;
	}

	.ingredients-section .swiper-nav::after {
		height: var(--swiper-nav-size);
		display: flex;
		align-items: center;
		justify-content: center;
	}

	@media screen and (max-width: 768px) {
		:root {
			--swiper-navigation-sides-offset: var(--swiper-navigation-sides-offset-mobile);
		}

		.ingredients-section .swiper-nav::after {
			min-width: var(--swiper-nav-size-mobile);
			height: var(--swiper-nav-size-mobile);
			font-size: 20px;
			background: white;
		}
	}
</style>

{% schema %}
	{
		"name": "Ingredients",
		"disabled_on": {
			"groups": ["header", "footer"]
		},
		"settings": [
			{
				"type": "color",
				"id": "bg_color",
				"label": "Background Color"
			}
		],
		"blocks": [
			{
				"type": "text",
				"name": "Ingredient",
				"settings": [
					{
						"type": "image_picker",
						"id": "image",
						"label": "Customer Image"
					},
					{
						"type": "text",
						"id": "title",
						"label": "Ingredient Title"
					},
					{
						"type": "richtext",
						"id": "description",
						"label": "Description"
					}
				]
			}
		],
		"presets": [
			{
				"name": "Ingredients Section 2024"
			}
		]
	}
{% endschema %}
