{% if section.settings.main_title != blank %}
  {% render 'title', title: section.settings.main_title, title_tag: 'h2', subtitle: section.settings.main_subtitle, title_swoosh_color: section.settings.title_swoosh_color, span_color: section.settings.title_highlight_color, is_remove_padding_bottom: true %}
{% endif %}


<section id="items-collection-{{ section.id }}" class="{% if section.settings.is_decor_relative_full %}static{% endif %}">
  <div class="container {% if section.settings.is_decor_relative_full %}static{% endif %}">
    <{% if section.settings.is_slider %}swiper-container{% else %}div{% endif %} class="items z-10 items-center flex-wrap gap-y-8 flex justify-center overflow-visible m-auto" {% if section.settings.is_slider %}centered-slide="true" slides-per-view="auto" auto-height="{{ section.settings.is_auto_height }}" {% if section.settings.is_arrows %}navigation="true"{% endif %} {% if section.settings.is_dots %}pagination="true" pagination-clickable="true"{% endif %} {% if section.settings.is_ticker %}autoplay="{ delay: 1000, disableOnInteraction: false }"{% endif %} lazy="true"{% endif %}>
      {% for block in section.blocks %}
        <{% if section.settings.is_slider %}swiper-slide{% else %}div{% endif %} class="item relative {% if block.settings.is_hide_on_mobile %}md:hidden{% endif %}">
          <div class="item-content flex flex-col items-center p-4 md:p-1 text-center gap-4 m-auto">
            {% if block.settings.image %}<img class="max-h-250px m-0" src="{{ block.settings.image | image_url }}" alt="{{ blovariantsettings.title }}" loading="lazy">{% endif %}
            {% if block.settings.icon %}<i class="{{ block.settings.icon }}"></i>{% endif %}
            {% if block.settings.title %}<{{ section.settings.title_tag }} class="title-tag m-0">{{ block.settings.title }}</{{ section.settings.title_tag }}>{% endif %}
            {% if block.settings.description %}<p>{{ block.settings.description }}</p>{% endif %}
          </div>
        </{% if section.settings.is_slider %}swiper-slide{% else %}div{% endif %}>
      {% endfor %}
    </{% if section.settings.is_slider %}swiper-container{% else %}div{% endif %}>

    {% if section.settings.decor_img %}
      <img class="decor-img {% if section.settings.is_decor_remove_on_mobile %}md:hidden{% endif %} {% if section.settings.is_decor_bg %}w-full h-full object-cover{% endif %}" src="{{ section.settings.decor_img | image_url }}" alt="" loading="lazy">
    {% endif %}
  </div>
</section>

{% if section.settings.is_slider %}
  <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-element-bundle.min.js"></script>
{% endif %}

<style>
  #items-collection-{{ section.id }} .items {
    --swiper-theme-color: #000;
    --swiper-pagination-bottom: -9%;
    --swiper-navigation-size: 18px;
    --swiper-navigation-top-offset: 50%;
    --swiper-navigation-sides-offset: 0;

    width: {{ section.settings.collection_width }}%;
  }

  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
  }

  #items-collection-{{ section.id }} .item {
    width: calc(100% / {% if section.settings.items_in_row == 'all' %}{{ section.blocks.size }}{% else %}{{ section.settings.items_in_row }}{% endif %});
  }

  #items-collection-{{ section.id }} .item-content {
    max-width: {{ section.settings.item_content_width }}%;
    flex-direction: {{ section.settings.item_layout }};
    text-align: {{ section.settings.item_content_align }};
    justify-content: {{ section.settings.item_content_align }};
    color: {{ section.settings.text_color }};
  }

  #items-collection-{{ section.id }} .item-content svg {
    font-size: 30px;
  }

  {% if section.settings.padding_top != 50 and section.settings.padding_top != blank %}
    #items-collection-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
    }
  {% endif %}

  {% if section.settings.padding_bottom != 50 and section.settings.padding_top != blank %}
    #items-collection-{{ section.id }} {
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  {% endif %}

  {% if section.settings.padding_top_mobile != blank %}
    @media screen and (max-width: 768px) {
      #items-collection-{{ section.id }} {
        padding-top: {{ section.settings.padding_top_mobile }}vw;
      }
    }
  {% endif %}

  {% if section.settings.padding_bottom_mobile != blank %}
    @media screen and (max-width: 768px) {
      #items-collection-{{ section.id }} {
        padding-bottom: {{ section.settings.padding_bottom_mobile }}vw;
      }
    }
  {% endif %}

  {% if section.settings.is_remove_padding_bottom %}
    #items-collection-{{ section.id }} {
      padding-bottom: 0;
    }
  {% endif %}

  {% if section.settings.is_remove_padding_top %}
    #items-collection-{{ section.id }} {
      padding-top: 0;
    }
  {% endif %}

  @media screen and (max-width: 768px) {
    #items-collection-{{ section.id }} .items {
      width: 100%;
    }

    #items-collection-{{ section.id }} .item {
      {% assign itemsOnMobileCounter = section.blocks.size %}
      {% for block in section.blocks %}
        {% if block.settings.is_hide_on_mobile %}
          {% assign itemsOnMobileCounter = itemsOnMobileCounter | minus: 1 %}
        {% endif %}
      {% endfor %}
      width: calc(100% / {% if section.settings.items_in_row_mobile == 'all' %}{{ itemsOnMobileCounter }}{% else %}{{ section.settings.items_in_row_mobile }}{% endif %});
      max-width: unset;
    }

    #items-collection-{{ section.id }} .item-content {
      flex-direction: {{ section.settings.item_layout_mobile }};
      text-align: {{ section.settings.item_content_align_mobile }};
      justify-content: {{ section.settings.item_content_align_mobile }};
      max-width: unset;
    }
  }
</style>

{% if section.settings.is_bigger_center_item %}
{% assign centerPosition = section.blocks.size | divided_by: 2 | plus: 1 %}
{% assign centerElementSelector = "swiper-slide[aria-label='" | append: centerPosition | append: " / " | append: section.blocks.size | append: "']" %}
  <style>
    #items-collection-{{ section.id }} swiper-slide img {
      transition: .7s;
    }

    #items-collection-{{ section.id }} {{ centerElementSelector }} img {
      z-index: 1;
      transform: scale(1.3);
    }

    #items-collection-{{ section.id }} {{ centerElementSelector }} .title-tag {
      margin-top: 1.5em;
    }

    @media screen and (max-width: 768px) {
      {% if section.settings.is_bigger_center_item %}
        #items-collection-{{ section.id }} swiper-container {
          min-height: 110vw;
        }
      {% endif %}

      #items-collection-{{ section.id }} swiper-slide {
        padding: 0 10px;
      }

      #items-collection-{{ section.id }} swiper-slide img {
        transform: scale(0.8);
        margin-bottom: -2em;
      }

      #items-collection-{{ section.id }} {{ centerElementSelector }} img {
        transform: scale(0.8);
      }

      #items-collection-{{ section.id }} {{ centerElementSelector }} .title-tag {
        margin-top: 0;
      }

      #items-collection-{{ section.id }} swiper-slide.swiper-slide-active img {
        transform: scale(1) !important;
        margin-bottom: 0;
      }
    }
  </style>
{% endif %}

{% if section.settings.decor_img %}
  <style>
    #items-collection-{{ section.id }} .decor-img {
      position: absolute;
      z-index: {% if section.settings.is_decor_above %}2{% else %}1{% endif %};
      top: {{ section.settings.decor_position_top }}%;
      left: {{ section.settings.decor_position_left }}%;
      opacity: {{ section.settings.decor_opacity }}%;
      max-width: {{ section.settings.decor_max_width }}%;
    }

    @media screen and (max-width: 768px) {
      #items-collection-{{ section.id }} .decor-img {
        top: {{ section.settings.decor_position_top_mobile }}%;
        left: {{ section.settings.decor_position_left_mobile }}%;
      }
    }
  </style>
{% endif %}

