	{% if section.settings.items_slider_on != 'none' %}
    <script>
			document.addEventListener('DOMContentLoaded', function() {
				function initializeSliderFunctionality() {
					const itemsContainer = document.getElementById('items-container-{{ section.id }}');
					if (!itemsContainer) return;

					const isMobile = window.innerWidth <= 768;
					const sliderSetting = '{{ section.settings.items_slider_on }}';
					const arrows = document.querySelectorAll('#section-{{ section.id }} .swiper-nav');

					function shouldActivateSlider() {
						return sliderSetting === 'both' ||
									 (sliderSetting === 'mobile' && isMobile) ||
									 (sliderSetting === 'desktop' && !isMobile);
					}

					function activateSlider() {
						if (!itemsContainer.classList.contains('swiper')) {
							itemsContainer.classList.add('swiper');
							itemsContainer.classList.remove('items', 'flex', 'flex-wrap');

							const items = itemsContainer.querySelectorAll('.item');
							items.forEach(item => {
								if (!item.classList.contains('swiper-slide')) {
									item.classList.add('swiper-slide');
								}
							});

							// Initialize Swiper
							loadSwiper(() => {
								const swiperOptions = {
									spaceBetween: 15,
									grabCursor: true,
									slidesPerView: 'auto',
									autoHeight: {{ section.settings.is_auto_height }},
									{% if section.settings.is_arrows %}
									navigation: {
										nextEl: '#items-container-{{ section.id }} .swiper-button-next',
										prevEl: '#items-container-{{ section.id }} .swiper-button-prev',
									},
									{% endif %}
									{% if section.settings.is_dots %}
									pagination: {
										el: '#items-container-{{ section.id }} .swiper-pagination',
										clickable: true
									},
									{% endif %}
									breakpoints: {
										320: {
											slidesPerView: {{ section.settings.items_in_row_mobile }},
										},
										768: {
											slidesPerView: {% if section.settings.items_in_row != 'all' %}{{ section.settings.items_in_row }}{% else %}'auto'{% endif %}
										}
									}
								};

								new Swiper('#items-container-{{ section.id }}', swiperOptions);
							});

							arrows.forEach(arrow => arrow.style.display = '');
						}
					}

					function deactivateSlider() {
						if (itemsContainer.classList.contains('swiper')) {
							itemsContainer.classList.remove('swiper');
							itemsContainer.classList.add('items', 'flex', 'flex-wrap');
							// remove swiper-slide class from items but leave its children
							const swiperWrapper = itemsContainer.querySelector('.swiper-wrapper');
							swiperWrapper.classList.remove('swiper-wrapper');
							swiperWrapper.classList.add('contents');

							const items = itemsContainer.querySelectorAll('.item');
							items.forEach(item => item.classList.remove('swiper-slide'));

							arrows.forEach(arrow => arrow.style.display = 'none');
						}
					}

					// Initial setup
					if (shouldActivateSlider()) {
						activateSlider();
					} else {
						deactivateSlider();
					}

					// Handle resize events
					let resizeTimer;
					window.addEventListener('resize', function() {
						clearTimeout(resizeTimer);
						resizeTimer = setTimeout(function() {
							const newIsMobile = window.innerWidth <= 768;
							if (newIsMobile !== isMobile) {
								if (shouldActivateSlider()) {
									activateSlider();
								} else {
									deactivateSlider();
								}
							}
						}, 250);
					});
				}

				initializeSliderFunctionality();
			});
    </script>

