									#{{ itemID }} {
										background-image: url('{{ imageMobileLink | image_url }}') !important;
									}
								}
							{% endif %}
						</style>
					{% endif %}
				{% endif %}
			{% endfor %}
		</div>

			{% if section.settings.is_slider %}
				<div class="swiper-navigations">
					{% if section.settings.is_arrows %}
						<div class="swiper-nav swiper-button-next" name="track:Slider Arrow - Next"></div>
						<div class="swiper-nav swiper-button-prev" name="track:Slider Arrow - Preview"></div>
					{% endif %}
					{% if section.settings.is_dots %}
						<div class="swiper-pagination"></div>
					{% endif %}
					{% if section.settings.is_scrollbar %}
						<div class="swiper-scrollbar"></div>
					{% endif %}
				</div>
			{% endif %}

			{% if section.settings.is_slider %}</div>{% endif %}

			{% for block in section.blocks %}
				{% if block.type == 'decoration' and block.settings.decor_img != blank %}
					{% render 'decoration',
						id: block.id,
						decor_img: block.settings.decor_img,
						decor_position_top: block.settings.decor_position_top,
						decor_position_left: block.settings.decor_position_left,
						decor_position_top_mobile: block.settings.decor_position_top_mobile,
						decor_position_left_mobile: block.settings.decor_position_left_mobile,
						decor_opacity: block.settings.decor_opacity,
						decor_max_width: block.settings.decor_max_width,
						decor_max_width_mobile: block.settings.decor_max_width_mobile,
						is_decor_above: block.settings.is_decor_above,
						is_decor_bg: block.settings.is_decor_bg,
						is_decor_relative_full: block.settings.is_decor_relative_full,
						is_decor_remove_on_desktop: block.settings.is_decor_remove_on_desktop,
						is_decor_remove_on_mobile: block.settings.is_decor_remove_on_mobile
					%}
				{% endif %}
			{% endfor %}
		</div>
	</section>

	<script defer>
		function addToCartAndRedirect(variantId, sellingPlanId, giftVariantId) {
			let items = [{ id: variantId, quantity: 1 }];

			if (sellingPlanId) {
				items[0].selling_plan = sellingPlanId;
			}

			if (giftVariantId) {
				items.push({ id: giftVariantId, quantity: 1 });
			}

			fetch('/cart/clear.js', { method: 'POST' })
				.then(() => {
					return fetch('/cart/add.js', {
						method: 'POST',
						headers: {
							'Content-Type': 'application/json'
						},
						body: JSON.stringify({ items: items })
					});
				})
				.then(response => response.json())
				.then(data => {
					if (typeof window.dataLayer !== 'undefined') {
						window.dataLayer.push({
							'event': 'add_to_cart',
							'ecommerce': {
								'items': items.map(item => ({
									'item_id': item.id,
									'quantity': item.quantity
								}))
							}
						});
					}

					setTimeout(() => {
						window.location.href = '/checkout';
					}, 300);
				})
				.catch(error => {
					console.error('Error adding items to cart:', error);
					window.location.href = "/checkout";
				});

			return false;
		}
	</script>

	{% if section.settings.is_slider %}
		<script defer>
			// Define functions outside of DOMContentLoaded to avoid duplicate function creation
			const swiperFunctions = {
				getMaxHeightOfElements: function(selector) {
					let maxHeight = 0;
					document.querySelectorAll(selector).forEach(function(element) {
						element.style.height = '';
						maxHeight = Math.max(maxHeight, element.offsetHeight);
					});
					return maxHeight;
				},

				setHeightOfElements: function(selector, height) {
					// Use requestAnimationFrame to batch DOM manipulations
					requestAnimationFrame(() => {
						document.querySelectorAll(selector).forEach(function(element) {
							element.style.height = height + 'px';
						});
					});
				},

				adjustTitleHeight: function() {
					const titleMaxHeight = this.getMaxHeightOfElements("#section-{{ section.id }} .title-tag");
					this.setHeightOfElements("#section-{{ section.id }} .title-tag", titleMaxHeight);
				},

				initSwiper: function(itemsContainer) {
					// Use requestAnimationFrame to avoid layout thrashing
					requestAnimationFrame(() => {
						itemsContainer.classList.add('swiper');
						itemsContainer.classList.remove('items', 'flex', 'flex-wrap');
						const items = itemsContainer.querySelectorAll('.item');
						items.forEach(item => item.classList.add('swiper-slide'));

						loadSwiper(() => {
							let swiper = initializeSwiper('#items-container-{{ section.id }}', {
								spaceBetween: 15,
								initialSlide: 1,
								grabCursor: true,
								watchSlidesVisibility: true,
								slidesPerView: 'auto',
								autoHeight: {{ section.settings.is_auto_height }},
								{% if section.settings.is_arrows %}
								navigation: {
									nextEl: '#items-container-{{ section.id }} .swiper-button-next',
									prevEl: '#items-container-{{ section.id }} .swiper-button-prev',
								},
								{% endif %}
								{% if section.settings.is_dots %}
								pagination: {
									el: '#items-container-{{ section.id }} .swiper-pagination',
									clickable: true
								},
								{% endif %}
								{% if section.settings.is_scrollbar %}
								scrollbar: {
									el: '#items-container-{{ section.id }} .swiper-scrollbar'
								},
								{% endif %}
								{% if section.settings.is_ticker %}
								loop: true,
								speed: 1500,
								autoplay: {
									delay: 0,
									disableOnInteraction: false
								},
								{% elsif section.settings.slider_autoplay_speed > 0 %}
								loop: true,
								speed: {{ section.settings.slider_autoplay_speed }},
								autoplay: {
									delay: {{ section.settings.slider_autoplay_speed }},
								},
								{% endif %}
								lazy: true,
								breakpoints: {
									768: {
										slidesPerView: {{ section.settings.items_in_row_mobile }},
									},
									1200: {
										slidesPerView: {% if section.settings.items_in_row != 'all' %}{{ section.settings.items_in_row }}{% else %}'auto'{% endif %}
									}
								}
							});
						});
					});
				},

				deactivateSwiper: function(itemsContainer) {
					requestAnimationFrame(() => {
						itemsContainer.classList.remove('swiper');
						itemsContainer.classList.add('items', 'flex', 'flex-wrap');
						const items = itemsContainer.querySelectorAll('.item');
						items.forEach(item => item.classList.remove('swiper-slide'));
					});
				},

				hideArrows: function(arrows) {
					requestAnimationFrame(() => {
						arrows.forEach(arrow => arrow.style.display = 'none');
					});
				},

				showArrows: function(arrows) {
					requestAnimationFrame(() => {
						arrows.forEach(arrow => arrow.style.display = '');
					});
				}
			};

			// Create a debounce function for resize events
			const debounce = (func, delay) => {
				let timeout;
				return function(...args) {
					clearTimeout(timeout);
					timeout = setTimeout(() => func.apply(this, args), delay);
				};
			};

			// Use "load" event to initialize UI after content is fully loaded
			window.addEventListener('load', function() {
				const itemsContainer = document.getElementById('items-container-{{ section.id }}');
				if (!itemsContainer) return;

				// Handle UTM parameter visibility
				const displayOnUrlParameter = '{{ section.settings.display_on_utm_parmeters }}';
				if (displayOnUrlParameter) {
					const section = document.getElementById('section-{{ section.id }}');
					if (window.location.href.includes(displayOnUrlParameter)) {
						section.classList.remove('!hidden');
					} else {
						document.querySelectorAll('.shopify-section').forEach(shopifySection => {
							shopifySection.style.marginTop = '0';
						});
					}
				}

				let isMobile = window.innerWidth <= 768;
				const arrows = document.querySelectorAll('#section-{{ section.id }} .swiper-button-next, #section-{{ section.id }} .swiper-button-prev');

				{% if section.settings.items_in_row == 'all' %}
					if (isMobile) {
						swiperFunctions.initSwiper(itemsContainer);
						swiperFunctions.showArrows(arrows);
					} else {
						swiperFunctions.deactivateSwiper(itemsContainer);
						swiperFunctions.hideArrows(arrows);
					}
				{% else %}
					swiperFunctions.initSwiper(itemsContainer);
					swiperFunctions.showArrows(arrows);
				{% endif %}

				// Use passive event listener for better scroll performance
				window.addEventListener('resize', debounce(function() {
					const newIsMobile = window.innerWidth <= 768;
					if (isMobile !== newIsMobile) {
						isMobile = newIsMobile;
						{% if section.settings.items_in_row == 'all' %}
							if (isMobile) {
								swiperFunctions.initSwiper(itemsContainer);
								swiperFunctions.showArrows(arrows);
							} else {
								swiperFunctions.deactivateSwiper(itemsContainer);
								swiperFunctions.hideArrows(arrows);
							}
						{% endif %}
					}

					swiperFunctions.adjustTitleHeight.call(swiperFunctions);
				}, 250), { passive: true });

				// Initial adjustment after content is loaded
				swiperFunctions.adjustTitleHeight.call(swiperFunctions);
			});
		</script>

