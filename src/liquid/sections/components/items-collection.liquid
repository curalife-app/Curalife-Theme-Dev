<section id="items-collection-{{ section.id }}">
  <div class="container">
  <{% if section.settings.is_slider %}swiper-container{% else %}div{% endif %} class="items md:flex-col flex justify-center gap-16 overflow-visible" slides-per-view="auto" auto-height="true" space-between="30" navigation="true" pagination="true" pagination-clickable="true" lazy="true">
      {% for block in section.blocks %}
        <{% if section.settings.is_slider %}swiper-slide{% else %}div{% endif %} class="item md:max-w-full flex flex-col items-center text-center">
          <img class="max-h-250px" src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}" loading="lazy">
          <{{ section.settings.title_tag }} class="mt-4">{{ block.settings.title }}</{{ section.settings.title_tag }}>
          <p>{{ block.settings.description }}</p>
        </{% if section.settings.is_slider %}swiper-slide{% else %}div{% endif %}>
      {% endfor %}
    </{% if section.settings.is_slider %}swiper-container{% else %}div{% endif %}>
  </div>
</section>

{% if is_slider %}
  <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-element-bundle.min.js"></script>
{% endif %}

<style>
  .items {
    --swiper-theme-color: #000;
    --swiper-pagination-bottom: -9%;
    --swiper-navigation-size: 18px;
    --swiper-navigation-top-offset: 50%;
    --swiper-navigation-sides-offset: 0;
  }

  #items-collection-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
  }

  #items-collection-{{ section.id }} .item {
    max-width: calc(100% / {{ section.blocks.size }});
  }
</style>

{% schema %}
{
  "name": "Items collection",
  "class": "items-collection",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "checkbox",
      "id": "is_slider",
      "label": "Slider Functionality"
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "Title Tag",
      "options": [
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        }
      ],
      "default": "h5"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Items collection"
    }
  ]
}
{% endschema %}