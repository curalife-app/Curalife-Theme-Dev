		<div class="container main-container {% if section.settings.is_decor_relative_full %}static{% endif %}">
			{% assign mainTitle = section.settings.main_title | default: section.settings.main_title_rich %}
			{% if mainTitle != blank or section.settings.main_subtitle != blank %}
				{% render 'title', section_id: section.id, title: mainTitle, title_tag: 'h2', subtitle: section.settings.main_subtitle, title_color: section.settings.title_color, subtitle_color: section.settings.title_color, span_color: section.settings.title_highlight_color, is_balance_text: true, padding_bottom: 30, padding_top: 0 %}
			{% endif %}

			{% if section.settings.is_slider %}
				<div class="swiper items !overflow-{{ section.settings.overflow }} z-10 {% if section.settings.is_dots or section.settings.is_scrollbar %}!pb-12{% endif %}" id="items-container-{{ section.id }}" {% if section.settings.animation %}data-aos="{{ section.settings.animation }}"{% endif %}>
					<div class="swiper-wrapper justify-between">
			{% else %}
				<div class="items !overflow-{{ section.settings.overflow }} z-10 flex flex-wrap {% if section.settings.items_align == 'center' %}items-center{% else %}items-start{% endif %} {% if section.settings.collection_align == 'center' %}m-auto{% endif %} justify-center overflow-visible" id="items-container-{{ section.id }}" {% if section.settings.animation %}data-aos="{{ section.settings.animation }}"{% endif %}>
			{% endif %}

			{% assign itemsCounter = 0 %}
			{% for block in section.blocks %}
				{% if block.type == 'item' %}
					{% assign itemsCounter = itemsCounter | plus: 1 %}

					{% if shop.name == 'CuraLife Global' %}
						{% assign imageLink = block.settings.image_global | default: block.settings.image %}
						{% assign imageMobileLink = block.settings.image_mobile_global | default: block.settings.image_mobile %}
						{% assign linkUrl = block.settings.link_url_global | default: block.settings.link_url %}
						{% assign variantId = block.settings.variant_id_global | default: block.settings.variant_id %}
						{% assign sellingPlanId = block.settings.selling_plan_id_global | default: block.settings.selling_plan_id %}
						{% assign giftVariantId = block.settings.gift_variant_id_global | default: block.settings.gift_variant_id %}
					{% else %}
						{% assign imageLink = block.settings.image %}
						{% assign imageMobileLink = block.settings.image_mobile %}
						{% assign linkUrl = block.settings.link_url %}
						{% assign variantId = block.settings.variant_id %}
						{% assign sellingPlanId = block.settings.selling_plan_id %}
						{% assign giftVariantId = block.settings.gift_variant_id %}
					{% endif %}

					{% if variantId != blank %}
						{% assign baseUrl = "#" %}
						{% assign cartAddFunction = "addToCartAndRedirect('" | append: variantId | append: "'" %}

						{% if sellingPlanId != blank %}
							{% assign cartAddFunction = cartAddFunction | append: ", '" | append: sellingPlanId | append: "'" %}
						{% else %}
							{% assign cartAddFunction = cartAddFunction | append: ", null" %}
						{% endif %}

						{% if giftVariantId != blank %}
							{% assign cartAddFunction = cartAddFunction | append: ", '" | append: giftVariantId | append: "'" %}
						{% else %}
							{% assign cartAddFunction = cartAddFunction | append: ", null" %}
