<section id="hero-banner-{{ section.id }}" class="hero-banner flex items-center justify-center h-[500px] bg-{{ section.settings.bg_position }} {% if section.settings.is_split_image_text_on_mobile %}md:flex md:flex-col md:gap-4 md:!h-auto md:pt-0{% endif %}">
  {% if section.blocks.size > 0 %}
<div class="background absolute {% if section.settings.is_split_image_text_on_mobile %}md:static{% endif %} w-full h-full">
<div class="images {% if section.settings.is_split_image_text_on_mobile %}md:relative md:h-[90vw]{% endif %}">
        {% for block in section.blocks %}
          <img class="img absolute h-full w-full object-cover desktop" src="{{ block.settings.img | image_url }}" alt="">
          <img class="img-mobile absolute h-full w-full object-cover mobile" src="{{ block.settings.img_mobile | image_url }}" alt="">
        {% endfor %}
      </div>
    </div>
  {% endif %}

  <div class="md:justify-{{ section.settings.mobile_alignment }} container !w-full flex flex-col justify-{{ section.settings.vertical_align_desktop }} {% if section.settings.text_align == 'center' %}items-center{% endif %}">
    <h1 class="w-1/2 md:w-full text-{{ section.settings.text_align }} md:text-{{ section.settings.text_align_mobile }} font-thin {% if section.settings.text_align == 'center' %}m-auto{% endif %}">
      {% if section.settings.flip %} <span class="font-bold">{{ section.settings.big_title }}</span> <br>
        {% if section.settings.small_title %}<span class="small-title">{{ section.settings.small_title }}</span>{% endif %}
      {% else %}
        {% if section.settings.small_title %}<span class="small-title mb-2">{{ section.settings.small_title }}</span>{% endif %}
        <br {% if section.settings.is_disable_br_desktop %}class="mobile"{% endif %}>
        <span class="big-title font-bold">{{ section.settings.big_title }}</span>
      {% endif %}
    </h1>

    {% if section.settings.button_link != blank %}
      <a class="md:mt-4" href="{{ section.settings.button_link }}" {% if section.settings.is_button_link_new_window %}target="_blank"{% endif %}><button>{{ section.settings.button_title }}</button></a>
    {% endif %}
  </div>
</section>

<style>
  {% if section.settings.is_title_border %}
    #hero-banner-{{ section.id }} h1 .big-title {
      text-shadow: -1px 0 white, 0 2px white, 1px 0 white, 0 3px white;
    }
  {% endif %}

  #hero-banner-{{ section.id }} {
  {% if section.settings.bg_image %}background-image: url('{{ section.settings.bg_image | image_url }}');{% endif %}
    background-size: cover;
    background-repeat: no-repeat;
  }

  #hero-banner-{{ section.id }} h1 {
    {% if section.settings.title_color %}color: {{ section.settings.title_color }};{% endif %}
    {% if section.settings.is_title_right %}margin-inline-start: 50%;{% endif %}
    {% if section.settings.is_title_shadow %}text-shadow: 0px 0px 8px rgba(0, 0, 0, 0.55);{% endif %}
  }

  #hero-banner-{{ section.id }} h1 .small-title {
    {% if section.settings.flip %}padding-top: 20px;{% endif %}
    display: inline-block;
    font-size: 35px;
  }

  #hero-banner-{{ section.id }} .bottom-content p {
    position: relative;
    bottom: 0;
    text-align: center;
    margin: auto;
    margin-inline: auto;
    margin-bottom: -100px;
  }

  section.hero-banner a {
    width: fit-content;
  }

  #hero-banner-{{ section.id }} a button {
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_title_color }};
  }

  #hero-banner-{{ section.id }} .images img {
    position: absolute;
    height: 100%;
    opacity: 0;
    transition: opacity 1s ease-in-out;
  }

  #hero-banner-{{ section.id }} .images.right img {
    left: 50%;
  }

  @media (max-width: 768px) {
    {% if section.settings.bg_image_mobile %}
      #hero-banner-{{ section.id }} {
        background-image: url('{{ section.settings.bg_image_mobile | image_url }}');
      }
    {% endif %}

    section.hero-banner h1 {
      max-width: 100%;
      margin-inline-start: unset !important;
    }

    section.hero-banner h1 .small-title {
      font-size: 5vw;
    }
  }
</style>

{% if section.blocks.size > 1 %}
<script>
  const animationDelay = {{ section.settings.animation_delay }} * 1000;

  function animateImages(className) {
    const images = document.querySelectorAll(className);
    let index = 0;

    if (images[index]) {
      images[index].style.opacity = 1;
    }

    setInterval(() => {
      images.forEach(img => img.style.opacity = 0);

      index = (index + 1) % images.length;

      if (images[index]) {
        images[index].style.opacity = 1;
      }

    }, animationDelay);
  }

  if (window.innerWidth <= 768) {
    animateImages('.img-mobile');
  } else {
    animateImages('.img.desktop');
  }
</script>
{% endif %}

