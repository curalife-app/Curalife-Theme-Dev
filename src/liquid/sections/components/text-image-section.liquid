{% render 'text-image',
  bg_color: section.settings.bg_color,
  text_color: section.settings.text_color,
  main_image: section.settings.image,
  main_mobile_image: section.settings.image_mobile,
  title: section.settings.title,
  subtitle: section.settings.subtitle,
  content: section.settings.content,
  link_url_1: section.settings.link_url_1,
  link_title_1: section.settings.link_title_1,
  link_url_2: section.settings.link_url_2,
  link_title_2: section.settings.link_title_2,
  button_title: section.settings.button_title,
  button_link: section.settings.button_link,
  button_icon: section.settings.button_icon,
  button_color: section.settings.button_color,
  button_text_color: section.settings.button_text_color,
  title_swoosh_color: section.settings.title_swoosh_color,
  content_width: section.settings.content_width,
  text_size: section.settings.text_size,
  title_tag: section.settings.title_tag,
  image_position: section.settings.image_position,
  alignment: section.settings.alignment,
  mobile_alignment: section.settings.mobile_alignment,
  is_no_p_margin: section.settings.is_no_p_margin,
  is_dynamic_height: section.settings.is_dynamic_height,
  is_image_cover: section.settings.is_image_cover,
  is_hide_image_on_mobile: section.settings.is_hide_image_on_mobile,
  is_image_middle_mobile: section.settings.is_image_middle_mobile,
  is_image_bottom: section.settings.is_image_bottom,
  is_image_overlap: section.settings.is_image_overlap,
  is_limit_image_size: section.settings.is_limit_image_size,
  is_remove_padding_top: section.settings.is_remove_padding_top,
  is_remove_padding_bottom: section.settings.is_remove_padding_bottom,
  is_button_link_new_window: section.settings.is_button_link_new_window,
  is_decor_above: section.settings.is_decor_above,
  is_full_width: section.settings.is_full_width,
  decor_img: section.settings.decor_img,
  decor_opacity: section.settings.decor_opacity,
  decor_position_top: section.settings.decor_position_top,
  decor_position_left: section.settings.decor_position_left,
  decor_position_top_mobile: section.settings.decor_position_top_mobile,
  decor_position_left_mobile: section.settings.decor_position_left_mobile,
  number: section.settings.number,
  limit_height: section.settings.limit_height,
  section_id: section.id %}

{% schema %}
{
  "name": "Text with Image",
  "tag": "section",
  "class": "text-image-section no-padding",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image on Mobile (optional)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "number",
      "label": "Number"
    },
    {
      "type": "header",
      "content": "Links"
    },
    {
      "type": "text",
      "id": "link_title_1",
      "label": "Link Title 1"
    },
    {
      "type": "url",
      "id": "link_url_1",
      "label": "Link URL 1"
    },
    {
      "type": "text",
      "id": "link_title_2",
      "label": "Link Title 2"
    },
    {
      "type": "url",
      "id": "link_url_2",
      "label": "Link URL 2"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_title",
      "label": "Button Title"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_icon",
      "label": "Button Icon (fontawesome class)"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color"
    },
    {
      "type": "select",
      "id": "title_swoosh_color",
      "label": "Title Decoration Color (<strong>)",
      "options": [
        {
          "value": "grey",
          "label": "Grey"
        },
        {
          "value": "white",
          "label": "White"
        },
        {
          "value": "brown",
          "label": "Brown"
        },
        {
          "value": "green",
          "label": "Green"
        }
      ]
    },
    {
      "type": "header",
      "content": "More Options"
    },
    {
      "type": "range",
      "id": "content_width",
      "label": "Content Width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 45
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text Size",
      "min": 5,
      "max": 40,
      "step": 1,
      "unit": "px",
      "default": 18
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "Title Tag",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        }
      ],
      "default": "h2"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "top",
          "label": "Top"
        }
      ],
      "default": "right"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "start"
    },
    {
      "type": "select",
      "id": "mobile_alignment",
      "label": "Text Alignment on Mobile",
      "options": [
        {
          "value": "start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "start"
    },
    {
      "type": "number",
      "id": "limit_height",
      "label": "Limit Height"
    },
    {
      "type": "checkbox",
      "id": "is_full_width",
      "label": "Full Width"
    },
    {
      "type": "checkbox",
      "id": "is_no_p_margin",
      "label": "Remove Paragraph Margins"
    },
    {
      "type": "checkbox",
      "id": "is_dynamic_height",
      "label": "Dynamic Height"
    },
    {
      "type": "checkbox",
      "id": "is_image_cover",
      "label": "Image Fit - Cover"
    },
    {
      "type": "checkbox",
      "id": "is_hide_image_on_mobile",
      "label": "Hide Image On Mobile"
    },
    {
      "type": "checkbox",
      "id": "is_image_middle_mobile",
      "label": "Put Image After the Title on Mobile"
    },
    {
      "type": "checkbox",
      "id": "is_image_bottom",
      "label": "Stick Image to Bottom"
    },
    {
      "type": "checkbox",
      "id": "is_image_overlap",
      "label": "Image Overlaps Container"
    },
    {
      "type": "checkbox",
      "id": "is_limit_image_size",
      "label": "Limit Image Size (500px height)"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "checkbox",
      "id": "is_remove_padding_top",
      "label": "Remove padding top"
    },
    {
      "type": "checkbox",
      "id": "is_remove_padding_bottom",
      "label": "Remove padding bottom"
    },
    {
      "type": "checkbox",
      "id": "is_button_link_new_window",
      "label": "Open Button Link in New Window"
    },
    {
      "type": "header",
      "content": "Decoration Image"
    },
    {
      "type": "image_picker",
      "id": "decor_img",
      "label": "Decoration Image"
    },
    {
      "type": "range",
      "id": "decor_opacity",
      "label": "Decoration Opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100
    },
    {
      "type": "range",
      "id": "decor_position_top",
      "label": "Decoration Position Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 0
    },
    {
      "type": "range",
      "id": "decor_position_left",
      "label": "Decoration Position Left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 0
    },
    {
      "type": "range",
      "id": "decor_position_top_mobile",
      "label": "Decoration Mobile Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 0
    },
    {
      "type": "range",
      "id": "decor_position_left_mobile",
      "label": "Decoration Mobile Left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "is_decor_above",
      "label": "Decoration Above Content"
    }
  ],
  "presets": [
    {
      "name": "Text with Image"
    }
  ]
}
{% endschema %}