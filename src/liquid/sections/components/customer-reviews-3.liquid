<section class="customer-reviews">
  <div class="container relative">
    <div class="reviews swiper overflow-visible">
      <div class="swiper-wrapper">
        {% for review in section.blocks %}
          <div class="review swiper-slide {% unless review.settings.image %}no-image{% endunless %}">
            <div class="review-wrapper flex flex-col text-center p-6 bg-[--light-blue] !h-[600px] md:!h-fit rounded-xl md:m-auto md:w-[90%]">
              {% if review.settings.image %}
                <img class="my-4" src="{{ review.settings.image | img_url: 'master' }}" alt="{{ review.settings.name }}">
              {% endif %}
              <div class="name text-[26px] text-[#3A7684] mb-4">{{ review.settings.name }}</div>
              <div class="title font-italic mb-8 font-bold text-black">{{ review.settings.title }}</div>
              <div class="stars pb-6 text-center">{% for star in (1..5) %}<i class="fa-sharp fa-solid fa-star text-[#FFB22D] mr-1"></i>{% endfor %}</div>
              <blockquote class="quote p-0 text-black border-0">{{ review.settings.quote }}</blockquote>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="swiper-nav swiper-button-prev desktop"></div>
    <div class="swiper-nav swiper-button-next desktop"></div>
    <div class="swiper-pagination mobile"></div>
  </div>
</section>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

<style>
  :root {
    --swiper-navigation-sides-offset: -40px;
    --swiper-navigation-sides-offset-mobile: -8vw;
    --swiper-pagination-bullet-height: 12px;
    --swiper-pagination-bullet-size: 12px;
    --color-primary: #3A7684;
    --color-star: #FFB22D;
    --swiper-nav-size: 50px;
    --swiper-nav-size-mobile: 10vw;
  }

  .customer-reviews .review.no-image .name {
    margin-top: 60px;
    font-size: 26px;
  }

  .customer-reviews .review.no-image .quote {
    font-size: 26px;
  }

  .customer-reviews .review:not(.no-image) .stars {
    position: absolute;
    bottom: 0;
  }

  .customer-reviews .swiper-nav::after {
    color: var(--color-primary);
    background: white;
    border: 2px solid var(--color-primary);
    border-radius: 50%;
    min-width: var(--swiper-nav-size);
    height: var(--swiper-nav-size);
    font-size: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media screen and (max-width: 768px) {
    :root {
      --swiper-navigation-sides-offset: var(--swiper-navigation-sides-offset-mobile);
    }

    .customer-reviews .swiper-nav::after {
      min-width: var(--swiper-nav-size-mobile);
      height: var(--swiper-nav-size-mobile);
      font-size: 20px;
    }

    .customer-reviews .swiper-pagination {
      bottom: var(--swiper-navigation-sides-offset-mobile);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const swiper = new Swiper('.customer-reviews .swiper', {
      grabCursor: true,
      slidesPerView: 3,
      loop: true,
      spaceBetween: 30,
      autoplay: { delay: 5000 },
      navigation: {
        nextEl: '.customer-reviews .swiper-button-next',
        prevEl: '.customer-reviews .swiper-button-prev',
      },
      pagination: {
        el: '.customer-reviews .swiper-pagination',
        clickable: true
      },
      breakpoints: {
        320: { slidesPerView: 1, spaceBetween: 10, autoHeight: true },
        501: { slidesPerView: 2, spaceBetween: 20 },
        725: { slidesPerView: 3, spaceBetween: 30 }
      }
    });
  });
</script>

