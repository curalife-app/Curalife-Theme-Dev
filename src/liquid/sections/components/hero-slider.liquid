<section class="hero-banner">
  <h1 class="hidden">Curalife - Clean, natural, effective products you can trust</h1>

  <div class="slides-container">
    {% for block in section.blocks %}
      <div class="slide flex items-center" style="background-color: {{ block.settings.slide_bg_color }};">
        <div class="slide-content">
          {% if block.settings.title %}
            <span class="small-title">{{ block.settings.title }}</span>
          {% endif %}

          {% if block.settings.subtitle %}
            <h2>{{ block.settings.subtitle }}</h2>
          {% endif %}

          {% if block.settings.slide_button_title and block.settings.slide_button_link %}
            <a href="{{ block.settings.slide_button_link }}" {% if block.settings.slide_is_button_link_new_window %}target="_blank"{% endif %}>
              <button>{{ block.settings.slide_button_title }}</button>
            </a>
          {% endif %}
        </div>

        {% if block.settings.image %}
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .hero-banner {
    position: relative;
    height: 500px;
    overflow: hidden;
  }

  .hero-banner .slides-container {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .hero-banner .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-banner .slide-content {
    text-align: center;
  }

  .hero-banner .small-title, .hero-banner h1 {
    color: {{ section.settings.title_color }};
    text-shadow: {% if section.settings.is_title_shadow %}0px 0px 8px rgba(0, 0, 0, 0.55){% else %}none{% endif %};
  }

  .hero-banner a button {
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_title_color }};
  }

  /* First slide visible by default */
  .hero-banner .slide:first-child {
    opacity: 1;
  }
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const slides = document.querySelectorAll(".hero-banner .slide");
  let currentSlide = 0;

  function changeSlide() {
    slides[currentSlide].style.opacity = 0;
    currentSlide = (currentSlide + 1) % slides.length;
    slides[currentSlide].style.opacity = 1;
  }

  setInterval(changeSlide, 5000); // Change slide every 5 seconds
});
</script>

{% schema %}
{
  "name": "Dynamic Hero Slider",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "color",
          "id": "slide_bg_color",
          "label": "Slide Background Color"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Main Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        },
        {
          "type": "text",
          "id": "slide_button_title",
          "label": "Slide Button Title"
        },
        {
          "type": "url",
          "id": "slide_button_link",
          "label": "Slide Button Link"
        },
        {
          "type": "checkbox",
          "id": "slide_is_button_link_new_window",
          "label": "Open Slide Button Link in New Window",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default Hero Slider",
      "category": "Hero"
    }
  ]
}
{% endschema %}