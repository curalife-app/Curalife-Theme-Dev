<div class="blog-page">
  <div class="container">
    <div class="mini-wrap">
      {% paginate blog.articles by 9 %}
      <div class="page-title">
        <div class="sub-title">
          <h1>{{ blog.title }}</h1>
          <p>{{ section.settings.blg_des }}</p>
        </div>

        <div class="blog-category">
          <div class="category-wrap">
            <div class="touch-scroll">
              <div class="scroll-wrap">
                <ul>
                  <li  {% if current_tags == blank  %} class="active" {% endif%} ><a href="{{ blog.url }}">All</a></li>
                  {% for tag in blog.all_tags %}
                  {% assign crTag = tag  %}
                  {% if current_tags contains crTag  %}
                  {% assign cls="active" %}
                  {% else %}
                  {% assign cls="" %}
                  {% endif %}
                  <li class="{{cls}}"  > <a href="{{ blog.url }}/tagged/{{ tag | handleize }}">{{ tag }}</a></li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="article-list">
        {% for article in blog.articles %}
          {% if forloop.index <= 2 %}
            {% assign desc = true %}
          {% else %}
            {% assign desc = false %}
          {% endif %}
          {% render 'blog-card-grid', article: article, description: desc %}
        {% endfor %}
      </div>
      {%- if paginate.pages > 1 -%}
      {% assign totalPage = paginate.pages %}
          {% render 'blog-pagination', paginate: paginate, totalPage:totalPage %}
        {%- endif -%}
      {% endpaginate %}
    </div>
  </div>
</div>

{% render 'newsletter-form' %}

<style>
  .blog-page {
      padding-bottom: 50px;
  }
  .container {
      position: relative;
      width: 100%;
      height: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 15px;
  }
  .mini-wrap {
      width: 100%;
      max-width: 1230px;
      margin: 0 auto;
      padding: 0 35px;
  }
  .page-title {
      margin-top: 3%;
      padding: 27px 0;
  }
  .sub-title {
      text-align: center;
      color: var(--dark);
      margin-bottom: 30px;
  }
  .sub-title h1, .sub-title h2 {
      margin: 0;
      font-weight: 800;
      font-size: 48px;
      line-height: 1.3;
  }
  .sub-title p {
      margin: 0;
      padding-top: 23px;
      font-weight: 400;
      font-size: 20px;
      line-height: 1.6;
  }
  .page-title .sub-title p {
      padding-top: 17px;
      color: var(--dark-grey);
  }
  .blog-category {
      padding-top: 15px;
      display: flex;
      justify-content: center;
  }
  .blog-category .category-wrap {
      max-width: 100%;
      padding: 0 10px;
  }
  .touch-scroll {
      width: 100%;
  }
  .touch-scroll .scroll-wrap {
      display: flex;
      flex-wrap: nowrap;
      overflow: hidden;
  }

  .blog-category ul {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
  }
  .blog-category ul li {
      display: flex;
      text-align: center;
      margin-bottom: 10px;
      padding-right: 13px;
  }
  .blog-category ul li a {
      display: flex;
      align-items: center;
      padding: 10px 15px;
      font-weight: 400;
      font-size: 18px;
      line-height: 1;
      letter-spacing: -.284583px;
      color: var(--green);
      white-space: nowrap;
      border: 1px solid var(--green);
      border-radius: 5px;
      transition: color var(--transition),border-color var(--transition),background-color var(--transition);
  }
  .blog-category ul li.active a {
      color: #fff;
      background: var(--green);
  }
  .article-list {
      display: flex;
      flex-wrap: wrap;
  }

  .article-card {
      width: 33.3333333333%;
      display: flex;
      flex-direction: column;
      padding: 17px 10px;
  }
  .article-list .article-card:first-child {
      width: 100%;
      flex-direction: row;
  }
  .article-card .picture {
      overflow: hidden;
      position: relative;
      border-radius: 5px;
  }
  .article-list .article-card:first-child .picture {
      width: 57.7%;
  }
  .article-card .picture:before {
      content: "";
      display: block;
      padding-bottom: 83%;
      pointer-events: none;
  }
  .article-list .article-card:first-child .picture:before {
      padding-bottom: 57.7%;
  }
  .article-card .picture .main-link {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 3;
  }
  .article-card .picture img {
      width: 100%;
      height: 100%;
      -o-object-fit: cover;
      object-fit: cover;
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      will-change: transform;
      transition: transform .7s ease-in-out;
  }

  .article-card .picture .category {
      max-width: 100%;
      padding: 17px 20px;
      background: var(--green);
      border-radius: 0 2px 2px 0;
      position: absolute;
      left: 0;
      bottom: 20px;
      z-index: 3;
  }
  .article-card .picture .category p {
      margin: 0;
      font-weight: 400;
      font-size: 16px;
      line-height: 1;
      letter-spacing: -.284583px;
      color: #fff;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
  }
  .article-card .info {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      flex: 1;
  }
  .article-card .info .main-info {
      padding-right: 10px;
  }
  .article-list .article-card:first-child .info .main-info {
      padding: 0 5%;
  }
 

  @media screen and (max-width: 1590px) {
    .mini-wrap {
        max-width: 1110px;
    }
    .page-title {
        margin-top: 3%;
        padding: 23px 0;
    }
    .sub-title h1, .sub-title h2 {
        font-size: 36px;
    }
    .sub-title p {
        padding-top: 19px;
        font-size: 18px;
    }
    .blog-category {
        padding-top: 57px;
    }
    .article-card .picture .category {
        padding: 15px 20px;
    }
    .article-card .picture .category p {
        font-size: 14px;
    }
  }

  @media screen and (max-width: 1430px) {
    .mini-wrap {
        max-width: 990px;
    }
  }

  @media screen and (max-width: 1270px) {
    .mini-wrap {
        max-width: 798px;
    }
    .page-title {
        margin-top: 2%;
    }
    .sub-title h1, .sub-title h2 {
        font-size: 28px;
    }
    .sub-title p {
        padding-top: 8px;
        font-size: 14px;
    }
    .page-title .sub-title p {
        padding-top: 7px;
    }
  }
  @media screen and (max-width: 1200px) {
    .sub-title h1, .sub-title h2 {
        font-size: 32px;
    }
    .sub-title p {
        padding-top: 17px;
        font-size: 16px;
    }
    .blog-category {
        padding-top: 46px;
    }
    .article-card {
        padding: 12px 8px;
    }
    .article-card .picture .category {
        padding: 13px 14px;
        bottom: 14px;
    }
  }
 
  @media screen and (max-width: 768px){
    .blog-page {
        padding-bottom: 100px;
    }
    .page-title {
        padding: 15px 0;
    }
    .sub-title h1 {
        font-size: 10vw;
        text-align: center;
    }
    .sub-title p {
        padding-top: 25px;
        font-size: 16px;
        line-height: 1.44;
    }
    .page-title .sub-title p {
        padding: 13px 15px 0;
    }
    .blog-category {
        padding-top: 20px;
    }
    .article-card {
        width: 50%;
        padding: 12px 8px;
    }
    .article-list .article-card:first-child {
        flex-direction: column;
    }
    .article-list .article-card:first-child .picture {
        width: 100%;
    }
    .article-list .article-card .picture:before {
        padding-bottom: 67.7%;
    }
    .article-list .article-card:first-child .picture:before {
        padding-bottom: 67.7%;
    }
    .article-card .picture .category {
        padding: 17px 20px;
        bottom: 24px;
    }
    .article-card .picture .category p {
        font-size: 16px;
    }
    .article-list .article-card:first-child .info .main-info {
        padding: 0;
    }
  }
  
</style>

