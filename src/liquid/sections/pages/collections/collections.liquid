{%- comment -%} If store is US {%- endcomment -%}
{% if shop.name == 'CuraLife' %}
  {% assign collections_handles = "glucose-support,joint-care,sleep,immune-care,multivitamins,bundles" | split: "," %}
{% elsif shop.name == "CuraLife Global" %}
  {% assign collections_handles = "glucose-support" | split: "," %}
{% endif %}

<img class="desktop" src="{{ 'easter-sale-banner-collection-desktop.png' | asset_url }}" style="width:100%">
<img class="mobile" src="{{ 'easter-sale-banner-collection-mb.svg' | asset_url }}" style="width:100%">

{% render 'collection-catalog-section', isDescription: true, isAll: true, isSlideMenu: true, collectionsHandles: collections_handles %}

{% for collection_handle in collections_handles %}
  {% if forloop.last %}
    {% assign isLastRender = true %}
  {% endif %}

  {% render 'collection-category-badges', collection: collections[collection_handle], isLastRender: isLastRender %}
{% endfor %}

{% render 'collection-badges' %}

{% render 'script.round-converted-currency' %}