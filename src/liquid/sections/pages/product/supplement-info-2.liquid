<script>
  $(document).ready(function() {
      $('.supplement-info .tab').click(function() {
          var index = $(this).index();
          $('.supplement-info .tab').removeClass('active');
          $(this).addClass('active');

          $('.supplement-info .content.active').fadeOut(300, function() {
              $(this).removeClass('active');

              $('.supplement-info .content').eq(index).fadeIn(300).addClass('active');
          });
      });
  });
</script>

<style>
  .supplement-info {
    background-color: var(--blue);
    color: white;

    a:has(button) {
      display: flex;
      bottom: -80px;
      position: relative;
      z-index: 9999;
      justify-content: center;

      button {
        color: black;
        background: var(--orange);
      }
    }

    .tabs {
      display: flex;
      gap: 2rem;
      margin-bottom: 2rem;

      .tab {
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
        text-align: center;
        padding: 1rem;
        background-color: var(--blue);
        color: white;
        width: 250px;
        border-radius: 30px;
        border-color: white;
        border-width: 1px;
        transition: background-color 0.3s ease-in-out;

        &.active,
        &:hover {
          cursor: pointer;
          background-color: var(--light-blue);
          color: var(--blue);
          font-weight: bold;
        }
      }
    }

    .content-wrapper {
      .content {
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
        display: none;
        position: relative;

        &.active {
          display: block;
        }

        ul {
          li {
            &:before {
              background: var(--orange);
            }

            b {
              color: var(--orange);
            }
          }
        }
      }
    }
  }

  @media screen and (max-width: 768px) {
    .supplement-info {
      .tabs {
        gap: 0.5rem;

        .tab {
          font-size: 4vw;
        }
      }

      a:has(button) {
        bottom: -17vw;
      }
    }
  }
</style>

