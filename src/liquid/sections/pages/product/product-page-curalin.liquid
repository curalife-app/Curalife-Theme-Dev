{% if product.tags contains "sleep" %}
  {% assign title_color = "var(--dark-turquoise)" %}
{% else %}
  {% assign title_color = "var(--dark-orange)" %}
{% endif %}

<div id="supplement-page">
  {% comment %} {% render 'product-cta-section', ctaTextType: "total",  isCuralinContent: isCuralinBundled, title: "Select Your Deal:", badgesPosition: "cta", badgesContent: "free-shipping,money-back", isHighlightSubtitle: true, isReversed: true, ctaColor: "var(--orange)", bottomLineColor: "var(--light-green)", defaultSelectionIndex: 2, isPricePerUnit: true, isReviews: true %} {% endcomment %}
  {% render 'product-benefits-section' %}
  {% render 'curalin-pack-info', product: product %}
  {% render 'curalin-supplement-info-section' %}
  {% render 'curalin-ingredients-section', product: product %}
  {% render 'product-back-to-top-button', isThirtyDay: true, ctaTitle: "SHOP NOW", textColor: 'white' %}
</div>

<style>
  #benefits-section .health-benefits .health-benefit {
    display: none !important;
  }
</style>

<script>
  window.dataLayer = window.dataLayer || [];
  window.dataLayer.push({
    event: 'view_item',
    ecommerce: {
      items: [{
        item_name: '{{ product.title }}',
        item_id: '{{ product.title }}',
        affiliation: '{{ shop.name }}',
        price: '',
        currency: '{{ shop.currency }}',
        item_brand: 'CuraLife',
        item_category: 'CuraLin',
        quantity: 1
      }]
    },
    email: '{{ customer.email }}',
    phone: '{{ customer.phone }}',
    name: '{{ customer.first_name }}',
    surname: '{{ customer.last_name }}',
    city: '{{ customer.customer_address.city }}',
    state: '{{ customer.customer_address.province }}',
    zip: '{{ customer.customer_address.zip }}',
    country: '{{customer.customer_address.country_code | t}}',
    user_agent: navigator.userAgent
  });
</script>