      align-items: center;
      justify-content: center;
      gap: 30px;
      padding-top: 30px;
  }

  .badges ul li {
      display: block;
      width: 100px;
      padding: 4px;
      text-align: center;
  }

   .badges ul li img {
      -o-object-fit: contain;
      object-fit: contain;
  }

  @media screen and (max-width: 768px) {
    .advantages-section {
        padding-top: 41px;
    }

    .badges ul {
        gap: 0;
    }

    .story-section .sub-title {
      padding-bottom: unset;
    }

    .advantages-wrap ul li {
        width: 40%;
        padding: 10px;
    }

    .advantages-wrap ul li .name p {
        font-size: 16px;
        line-height: 1.37;
    }

    .story-section {
