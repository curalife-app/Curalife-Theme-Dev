<div class="health-three-ai">
   <div class="health-swoosh">
    <img src="{{'health-ai-swoosh.png' | asset_url}}" width="522" height="337" alt="">
   </div>
    <div class="container">
        <div class="ai-wrapper">

        <div class="img-ai">
            <img src="{{ section.settings.image_1 | image_url }}" width="1178" height="722" alt="">
        </div>

           <div class="ai-titles">
            <div class="ai-subtitle">{{ section.settings.subtitle }}</div>
            <div class="content-ai">
                {{ section.settings.main_content }}
            </div>
             </div>
        </div>
    </div>
</div>

<style>
    .health-three-ai {
        background: rgba(94, 143, 143, 0.15);
    }
</style>

<style>
    section {
        padding: unset;
    }
    .health-three-ai {
        position: relative;
        overflow: hidden;
    }

    .health-swoosh {
        position: absolute;
        bottom: 0;
        right: 0;
    }


    .ai-wrapper {
        max-width: unset;
        display: flex;
        align-items: center;
        padding: 20px 0;
    }

    .ai-titles {
        padding-left: 26px;
        max-width: unset;
        max-width: 527px;
        display: flex;
        flex-direction: column;
    }

    .ai-subtitle {
        font-family: 'PP Radio Grotesk';
        font-weight: 400;
        font-size: 30px;
        line-height: 28px;
        letter-spacing: -0.01em;
        color: #404733;
    }

    .img-ai {

    }

    .content-ai {
        font-family: 'DM Sans';
        font-weight: 400;
        font-size: 18px;
        line-height: 28px;
        text-align: left;
        letter-spacing: -0.01em;
        padding: 20px 0;
    }





    @media screen and (max-width: 768px) {

    .health-swoosh {

            bottom: 55vw;

        }
        .ai-wrapper {
            padding: unset;
            flex-direction: column-reverse;
        }

        .img-ai {

        }

        .ai-titles {
            padding-left: unset;
            max-width: unset;
            padding-top: 1em;
            padding-left: unset;
        }



        .ai-subtitle {
            font-size: 10vw;
            line-height: 10vw;
        }

        .content-ai {
            font-size: 6vw;
            line-height: 7vw;
            padding: 2vw 0 4vw;
        }




    }





</style>



{% schema %}
{
    "name": "Health03",
    "tag": "section",
    "class": "health-03",
    "disabled_on": {
        "groups": [
            "header",
            "footer"
        ]
    },
    "settings": [{
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
    },

    {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
    },


    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
        "type": "text",
        "id": "main_content",
        "label": "Content"
    },
    {
        "type": "text",
        "id": "main_content3",
        "label": "Content 2"
    }
],
    "presets": [{
        "name": "Health03"
    }]
}
{% endschema %}