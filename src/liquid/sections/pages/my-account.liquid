<script>
	// Use requestIdleCallback to defer non-critical initialization
	document.addEventListener("DOMContentLoaded", function() {
		// Use a DOM-ready polyfill for requestIdleCallback
		const requestIdleCallback = window.requestIdleCallback ||
			function(cb) {
				const start = Date.now();
				return setTimeout(function() {
					cb({
						didTimeout: false,
						timeRemaining: function() {
							return Math.max(0, 50 - (Date.now() - start));
						}
					});
				}, 1);
			};

		requestIdleCallback(() => {
			const tabsContainer = document.getElementById('tabs');
			if (!tabsContainer) return;

			// Cache DOM elements for better performance
			const tabLinks = tabsContainer.querySelectorAll('.menu-link[data-tab]');
			const allPanels = tabsContainer.querySelectorAll('.content-panel');
			const mobileDropdown = document.getElementById('mobile-dropdown');

			// Efficiently set active tab with minimal DOM operations
			function setActiveTab(tabId) {
				// Hide all panels
				allPanels.forEach(panel => panel.classList.remove("active"));

				// Remove active state from all links
				tabLinks.forEach(link => {
					link.classList.remove("active");
					link.parentElement.classList.remove("active");
				});

				// Activate the selected panel
				const targetPanel = document.getElementById(tabId);
				if (targetPanel) targetPanel.classList.add("active");

				// Activate the selected tab link
				const targetLink = tabsContainer.querySelector(`.menu-link[data-tab="${tabId}"]`);
				if (targetLink) {
					targetLink.classList.add("active");
					targetLink.parentElement.classList.add("active");
				}

				// Update URL hash without scrolling
				history.replaceState(null, null, `#${tabId}`);
			}

			// Check URL parameters for state
			const urlParams = new URLSearchParams(window.location.search);
			const contactUpdated = urlParams.get('contact-updated') === 'true';
			const passwordUpdated = urlParams.get('password-updated') === 'true';

			// Handle page refresh for form submissions
			if (contactUpdated || passwordUpdated) {
				// Select the My Account tab
				setActiveTab('a');

				// Handle page refresh logic for updated data
				if (!sessionStorage.getItem('account_info_refreshed')) {
					sessionStorage.setItem('account_info_refreshed', 'true');
					window.location.reload();
					return;
				}

				// Clear flag on subsequent page views
				sessionStorage.removeItem('account_info_refreshed');
			} else {
				// Check URL hash first
				const hashTab = window.location.hash.substring(1);
				if (hashTab && document.getElementById(hashTab)) {
					setActiveTab(hashTab);
				} else {
					// Default: activate first tab
					const firstTab = tabLinks.length > 0 ? tabLinks[0].getAttribute('data-tab') : null;
					if (firstTab) setActiveTab(firstTab);
				}
			}

			// Use event delegation for all tab clicks - most efficient
			tabsContainer.addEventListener('click', function(e) {
				const tabLink = e.target.closest('.menu-link[data-tab]');
				if (tabLink && tabLink.getAttribute('href').startsWith('#')) {
					e.preventDefault();
					const tabId = tabLink.getAttribute('data-tab');
					setActiveTab(tabId);
				}
			});

			// Mobile dropdown handler
			if (mobileDropdown) {
				mobileDropdown.addEventListener('change', function() {
					const selectedValue = this.value;
					if (selectedValue.startsWith('#')) {
						const tabId = selectedValue.substring(1);
						setActiveTab(tabId);
					} else {
						window.location.href = selectedValue;
					}
				});
			}
		}, { timeout: 2000 }); // Set a timeout for requestIdleCallback
	});
</script>

