              <div class="data-title">
                <h5 class="m-0">Your Orders</h5>
              </div>

              {% if customer.orders %}
                <div class="data-list">
                  <ul>
                    {% for order in customer.orders %}
                      <li>
                        <div class="order-head">
                          <div class="number">
                            <p>Order {{ order.name }}</p>
                          </div>
                          <div class="date">
                            <p>{{ order.created_at | date: format: 'abbreviated_date' }}</p>
                          </div>
                          <div class="more">
                            <p><a href="{{ shop.secured_url }}/apps/download?ids={{ order.id }}&t=invoice&public_key={{ invoice_id }}&source=shopify_notification_email" target="_blank"><i class="fa-thin fa-laptop-arrow-down"></i></a></p>
                          </div>
                        </div>

