<section class="account-page">
  <div class="container">
    <div id="tabs">
      <div class="account-content">
        <div class="account-menu">
          <div class="menu-list">
            <ul>
              {% if show_curalifer_tab %}
                <li><a href="#curalifer"><span><i class="fa-thin fa-head-side"></i></span>Curalifer</a></li>
              {% endif %}
              <li><a href="#a"><span><i class="fa-thin fa-user"></i></span>My Profile</a></li>
              <li><a href="#b"><span><i class="fa-thin fa-credit-card"></i></span>Orders</a></li>
              {% comment %} <li><a href="#c"><span class="icon-payment"></span>Manage Payments</a></li> {% endcomment %}
