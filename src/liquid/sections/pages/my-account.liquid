    }

    .data-list ul li .order-item:last-child {
      border: none;
    }

    .data-list ul li .order-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1px solid #efefef;
      padding: 20px;
    }

    .data-list ul li .order-item .rows-wrap {
      display: flex;
      align-items: center;
      padding-right: 10px;
    }

    .data-list ul li .order-item .img-wrap {
      width: 70px;
      flex-shrink: 0;
      position: relative;
      border: 1px solid #ebebeb;
      border-radius: 5px;
      overflow: hidden;
    }

    .data-list ul li .order-item .img-wrap:before {
      content: "";
      display: block;
      padding-bottom: 100%;
      pointer-events: none;
    }

    .data-list ul li .order-item .img-wrap span {
      padding: 5px;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
    }
    .data-list ul li .order-item .img-wrap span img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    .data-list ul li .order-item .name {
      padding-left: 20px;
    }

    .data-list ul li .order-item p {
      margin: 0;
      font-weight: 400;
      font-size: 16px;
      line-height: 1;
      color: var(--black);
    }

    .data-list ul li .order-item .value,
    .data-list ul li .order-item .quantity {
      padding: 0 10px;
    }

    .data-list ul li .order-item .quantity p {
      white-space: nowrap;
    }

    .data-list ul li .order-item .price {
      padding: 0 10px;
    }

    .data-list ul li .order-item .price p {
      white-space: nowrap;
    }

    .data-list ul li .order-item .status {
      padding-left: 10px;
    }

    .data-list ul li .view-details.d-mobile {
      display: none;
    }

    .data-list ul li .view-details .more-btn {
      display: flex;
      justify-content: center;
      padding: 27px 10px;
      border-top: 1px solid #efefef;
    }

    .data-list ul li .view-details .more-btn p {
      margin: 0;
      font-weight: 600;
      font-size: 16px;
      line-height: 1.3;
      color: #333;
      cursor: pointer;
      transition: color var(--transition);
    }

    .data-list ul li .view-details .more-btn p a {
      font-weight: 400;
      font-size: 14px;
      color: var(--dark);
      text-decoration: underline;
      transition: color var(--transition);
    }

