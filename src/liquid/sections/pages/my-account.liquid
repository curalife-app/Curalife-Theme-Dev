<script>
  document.addEventListener("DOMContentLoaded", function() {
  let tabs = document.querySelector('#tabs');
  let tabLinks = Array.from(tabs.querySelectorAll('ul li a'));
  let accountData = document.querySelector('.account-data');
  let allTabPanes = Array.from(tabs.querySelectorAll('.account-data .data-row'));

  function setActiveTab(targetLink) {
      let target = targetLink.getAttribute('href').substr(1);
      let tabPane = document.getElementById(target);

      // Deactivate all tab panes and links
      allTabPanes.forEach(pane => pane.classList.remove("active"));
      tabLinks.forEach(link => link.parentElement.classList.remove("active"));

      // Activate the target tab pane and link
      if (tabPane) {
          tabPane.classList.add("active");
          let tabPaneWrap = tabPane.querySelector('.data-wrap');
          accountData.style.height = `${tabPaneWrap.offsetHeight}px`;
      }

      targetLink.parentElement.classList.add("active");
  }

  // Event listener for transitionend to update the height
  allTabPanes.forEach(pane => {
      pane.addEventListener('transitionend', function() {
          let activeTabPane = tabs.querySelector('.account-data .data-row.active');
          if (activeTabPane) {
              let activeTabPaneWrap = activeTabPane.querySelector('.data-wrap');
              accountData.style.height = `${activeTabPaneWrap.offsetHeight}px`;
          }
      });
  });

  // Initialize the first tab
  setActiveTab(tabLinks[0]);

  // Add event listener for each tab
  tabLinks.forEach(link => {
      link.addEventListener('click', function(e) {
          e.preventDefault();
          setActiveTab(e.target);
      });
  });
});
</script>

