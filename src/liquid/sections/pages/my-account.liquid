<style>
    .container {
        position: relative;
        width: 100%;
        height: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 15px;
    }

    .page-title {
        margin-top: 3%;
        padding: 27px 0;
    }
    .sub-title {
        text-align: center;
        color: var(--dark);
        margin-bottom: 30px;
    }

    .sub-title h1, .sub-title h2 {
        margin: 0;
        font-weight: 800;
        font-size: 48px;
        line-height: 1.3;
        font-family: 'PP Radio Grotesk';
    }

    .account-content {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        padding: 2.5% 0 3.5%;
    }
    .account-menu {
        width: 285px;
        background: #f8f8f8;
        border: 1px solid #efefef;
    }
    .account-menu .active-item {
        padding: 15px 0;
        display: none;
    }
    .account-menu .active-item p {
        margin: 0;
        display: flex;
        align-items: center;
        padding: 5px 29px;
        font-weight: 400;
        font-size: 16px;
        line-height: 1.5;
        color: var(--green);
        position: relative;
    }
    .account-menu .active-item p:before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        border-left: 4px solid var(--green);
        transition: border-color var(--transition);
    }

    .account-menu .active-item p:after {
        font-family: icoFont,serif!important;
        content: "\e902";
        display: flex;
        align-items: center;
        font-size: 24px;
        color: var(--dark);
        position: absolute;
        top: 0;
        right: 19px;
        bottom: 0;
        transition: transform var(--transition);
        pointer-events: none;
    }
    .account-menu .menu-list ul {
        padding: 20px 0;
    }
    .account-menu .menu-list ul li {
        display: block;
        margin: 8px 0;
        padding-left: 24px;
        position: relative;
        font-weight: 400;
        font-size: 16px;
        line-height: 1.5;
        color: var(--black);
    }
    .account-data {
        width: calc(100% - 285px);
        padding-left: 20px;
    }
    .account-data .data-row {
        display: flex;
        flex-wrap: wrap;
        margin: 0 -10px;
    }

    .account-data .data-wrap.with-border {
        border: 1px solid #efefef;
    }

    .account-data .data-row .data-wrap {
        width: calc(50% - 20px);
        margin-right: 10px;
        margin-left: 10px;
    }
    .account-data .data-wrap.with-border .data-title {
        border-top: none;
        border-left: none;
        border-right: none;
    }

    .account-data .data-title {
        padding: 16px 15px;
        text-align: center;
        background: #f8f8f8;
        border: 1px solid #efefef;
    }
    .account-data .data-title h3 {
        margin: 0;
        font-weight: 700;
        font-size: 16px;
        line-height: 1;
        color: var(--dark);
    }
    .account-data .data-content {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex: 1;
        padding: 30px;
    }
    .contact-info {
        padding: 9px 0 23%;
    }
    .contact-info ul li:first-child {
        padding-top: 0;
    }
    .contact-info ul li {
        display: block;
        padding: 15px 0;
        border-bottom: 1px solid #efefef;
    }

    .main-btn {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        height: 55px;
        width: -moz-fit-content;
        width: fit-content;
        padding: 15px 20px;
        font-weight: 700;
        font-size: 16px;
        line-height: 1;
        letter-spacing: 2px;
        text-transform: uppercase;
        color: #fff;
        background: var(--dark-green);
        border-radius: 2px;
        border: 1px solid var(--dark-green);
        transition: all .6s;
    }
    .account-data .data-content .data-btn .main-btn {
        width: 100%;
        max-width: 100%;
        min-height: 56px;
    }

    .account-menu .menu-list ul li a:before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        border-left: 4px solid rgba(0,0,0,0);
        transition: border-color var(--transition);
    }
    .account-menu .menu-list ul li a span {
        display: flex;
        padding-right: 8px;
        font-size: 18px;
    }
    .icon-user:before {
        content: "\ec8e";
        font-size: 1.2rem;
    }

    .icon-orders:before {
        content: "\efb7";
    }

    .icon-loyalty:before {
        content: "\ed07";
    }

    .icon-password:before {
        content: "\ec71";
    }

    .icon-logout:before {
        content: "\ef7c";
    }

    .account-menu .menu-list ul li a {
        display: flex;
        align-items: center;
        padding: 5px;
        color: inherit;
        transition: color var(--transition);
    }

    a.lgoutlnk {
        display: block;
        position: relative;
        font-weight: 400;
        line-height: 1.5;
        color: var(--black);
        transition: color var(--transition);
    }

    .contact-info ul li p span {
        display: block;
        padding-left: 15px;
        font-weight: 700;
        font-size: 16px;
        text-transform: uppercase;
        color: #333;
    }

    .contact-info ul li {
        display: block;
        padding: 15px 0;
        border-bottom: 1px solid #efefef;
    }

    .contact-info ul li:first-child {
        padding-top: 0;
    }

    .contact-info ul li p {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin: 0;
        font-weight: 400;
        font-size: 14px;
        line-height: 1.29;
        color: var(--dark);
    }

    .shipping-addresses, .data-list {
      padding: 10px 0;
    }

    .data-list ul li {
      display: block;
      margin: 10px 0;
      border: 1px solid #efefef;
    }

    .data-list ul {
      display: flex;
      flex-direction: column;
    }

    .data-list ul li .order-head {
      display: flex;
      align-items: center;
      min-height: 50px;
      padding: 10px 27px;
      background: #f8f8f8;
      border-bottom: 1px solid #efefef;
    }

    .data-list ul li .order-head .number {
      width: 30%;
      text-align: left;
    }

    .data-list ul li .order-head p {
      margin: 0;
      font-weight: 400;
