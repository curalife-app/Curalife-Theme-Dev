<div class="health-page">
    <div class="img-egg-mb">
        <img src="{{ section.settings.image | image_url }}" width="1178" height="722" alt="">
    </div>
    <div class="container">
        <div class="egg-wrapper">
           
           <div class="egg-titles">
            <div class="egg-subtitle">{{ section.settings.subtitle }}</div>
            <div class="egg-title"> <h1>{{ section.settings.title }}</h1></div>
             </div>
            <div class="img-egg">
                <img src="{{ section.settings.image | image_url }}" width="1178" height="722" alt="">
            </div>
        </div>
       
    </div>
   
</div>


<style>
   .container {
      position: relative;
      width: 100%;
      height: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 15px;
  }
</style>


<style>
    .health-page {
        position: relative;
    }
    .egg-wrapper {
        display: flex;
        align-items: center;
    }

    .egg-titles {
        display: flex;
        flex-direction: column;
        padding-left: 80px;
    }

    .egg-subtitle {
        font-family: 'PP Radio Grotesk';
        font-weight: 400;
        font-size: 50px;
        line-height: 48px;
        letter-spacing: -0.01em;
        color: #404733;
    }

    .egg-title h1 {
        font-family: 'PP Radio Grotesk';
        font-weight: 700;
        font-size: clamp(60px, 2vw, 86px);
        line-height: 72px;
        letter-spacing: -0.01em;
        color: #404733;
    }

    .img-egg-mb {
        display: none;
    }


    @media screen and (max-width: 768px) {
        .egg-wrapper {
            align-items: unset;
        }

        .egg-titles {
            margin-top: 1em;
            padding-left: unset;
        }

        .egg-title h1 {
            font-size: 38px;
            line-height: 38px;
        }

        .egg-subtitle {
            font-size: 38px;
            line-height: 38px;
        }

        .img-egg {
            display: none;
        }

        .img-egg-mb {
            display: block;
            position: absolute;
            right: -8rem;
        }
    }

 

    
</style>



{% schema %}
{
    "name": "Health",
    "tag": "section",
    "class": "health",
    "disabled_on": {
        "groups": [
            "header",
            "footer"
        ]
    },
    "settings": [{
        "type": "text",
        "id": "title",
        "label": "Heading"
    },
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
        "type": "richtext",
        "id": "main_content",
        "label": "Content"
    }
],
    "presets": [{
        "name": "Health"
    }]
}
{% endschema %}