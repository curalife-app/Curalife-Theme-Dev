{% if section.settings.heading != blank or section.settings.your-body-image != blank %}
  <div class="body__block">
    <div class="outer__body"> 
      {% if section.settings.your-body-image != blank %}
        <div class="body__image">
          	<img class="lazyload" data-src="{{ section.settings.your-body-image | img_url: 'master'}}" alt="body">
        </div>
      {% endif %}
      <div class="body__text">
        {% if section.settings.heading != blank %}
       	 	<h6>{{ section.settings.heading }}</h6>
        {% endif %}
        <div class="body__arrow">
          {% if section.settings.arrow-small != blank %}
          	<img class="arrow__small lazyload" data-src="{{ section.settings.arrow-small | img_url: 'master'}}" alt="bodyarrowsmall">
          {% endif %}
          {% if section.settings.arrow-big != blank %}
          	<img class="lazyload" data-src="{{ section.settings.arrow-big | img_url: 'master'}}" alt="bodyarrow">
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endif %}


{% schema %}
  {
    "name": "Your Body Section",
    "settings": [
		{
            "type": "text",
            "id": "heading",
            "label": "Section Title"
        },
		{
          "type": "image_picker",
          "id": "your-body-image",
          "label": "Image"
        },
		{
          "type": "image_picker",
          "id": "arrow-big",
          "label": "Arrow Big"
        },
		{
          "type": "image_picker",
          "id": "arrow-small",
          "label": "Arrow Small"
        }
	]
  }
{% endschema %}
