<div class="container">
	<div class="our-story-title">{{ section.settings.title }}</div>
	<div class="son-father-text">{{ section.settings.subtitle }}</div>
	<div class="text-about">{{ section.settings.main_content }}</div>
</div>

<img class="father-son-img" src="{{ section.settings.image | image_url }}" width="1020" height="556" alt="">

<style>
	.our-story-father-son-section {
		position: relative;
		padding: 20px 0 0;
		overflow: hidden;
		max-height: 690px;
	}

	.our-story-father-son-section .father-son-img {
		position: absolute;
		bottom: 0;
		right: 0;
	}

	.our-story-father-son-section .our-story-title {
		font-family: 'PP Radio Grotesk';
		font-weight: 700;
		font-size: 57px;
		line-height: 69px;
		display: flex;
		justify-content: center;
		color: #404733;
	}

	.our-story-father-son-section .our-story-title span {
		padding-left: 10px;
		background-image: url("{{ 'our-story-son-father-swoosh.png' | asset_url }}");
	}

	.our-story-father-son-section .son-father-text {
		padding: 10px 0 30px;
		font-family: 'PP Radio Grotesk';
		font-weight: 400;
		font-size: 34px;
		line-height: 41px;
		display: flex;
		justify-content: center;
		text-align: center;
		text-transform: capitalize;
		color: #404733;
	}

	.our-story-father-son-section .text-about {
		position: relative;
		z-index: 1;
		max-width: 472px;
		font-family: 'DM Sans';
		font-weight: 400;
		font-size: 18px;
		line-height: 26px;
		letter-spacing: -0.02em;
		color: #000000;
	}

	@media screen and (max-width: 1440px) {
		.our-story-father-son-section .father-son-img {
			max-width: 62vw;
		}
	}

	@media screen and (max-width: 768px) {
		.our-story-father-son-section {
			max-height: 310vw;
		}

		.our-story-father-son-section.father-son-img {
			max-width: unset;
			top: 28vw;
			right: -40vw;
		}

		.our-story-father-son-section .our-story-title span {
			margin-left: 1vw;
		}

		.our-story-father-son-section .our-story-title {
			font-size: 13vw;
			line-height: 1.2em;
		}

		.our-story-father-son-section .text-about {
			max-width: unset;
			padding-top: 80vw;
			padding-bottom: 3vw;
		}
	}

	@media screen and (max-width: 740px) {
		.our-story-father-son-section .father-son-img {
			right: -33vw;
		}
	}

	@media screen and (max-width: 700px) {
		.our-story-father-son-section .father-son-img {
			right: -39vw;
		}

		.our-story-father-son-section .text-about {
			padding-top: 86vw;
		}
	}

	@media screen and (max-width: 650px) {
		.our-story-father-son-section .father-son-img {
			right: -50vw
		}

		.our-story-father-son-section .text-about {
			padding-top: 90vw;
		}
	}

	@media screen and (max-width: 600px) {
		.our-story-father-son-section .father-son-img {
			width: 150vw;
			right: -40vw
		}

		.our-story-father-son-section .text-about {
			padding-top: 85vw;
		}
	}

	@media screen and (max-width: 516px) {
		.our-story-father-son-section .father-son-img {
			top: 36vw;
		}

		.our-story-father-son-section .text-about {
			padding-top: 80vw;
		}
	}

	@media screen and (max-width: 420px) {
		.our-story-father-son-section .father-son-img {
			top: 40vw;
		}
	}

	@media screen and (max-width: 393px) {
		.our-story-father-son-section .father-son-img {
			top: 45vw;
		}
	}
</style>

{% schema %}
{
	"name": "Rebranding T&I",
	"tag": "section",
	"class": "our-story-father-son-section",
	"disabled_on": {
		"groups": [
			"header",
			"footer"
		]
	},
	"settings": [{
			"type": "color",
			"id": "bg_color",
			"label": "Background Color"
		},
		{
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		},
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
		{
			"type": "richtext",
			"id": "main_content",
			"label": "Content"
		}

	],
	"presets": [{
		"name": "Rebranding T&I"
	}]
}
{% endschema %}